<Window x:Class="UIComponentsGallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="clr-namespace:UIComponentsLibrary;assembly=UIComponentsLibrary"
        Title="UI Components Gallery"
        Height="800"
        Width="1200"
        Background="#F8F9FA"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="HeaderStyle">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2D3436"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="SubHeaderStyle">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2D3436"/>
            <Setter Property="Margin" Value="0,20,0,12"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="DescriptionStyle">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#636E72"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="White"
                BorderBrush="#DFE6E9"
                BorderThickness="0,0,0,2"
                Padding="40,30">
            <StackPanel>
                <TextBlock Text="Modern UI Controls Gallery"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="#2D3436"/>
                <TextBlock Text="A showcase of modern, customizable WPF controls"
                           FontSize="14"
                           Foreground="#636E72"
                           Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      Padding="40">
            <StackPanel>

                <!-- Buttons Section -->
                <ui:ModernCard Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="Buttons" Style="{StaticResource HeaderStyle}"/>

                        <TextBlock Text="Primary Buttons" Style="{StaticResource SubHeaderStyle}"/>
                        <TextBlock Text="Use primary buttons for main actions" Style="{StaticResource DescriptionStyle}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <ui:ModernButton Content="Primary"
                                             ButtonStyle="Primary"
                                             Margin="0,0,12,0"/>
                            <ui:ModernButton Content="Success"
                                             ButtonStyle="Success"
                                             Margin="0,0,12,0"/>
                            <ui:ModernButton Content="Warning"
                                             ButtonStyle="Warning"
                                             Margin="0,0,12,0"/>
                            <ui:ModernButton Content="Danger"
                                             ButtonStyle="Danger"
                                             Margin="0,0,12,0"/>
                        </StackPanel>

                        <TextBlock Text="Outline Buttons" Style="{StaticResource SubHeaderStyle}"/>
                        <TextBlock Text="Use outline buttons for secondary actions" Style="{StaticResource DescriptionStyle}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <ui:ModernButton Content="Outline"
                                             ButtonStyle="Outline"
                                             Margin="0,0,12,0"/>
                            <ui:ModernButton Content="Disabled"
                                             ButtonStyle="Primary"
                                             IsEnabled="False"
                                             Margin="0,0,12,0"/>
                        </StackPanel>

                        <TextBlock Text="Buttons with Different Sizes" Style="{StaticResource SubHeaderStyle}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <ui:ModernButton Content="Small"
                                             ButtonStyle="Primary"
                                             FontSize="12"
                                             Padding="16,8"
                                             Margin="0,0,12,0"/>
                            <ui:ModernButton Content="Medium"
                                             ButtonStyle="Primary"
                                             Margin="0,0,12,0"/>
                            <ui:ModernButton Content="Large"
                                             ButtonStyle="Primary"
                                             FontSize="16"
                                             Padding="24,14"
                                             Margin="0,0,12,0"/>
                        </StackPanel>
                    </StackPanel>
                </ui:ModernCard>

                <!-- Text Input Section -->
                <ui:ModernCard Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="Text Inputs" Style="{StaticResource HeaderStyle}"/>

                        <TextBlock Text="Basic Input" Style="{StaticResource SubHeaderStyle}"/>
                        <TextBlock Text="Standard text input with placeholder" Style="{StaticResource DescriptionStyle}"/>
                        <ui:ModernTextBox Placeholder="Enter your name..."
                                          Width="300"
                                          HorizontalAlignment="Left"
                                          Margin="0,0,0,20"/>

                        <TextBlock Text="Input with Custom Styling" Style="{StaticResource SubHeaderStyle}"/>
                        <ui:ModernTextBox Placeholder="Enter your email..."
                                          Width="300"
                                          HorizontalAlignment="Left"
                                          CornerRadius="12"
                                          Margin="0,0,0,20"/>

                        <TextBlock Text="Disabled Input" Style="{StaticResource SubHeaderStyle}"/>
                        <ui:ModernTextBox Text="Disabled input"
                                          Width="300"
                                          HorizontalAlignment="Left"
                                          IsEnabled="False"
                                          Margin="0,0,0,20"/>
                    </StackPanel>
                </ui:ModernCard>

                <!-- Toggle Switch Section -->
                <ui:ModernCard Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="Toggle Switches" Style="{StaticResource HeaderStyle}"/>

                        <TextBlock Text="Basic Toggle" Style="{StaticResource SubHeaderStyle}"/>
                        <TextBlock Text="Toggle switches for binary settings" Style="{StaticResource DescriptionStyle}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <StackPanel Margin="0,0,30,0">
                                <TextBlock Text="Notifications"
                                           FontSize="14"
                                           Foreground="#2D3436"
                                           Margin="0,0,0,8"/>
                                <ui:ModernToggleSwitch IsChecked="True"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,30,0">
                                <TextBlock Text="Dark Mode"
                                           FontSize="14"
                                           Foreground="#2D3436"
                                           Margin="0,0,0,8"/>
                                <ui:ModernToggleSwitch IsChecked="False"/>
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="Disabled"
                                           FontSize="14"
                                           Foreground="#2D3436"
                                           Margin="0,0,0,8"/>
                                <ui:ModernToggleSwitch IsEnabled="False"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </ui:ModernCard>

                <!-- Progress Bars Section -->
                <ui:ModernCard Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="Progress Bars" Style="{StaticResource HeaderStyle}"/>

                        <TextBlock Text="Basic Progress" Style="{StaticResource SubHeaderStyle}"/>
                        <TextBlock Text="Show progress with smooth animations" Style="{StaticResource DescriptionStyle}"/>
                        <ui:ModernProgressBar Value="45"
                                              Maximum="100"
                                              Height="20"
                                              Margin="0,0,0,20"/>

                        <TextBlock Text="Progress with Percentage" Style="{StaticResource SubHeaderStyle}"/>
                        <ui:ModernProgressBar Value="75"
                                              Maximum="100"
                                              ShowPercentage="True"
                                              Height="24"
                                              Margin="0,0,0,20"/>

                        <TextBlock Text="Different Sizes" Style="{StaticResource SubHeaderStyle}"/>
                        <ui:ModernProgressBar Value="60"
                                              Maximum="100"
                                              Height="12"
                                              Margin="0,0,0,8"/>
                        <ui:ModernProgressBar Value="80"
                                              Maximum="100"
                                              Height="16"
                                              Margin="0,0,0,8"/>
                        <ui:ModernProgressBar Value="90"
                                              Maximum="100"
                                              Height="28"
                                              Margin="0,0,0,20"/>
                    </StackPanel>
                </ui:ModernCard>

                <!-- Cards Section -->
                <ui:ModernCard Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="Cards" Style="{StaticResource HeaderStyle}"/>

                        <TextBlock Text="Card Grid" Style="{StaticResource SubHeaderStyle}"/>
                        <TextBlock Text="Cards with hover effects" Style="{StaticResource DescriptionStyle}"/>

                        <UniformGrid Columns="3" Margin="0,0,0,20">
                            <ui:ModernCard Margin="0,0,12,12" Elevation="8">
                                <StackPanel>
                                    <TextBlock Text="Card 1"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Foreground="#2D3436"
                                               Margin="0,0,0,8"/>
                                    <TextBlock Text="This is a modern card with shadow and hover effects."
                                               FontSize="13"
                                               Foreground="#636E72"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </ui:ModernCard>

                            <ui:ModernCard Margin="0,0,12,12" Elevation="8">
                                <StackPanel>
                                    <TextBlock Text="Card 2"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Foreground="#2D3436"
                                               Margin="0,0,0,8"/>
                                    <TextBlock Text="Cards can contain any content and are fully customizable."
                                               FontSize="13"
                                               Foreground="#636E72"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </ui:ModernCard>

                            <ui:ModernCard Margin="0,0,0,12" Elevation="8">
                                <StackPanel>
                                    <TextBlock Text="Card 3"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Foreground="#2D3436"
                                               Margin="0,0,0,8"/>
                                    <TextBlock Text="Hover over the cards to see the elevation effect."
                                               FontSize="13"
                                               Foreground="#636E72"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </ui:ModernCard>
                        </UniformGrid>

                        <TextBlock Text="Card with Different Corner Radius" Style="{StaticResource SubHeaderStyle}"/>
                        <ui:ModernCard CornerRadius="20" Elevation="12" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Rounded Card"
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           Foreground="#2D3436"
                                           Margin="0,0,0,8"/>
                                <TextBlock Text="This card has a larger corner radius for a more rounded appearance."
                                           FontSize="13"
                                           Foreground="#636E72"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </ui:ModernCard>
                    </StackPanel>
                </ui:ModernCard>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
