<Window x:Class="AuroraBackground.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aurora Background - WPF"
        Height="1080"
        Width="1920"
        WindowState="Maximized"
        WindowStyle="None"
        Background="{StaticResource DarkBackground}"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Aurora Orbital Animation 1 - 12 seconds -->
        <Storyboard x:Key="AuroraOrbit1" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="AuroraOrb1"
                                          Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(RotateTransform.Angle)">
                <LinearDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                <LinearDoubleKeyFrame KeyTime="0:0:12" Value="360"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <!-- Aurora Orbital Animation 2 - 15 seconds (reverse) -->
        <Storyboard x:Key="AuroraOrbit2" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="AuroraOrb2"
                                          Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(RotateTransform.Angle)">
                <LinearDoubleKeyFrame KeyTime="0:0:0" Value="360"/>
                <LinearDoubleKeyFrame KeyTime="0:0:15" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <!-- Aurora Orbital Animation 3 - 18 seconds -->
        <Storyboard x:Key="AuroraOrbit3" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="AuroraOrb3"
                                          Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(RotateTransform.Angle)">
                <LinearDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                <LinearDoubleKeyFrame KeyTime="0:0:18" Value="360"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <!-- Aurora Orbital Animation 4 - 20 seconds (reverse) -->
        <Storyboard x:Key="AuroraOrbit4" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="AuroraOrb4"
                                          Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(RotateTransform.Angle)">
                <LinearDoubleKeyFrame KeyTime="0:0:0" Value="360"/>
                <LinearDoubleKeyFrame KeyTime="0:0:20" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <!-- Aurora Orbital Animation 5 - 14 seconds -->
        <Storyboard x:Key="AuroraOrbit5" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="AuroraOrb5"
                                          Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(RotateTransform.Angle)">
                <LinearDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                <LinearDoubleKeyFrame KeyTime="0:0:14" Value="360"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <!-- Aurora Orbital Animation 6 - 22 seconds (reverse) -->
        <Storyboard x:Key="AuroraOrbit6" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="AuroraOrb6"
                                          Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(RotateTransform.Angle)">
                <LinearDoubleKeyFrame KeyTime="0:0:0" Value="360"/>
                <LinearDoubleKeyFrame KeyTime="0:0:22" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <!-- Pulsating Animation for additional depth -->
        <Storyboard x:Key="PulsateAnimation" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="PulseOrb1"
                                          Storyboard.TargetProperty="Opacity">
                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0.5"/>
                <EasingDoubleKeyFrame KeyTime="0:0:3" Value="0.9">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <SineEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:6" Value="0.5">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <SineEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>

            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="PulseOrb2"
                                          Storyboard.TargetProperty="Opacity">
                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0.4"/>
                <EasingDoubleKeyFrame KeyTime="0:0:4" Value="0.8">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <SineEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:8" Value="0.4">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <SineEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>

    <Grid>
        <!-- Aurora Background Canvas -->
        <Canvas x:Name="AuroraCanvas" ClipToBounds="True">
            <!-- Base gradient overlay -->
            <Rectangle Width="1920" Height="1080">
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#0A0A0F" Offset="0"/>
                        <GradientStop Color="#1A1A2E" Offset="0.5"/>
                        <GradientStop Color="#0A0A0F" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>

            <!-- Static pulsating orbs for base layer -->
            <Ellipse x:Name="PulseOrb1"
                    Width="700" Height="700"
                    Canvas.Left="200" Canvas.Top="150"
                    Fill="{StaticResource AuroraGradient1}"
                    Opacity="0.5">
                <Ellipse.Effect>
                    <BlurEffect Radius="100"/>
                </Ellipse.Effect>
            </Ellipse>

            <Ellipse x:Name="PulseOrb2"
                    Width="600" Height="600"
                    Canvas.Left="1100" Canvas.Top="300"
                    Fill="{StaticResource AuroraGradient4}"
                    Opacity="0.4">
                <Ellipse.Effect>
                    <BlurEffect Radius="90"/>
                </Ellipse.Effect>
            </Ellipse>

            <!-- Orbiting Aurora Orb 1 - Purple -->
            <Ellipse x:Name="AuroraOrb1"
                    Width="500" Height="500"
                    Canvas.Left="710" Canvas.Top="290"
                    Fill="{StaticResource AuroraGradient1}"
                    Opacity="0.8"
                    RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform X="150" Y="0"/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Ellipse.Effect>
                    <BlurEffect Radius="80"/>
                </Ellipse.Effect>
            </Ellipse>

            <!-- Orbiting Aurora Orb 2 - Pink -->
            <Ellipse x:Name="AuroraOrb2"
                    Width="450" Height="450"
                    Canvas.Left="735" Canvas.Top="315"
                    Fill="{StaticResource AuroraGradient2}"
                    Opacity="0.7"
                    RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform X="-120" Y="80"/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Ellipse.Effect>
                    <BlurEffect Radius="90"/>
                </Ellipse.Effect>
            </Ellipse>

            <!-- Orbiting Aurora Orb 3 - Violet -->
            <Ellipse x:Name="AuroraOrb3"
                    Width="550" Height="550"
                    Canvas.Left="685" Canvas.Top="265"
                    Fill="{StaticResource AuroraGradient3}"
                    Opacity="0.75"
                    RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform X="0" Y="-130"/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Ellipse.Effect>
                    <BlurEffect Radius="95"/>
                </Ellipse.Effect>
            </Ellipse>

            <!-- Orbiting Aurora Orb 4 - Hot Pink -->
            <Ellipse x:Name="AuroraOrb4"
                    Width="480" Height="480"
                    Canvas.Left="720" Canvas.Top="300"
                    Fill="{StaticResource AuroraGradient4}"
                    Opacity="0.7"
                    RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform X="100" Y="100"/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Ellipse.Effect>
                    <BlurEffect Radius="85"/>
                </Ellipse.Effect>
            </Ellipse>

            <!-- Orbiting Aurora Orb 5 - Cyan -->
            <Ellipse x:Name="AuroraOrb5"
                    Width="520" Height="520"
                    Canvas.Left="700" Canvas.Top="280"
                    Fill="{StaticResource AuroraGradient5}"
                    Opacity="0.65"
                    RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform X="-100" Y="-100"/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Ellipse.Effect>
                    <BlurEffect Radius="100"/>
                </Ellipse.Effect>
            </Ellipse>

            <!-- Orbiting Aurora Orb 6 - Mauve -->
            <Ellipse x:Name="AuroraOrb6"
                    Width="490" Height="490"
                    Canvas.Left="715" Canvas.Top="295"
                    Fill="{StaticResource AuroraGradient6}"
                    Opacity="0.7"
                    RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform X="130" Y="-80"/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Ellipse.Effect>
                    <BlurEffect Radius="88"/>
                </Ellipse.Effect>
            </Ellipse>
        </Canvas>

        <!-- Content overlay -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <StackPanel Grid.Row="1"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center">
                <TextBlock Text="AURORA BACKGROUND"
                          FontSize="84"
                          FontWeight="Black"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,20">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#9333EA"
                                        BlurRadius="40"
                                        ShadowDepth="0"
                                        Opacity="0.8"/>
                    </TextBlock.Effect>
                </TextBlock>

                <TextBlock Text="Infinite Aurora Animation in WPF"
                          FontSize="32"
                          FontWeight="Light"
                          Foreground="#CCFFFFFF"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,50"/>

                <Border Background="#20FFFFFF"
                       BorderBrush="#40FFFFFF"
                       BorderThickness="2"
                       CornerRadius="30"
                       Padding="50,20"
                       HorizontalAlignment="Center">
                    <Border.Effect>
                        <BlurEffect Radius="1"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="âœ¨ 6 Orbiting Aurora Orbs"
                                  FontSize="24"
                                  Foreground="White"
                                  Margin="0,5"/>
                        <TextBlock Text="ðŸŒŠ Radial Gradient Blending"
                                  FontSize="24"
                                  Foreground="White"
                                  Margin="0,5"/>
                        <TextBlock Text="ðŸ’« Heavy Blur Effects (80-100px)"
                                  FontSize="24"
                                  Foreground="White"
                                  Margin="0,5"/>
                        <TextBlock Text="â™¾ï¸ Infinite Loop Animations"
                                  FontSize="24"
                                  Foreground="White"
                                  Margin="0,5"/>
                        <TextBlock Text="ðŸŽ¨ Purple, Pink, Violet, Cyan Palette"
                                  FontSize="24"
                                  Foreground="White"
                                  Margin="0,5"/>
                    </StackPanel>
                </Border>

                <TextBlock Text="Press ESC to exit"
                          FontSize="18"
                          Foreground="#80FFFFFF"
                          HorizontalAlignment="Center"
                          Margin="0,40,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
