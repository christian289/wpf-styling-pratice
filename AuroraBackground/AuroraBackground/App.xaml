<Application x:Class="AuroraBackground.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="NavigationWindow.xaml">
    <Application.Resources>
        <!-- Aurora Color Palette -->
        <Color x:Key="Aurora1">#373372</Color>
        <Color x:Key="Aurora2">#7C336C</Color>
        <Color x:Key="Aurora3">#B3588A</Color>
        <Color x:Key="Aurora4">#F0ACE0</Color>
        <Color x:Key="Aurora5">#4F46E5</Color>
        <Color x:Key="Aurora6">#9333EA</Color>
        <Color x:Key="Aurora7">#EC4899</Color>
        <Color x:Key="Aurora8">#06B6D4</Color>

        <SolidColorBrush x:Key="DarkBackground" Color="#0A0A0F"/>
        <SolidColorBrush x:Key="LightText" Color="#FFFFFF"/>

        <!-- Aurora Gradients -->
        <RadialGradientBrush x:Key="AuroraGradient1" GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="1" RadiusY="1">
            <GradientStop Color="#CC373372" Offset="0"/>
            <GradientStop Color="#66373372" Offset="0.5"/>
            <GradientStop Color="#00373372" Offset="1"/>
        </RadialGradientBrush>

        <RadialGradientBrush x:Key="AuroraGradient2" GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="1" RadiusY="1">
            <GradientStop Color="#CCF0ACE0" Offset="0"/>
            <GradientStop Color="#66F0ACE0" Offset="0.5"/>
            <GradientStop Color="#00F0ACE0" Offset="1"/>
        </RadialGradientBrush>

        <RadialGradientBrush x:Key="AuroraGradient3" GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="1" RadiusY="1">
            <GradientStop Color="#CC9333EA" Offset="0"/>
            <GradientStop Color="#669333EA" Offset="0.5"/>
            <GradientStop Color="#009333EA" Offset="1"/>
        </RadialGradientBrush>

        <RadialGradientBrush x:Key="AuroraGradient4" GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="1" RadiusY="1">
            <GradientStop Color="#CCEC4899" Offset="0"/>
            <GradientStop Color="#66EC4899" Offset="0.5"/>
            <GradientStop Color="#00EC4899" Offset="1"/>
        </RadialGradientBrush>

        <RadialGradientBrush x:Key="AuroraGradient5" GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="1" RadiusY="1">
            <GradientStop Color="#CC06B6D4" Offset="0"/>
            <GradientStop Color="#6606B6D4" Offset="0.5"/>
            <GradientStop Color="#0006B6D4" Offset="1"/>
        </RadialGradientBrush>

        <RadialGradientBrush x:Key="AuroraGradient6" GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="1" RadiusY="1">
            <GradientStop Color="#CCB3588A" Offset="0"/>
            <GradientStop Color="#66B3588A" Offset="0.5"/>
            <GradientStop Color="#00B3588A" Offset="1"/>
        </RadialGradientBrush>
    </Application.Resources>
</Application>
