<Page x:Class="AuroraBackground.OrbitingAuroraPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Orbiting Aurora"
      Loaded="Page_Loaded"
      KeyDown="Page_KeyDown">

    <Page.Resources>
        <!-- Circular Orbit Animations -->

        <!-- Orb 1: Fast circular motion -->
        <Storyboard x:Key="OrbitAnimation1" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Orb1"
                                          Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(RotateTransform.Angle)">
                <LinearDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                <LinearDoubleKeyFrame KeyTime="0:0:12" Value="360"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <!-- Orb 2: Medium circular motion (reverse) -->
        <Storyboard x:Key="OrbitAnimation2" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Orb2"
                                          Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(RotateTransform.Angle)">
                <LinearDoubleKeyFrame KeyTime="0:0:0" Value="360"/>
                <LinearDoubleKeyFrame KeyTime="0:0:15" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <!-- Orb 3: Slow circular motion -->
        <Storyboard x:Key="OrbitAnimation3" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Orb3"
                                          Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(RotateTransform.Angle)">
                <LinearDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                <LinearDoubleKeyFrame KeyTime="0:0:18" Value="360"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <!-- Orb 4: Fast reverse -->
        <Storyboard x:Key="OrbitAnimation4" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Orb4"
                                          Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(RotateTransform.Angle)">
                <LinearDoubleKeyFrame KeyTime="0:0:0" Value="360"/>
                <LinearDoubleKeyFrame KeyTime="0:0:10" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <!-- Orb 5: Medium slow -->
        <Storyboard x:Key="OrbitAnimation5" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Orb5"
                                          Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(RotateTransform.Angle)">
                <LinearDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                <LinearDoubleKeyFrame KeyTime="0:0:14" Value="360"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <!-- Orb 6: Very slow reverse -->
        <Storyboard x:Key="OrbitAnimation6" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Orb6"
                                          Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(RotateTransform.Angle)">
                <LinearDoubleKeyFrame KeyTime="0:0:0" Value="360"/>
                <LinearDoubleKeyFrame KeyTime="0:0:20" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Page.Resources>

    <Grid ClipToBounds="True">
        <!-- Base gradient background -->
        <Rectangle>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF1a0a2e" Offset="0"/>
                    <GradientStop Color="#FF0f2027" Offset="0.5"/>
                    <GradientStop Color="#FF2c1654" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <!-- Orbiting blurred orbs -->

        <!-- Orb 1: Pink/Magenta -->
        <Ellipse x:Name="Orb1"
                Width="600"
                Height="600"
                RenderTransformOrigin="0.5,0.5"
                Opacity="0.7">
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform X="200" Y="0"/>
                </TransformGroup>
            </Ellipse.RenderTransform>
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#FFFF1493" Offset="0"/>
                    <GradientStop Color="#FFFF69B4" Offset="0.3"/>
                    <GradientStop Color="#80FF1493" Offset="0.6"/>
                    <GradientStop Color="#00FF1493" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
            <Ellipse.Effect>
                <BlurEffect Radius="60"/>
            </Ellipse.Effect>
        </Ellipse>

        <!-- Orb 2: Purple/Violet -->
        <Ellipse x:Name="Orb2"
                Width="700"
                Height="700"
                RenderTransformOrigin="0.5,0.5"
                Opacity="0.65">
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="360"/>
                    <TranslateTransform X="-180" Y="0"/>
                </TransformGroup>
            </Ellipse.RenderTransform>
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#FF9C27B0" Offset="0"/>
                    <GradientStop Color="#FFBA68C8" Offset="0.3"/>
                    <GradientStop Color="#809C27B0" Offset="0.6"/>
                    <GradientStop Color="#009C27B0" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
            <Ellipse.Effect>
                <BlurEffect Radius="70"/>
            </Ellipse.Effect>
        </Ellipse>

        <!-- Orb 3: Cyan/Blue -->
        <Ellipse x:Name="Orb3"
                Width="550"
                Height="550"
                RenderTransformOrigin="0.5,0.5"
                Opacity="0.75">
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform X="150" Y="0"/>
                </TransformGroup>
            </Ellipse.RenderTransform>
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#FF00BCD4" Offset="0"/>
                    <GradientStop Color="#FF4DD0E1" Offset="0.3"/>
                    <GradientStop Color="#8000BCD4" Offset="0.6"/>
                    <GradientStop Color="#0000BCD4" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
            <Ellipse.Effect>
                <BlurEffect Radius="65"/>
            </Ellipse.Effect>
        </Ellipse>

        <!-- Orb 4: Orange/Coral -->
        <Ellipse x:Name="Orb4"
                Width="650"
                Height="650"
                RenderTransformOrigin="0.5,0.5"
                Opacity="0.6">
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="360"/>
                    <TranslateTransform X="-150" Y="0"/>
                </TransformGroup>
            </Ellipse.RenderTransform>
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#FFFF6B35" Offset="0"/>
                    <GradientStop Color="#FFFFAB91" Offset="0.3"/>
                    <GradientStop Color="#80FF6B35" Offset="0.6"/>
                    <GradientStop Color="#00FF6B35" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
            <Ellipse.Effect>
                <BlurEffect Radius="75"/>
            </Ellipse.Effect>
        </Ellipse>

        <!-- Orb 5: Green/Emerald -->
        <Ellipse x:Name="Orb5"
                Width="580"
                Height="580"
                RenderTransformOrigin="0.5,0.5"
                Opacity="0.7">
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform X="170" Y="0"/>
                </TransformGroup>
            </Ellipse.RenderTransform>
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#FF00E676" Offset="0"/>
                    <GradientStop Color="#FF69F0AE" Offset="0.3"/>
                    <GradientStop Color="#8000E676" Offset="0.6"/>
                    <GradientStop Color="#0000E676" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
            <Ellipse.Effect>
                <BlurEffect Radius="68"/>
            </Ellipse.Effect>
        </Ellipse>

        <!-- Orb 6: Blue/Indigo -->
        <Ellipse x:Name="Orb6"
                Width="620"
                Height="620"
                RenderTransformOrigin="0.5,0.5"
                Opacity="0.65">
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="360"/>
                    <TranslateTransform X="-160" Y="0"/>
                </TransformGroup>
            </Ellipse.RenderTransform>
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#FF3F51B5" Offset="0"/>
                    <GradientStop Color="#FF7986CB" Offset="0.3"/>
                    <GradientStop Color="#803F51B5" Offset="0.6"/>
                    <GradientStop Color="#003F51B5" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
            <Ellipse.Effect>
                <BlurEffect Radius="72"/>
            </Ellipse.Effect>
        </Ellipse>

        <!-- Content overlay with higher z-index -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="40">
                <TextBlock Text="ORBITING AURORA"
                          FontSize="72"
                          FontWeight="Black"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,20">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#FF00BCD4"
                                        BlurRadius="40"
                                        ShadowDepth="0"
                                        Opacity="1"/>
                    </TextBlock.Effect>
                </TextBlock>

                <TextBlock Text="Circular motion paths with blur"
                          FontSize="28"
                          FontWeight="Light"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,30">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#FFFF1493"
                                        BlurRadius="20"
                                        ShadowDepth="0"
                                        Opacity="0.9"/>
                    </TextBlock.Effect>
                </TextBlock>

                <Border Background="#40FFFFFF"
                       BorderBrush="#80FFFFFF"
                       BorderThickness="2"
                       CornerRadius="25"
                       Padding="40,15"
                       HorizontalAlignment="Center">
                    <TextBlock Text="ðŸŒŒ 6 Orbiting Layers  â€¢  ðŸ’« Blur 60-75px  â€¢  ðŸ”„ Linear Rotation"
                              FontSize="18"
                              FontWeight="SemiBold"
                              Foreground="White"
                              TextAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#FF9C27B0"
                                            BlurRadius="15"
                                            ShadowDepth="0"
                                            Opacity="0.8"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </Border>

                <TextBlock Text="Press ESC to return to menu"
                          FontSize="16"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          Margin="0,30,0,0"
                          Opacity="0.9">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#FF00E676"
                                        BlurRadius="10"
                                        ShadowDepth="0"
                                        Opacity="0.7"/>
                    </TextBlock.Effect>
                </TextBlock>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
