<Page x:Class="AuroraBackground.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Aurora Background Gallery"
      Background="#0A0A0F">

    <Grid>
        <!-- Subtle background -->
        <Rectangle>
            <Rectangle.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#1A1A2E" Offset="0"/>
                    <GradientStop Color="#0A0A0F" Offset="1"/>
                </RadialGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <!-- Content -->
        <StackPanel VerticalAlignment="Center"
                   HorizontalAlignment="Center">

            <!-- Title -->
            <TextBlock Text="AURORA BACKGROUND"
                      FontSize="72"
                      FontWeight="Black"
                      Foreground="White"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,20">
                <TextBlock.Effect>
                    <DropShadowEffect Color="#9333EA"
                                    BlurRadius="30"
                                    ShadowDepth="0"
                                    Opacity="0.8"/>
                </TextBlock.Effect>
            </TextBlock>

            <TextBlock Text="Gallery"
                      FontSize="36"
                      FontWeight="Light"
                      Foreground="#88FFFFFF"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,60"/>

            <!-- Navigation Buttons -->
            <StackPanel Orientation="Horizontal"
                       HorizontalAlignment="Center"
                       Margin="0,20">

                <!-- Original Aurora Button -->
                <Button Content="Original Aurora&#x0a;(with dark background)"
                       Click="NavigateToOriginalAurora"
                       Width="320"
                       Height="180"
                       Margin="15"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                   Background="#20373372"
                                   BorderBrush="#60373372"
                                   BorderThickness="2"
                                   CornerRadius="20"
                                   RenderTransformOrigin="0.5,0.5">
                                <Border.RenderTransform>
                                    <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1"/>
                                </Border.RenderTransform>
                                <Border.Effect>
                                    <DropShadowEffect Color="#373372"
                                                    BlurRadius="20"
                                                    ShadowDepth="0"
                                                    Opacity="0.5"/>
                                </Border.Effect>
                                <StackPanel VerticalAlignment="Center"
                                           Margin="20">
                                    <TextBlock Text="ðŸŒŒ"
                                              FontSize="48"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,15"/>
                                    <TextBlock Text="{TemplateBinding Content}"
                                              FontSize="18"
                                              FontWeight="SemiBold"
                                              Foreground="White"
                                              TextAlignment="Center"
                                              TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                           Storyboard.TargetProperty="ScaleX"
                                                           To="1.05"
                                                           Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                           Storyboard.TargetProperty="ScaleY"
                                                           To="1.05"
                                                           Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                           Storyboard.TargetProperty="ScaleX"
                                                           To="1.0"
                                                           Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                           Storyboard.TargetProperty="ScaleY"
                                                           To="1.0"
                                                           Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Full Screen Aurora Button -->
                <Button Content="Full Screen Aurora&#x0a;(pastel colors fill screen)"
                       Click="NavigateToFullScreenAurora"
                       Width="320"
                       Height="180"
                       Margin="15"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                   CornerRadius="20"
                                   RenderTransformOrigin="0.5,0.5">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#30F0ACE0" Offset="0"/>
                                        <GradientStop Color="#309333EA" Offset="0.5"/>
                                        <GradientStop Color="#30EC4899" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.BorderBrush>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#80F0ACE0" Offset="0"/>
                                        <GradientStop Color="#809333EA" Offset="0.5"/>
                                        <GradientStop Color="#80EC4899" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.BorderBrush>
                                <Border.BorderThickness>2</Border.BorderThickness>
                                <Border.RenderTransform>
                                    <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1"/>
                                </Border.RenderTransform>
                                <Border.Effect>
                                    <DropShadowEffect Color="#EC4899"
                                                    BlurRadius="25"
                                                    ShadowDepth="0"
                                                    Opacity="0.6"/>
                                </Border.Effect>
                                <StackPanel VerticalAlignment="Center"
                                           Margin="20">
                                    <TextBlock Text="âœ¨"
                                              FontSize="48"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,15"/>
                                    <TextBlock Text="{TemplateBinding Content}"
                                              FontSize="18"
                                              FontWeight="SemiBold"
                                              Foreground="White"
                                              TextAlignment="Center"
                                              TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                           Storyboard.TargetProperty="ScaleX"
                                                           To="1.05"
                                                           Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                           Storyboard.TargetProperty="ScaleY"
                                                           To="1.05"
                                                           Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                           Storyboard.TargetProperty="ScaleX"
                                                           To="1.0"
                                                           Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                           Storyboard.TargetProperty="ScaleY"
                                                           To="1.0"
                                                           Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <!-- Instructions -->
            <TextBlock Text="Press ESC to return to menu from any page"
                      FontSize="16"
                      Foreground="#60FFFFFF"
                      HorizontalAlignment="Center"
                      Margin="0,40,0,0"/>
        </StackPanel>
    </Grid>
</Page>
