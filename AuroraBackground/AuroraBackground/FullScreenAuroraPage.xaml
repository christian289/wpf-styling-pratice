<Page x:Class="AuroraBackground.FullScreenAuroraPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Full Screen Aurora"
      Loaded="Page_Loaded"
      KeyDown="Page_KeyDown">

    <Page.Resources>
        <!-- Pastel Aurora Gradients -->
        <RadialGradientBrush x:Key="PastelGradient1" GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="1.5" RadiusY="1.5">
            <GradientStop Color="#FFFFB3D9" Offset="0"/>
            <GradientStop Color="#88FFB3D9" Offset="0.6"/>
            <GradientStop Color="#00FFB3D9" Offset="1"/>
        </RadialGradientBrush>

        <RadialGradientBrush x:Key="PastelGradient2" GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="1.5" RadiusY="1.5">
            <GradientStop Color="#FFD4A5FF" Offset="0"/>
            <GradientStop Color="#88D4A5FF" Offset="0.6"/>
            <GradientStop Color="#00D4A5FF" Offset="1"/>
        </RadialGradientBrush>

        <RadialGradientBrush x:Key="PastelGradient3" GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="1.5" RadiusY="1.5">
            <GradientStop Color="#FFA5D8FF" Offset="0"/>
            <GradientStop Color="#88A5D8FF" Offset="0.6"/>
            <GradientStop Color="#00A5D8FF" Offset="1"/>
        </RadialGradientBrush>

        <RadialGradientBrush x:Key="PastelGradient4" GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="1.5" RadiusY="1.5">
            <GradientStop Color="#FFAAFFC3" Offset="0"/>
            <GradientStop Color="#88AAFFC3" Offset="0.6"/>
            <GradientStop Color="#00AAFFC3" Offset="1"/>
        </RadialGradientBrush>

        <RadialGradientBrush x:Key="PastelGradient5" GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="1.5" RadiusY="1.5">
            <GradientStop Color="#FFE0BBE4" Offset="0"/>
            <GradientStop Color="#88E0BBE4" Offset="0.6"/>
            <GradientStop Color="#00E0BBE4" Offset="1"/>
        </RadialGradientBrush>

        <RadialGradientBrush x:Key="PastelGradient6" GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="1.5" RadiusY="1.5">
            <GradientStop Color="#FFFFD1DC" Offset="0"/>
            <GradientStop Color="#88FFD1DC" Offset="0.6"/>
            <GradientStop Color="#00FFD1DC" Offset="1"/>
        </RadialGradientBrush>

        <RadialGradientBrush x:Key="PastelGradient7" GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="1.5" RadiusY="1.5">
            <GradientStop Color="#FFFFC9DE" Offset="0"/>
            <GradientStop Color="#88FFC9DE" Offset="0.6"/>
            <GradientStop Color="#00FFC9DE" Offset="1"/>
        </RadialGradientBrush>

        <RadialGradientBrush x:Key="PastelGradient8" GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="1.5" RadiusY="1.5">
            <GradientStop Color="#FFC5E3FF" Offset="0"/>
            <GradientStop Color="#88C5E3FF" Offset="0.6"/>
            <GradientStop Color="#00C5E3FF" Offset="1"/>
        </RadialGradientBrush>

        <!-- Aurora Animations -->
        <Storyboard x:Key="AuroraOrbit1" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="AuroraOrb1"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(RotateTransform.Angle)"
                           From="0" To="360" Duration="0:0:16"/>
        </Storyboard>

        <Storyboard x:Key="AuroraOrbit2" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="AuroraOrb2"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(RotateTransform.Angle)"
                           From="360" To="0" Duration="0:0:20"/>
        </Storyboard>

        <Storyboard x:Key="AuroraOrbit3" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="AuroraOrb3"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(RotateTransform.Angle)"
                           From="0" To="360" Duration="0:0:24"/>
        </Storyboard>

        <Storyboard x:Key="AuroraOrbit4" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="AuroraOrb4"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(RotateTransform.Angle)"
                           From="360" To="0" Duration="0:0:18"/>
        </Storyboard>

        <Storyboard x:Key="AuroraOrbit5" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="AuroraOrb5"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(RotateTransform.Angle)"
                           From="0" To="360" Duration="0:0:22"/>
        </Storyboard>

        <Storyboard x:Key="AuroraOrbit6" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="AuroraOrb6"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(RotateTransform.Angle)"
                           From="360" To="0" Duration="0:0:28"/>
        </Storyboard>

        <Storyboard x:Key="AuroraOrbit7" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="AuroraOrb7"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(RotateTransform.Angle)"
                           From="0" To="360" Duration="0:0:26"/>
        </Storyboard>

        <Storyboard x:Key="AuroraOrbit8" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="AuroraOrb8"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(RotateTransform.Angle)"
                           From="360" To="0" Duration="0:0:30"/>
        </Storyboard>
    </Page.Resources>

    <Grid>
        <!-- Full screen pastel gradient background (no black!) -->
        <Rectangle>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FFE5F0FF" Offset="0"/>
                    <GradientStop Color="#FFFFE5F7" Offset="0.33"/>
                    <GradientStop Color="#FFFFEEF0" Offset="0.66"/>
                    <GradientStop Color="#FFF0E5FF" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <!-- Aurora Canvas with large orbs filling the screen -->
        <Canvas x:Name="AuroraCanvas" ClipToBounds="True">
            <!-- Large Orb 1 - Pastel Pink -->
            <Ellipse x:Name="AuroraOrb1"
                    Width="900" Height="900"
                    Canvas.Left="600" Canvas.Top="340"
                    Fill="{StaticResource PastelGradient1}"
                    RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform X="200" Y="0"/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Ellipse.Effect>
                    <BlurEffect Radius="120"/>
                </Ellipse.Effect>
            </Ellipse>

            <!-- Large Orb 2 - Pastel Purple -->
            <Ellipse x:Name="AuroraOrb2"
                    Width="850" Height="850"
                    Canvas.Left="625" Canvas.Top="365"
                    Fill="{StaticResource PastelGradient2}"
                    RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform X="-180" Y="120"/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Ellipse.Effect>
                    <BlurEffect Radius="130"/>
                </Ellipse.Effect>
            </Ellipse>

            <!-- Large Orb 3 - Pastel Blue -->
            <Ellipse x:Name="AuroraOrb3"
                    Width="950" Height="950"
                    Canvas.Left="585" Canvas.Top="315"
                    Fill="{StaticResource PastelGradient3}"
                    RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform X="0" Y="-200"/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Ellipse.Effect>
                    <BlurEffect Radius="140"/>
                </Ellipse.Effect>
            </Ellipse>

            <!-- Large Orb 4 - Pastel Mint -->
            <Ellipse x:Name="AuroraOrb4"
                    Width="880" Height="880"
                    Canvas.Left="610" Canvas.Top="350"
                    Fill="{StaticResource PastelGradient4}"
                    RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform X="150" Y="150"/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Ellipse.Effect>
                    <BlurEffect Radius="125"/>
                </Ellipse.Effect>
            </Ellipse>

            <!-- Large Orb 5 - Pastel Lavender -->
            <Ellipse x:Name="AuroraOrb5"
                    Width="920" Height="920"
                    Canvas.Left="590" Canvas.Top="330"
                    Fill="{StaticResource PastelGradient5}"
                    RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform X="-150" Y="-150"/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Ellipse.Effect>
                    <BlurEffect Radius="135"/>
                </Ellipse.Effect>
            </Ellipse>

            <!-- Large Orb 6 - Pastel Peach -->
            <Ellipse x:Name="AuroraOrb6"
                    Width="900" Height="900"
                    Canvas.Left="600" Canvas.Top="340"
                    Fill="{StaticResource PastelGradient6}"
                    RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform X="180" Y="-100"/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Ellipse.Effect>
                    <BlurEffect Radius="128"/>
                </Ellipse.Effect>
            </Ellipse>

            <!-- Large Orb 7 - Pastel Rose -->
            <Ellipse x:Name="AuroraOrb7"
                    Width="940" Height="940"
                    Canvas.Left="580" Canvas.Top="320"
                    Fill="{StaticResource PastelGradient7}"
                    RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform X="-120" Y="180"/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Ellipse.Effect>
                    <BlurEffect Radius="132"/>
                </Ellipse.Effect>
            </Ellipse>

            <!-- Large Orb 8 - Pastel Sky -->
            <Ellipse x:Name="AuroraOrb8"
                    Width="860" Height="860"
                    Canvas.Left="620" Canvas.Top="360"
                    Fill="{StaticResource PastelGradient8}"
                    RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform X="100" Y="-180"/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Ellipse.Effect>
                    <BlurEffect Radius="122"/>
                </Ellipse.Effect>
            </Ellipse>
        </Canvas>

        <!-- Content overlay -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                <TextBlock Text="FULL SCREEN AURORA"
                          FontSize="72"
                          FontWeight="Black"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,20">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#D4A5FF"
                                        BlurRadius="40"
                                        ShadowDepth="0"
                                        Opacity="0.9"/>
                    </TextBlock.Effect>
                </TextBlock>

                <TextBlock Text="Pastel colors filling entire screen"
                          FontSize="28"
                          FontWeight="Light"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,30">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#FFB3D9"
                                        BlurRadius="20"
                                        ShadowDepth="0"
                                        Opacity="0.8"/>
                    </TextBlock.Effect>
                </TextBlock>

                <Border Background="#30FFFFFF"
                       BorderBrush="#60FFFFFF"
                       BorderThickness="2"
                       CornerRadius="25"
                       Padding="40,15"
                       HorizontalAlignment="Center">
                    <TextBlock Text="ðŸŒ¸ No Black Background  â€¢  âœ¨ 8 Pastel Orbs  â€¢  ðŸŽ¨ Infinite Gradient Flow"
                              FontSize="18"
                              Foreground="White"
                              TextAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#A5D8FF"
                                            BlurRadius="15"
                                            ShadowDepth="0"
                                            Opacity="0.7"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </Border>

                <TextBlock Text="Press ESC to return to menu"
                          FontSize="16"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          Margin="0,30,0,0"
                          Opacity="0.8">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#E0BBE4"
                                        BlurRadius="10"
                                        ShadowDepth="0"
                                        Opacity="0.6"/>
                    </TextBlock.Effect>
                </TextBlock>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
