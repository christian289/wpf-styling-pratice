            <GradientStop Color="#FF2196F3" Offset="0"/>
            <GradientStop Color="#AA2196F3" Offset="0.5"/>
            <GradientStop Color="#002196F3" Offset="1"/>
        </RadialGradientBrush>

        <!-- Light Sky -->
        <RadialGradientBrush x:Key="VibrantGradient6" GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="1.2" RadiusY="1.2">
            <GradientStop Color="#FFB3E5FC" Offset="0"/>
            <GradientStop Color="#CCB3E5FC" Offset="0.5"/>
            <GradientStop Color="#00B3E5FC" Offset="1"/>
        </RadialGradientBrush>

        <!-- Deep Cyan -->
        <RadialGradientBrush x:Key="VibrantGradient7" GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="1.2" RadiusY="1.2">
            <GradientStop Color="#FF00BCD4" Offset="0"/>
            <GradientStop Color="#AA00BCD4" Offset="0.5"/>
            <GradientStop Color="#0000BCD4" Offset="1"/>
        </RadialGradientBrush>

        <!-- Deep Green -->
        <RadialGradientBrush x:Key="VibrantGradient8" GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="1.2" RadiusY="1.2">
            <GradientStop Color="#FF00E676" Offset="0"/>
            <GradientStop Color="#AA00E676" Offset="0.5"/>
            <GradientStop Color="#0000E676" Offset="1"/>
        </RadialGradientBrush>

        <!-- Light Mint -->
        <RadialGradientBrush x:Key="VibrantGradient9" GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="1.2" RadiusY="1.2">
            <GradientStop Color="#FFC8E6C9" Offset="0"/>
            <GradientStop Color="#CCC8E6C9" Offset="0.5"/>
            <GradientStop Color="#00C8E6C9" Offset="1"/>
        </RadialGradientBrush>

        <!-- Deep Orange -->
        <RadialGradientBrush x:Key="VibrantGradient10" GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="1.2" RadiusY="1.2">
            <GradientStop Color="#FFFF9800" Offset="0"/>
            <GradientStop Color="#AAFF9800" Offset="0.5"/>
            <GradientStop Color="#00FF9800" Offset="1"/>
        </RadialGradientBrush>

        <!-- Light Peach -->
        <RadialGradientBrush x:Key="VibrantGradient11" GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="1.2" RadiusY="1.2">
            <GradientStop Color="#FFFFCCBC" Offset="0"/>
            <GradientStop Color="#CCFFCCBC" Offset="0.5"/>
            <GradientStop Color="#00FFCCBC" Offset="1"/>
        </RadialGradientBrush>

        <!-- Deep Rose -->
        <RadialGradientBrush x:Key="VibrantGradient12" GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="1.2" RadiusY="1.2">
            <GradientStop Color="#FFE91E63" Offset="0"/>
            <GradientStop Color="#AAE91E63" Offset="0.5"/>
            <GradientStop Color="#00E91E63" Offset="1"/>
        </RadialGradientBrush>

        <!-- Aurora Animations - Faster and more visible -->
        <Storyboard x:Key="Orbit1" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="Orb1"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(RotateTransform.Angle)"
                           From="0" To="360" Duration="0:0:12"/>
        </Storyboard>

        <Storyboard x:Key="Orbit2" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="Orb2"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(RotateTransform.Angle)"
                           From="360" To="0" Duration="0:0:15"/>
        </Storyboard>

        <Storyboard x:Key="Orbit3" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="Orb3"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(RotateTransform.Angle)"
                           From="0" To="360" Duration="0:0:10"/>
        </Storyboard>

        <Storyboard x:Key="Orbit4" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="Orb4"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(RotateTransform.Angle)"
                           From="360" To="0" Duration="0:0:18"/>
        </Storyboard>

        <Storyboard x:Key="Orbit5" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="Orb5"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(RotateTransform.Angle)"
                           From="0" To="360" Duration="0:0:14"/>
        </Storyboard>

        <Storyboard x:Key="Orbit6" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="Orb6"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(RotateTransform.Angle)"
                           From="360" To="0" Duration="0:0:16"/>
        </Storyboard>

        <Storyboard x:Key="Orbit7" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="Orb7"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(RotateTransform.Angle)"
                           From="0" To="360" Duration="0:0:11"/>
        </Storyboard>

        <Storyboard x:Key="Orbit8" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="Orb8"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(RotateTransform.Angle)"
                           From="360" To="0" Duration="0:0:13"/>
        </Storyboard>

        <Storyboard x:Key="Orbit9" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="Orb9"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(RotateTransform.Angle)"
                           From="0" To="360" Duration="0:0:17"/>
        </Storyboard>

        <Storyboard x:Key="Orbit10" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="Orb10"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(RotateTransform.Angle)"
                           From="360" To="0" Duration="0:0:12.5"/>
        </Storyboard>

        <Storyboard x:Key="Orbit11" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="Orb11"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(RotateTransform.Angle)"
                           From="0" To="360" Duration="0:0:15.5"/>
        </Storyboard>

        <Storyboard x:Key="Orbit12" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="Orb12"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(RotateTransform.Angle)"
                           From="360" To="0" Duration="0:0:14.5"/>
        </Storyboard>
    </Page.Resources>

    <Grid>
        <!-- Vibrant gradient background -->
        <Rectangle>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FFFCE4EC" Offset="0"/>
                    <GradientStop Color="#FFF3E5F5" Offset="0.25"/>
                    <GradientStop Color="#FFE1F5FE" Offset="0.5"/>
                    <GradientStop Color="#FFE0F2F1" Offset="0.75"/>
                    <GradientStop Color="#FFFFF3E0" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <!-- Aurora Canvas -->
        <Canvas x:Name="AuroraCanvas" ClipToBounds="True">
            <!-- Orb 1 - Deep Magenta -->
            <Ellipse x:Name="Orb1"
                    Width="800" Height="800"
                    Canvas.Left="560" Canvas.Top="340"
                    Fill="{StaticResource VibrantGradient1}"
                    RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform X="250" Y="0"/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Ellipse.Effect>
                    <BlurEffect Radius="100"/>
                </Ellipse.Effect>
            </Ellipse>

            <!-- Orb 2 - Light Pink -->
            <Ellipse x:Name="Orb2"
                    Width="750" Height="750"
                    Canvas.Left="585" Canvas.Top="365"
                    Fill="{StaticResource VibrantGradient2}"
                    RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform X="-230" Y="150"/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Ellipse.Effect>
                    <BlurEffect Radius="110"/>
                </Ellipse.Effect>
            </Ellipse>

            <!-- Orb 3 - Deep Purple -->
            <Ellipse x:Name="Orb3"
                    Width="850" Height="850"
                    Canvas.Left="535" Canvas.Top="315"
                    Fill="{StaticResource VibrantGradient3}"
                    RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform X="0" Y="-240"/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Ellipse.Effect>
                    <BlurEffect Radius="105"/>
                </Ellipse.Effect>
            </Ellipse>

            <!-- Orb 4 - Light Lavender -->
            <Ellipse x:Name="Orb4"
                    Width="780" Height="780"
                    Canvas.Left="570" Canvas.Top="350"
                    Fill="{StaticResource VibrantGradient4}"
                    RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform X="220" Y="180"/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Ellipse.Effect>
                    <BlurEffect Radius="115"/>
                </Ellipse.Effect>
            </Ellipse>

            <!-- Orb 5 - Deep Blue -->
            <Ellipse x:Name="Orb5"
                    Width="820" Height="820"
                    Canvas.Left="550" Canvas.Top="330"
                    Fill="{StaticResource VibrantGradient5}"
                    RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform X="-200" Y="-180"/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Ellipse.Effect>
                    <BlurEffect Radius="108"/>
                </Ellipse.Effect>
            </Ellipse>

            <!-- Orb 6 - Light Sky -->
            <Ellipse x:Name="Orb6"
                    Width="760" Height="760"
                    Canvas.Left="580" Canvas.Top="360"
                    Fill="{StaticResource VibrantGradient6}"
                    RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform X="240" Y="-120"/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Ellipse.Effect>
                    <BlurEffect Radius="112"/>
                </Ellipse.Effect>
            </Ellipse>

            <!-- Orb 7 - Deep Cyan -->
            <Ellipse x:Name="Orb7"
                    Width="840" Height="840"
                    Canvas.Left="540" Canvas.Top="320"
                    Fill="{StaticResource VibrantGradient7}"
                    RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform X="-150" Y="210"/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Ellipse.Effect>
                    <BlurEffect Radius="106"/>
                </Ellipse.Effect>
            </Ellipse>

            <!-- Orb 8 - Deep Green -->
            <Ellipse x:Name="Orb8"
                    Width="790" Height="790"
                    Canvas.Left="565" Canvas.Top="345"
                    Fill="{StaticResource VibrantGradient8}"
                    RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform X="160" Y="-200"/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Ellipse.Effect>
                    <BlurEffect Radius="109"/>
                </Ellipse.Effect>
            </Ellipse>

            <!-- Orb 9 - Light Mint -->
            <Ellipse x:Name="Orb9"
                    Width="810" Height="810"
                    Canvas.Left="555" Canvas.Top="335"
                    Fill="{StaticResource VibrantGradient9}"
                    RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform X="-180" Y="-100"/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Ellipse.Effect>
                    <BlurEffect Radius="114"/>
                </Ellipse.Effect>
            </Ellipse>

            <!-- Orb 10 - Deep Orange -->
            <Ellipse x:Name="Orb10"
                    Width="770" Height="770"
                    Canvas.Left="575" Canvas.Top="355"
                    Fill="{StaticResource VibrantGradient10}"
                    RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform X="200" Y="140"/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Ellipse.Effect>
                    <BlurEffect Radius="107"/>
                </Ellipse.Effect>
            </Ellipse>

            <!-- Orb 11 - Light Peach -->
            <Ellipse x:Name="Orb11"
                    Width="830" Height="830"
                    Canvas.Left="545" Canvas.Top="325"
                    Fill="{StaticResource VibrantGradient11}"
                    RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform X="-130" Y="160"/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Ellipse.Effect>
                    <BlurEffect Radius="111"/>
                </Ellipse.Effect>
            </Ellipse>

            <!-- Orb 12 - Deep Rose -->
            <Ellipse x:Name="Orb12"
                    Width="800" Height="800"
                    Canvas.Left="560" Canvas.Top="340"
                    Fill="{StaticResource VibrantGradient12}"
                    RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform X="120" Y="-160"/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Ellipse.Effect>
                    <BlurEffect Radius="103"/>
                </Ellipse.Effect>
            </Ellipse>
        </Canvas>

        <!-- Content overlay -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                <TextBlock Text="VIBRANT AURORA"
                          FontSize="72"
                          FontWeight="Black"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,20">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#9C27B0"
                                        BlurRadius="40"
                                        ShadowDepth="0"
                                        Opacity="0.9"/>
                    </TextBlock.Effect>
                </TextBlock>

                <TextBlock Text="Deep and light colors in harmony"
                          FontSize="28"
                          FontWeight="Light"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,30">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#FF1493"
                                        BlurRadius="20"
                                        ShadowDepth="0"
                                        Opacity="0.8"/>
                    </TextBlock.Effect>
                </TextBlock>

                <Border Background="#40FFFFFF"
                       BorderBrush="#80FFFFFF"
                       BorderThickness="2"
                       CornerRadius="25"
                       Padding="40,15"
                       HorizontalAlignment="Center">
                    <TextBlock Text="ðŸŒˆ 12 Vibrant Orbs  â€¢  ðŸ’Ž Deep &amp; Light Mix  â€¢  âš¡ Fast Animations (10-18s)"
                              FontSize="18"
                              FontWeight="SemiBold"
                              Foreground="White"
                              TextAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#2196F3"
                                            BlurRadius="15"
                                            ShadowDepth="0"
                                            Opacity="0.7"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </Border>

                <TextBlock Text="Press ESC to return to menu"
                          FontSize="16"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          Margin="0,30,0,0"
                          Opacity="0.9">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#00BCD4"
                                        BlurRadius="10"
                                        ShadowDepth="0"
                                        Opacity="0.6"/>
                    </TextBlock.Effect>
                </TextBlock>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
