<Page x:Class="AuroraBackground.VibrantAuroraPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Vibrant Aurora"
      Loaded="Page_Loaded"
      KeyDown="Page_KeyDown">

    <Page.Resources>
        <!-- Vibrant Gradients - Mix of Deep and Light Colors -->

        <!-- Deep Magenta -->
        <RadialGradientBrush x:Key="VibrantGradient1" GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="1.2" RadiusY="1.2">
            <GradientStop Color="#FFFF1493" Offset="0"/>
            <GradientStop Color="#AAFF1493" Offset="0.5"/>
            <GradientStop Color="#00FF1493" Offset="1"/>
        </RadialGradientBrush>

        <!-- Light Pink -->
        <RadialGradientBrush x:Key="VibrantGradient2" GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="1.2" RadiusY="1.2">
            <GradientStop Color="#FFFFB3E6" Offset="0"/>
            <GradientStop Color="#CCFFB3E6" Offset="0.5"/>
            <GradientStop Color="#00FFB3E6" Offset="1"/>
        </RadialGradientBrush>

        <!-- Deep Purple -->
        <RadialGradientBrush x:Key="VibrantGradient3" GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="1.2" RadiusY="1.2">
            <GradientStop Color="#FF9C27B0" Offset="0"/>
            <GradientStop Color="#AA9C27B0" Offset="0.5"/>
            <GradientStop Color="#009C27B0" Offset="1"/>
        </RadialGradientBrush>

        <!-- Light Lavender -->
        <RadialGradientBrush x:Key="VibrantGradient4" GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="1.2" RadiusY="1.2">
            <GradientStop Color="#FFE1BEE7" Offset="0"/>
            <GradientStop Color="#CCE1BEE7" Offset="0.5"/>
            <GradientStop Color="#00E1BEE7" Offset="1"/>
