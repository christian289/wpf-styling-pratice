<Page x:Class="AuroraBackground.DeepAuroraPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Deep Aurora"
      Loaded="Page_Loaded"
      KeyDown="Page_KeyDown">

    <Page.Resources>
        <!-- Rotation Animations for Gradients -->
        <Storyboard x:Key="RotateGradient1" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="GradientLayer1"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                           From="0" To="360" Duration="0:0:45"/>
        </Storyboard>

        <Storyboard x:Key="RotateGradient2" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="GradientLayer2"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                           From="360" To="0" Duration="0:0:38"/>
        </Storyboard>

        <Storyboard x:Key="RotateGradient3" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="GradientLayer3"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                           From="0" To="360" Duration="0:0:52"/>
        </Storyboard>

        <Storyboard x:Key="RotateGradient4" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="GradientLayer4"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                           From="360" To="0" Duration="0:0:41"/>
        </Storyboard>

        <Storyboard x:Key="RotateGradient5" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="GradientLayer5"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                           From="0" To="360" Duration="0:0:48"/>
        </Storyboard>

        <Storyboard x:Key="RotateGradient6" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="GradientLayer6"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                           From="360" To="0" Duration="0:0:35"/>
        </Storyboard>
    </Page.Resources>

    <Grid>
        <!-- Base solid color to prevent any white gaps -->
        <Rectangle Fill="#FFE8D5F5"/>

        <!-- Gradient Layer 1: Deep Pink to Light Pink -->
        <Rectangle x:Name="GradientLayer1"
                  RenderTransformOrigin="0.5,0.5"
                  Opacity="0.85">
            <Rectangle.RenderTransform>
                <RotateTransform Angle="0"/>
            </Rectangle.RenderTransform>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FFFF1493" Offset="0"/>
                    <GradientStop Color="#FFFFB3E6" Offset="0.3"/>
                    <GradientStop Color="#FFFF69B4" Offset="0.5"/>
                    <GradientStop Color="#FFFFC9DE" Offset="0.7"/>
                    <GradientStop Color="#FFFF1493" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <!-- Gradient Layer 2: Deep Purple to Lavender -->
        <Rectangle x:Name="GradientLayer2"
                  RenderTransformOrigin="0.5,0.5"
                  Opacity="0.75">
            <Rectangle.RenderTransform>
                <RotateTransform Angle="60"/>
            </Rectangle.RenderTransform>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF9C27B0" Offset="0"/>
                    <GradientStop Color="#FFE1BEE7" Offset="0.25"/>
                    <GradientStop Color="#FFBA68C8" Offset="0.5"/>
                    <GradientStop Color="#FFF3E5F5" Offset="0.75"/>
                    <GradientStop Color="#FF9C27B0" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <!-- Gradient Layer 3: Deep Blue to Light Sky -->
        <Rectangle x:Name="GradientLayer3"
                  RenderTransformOrigin="0.5,0.5"
                  Opacity="0.7">
            <Rectangle.RenderTransform>
                <RotateTransform Angle="120"/>
            </Rectangle.RenderTransform>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF2196F3" Offset="0"/>
                    <GradientStop Color="#FFB3E5FC" Offset="0.3"/>
                    <GradientStop Color="#FF64B5F6" Offset="0.5"/>
                    <GradientStop Color="#FFE1F5FE" Offset="0.7"/>
                    <GradientStop Color="#FF2196F3" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <!-- Gradient Layer 4: Deep Cyan to Light Aqua -->
        <Rectangle x:Name="GradientLayer4"
                  RenderTransformOrigin="0.5,0.5"
                  Opacity="0.65">
            <Rectangle.RenderTransform>
                <RotateTransform Angle="180"/>
            </Rectangle.RenderTransform>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF00BCD4" Offset="0"/>
                    <GradientStop Color="#FFB2EBF2" Offset="0.25"/>
                    <GradientStop Color="#FF26C6DA" Offset="0.5"/>
                    <GradientStop Color="#FFE0F7FA" Offset="0.75"/>
                    <GradientStop Color="#FF00BCD4" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <!-- Gradient Layer 5: Deep Green to Light Mint -->
        <Rectangle x:Name="GradientLayer5"
                  RenderTransformOrigin="0.5,0.5"
                  Opacity="0.6">
            <Rectangle.RenderTransform>
                <RotateTransform Angle="240"/>
            </Rectangle.RenderTransform>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF00E676" Offset="0"/>
                    <GradientStop Color="#FFC8E6C9" Offset="0.3"/>
                    <GradientStop Color="#FF69F0AE" Offset="0.5"/>
                    <GradientStop Color="#FFE8F5E9" Offset="0.7"/>
                    <GradientStop Color="#FF00E676" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <!-- Gradient Layer 6: Deep Orange to Light Peach -->
        <Rectangle x:Name="GradientLayer6"
                  RenderTransformOrigin="0.5,0.5"
                  Opacity="0.55">
            <Rectangle.RenderTransform>
                <RotateTransform Angle="300"/>
            </Rectangle.RenderTransform>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FFFF9800" Offset="0"/>
                    <GradientStop Color="#FFFFCCBC" Offset="0.25"/>
                    <GradientStop Color="#FFFFB74D" Offset="0.5"/>
                    <GradientStop Color="#FFFFF3E0" Offset="0.75"/>
                    <GradientStop Color="#FFFF9800" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <!-- Content overlay -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                <TextBlock Text="VIBRANT AURORA"
                          FontSize="72"
                          FontWeight="Black"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,20">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#9C27B0"
                                        BlurRadius="40"
                                        ShadowDepth="0"
                                        Opacity="0.9"/>
                    </TextBlock.Effect>
                </TextBlock>

                <TextBlock Text="Deep and light colors in harmony"
                          FontSize="28"
                          FontWeight="Light"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,30">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#FF1493"
                                        BlurRadius="20"
                                        ShadowDepth="0"
                                        Opacity="0.8"/>
                    </TextBlock.Effect>
                </TextBlock>

                <Border Background="#50FFFFFF"
                       BorderBrush="#90FFFFFF"
                       BorderThickness="2"
                       CornerRadius="25"
                       Padding="40,15"
                       HorizontalAlignment="Center">
                    <TextBlock Text="ðŸŒˆ 6 Gradient Layers  â€¢  ðŸ’« Smooth Rotation  â€¢  ðŸŽ¨ No Empty Spaces"
                              FontSize="18"
                              FontWeight="SemiBold"
                              Foreground="White"
                              TextAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#2196F3"
                                            BlurRadius="15"
                                            ShadowDepth="0"
                                            Opacity="0.7"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </Border>

                <TextBlock Text="Press ESC to return to menu"
                          FontSize="16"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          Margin="0,30,0,0"
                          Opacity="0.9">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#00BCD4"
                                        BlurRadius="10"
                                        ShadowDepth="0"
                                        Opacity="0.6"/>
                    </TextBlock.Effect>
                </TextBlock>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
