<Window x:Class="MicroInteractionsGallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MicroInteractions Gallery - 2020 Animation Patterns"
        Height="900" Width="1400"
        Background="#0A0A0A"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Navigation Sidebar with Menu Conversion Animation -->
        <Border Grid.Column="0" Background="#1A1A1A" BorderBrush="#2A2A2A" BorderThickness="0,0,1,0">
            <StackPanel Margin="20">
                <TextBlock Text="MicroInteractions"
                          FontSize="24"
                          FontWeight="Bold"
                          Foreground="White"
                          Margin="0,0,0,30"/>

                <TextBlock Text="2020 Animation Patterns"
                          FontSize="12"
                          Foreground="#888"
                          Margin="0,0,0,20"/>

                <Separator Background="#2A2A2A" Margin="0,0,0,20"/>

                <TextBlock Text="CONTROLS"
                          FontSize="11"
                          Foreground="#666"
                          FontWeight="SemiBold"
                          Margin="0,0,0,10"/>

                <ListBox x:Name="NavigationList"
                         Background="Transparent"
                         BorderThickness="0"
                         SelectedIndex="0"
                         SelectionChanged="NavigationList_SelectionChanged">
                    <ListBoxItem Content="Buttons" Tag="Buttons"/>
                    <ListBoxItem Content="Input Controls" Tag="Inputs"/>
                    <ListBoxItem Content="Selection Controls" Tag="Selection"/>
                    <ListBoxItem Content="Navigation" Tag="Navigation"/>
                    <ListBoxItem Content="Progress &amp; Sliders" Tag="Progress"/>
                    <ListBoxItem Content="All Controls" Tag="All"/>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- Main Content Area with TabControl -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40">
                <!-- Header -->
                <TextBlock Text="MicroInteractions Gallery"
                          FontSize="32"
                          FontWeight="Bold"
                          Foreground="White"
                          Margin="0,0,0,10"/>

                <TextBlock Text="Explore 2020-era animation patterns: Menu Conversion Animation &amp; Navigation Activate Animation"
                          FontSize="14"
                          Foreground="#888"
                          Margin="0,0,0,40"/>

                <!-- Buttons Section -->
                <StackPanel x:Name="ButtonsSection" Visibility="Visible">
                    <TextBlock Text="Buttons"
                              FontSize="24"
                              FontWeight="SemiBold"
                              Foreground="White"
                              Margin="0,0,0,20"/>

                    <TextBlock Text="Ripple effect animation with scale transformation"
                              FontSize="12"
                              Foreground="#888"
                              Margin="0,0,0,15"/>

                    <WrapPanel Margin="0,0,0,40">
                        <Button Content="Primary Button" Margin="0,0,10,10" Padding="20,10"/>
                        <Button Content="Click Me" Margin="0,0,10,10" Padding="20,10"/>
                        <Button Content="Hover Effect" Margin="0,0,10,10" Padding="20,10"/>
                        <Button Content="Ripple Animation" Margin="0,0,10,10" Padding="20,10"/>
                    </WrapPanel>

                    <TextBlock Text="Toggle Buttons - 360° Flip Animation"
                              FontSize="16"
                              FontWeight="SemiBold"
                              Foreground="White"
                              Margin="0,0,0,15"/>

                    <WrapPanel Margin="0,0,0,40">
                        <ToggleButton Content="Toggle Me" Margin="0,0,10,10" Padding="20,10"/>
                        <ToggleButton Content="Flip Animation" IsChecked="True" Margin="0,0,10,10" Padding="20,10"/>
                        <ToggleButton Content="Click to Flip" Margin="0,0,10,10" Padding="20,10"/>
                    </WrapPanel>
                </StackPanel>

                <!-- Input Controls Section -->
                <StackPanel x:Name="InputsSection" Visibility="Collapsed">
                    <TextBlock Text="Input Controls"
                              FontSize="24"
                              FontWeight="SemiBold"
                              Foreground="White"
                              Margin="0,0,0,20"/>

                    <TextBlock Text="TextBox - Focus Scale Animation"
                              FontSize="16"
                              FontWeight="SemiBold"
                              Foreground="White"
                              Margin="0,0,0,15"/>

                    <TextBox Text="Focus me to see animation" Margin="0,0,0,15" Width="400" HorizontalAlignment="Left"/>
                    <TextBox Margin="0,0,0,15" Width="400" HorizontalAlignment="Left">
                        <TextBox.Text>Type something...</TextBox.Text>
                    </TextBox>
                    <TextBox IsEnabled="False" Text="Disabled TextBox" Margin="0,0,0,40" Width="400" HorizontalAlignment="Left"/>
                </StackPanel>

                <!-- Selection Controls Section -->
                <StackPanel x:Name="SelectionSection" Visibility="Collapsed">
                    <TextBlock Text="Selection Controls"
                              FontSize="24"
                              FontWeight="SemiBold"
                              Foreground="White"
                              Margin="0,0,0,20"/>

                    <TextBlock Text="CheckBox - 360° Rotation Animation"
                              FontSize="16"
                              FontWeight="SemiBold"
                              Foreground="White"
                              Margin="0,0,0,15"/>

                    <StackPanel Margin="0,0,0,30">
                        <CheckBox Content="Enable notifications" Margin="0,0,0,10"/>
                        <CheckBox Content="Auto-save" IsChecked="True" Margin="0,0,0,10"/>
                        <CheckBox Content="Dark mode" Margin="0,0,0,10"/>
                        <CheckBox Content="Disabled option" IsEnabled="False" Margin="0,0,0,10"/>
                    </StackPanel>

                    <TextBlock Text="RadioButton - Elastic Bounce Animation"
                              FontSize="16"
                              FontWeight="SemiBold"
                              Foreground="White"
                              Margin="0,0,0,15"/>

                    <StackPanel Margin="0,0,0,30">
                        <RadioButton Content="Option A" GroupName="Group1" IsChecked="True" Margin="0,0,0,10"/>
                        <RadioButton Content="Option B" GroupName="Group1" Margin="0,0,0,10"/>
                        <RadioButton Content="Option C" GroupName="Group1" Margin="0,0,0,10"/>
                        <RadioButton Content="Disabled option" GroupName="Group1" IsEnabled="False" Margin="0,0,0,10"/>
                    </StackPanel>

                    <TextBlock Text="ComboBox - Dropdown Scale &amp; Arrow Rotation"
                              FontSize="16"
                              FontWeight="SemiBold"
                              Foreground="White"
                              Margin="0,0,0,15"/>

                    <ComboBox Width="300" HorizontalAlignment="Left" Margin="0,0,0,15">
                        <ComboBoxItem Content="Menu Conversion Animation" IsSelected="True"/>
                        <ComboBoxItem Content="Navigation Activate Animation"/>
                        <ComboBoxItem Content="Ripple Effect"/>
                        <ComboBoxItem Content="Elastic Bounce"/>
                        <ComboBoxItem Content="Scale Transform"/>
                    </ComboBox>

                    <TextBlock Text="ListBox - Slide-in Animation"
                              FontSize="16"
                              FontWeight="SemiBold"
                              Foreground="White"
                              Margin="0,20,0,15"/>

                    <ListBox Width="300" Height="200" HorizontalAlignment="Left" Margin="0,0,0,40">
                        <ListBoxItem Content="Hover over items to see animation"/>
                        <ListBoxItem Content="Item 2 - Slide effect"/>
                        <ListBoxItem Content="Item 3 - TranslateTransform"/>
                        <ListBoxItem Content="Item 4 - Smooth motion"/>
                        <ListBoxItem Content="Item 5 - Interactive feedback"/>
                        <ListBoxItem Content="Item 6 - Micro-interaction"/>
                    </ListBox>
                </StackPanel>

                <!-- Navigation Section -->
                <StackPanel x:Name="NavigationSection" Visibility="Collapsed">
                    <TextBlock Text="Navigation Activate Animation"
                              FontSize="24"
                              FontWeight="SemiBold"
                              Foreground="White"
                              Margin="0,0,0,20"/>

                    <TextBlock Text="TabControl - Bottom indicator with BackEase animation"
                              FontSize="12"
                              Foreground="#888"
                              Margin="0,0,0,15"/>

                    <TabControl Height="400" Margin="0,0,0,40">
                        <TabItem Header="Home">
                            <Border Background="#1A1A1A" Padding="30">
                                <StackPanel>
                                    <TextBlock Text="Home Tab" FontSize="20" Foreground="White" Margin="0,0,0,10"/>
                                    <TextBlock Text="Click on different tabs to see the Navigation Activate Animation in action."
                                              Foreground="#888" TextWrapping="Wrap"/>
                                    <TextBlock Text="Notice how the bottom indicator smoothly slides to the selected tab with a satisfying BackEase easing function."
                                              Foreground="#888" TextWrapping="Wrap" Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>
                        </TabItem>
                        <TabItem Header="Profile">
                            <Border Background="#1A1A1A" Padding="30">
                                <StackPanel>
                                    <TextBlock Text="Profile Tab" FontSize="20" Foreground="White" Margin="0,0,0,10"/>
                                    <TextBlock Text="This is the profile section demonstrating smooth tab transitions."
                                              Foreground="#888" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </TabItem>
                        <TabItem Header="Settings">
                            <Border Background="#1A1A1A" Padding="30">
                                <StackPanel>
                                    <TextBlock Text="Settings Tab" FontSize="20" Foreground="White" Margin="0,0,0,10"/>
                                    <TextBlock Text="The indicator bar animation provides clear visual feedback about which tab is active."
                                              Foreground="#888" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </TabItem>
                        <TabItem Header="Analytics">
                            <Border Background="#1A1A1A" Padding="30">
                                <StackPanel>
                                    <TextBlock Text="Analytics Tab" FontSize="20" Foreground="White" Margin="0,0,0,10"/>
                                    <TextBlock Text="Watch the smooth transition as you navigate between tabs."
                                              Foreground="#888" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </TabItem>
                        <TabItem Header="Help">
                            <Border Background="#1A1A1A" Padding="30">
                                <StackPanel>
                                    <TextBlock Text="Help Tab" FontSize="20" Foreground="White" Margin="0,0,0,10"/>
                                    <TextBlock Text="This Navigation Activate Animation pattern became popular in 2020 for its clarity and smooth user experience."
                                              Foreground="#888" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </TabItem>
                    </TabControl>
                </StackPanel>

                <!-- Progress & Sliders Section -->
                <StackPanel x:Name="ProgressSection" Visibility="Collapsed">
                    <TextBlock Text="Progress &amp; Sliders"
                              FontSize="24"
                              FontWeight="SemiBold"
                              Foreground="White"
                              Margin="0,0,0,20"/>

                    <TextBlock Text="ProgressBar - Smooth Fill Animation"
                              FontSize="16"
                              FontWeight="SemiBold"
                              Foreground="White"
                              Margin="0,0,0,15"/>

                    <ProgressBar Value="30" Height="12" Width="400" HorizontalAlignment="Left" Margin="0,0,0,15"/>
                    <ProgressBar Value="60" Height="12" Width="400" HorizontalAlignment="Left" Margin="0,0,0,15"/>
                    <ProgressBar Value="90" Height="12" Width="400" HorizontalAlignment="Left" Margin="0,0,0,30"/>

                    <TextBlock Text="Slider - Animated Thumb with BackEase"
                              FontSize="16"
                              FontWeight="SemiBold"
                              Foreground="White"
                              Margin="0,0,0,15"/>

                    <Slider Value="50" Minimum="0" Maximum="100" Width="400" HorizontalAlignment="Left" Margin="0,0,0,15"/>
                    <Slider Value="75" Minimum="0" Maximum="100" Width="400" HorizontalAlignment="Left" Margin="0,0,0,40"/>
                </StackPanel>

                <!-- All Controls Section -->
                <StackPanel x:Name="AllSection" Visibility="Collapsed">
                    <TextBlock Text="All Controls Overview"
                              FontSize="24"
                              FontWeight="SemiBold"
                              Foreground="White"
                              Margin="0,0,0,20"/>

                    <!-- Buttons -->
                    <TextBlock Text="Buttons &amp; Toggle" FontSize="18" Foreground="White" Margin="0,0,0,10"/>
                    <WrapPanel Margin="0,0,0,30">
                        <Button Content="Button 1" Margin="0,0,10,10" Padding="15,8"/>
                        <Button Content="Button 2" Margin="0,0,10,10" Padding="15,8"/>
                        <ToggleButton Content="Toggle" Margin="0,0,10,10" Padding="15,8"/>
                        <ToggleButton Content="Toggle 2" IsChecked="True" Margin="0,0,10,10" Padding="15,8"/>
                    </WrapPanel>

                    <!-- Inputs -->
                    <TextBlock Text="Text Input" FontSize="18" Foreground="White" Margin="0,0,0,10"/>
                    <TextBox Text="Sample text input" Width="350" HorizontalAlignment="Left" Margin="0,0,0,30"/>

                    <!-- Checkboxes and Radio -->
                    <TextBlock Text="Selection Controls" FontSize="18" Foreground="White" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,30">
                        <StackPanel Margin="0,0,40,0">
                            <CheckBox Content="Option 1" Margin="0,0,0,8"/>
                            <CheckBox Content="Option 2" IsChecked="True" Margin="0,0,0,8"/>
                            <CheckBox Content="Option 3" Margin="0,0,0,8"/>
                        </StackPanel>
                        <StackPanel>
                            <RadioButton Content="Choice A" GroupName="All" IsChecked="True" Margin="0,0,0,8"/>
                            <RadioButton Content="Choice B" GroupName="All" Margin="0,0,0,8"/>
                            <RadioButton Content="Choice C" GroupName="All" Margin="0,0,0,8"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Dropdown -->
                    <TextBlock Text="ComboBox &amp; ListBox" FontSize="18" Foreground="White" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,30">
                        <ComboBox Width="200" Margin="0,0,20,0">
                            <ComboBoxItem Content="Item 1" IsSelected="True"/>
                            <ComboBoxItem Content="Item 2"/>
                            <ComboBoxItem Content="Item 3"/>
                        </ComboBox>
                        <ListBox Width="200" Height="100">
                            <ListBoxItem Content="List Item 1"/>
                            <ListBoxItem Content="List Item 2"/>
                            <ListBoxItem Content="List Item 3"/>
                        </ListBox>
                    </StackPanel>

                    <!-- Progress and Slider -->
                    <TextBlock Text="Progress &amp; Slider" FontSize="18" Foreground="White" Margin="0,0,0,10"/>
                    <ProgressBar Value="65" Height="10" Width="350" HorizontalAlignment="Left" Margin="0,0,0,15"/>
                    <Slider Value="65" Minimum="0" Maximum="100" Width="350" HorizontalAlignment="Left" Margin="0,0,0,30"/>

                    <!-- Tabs -->
                    <TextBlock Text="Tab Navigation" FontSize="18" Foreground="White" Margin="0,0,0,10"/>
                    <TabControl Height="200" Margin="0,0,0,30">
                        <TabItem Header="Tab 1">
                            <Border Background="#1A1A1A" Padding="20">
                                <TextBlock Text="Tab 1 Content" Foreground="White"/>
                            </Border>
                        </TabItem>
                        <TabItem Header="Tab 2">
                            <Border Background="#1A1A1A" Padding="20">
                                <TextBlock Text="Tab 2 Content" Foreground="White"/>
                            </Border>
                        </TabItem>
                        <TabItem Header="Tab 3">
                            <Border Background="#1A1A1A" Padding="20">
                                <TextBlock Text="Tab 3 Content" Foreground="White"/>
                            </Border>
                        </TabItem>
                    </TabControl>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
