<Window x:Class="GlassmorphismGallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:glass="clr-namespace:GlassmorphismLib;assembly=GlassmorphismLib"
        Title="Glassmorphism Controls Gallery"
        Height="900"
        Width="1400"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="SectionHeaderStyle">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2D3748"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="SubHeaderStyle">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#4A5568"/>
            <Setter Property="Margin" Value="0,16,0,12"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="DescriptionStyle">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#718096"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </Window.Resources>

    <!-- Gradient Background -->
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#667EEA" Offset="0"/>
                <GradientStop Color="#764BA2" Offset="0.5"/>
                <GradientStop Color="#F093FB" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Card -->
        <glass:GlassCard Grid.Row="0"
                         Margin="40,40,40,20"
                         CornerRadius="20">
            <StackPanel>
                <TextBlock Text="Glassmorphism Controls Gallery"
                           FontSize="36"
                           FontWeight="Bold"
                           Foreground="#2D3748"
                           Margin="0,0,0,8"/>
                <TextBlock Text="Beautiful glass-morphic WPF controls with modern styling and transparency effects"
                           FontSize="16"
                           Foreground="#718096"/>
            </StackPanel>
        </glass:GlassCard>

        <!-- Content ScrollViewer -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      Margin="40,0,40,40">
            <StackPanel>

                <!-- Buttons Section -->
                <glass:GlassCard Margin="0,0,0,24" CornerRadius="20">
                    <StackPanel>
                        <TextBlock Text="Buttons" Style="{StaticResource SectionHeaderStyle}"/>

                        <TextBlock Text="Default Buttons" Style="{StaticResource SubHeaderStyle}"/>
                        <TextBlock Text="Glass-morphic buttons with semi-transparent background and blur effects"
                                   Style="{StaticResource DescriptionStyle}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <glass:GlassButton Content="Default"
                                               Margin="0,0,12,0"/>
                            <glass:GlassButton Content="Primary"
                                               ButtonVariant="Primary"
                                               Margin="0,0,12,0"/>
                            <glass:GlassButton Content="Success"
                                               ButtonVariant="Success"
                                               Margin="0,0,12,0"/>
                            <glass:GlassButton Content="Warning"
                                               ButtonVariant="Warning"
                                               Margin="0,0,12,0"/>
                            <glass:GlassButton Content="Danger"
                                               ButtonVariant="Danger"
                                               Margin="0,0,12,0"/>
                        </StackPanel>

                        <TextBlock Text="Different Sizes" Style="{StaticResource SubHeaderStyle}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <glass:GlassButton Content="Small"
                                               ButtonVariant="Primary"
                                               FontSize="12"
                                               Padding="16,8"
                                               Margin="0,0,12,0"/>
                            <glass:GlassButton Content="Medium"
                                               ButtonVariant="Primary"
                                               Margin="0,0,12,0"/>
                            <glass:GlassButton Content="Large"
                                               ButtonVariant="Primary"
                                               FontSize="16"
                                               Padding="28,14"
                                               Margin="0,0,12,0"/>
                        </StackPanel>

                        <TextBlock Text="Disabled State" Style="{StaticResource SubHeaderStyle}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                            <glass:GlassButton Content="Disabled Default"
                                               IsEnabled="False"
                                               Margin="0,0,12,0"/>
                            <glass:GlassButton Content="Disabled Primary"
                                               ButtonVariant="Primary"
                                               IsEnabled="False"
                                               Margin="0,0,12,0"/>
                        </StackPanel>
                    </StackPanel>
                </glass:GlassCard>

                <!-- Text Input Section -->
                <glass:GlassCard Margin="0,0,0,24" CornerRadius="20">
                    <StackPanel>
                        <TextBlock Text="Text Inputs" Style="{StaticResource SectionHeaderStyle}"/>

                        <TextBlock Text="Glass TextBox" Style="{StaticResource SubHeaderStyle}"/>
                        <TextBlock Text="Semi-transparent text inputs with elegant glass effect"
                                   Style="{StaticResource DescriptionStyle}"/>
                        <glass:GlassTextBox Placeholder="Enter your name..."
                                            Width="350"
                                            HorizontalAlignment="Left"
                                            Margin="0,0,0,20"/>

                        <TextBlock Text="With Custom Corner Radius" Style="{StaticResource SubHeaderStyle}"/>
                        <glass:GlassTextBox Placeholder="Enter your email..."
                                            Width="350"
                                            HorizontalAlignment="Left"
                                            CornerRadius="20"
                                            Margin="0,0,0,20"/>

                        <TextBlock Text="Different Widths" Style="{StaticResource SubHeaderStyle}"/>
                        <glass:GlassTextBox Placeholder="Small width"
                                            Width="250"
                                            HorizontalAlignment="Left"
                                            Margin="0,0,0,8"/>
                        <glass:GlassTextBox Placeholder="Medium width"
                                            Width="400"
                                            HorizontalAlignment="Left"
                                            Margin="0,0,0,8"/>
                        <glass:GlassTextBox Placeholder="Large width"
                                            Width="550"
                                            HorizontalAlignment="Left"
                                            Margin="0,0,0,20"/>

                        <TextBlock Text="Disabled State" Style="{StaticResource SubHeaderStyle}"/>
                        <glass:GlassTextBox Text="Disabled text input"
                                            Width="350"
                                            HorizontalAlignment="Left"
                                            IsEnabled="False"/>
                    </StackPanel>
                </glass:GlassCard>

                <!-- CheckBox Section -->
                <glass:GlassCard Margin="0,0,0,24" CornerRadius="20">
                    <StackPanel>
                        <TextBlock Text="CheckBoxes" Style="{StaticResource SectionHeaderStyle}"/>

                        <TextBlock Text="Glass CheckBox" Style="{StaticResource SubHeaderStyle}"/>
                        <TextBlock Text="Elegant checkboxes with glassmorphic design"
                                   Style="{StaticResource DescriptionStyle}"/>

                        <StackPanel Margin="0,0,0,20">
                            <glass:GlassCheckBox Content="Enable notifications"
                                                 Margin="0,0,0,12"/>
                            <glass:GlassCheckBox Content="Auto-save settings"
                                                 IsChecked="True"
                                                 Margin="0,0,0,12"/>
                            <glass:GlassCheckBox Content="Dark mode"
                                                 Margin="0,0,0,12"/>
                            <glass:GlassCheckBox Content="Disabled option"
                                                 IsEnabled="False"
                                                 Margin="0,0,0,12"/>
                        </StackPanel>
                    </StackPanel>
                </glass:GlassCard>

                <!-- Progress Bars Section -->
                <glass:GlassCard Margin="0,0,0,24" CornerRadius="20">
                    <StackPanel>
                        <TextBlock Text="Progress Bars" Style="{StaticResource SectionHeaderStyle}"/>

                        <TextBlock Text="Glass Progress Bars" Style="{StaticResource SubHeaderStyle}"/>
                        <TextBlock Text="Smooth progress indicators with glassmorphic styling"
                                   Style="{StaticResource DescriptionStyle}"/>

                        <TextBlock Text="45% Progress" FontSize="12" Foreground="#718096" Margin="0,0,0,4"/>
                        <glass:GlassProgressBar Value="45"
                                                Maximum="100"
                                                Height="20"
                                                Margin="0,0,0,20"/>

                        <TextBlock Text="70% Progress" FontSize="12" Foreground="#718096" Margin="0,0,0,4"/>
                        <glass:GlassProgressBar Value="70"
                                                Maximum="100"
                                                Height="20"
                                                Margin="0,0,0,20"/>

                        <TextBlock Text="95% Progress" FontSize="12" Foreground="#718096" Margin="0,0,0,4"/>
                        <glass:GlassProgressBar Value="95"
                                                Maximum="100"
                                                Height="20"
                                                Margin="0,0,0,20"/>

                        <TextBlock Text="Different Heights" Style="{StaticResource SubHeaderStyle}"/>
                        <glass:GlassProgressBar Value="60"
                                                Maximum="100"
                                                Height="12"
                                                Margin="0,0,0,8"/>
                        <glass:GlassProgressBar Value="60"
                                                Maximum="100"
                                                Height="16"
                                                Margin="0,0,0,8"/>
                        <glass:GlassProgressBar Value="60"
                                                Maximum="100"
                                                Height="28"
                                                Margin="0,0,0,0"/>
                    </StackPanel>
                </glass:GlassCard>

                <!-- Cards Section -->
                <glass:GlassCard Margin="0,0,0,24" CornerRadius="20">
                    <StackPanel>
                        <TextBlock Text="Cards" Style="{StaticResource SectionHeaderStyle}"/>

                        <TextBlock Text="Glass Cards" Style="{StaticResource SubHeaderStyle}"/>
                        <TextBlock Text="Versatile glass-morphic cards for content organization"
                                   Style="{StaticResource DescriptionStyle}"/>

                        <UniformGrid Columns="3" Rows="1">
                            <glass:GlassCard Margin="0,0,12,0" CornerRadius="16">
                                <StackPanel>
                                    <TextBlock Text="ðŸ’Ž Premium"
                                               FontSize="20"
                                               FontWeight="SemiBold"
                                               Foreground="#2D3748"
                                               Margin="0,0,0,8"/>
                                    <TextBlock Text="Access to all premium features and priority support."
                                               FontSize="13"
                                               Foreground="#718096"
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,12"/>
                                    <glass:GlassButton Content="Get Started"
                                                       ButtonVariant="Primary"
                                                       HorizontalAlignment="Stretch"/>
                                </StackPanel>
                            </glass:GlassCard>

                            <glass:GlassCard Margin="0,0,12,0" CornerRadius="16">
                                <StackPanel>
                                    <TextBlock Text="ðŸš€ Performance"
                                               FontSize="20"
                                               FontWeight="SemiBold"
                                               Foreground="#2D3748"
                                               Margin="0,0,0,8"/>
                                    <TextBlock Text="Lightning-fast rendering with optimized graphics."
                                               FontSize="13"
                                               Foreground="#718096"
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,12"/>
                                    <glass:GlassButton Content="Learn More"
                                                       ButtonVariant="Success"
                                                       HorizontalAlignment="Stretch"/>
                                </StackPanel>
                            </glass:GlassCard>

                            <glass:GlassCard Margin="0,0,0,0" CornerRadius="16">
                                <StackPanel>
                                    <TextBlock Text="ðŸŽ¨ Customizable"
                                               FontSize="20"
                                               FontWeight="SemiBold"
                                               Foreground="#2D3748"
                                               Margin="0,0,0,8"/>
                                    <TextBlock Text="Fully customizable controls to match your brand."
                                               FontSize="13"
                                               Foreground="#718096"
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,12"/>
                                    <glass:GlassButton Content="Customize"
                                                       ButtonVariant="Warning"
                                                       HorizontalAlignment="Stretch"/>
                                </StackPanel>
                            </glass:GlassCard>
                        </UniformGrid>
                    </StackPanel>
                </glass:GlassCard>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
