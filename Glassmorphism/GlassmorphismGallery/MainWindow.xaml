<Window x:Class="GlassmorphismGallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Glassmorphism Controls Gallery"
        Height="900"
        Width="1400"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="SectionTitle">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="SubTitle">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,12,0,8"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="Description">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </Window.Resources>

    <!-- Vibrant Gradient Background -->
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#667EEA" Offset="0"/>
                <GradientStop Color="#764BA2" Offset="0.5"/>
                <GradientStop Color="#F093FB" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="40">
            <StackPanel>

                <!-- Header -->
                <TextBlock Text="âœ¨ Glassmorphism WPF Controls Gallery"
                           FontSize="40"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                <TextBlock Text="Modern, semi-transparent controls with frosted glass effect"
                           FontSize="16"
                           Foreground="#E0E0E0"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,40"/>

                <!-- Buttons Section -->
                <Border Background="#20FFFFFF"
                        BorderBrush="#60FFFFFF"
                        BorderThickness="1"
                        CornerRadius="16"
                        Padding="30"
                        Margin="0,0,0,24">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="4" BlurRadius="30" Opacity="0.3" Color="#000000"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="ðŸ”˜ Buttons" Style="{StaticResource SectionTitle}"/>

                        <TextBlock Text="Standard Buttons" Style="{StaticResource SubTitle}"/>
                        <TextBlock Text="Glass-morphic buttons with hover and click effects"
                                   Style="{StaticResource Description}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <Button Content="Default Button" Margin="0,0,10,0"/>
                            <Button Content="Click Me" Margin="0,0,10,0"/>
                            <Button Content="Submit" Margin="0,0,10,0"/>
                            <Button Content="Disabled" IsEnabled="False"/>
                        </StackPanel>

                        <TextBlock Text="Different Sizes" Style="{StaticResource SubTitle}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                            <Button Content="Small" FontSize="12" Padding="12,6" Margin="0,0,10,0"/>
                            <Button Content="Medium" FontSize="14" Padding="20,10" Margin="0,0,10,0"/>
                            <Button Content="Large" FontSize="16" Padding="28,14"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- TextBox Section -->
                <Border Background="#20FFFFFF"
                        BorderBrush="#60FFFFFF"
                        BorderThickness="1"
                        CornerRadius="16"
                        Padding="30"
                        Margin="0,0,0,24">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="4" BlurRadius="30" Opacity="0.3" Color="#000000"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="ðŸ“ Text Inputs" Style="{StaticResource SectionTitle}"/>

                        <TextBlock Text="TextBox Controls" Style="{StaticResource SubTitle}"/>
                        <TextBlock Text="Semi-transparent text inputs with focus glow effects"
                                   Style="{StaticResource Description}"/>

                        <Label Content="Username:" Foreground="White"/>
                        <TextBox Text="" Width="400" HorizontalAlignment="Left" Margin="0,0,0,12"/>

                        <Label Content="Email:" Foreground="White"/>
                        <TextBox Text="" Width="400" HorizontalAlignment="Left" Margin="0,0,0,12"/>

                        <Label Content="Disabled Input:" Foreground="White"/>
                        <TextBox Text="Disabled text input" Width="400" HorizontalAlignment="Left" IsEnabled="False"/>
                    </StackPanel>
                </Border>

                <!-- CheckBox & RadioButton Section -->
                <Border Background="#20FFFFFF"
                        BorderBrush="#60FFFFFF"
                        BorderThickness="1"
                        CornerRadius="16"
                        Padding="30"
                        Margin="0,0,0,24">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="4" BlurRadius="30" Opacity="0.3" Color="#000000"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- CheckBoxes -->
                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <TextBlock Text="â˜‘ï¸ CheckBoxes" Style="{StaticResource SectionTitle}"/>

                            <TextBlock Text="Selection Controls" Style="{StaticResource SubTitle}"/>
                            <TextBlock Text="Glass-styled checkboxes with smooth animations"
                                       Style="{StaticResource Description}"/>

                            <CheckBox Content="Enable notifications" Margin="0,0,0,10"/>
                            <CheckBox Content="Auto-save" IsChecked="True" Margin="0,0,0,10"/>
                            <CheckBox Content="Dark mode" Margin="0,0,0,10"/>
                            <CheckBox Content="Disabled option" IsEnabled="False" Margin="0,0,0,0"/>
                        </StackPanel>

                        <!-- RadioButtons -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="âš« RadioButtons" Style="{StaticResource SectionTitle}"/>

                            <TextBlock Text="Option Selection" Style="{StaticResource SubTitle}"/>
                            <TextBlock Text="Glass-styled radio buttons for exclusive choices"
                                       Style="{StaticResource Description}"/>

                            <RadioButton Content="Option 1" GroupName="Options" Margin="0,0,0,10"/>
                            <RadioButton Content="Option 2" GroupName="Options" IsChecked="True" Margin="0,0,0,10"/>
                            <RadioButton Content="Option 3" GroupName="Options" Margin="0,0,0,10"/>
                            <RadioButton Content="Disabled" GroupName="Options" IsEnabled="False"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Progress & Slider Section -->
                <Border Background="#20FFFFFF"
                        BorderBrush="#60FFFFFF"
                        BorderThickness="1"
                        CornerRadius="16"
                        Padding="30"
                        Margin="0,0,0,24">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="4" BlurRadius="30" Opacity="0.3" Color="#000000"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- ProgressBar -->
                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <TextBlock Text="ðŸ“Š Progress Bars" Style="{StaticResource SectionTitle}"/>

                            <TextBlock Text="Progress Indicators" Style="{StaticResource SubTitle}"/>
                            <TextBlock Text="Glass progress bars with gradient fill"
                                       Style="{StaticResource Description}"/>

                            <Label Content="35% Complete" Foreground="White"/>
                            <ProgressBar Value="35" Maximum="100" Height="20" Margin="0,0,0,12"/>

                            <Label Content="75% Complete" Foreground="White"/>
                            <ProgressBar Value="75" Maximum="100" Height="20" Margin="0,0,0,12"/>

                            <Label Content="100% Complete" Foreground="White"/>
                            <ProgressBar Value="100" Maximum="100" Height="20"/>
                        </StackPanel>

                        <!-- Slider -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="ðŸŽšï¸ Sliders" Style="{StaticResource SectionTitle}"/>

                            <TextBlock Text="Value Selection" Style="{StaticResource SubTitle}"/>
                            <TextBlock Text="Glass-styled sliders with thumb control"
                                       Style="{StaticResource Description}"/>

                            <Label Content="Volume" Foreground="White"/>
                            <Slider Minimum="0" Maximum="100" Value="50" Margin="0,0,0,12"/>

                            <Label Content="Brightness" Foreground="White"/>
                            <Slider Minimum="0" Maximum="100" Value="75" Margin="0,0,0,12"/>

                            <Label Content="Opacity" Foreground="White"/>
                            <Slider Minimum="0" Maximum="100" Value="90"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- ComboBox & ListBox Section -->
                <Border Background="#20FFFFFF"
                        BorderBrush="#60FFFFFF"
                        BorderThickness="1"
                        CornerRadius="16"
                        Padding="30"
                        Margin="0,0,0,24">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="4" BlurRadius="30" Opacity="0.3" Color="#000000"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- ComboBox -->
                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <TextBlock Text="ðŸ“‹ ComboBox" Style="{StaticResource SectionTitle}"/>

                            <TextBlock Text="Dropdown Selection" Style="{StaticResource SubTitle}"/>
                            <TextBlock Text="Glass dropdown with semi-transparent popup"
                                       Style="{StaticResource Description}"/>

                            <Label Content="Select Country:" Foreground="White"/>
                            <ComboBox Width="300" HorizontalAlignment="Left" Margin="0,0,0,12">
                                <ComboBoxItem Content="United States" IsSelected="True"/>
                                <ComboBoxItem Content="United Kingdom"/>
                                <ComboBoxItem Content="Canada"/>
                                <ComboBoxItem Content="Australia"/>
                                <ComboBoxItem Content="Germany"/>
                                <ComboBoxItem Content="France"/>
                                <ComboBoxItem Content="Japan"/>
                            </ComboBox>

                            <Label Content="Select Language:" Foreground="White"/>
                            <ComboBox Width="300" HorizontalAlignment="Left">
                                <ComboBoxItem Content="English" IsSelected="True"/>
                                <ComboBoxItem Content="Spanish"/>
                                <ComboBoxItem Content="French"/>
                                <ComboBoxItem Content="German"/>
                                <ComboBoxItem Content="Chinese"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- ListBox -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="ðŸ“ ListBox" Style="{StaticResource SectionTitle}"/>

                            <TextBlock Text="Item Selection" Style="{StaticResource SubTitle}"/>
                            <TextBlock Text="Glass list with selectable items"
                                       Style="{StaticResource Description}"/>

                            <Label Content="Select Items:" Foreground="White"/>
                            <ListBox Height="200" Margin="0,0,0,0">
                                <ListBoxItem Content="Item 1"/>
                                <ListBoxItem Content="Item 2" IsSelected="True"/>
                                <ListBoxItem Content="Item 3"/>
                                <ListBoxItem Content="Item 4"/>
                                <ListBoxItem Content="Item 5"/>
                                <ListBoxItem Content="Item 6"/>
                                <ListBoxItem Content="Item 7"/>
                                <ListBoxItem Content="Item 8"/>
                            </ListBox>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- TabControl Section -->
                <Border Background="#20FFFFFF"
                        BorderBrush="#60FFFFFF"
                        BorderThickness="1"
                        CornerRadius="16"
                        Padding="30"
                        Margin="0,0,0,24">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="4" BlurRadius="30" Opacity="0.3" Color="#000000"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="ðŸ“‘ TabControl" Style="{StaticResource SectionTitle}"/>

                        <TextBlock Text="Tabbed Navigation" Style="{StaticResource SubTitle}"/>
                        <TextBlock Text="Glass tabs with smooth transitions"
                                   Style="{StaticResource Description}"/>

                        <TabControl Height="250">
                            <TabItem Header="Profile">
                                <StackPanel Padding="20">
                                    <TextBlock Text="Profile Settings" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                                    <TextBlock Text="Configure your user profile and personal information." TextWrapping="Wrap"/>
                                </StackPanel>
                            </TabItem>
                            <TabItem Header="Settings">
                                <StackPanel Padding="20">
                                    <TextBlock Text="Application Settings" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                                    <TextBlock Text="Customize application behavior and preferences." TextWrapping="Wrap"/>
                                </StackPanel>
                            </TabItem>
                            <TabItem Header="Account">
                                <StackPanel Padding="20">
                                    <TextBlock Text="Account Management" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                                    <TextBlock Text="Manage your account settings and security options." TextWrapping="Wrap"/>
                                </StackPanel>
                            </TabItem>
                            <TabItem Header="Help">
                                <StackPanel Padding="20">
                                    <TextBlock Text="Help & Support" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                                    <TextBlock Text="Get help with using the application and find documentation." TextWrapping="Wrap"/>
                                </StackPanel>
                            </TabItem>
                        </TabControl>
                    </StackPanel>
                </Border>

                <!-- GroupBox & ToggleButton Section -->
                <Border Background="#20FFFFFF"
                        BorderBrush="#60FFFFFF"
                        BorderThickness="1"
                        CornerRadius="16"
                        Padding="30"
                        Margin="0,0,0,24">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="4" BlurRadius="30" Opacity="0.3" Color="#000000"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- GroupBox -->
                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <TextBlock Text="ðŸ—‚ï¸ GroupBox" Style="{StaticResource SectionTitle}"/>

                            <TextBlock Text="Content Grouping" Style="{StaticResource SubTitle}"/>
                            <TextBlock Text="Glass container for organizing related controls"
                                       Style="{StaticResource Description}"/>

                            <GroupBox Header="User Information" Margin="0,0,0,12">
                                <StackPanel>
                                    <Label Content="First Name:"/>
                                    <TextBox Margin="0,0,0,10"/>
                                    <Label Content="Last Name:"/>
                                    <TextBox/>
                                </StackPanel>
                            </GroupBox>

                            <GroupBox Header="Preferences">
                                <StackPanel>
                                    <CheckBox Content="Email notifications" Margin="0,0,0,8"/>
                                    <CheckBox Content="Push notifications" Margin="0,0,0,8"/>
                                    <CheckBox Content="SMS alerts"/>
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>

                        <!-- ToggleButton -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="ðŸ”„ ToggleButton" Style="{StaticResource SectionTitle}"/>

                            <TextBlock Text="Toggle States" Style="{StaticResource SubTitle}"/>
                            <TextBlock Text="Glass toggle buttons for on/off states"
                                       Style="{StaticResource Description}"/>

                            <ToggleButton Content="Toggle Me" Margin="0,0,0,12"/>
                            <ToggleButton Content="WiFi" IsChecked="True" Margin="0,0,0,12"/>
                            <ToggleButton Content="Bluetooth" Margin="0,0,0,12"/>
                            <ToggleButton Content="Airplane Mode" Margin="0,0,0,12"/>
                            <ToggleButton Content="Disabled" IsEnabled="False"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Footer -->
                <Border Background="#20FFFFFF"
                        BorderBrush="#60FFFFFF"
                        BorderThickness="1"
                        CornerRadius="16"
                        Padding="30"
                        Margin="0,0,0,0">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="4" BlurRadius="30" Opacity="0.3" Color="#000000"/>
                    </Border.Effect>
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="âœ¨ Glassmorphism Design Principles"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,16"/>
                        <UniformGrid Columns="4" HorizontalAlignment="Center">
                            <StackPanel Margin="0,0,20,0">
                                <TextBlock Text="ðŸ’Ž" FontSize="30" HorizontalAlignment="Center"/>
                                <TextBlock Text="Semi-Transparent" Foreground="White" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                                <TextBlock Text="40-80% opacity" Foreground="#E0E0E0" HorizontalAlignment="Center" FontSize="11"/>
                            </StackPanel>
                            <StackPanel Margin="0,0,20,0">
                                <TextBlock Text="ðŸŒ«ï¸" FontSize="30" HorizontalAlignment="Center"/>
                                <TextBlock Text="Blur Effects" Foreground="White" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                                <TextBlock Text="Frosted glass" Foreground="#E0E0E0" HorizontalAlignment="Center" FontSize="11"/>
                            </StackPanel>
                            <StackPanel Margin="0,0,20,0">
                                <TextBlock Text="âœ¨" FontSize="30" HorizontalAlignment="Center"/>
                                <TextBlock Text="Light Borders" Foreground="White" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                                <TextBlock Text="Subtle outlines" Foreground="#E0E0E0" HorizontalAlignment="Center" FontSize="11"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="ðŸŽ¨" FontSize="30" HorizontalAlignment="Center"/>
                                <TextBlock Text="Vibrant Backdrop" Foreground="White" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                                <TextBlock Text="Gradient required" Foreground="#E0E0E0" HorizontalAlignment="Center" FontSize="11"/>
                            </StackPanel>
                        </UniformGrid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
