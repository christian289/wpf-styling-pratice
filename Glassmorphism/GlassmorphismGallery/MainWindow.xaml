<Window x:Class="GlassmorphismGallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Glassmorphism Controls Gallery"
        Width="1400"
        Height="900"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="SectionTitle"
               TargetType="TextBlock">
            <Setter Property="FontSize" Value="22" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Margin" Value="0,0,0,16" />
        </Style>

        <Style x:Key="SubTitle"
               TargetType="TextBlock">
            <Setter Property="FontSize" Value="15" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Margin" Value="0,12,0,8" />
        </Style>

        <Style x:Key="Description"
               TargetType="TextBlock">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="#E0E0E0" />
            <Setter Property="Margin" Value="0,0,0,12" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
    </Window.Resources>

    <!--  Vibrant Gradient Background  -->
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Offset="0" Color="#667EEA" />
                <GradientStop Offset="0.5" Color="#764BA2" />
                <GradientStop Offset="1" Color="#F093FB" />
            </LinearGradientBrush>
        </Grid.Background>

        <ScrollViewer Padding="40"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!--  Header  -->
                <TextBlock Margin="0,0,0,10"
                           HorizontalAlignment="Center"
                           FontSize="40"
                           FontWeight="Bold"
                           Foreground="White"
                           Text="âœ¨ Glassmorphism WPF Controls Gallery" />
                <TextBlock Margin="0,0,0,40"
                           HorizontalAlignment="Center"
                           FontSize="16"
                           Foreground="#E0E0E0"
                           Text="Modern, semi-transparent controls with frosted glass effect" />

                <!--  Buttons Section  -->
                <Border Margin="0,0,0,24"
                        Padding="30"
                        Background="#20FFFFFF"
                        BorderBrush="#60FFFFFF"
                        BorderThickness="1"
                        CornerRadius="16">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="30"
                                          Opacity="0.3"
                                          ShadowDepth="4"
                                          Color="#000000" />
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Style="{StaticResource SectionTitle}"
                                   Text="ðŸ”˜ Buttons" />

                        <TextBlock Style="{StaticResource SubTitle}"
                                   Text="Standard Buttons" />
                        <TextBlock Style="{StaticResource Description}"
                                   Text="Glass-morphic buttons with hover and click effects" />
                        <StackPanel Margin="0,0,0,20"
                                    Orientation="Horizontal">
                            <Button Margin="0,0,10,0"
                                    Content="Default Button" />
                            <Button Margin="0,0,10,0"
                                    Content="Click Me" />
                            <Button Margin="0,0,10,0"
                                    Content="Submit" />
                            <Button Content="Disabled"
                                    IsEnabled="False" />
                        </StackPanel>

                        <TextBlock Style="{StaticResource SubTitle}"
                                   Text="Different Sizes" />
                        <StackPanel Margin="0,0,0,0"
                                    Orientation="Horizontal">
                            <Button Margin="0,0,10,0"
                                    Padding="12,6"
                                    Content="Small"
                                    FontSize="12" />
                            <Button Margin="0,0,10,0"
                                    Padding="20,10"
                                    Content="Medium"
                                    FontSize="14" />
                            <Button Padding="28,14"
                                    Content="Large"
                                    FontSize="16" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!--  TextBox Section  -->
                <Border Margin="0,0,0,24"
                        Padding="30"
                        Background="#20FFFFFF"
                        BorderBrush="#60FFFFFF"
                        BorderThickness="1"
                        CornerRadius="16">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="30"
                                          Opacity="0.3"
                                          ShadowDepth="4"
                                          Color="#000000" />
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Style="{StaticResource SectionTitle}"
                                   Text="ðŸ“ Text Inputs" />

                        <TextBlock Style="{StaticResource SubTitle}"
                                   Text="TextBox Controls" />
                        <TextBlock Style="{StaticResource Description}"
                                   Text="Semi-transparent text inputs with focus glow effects" />

                        <Label Content="Username:"
                               Foreground="White" />
                        <TextBox Width="400"
                                 Margin="0,0,0,12"
                                 HorizontalAlignment="Left"
                                 Text="" />

                        <Label Content="Email:"
                               Foreground="White" />
                        <TextBox Width="400"
                                 Margin="0,0,0,12"
                                 HorizontalAlignment="Left"
                                 Text="" />

                        <Label Content="Disabled Input:"
                               Foreground="White" />
                        <TextBox Width="400"
                                 HorizontalAlignment="Left"
                                 IsEnabled="False"
                                 Text="Disabled text input" />
                    </StackPanel>
                </Border>

                <!--  CheckBox & RadioButton Section  -->
                <Border Margin="0,0,0,24"
                        Padding="30"
                        Background="#20FFFFFF"
                        BorderBrush="#60FFFFFF"
                        BorderThickness="1"
                        CornerRadius="16">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="30"
                                          Opacity="0.3"
                                          ShadowDepth="4"
                                          Color="#000000" />
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  CheckBoxes  -->
                        <StackPanel Grid.Column="0"
                                    Margin="0,0,20,0">
                            <TextBlock Style="{StaticResource SectionTitle}"
                                       Text="â˜‘ï¸ CheckBoxes" />

                            <TextBlock Style="{StaticResource SubTitle}"
                                       Text="Selection Controls" />
                            <TextBlock Style="{StaticResource Description}"
                                       Text="Glass-styled checkboxes with smooth animations" />

                            <CheckBox Margin="0,0,0,10"
                                      Content="Enable notifications" />
                            <CheckBox Margin="0,0,0,10"
                                      Content="Auto-save"
                                      IsChecked="True" />
                            <CheckBox Margin="0,0,0,10"
                                      Content="Dark mode" />
                            <CheckBox Margin="0,0,0,0"
                                      Content="Disabled option"
                                      IsEnabled="False" />
                        </StackPanel>

                        <!--  RadioButtons  -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Style="{StaticResource SectionTitle}"
                                       Text="âš« RadioButtons" />

                            <TextBlock Style="{StaticResource SubTitle}"
                                       Text="Option Selection" />
                            <TextBlock Style="{StaticResource Description}"
                                       Text="Glass-styled radio buttons for exclusive choices" />

                            <RadioButton Margin="0,0,0,10"
                                         Content="Option 1"
                                         GroupName="Options" />
                            <RadioButton Margin="0,0,0,10"
                                         Content="Option 2"
                                         GroupName="Options"
                                         IsChecked="True" />
                            <RadioButton Margin="0,0,0,10"
                                         Content="Option 3"
                                         GroupName="Options" />
                            <RadioButton Content="Disabled"
                                         GroupName="Options"
                                         IsEnabled="False" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!--  Progress & Slider Section  -->
                <Border Margin="0,0,0,24"
                        Padding="30"
                        Background="#20FFFFFF"
                        BorderBrush="#60FFFFFF"
                        BorderThickness="1"
                        CornerRadius="16">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="30"
                                          Opacity="0.3"
                                          ShadowDepth="4"
                                          Color="#000000" />
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  ProgressBar  -->
                        <StackPanel Grid.Column="0"
                                    Margin="0,0,20,0">
                            <TextBlock Style="{StaticResource SectionTitle}"
                                       Text="ðŸ“Š Progress Bars" />

                            <TextBlock Style="{StaticResource SubTitle}"
                                       Text="Progress Indicators" />
                            <TextBlock Style="{StaticResource Description}"
                                       Text="Glass progress bars with gradient fill" />

                            <Label Content="35% Complete"
                                   Foreground="White" />
                            <ProgressBar Height="20"
                                         Margin="0,0,0,12"
                                         Maximum="100"
                                         Value="35" />

                            <Label Content="75% Complete"
                                   Foreground="White" />
                            <ProgressBar Height="20"
                                         Margin="0,0,0,12"
                                         Maximum="100"
                                         Value="75" />

                            <Label Content="100% Complete"
                                   Foreground="White" />
                            <ProgressBar Height="20"
                                         Maximum="100"
                                         Value="100" />
                        </StackPanel>

                        <!--  Slider  -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Style="{StaticResource SectionTitle}"
                                       Text="ðŸŽšï¸ Sliders" />

                            <TextBlock Style="{StaticResource SubTitle}"
                                       Text="Value Selection" />
                            <TextBlock Style="{StaticResource Description}"
                                       Text="Glass-styled sliders with thumb control" />

                            <Label Content="Volume"
                                   Foreground="White" />
                            <Slider Margin="0,0,0,12"
                                    Maximum="100"
                                    Minimum="0"
                                    Value="50" />

                            <Label Content="Brightness"
                                   Foreground="White" />
                            <Slider Margin="0,0,0,12"
                                    Maximum="100"
                                    Minimum="0"
                                    Value="75" />

                            <Label Content="Opacity"
                                   Foreground="White" />
                            <Slider Maximum="100"
                                    Minimum="0"
                                    Value="90" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!--  ComboBox & ListBox Section  -->
                <Border Margin="0,0,0,24"
                        Padding="30"
                        Background="#20FFFFFF"
                        BorderBrush="#60FFFFFF"
                        BorderThickness="1"
                        CornerRadius="16">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="30"
                                          Opacity="0.3"
                                          ShadowDepth="4"
                                          Color="#000000" />
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  ComboBox  -->
                        <StackPanel Grid.Column="0"
                                    Margin="0,0,20,0">
                            <TextBlock Style="{StaticResource SectionTitle}"
                                       Text="ðŸ“‹ ComboBox" />

                            <TextBlock Style="{StaticResource SubTitle}"
                                       Text="Dropdown Selection" />
                            <TextBlock Style="{StaticResource Description}"
                                       Text="Glass dropdown with semi-transparent popup" />

                            <Label Content="Select Country:"
                                   Foreground="White" />
                            <ComboBox Width="300"
                                      Margin="0,0,0,12"
                                      HorizontalAlignment="Left">
                                <ComboBoxItem Content="United States"
                                              IsSelected="True" />
                                <ComboBoxItem Content="United Kingdom" />
                                <ComboBoxItem Content="Canada" />
                                <ComboBoxItem Content="Australia" />
                                <ComboBoxItem Content="Germany" />
                                <ComboBoxItem Content="France" />
                                <ComboBoxItem Content="Japan" />
                            </ComboBox>

                            <Label Content="Select Language:"
                                   Foreground="White" />
                            <ComboBox Width="300"
                                      HorizontalAlignment="Left">
                                <ComboBoxItem Content="English"
                                              IsSelected="True" />
                                <ComboBoxItem Content="Spanish" />
                                <ComboBoxItem Content="French" />
                                <ComboBoxItem Content="German" />
                                <ComboBoxItem Content="Chinese" />
                            </ComboBox>
                        </StackPanel>

                        <!--  ListBox  -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Style="{StaticResource SectionTitle}"
                                       Text="ðŸ“ ListBox" />

                            <TextBlock Style="{StaticResource SubTitle}"
                                       Text="Item Selection" />
                            <TextBlock Style="{StaticResource Description}"
                                       Text="Glass list with selectable items" />

                            <Label Content="Select Items:"
                                   Foreground="White" />
                            <ListBox Height="200"
                                     Margin="0,0,0,0">
                                <ListBoxItem Content="Item 1" />
                                <ListBoxItem Content="Item 2"
                                             IsSelected="True" />
                                <ListBoxItem Content="Item 3" />
                                <ListBoxItem Content="Item 4" />
                                <ListBoxItem Content="Item 5" />
                                <ListBoxItem Content="Item 6" />
                                <ListBoxItem Content="Item 7" />
                                <ListBoxItem Content="Item 8" />
                            </ListBox>
                        </StackPanel>
                    </Grid>
                </Border>

                <!--  TabControl Section  -->
                <Border Margin="0,0,0,24"
                        Padding="30"
                        Background="#20FFFFFF"
                        BorderBrush="#60FFFFFF"
                        BorderThickness="1"
                        CornerRadius="16">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="30"
                                          Opacity="0.3"
                                          ShadowDepth="4"
                                          Color="#000000" />
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Style="{StaticResource SectionTitle}"
                                   Text="ðŸ“‘ TabControl" />

                        <TextBlock Style="{StaticResource SubTitle}"
                                   Text="Tabbed Navigation" />
                        <TextBlock Style="{StaticResource Description}"
                                   Text="Glass tabs with smooth transitions" />

                        <TabControl Height="250">
                            <TabItem Header="Profile">
                                <StackPanel>
                                    <TextBlock Margin="0,0,0,10"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Text="Profile Settings" />
                                    <TextBlock Text="Configure your user profile and personal information."
                                               TextWrapping="Wrap" />
                                </StackPanel>
                            </TabItem>
                            <TabItem Header="Settings">
                                <StackPanel>
                                    <TextBlock Margin="0,0,0,10"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Text="Application Settings" />
                                    <TextBlock Text="Customize application behavior and preferences."
                                               TextWrapping="Wrap" />
                                </StackPanel>
                            </TabItem>
                            <TabItem Header="Account">
                                <StackPanel>
                                    <TextBlock Margin="0,0,0,10"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Text="Account Management" />
                                    <TextBlock Text="Manage your account settings and security options."
                                               TextWrapping="Wrap" />
                                </StackPanel>
                            </TabItem>
                            <TabItem Header="Help">
                                <StackPanel>
                                    <TextBlock Margin="0,0,0,10"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Text="Help &amp; Support" />
                                    <TextBlock Text="Get help with using the application and find documentation."
                                               TextWrapping="Wrap" />
                                </StackPanel>
                            </TabItem>
                        </TabControl>
                    </StackPanel>
                </Border>

                <!--  GroupBox & ToggleButton Section  -->
                <Border Margin="0,0,0,24"
                        Padding="30"
                        Background="#20FFFFFF"
                        BorderBrush="#60FFFFFF"
                        BorderThickness="1"
                        CornerRadius="16">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="30"
                                          Opacity="0.3"
                                          ShadowDepth="4"
                                          Color="#000000" />
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  GroupBox  -->
                        <StackPanel Grid.Column="0"
                                    Margin="0,0,20,0">
                            <TextBlock Style="{StaticResource SectionTitle}"
                                       Text="ðŸ—‚ï¸ GroupBox" />

                            <TextBlock Style="{StaticResource SubTitle}"
                                       Text="Content Grouping" />
                            <TextBlock Style="{StaticResource Description}"
                                       Text="Glass container for organizing related controls" />

                            <GroupBox Margin="0,0,0,12"
                                      Header="User Information">
                                <StackPanel>
                                    <Label Content="First Name:" />
                                    <TextBox Margin="0,0,0,10" />
                                    <Label Content="Last Name:" />
                                    <TextBox />
                                </StackPanel>
                            </GroupBox>

                            <GroupBox Header="Preferences">
                                <StackPanel>
                                    <CheckBox Margin="0,0,0,8"
                                              Content="Email notifications" />
                                    <CheckBox Margin="0,0,0,8"
                                              Content="Push notifications" />
                                    <CheckBox Content="SMS alerts" />
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>

                        <!--  ToggleButton  -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Style="{StaticResource SectionTitle}"
                                       Text="ðŸ”„ ToggleButton" />

                            <TextBlock Style="{StaticResource SubTitle}"
                                       Text="Toggle States" />
                            <TextBlock Style="{StaticResource Description}"
                                       Text="Glass toggle buttons for on/off states" />

                            <ToggleButton Margin="0,0,0,12"
                                          Content="Toggle Me" />
                            <ToggleButton Margin="0,0,0,12"
                                          Content="WiFi"
                                          IsChecked="True" />
                            <ToggleButton Margin="0,0,0,12"
                                          Content="Bluetooth" />
                            <ToggleButton Margin="0,0,0,12"
                                          Content="Airplane Mode" />
                            <ToggleButton Content="Disabled"
                                          IsEnabled="False" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!--  Footer  -->
                <Border Margin="0,0,0,0"
                        Padding="30"
                        Background="#20FFFFFF"
                        BorderBrush="#60FFFFFF"
                        BorderThickness="1"
                        CornerRadius="16">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="30"
                                          Opacity="0.3"
                                          ShadowDepth="4"
                                          Color="#000000" />
                    </Border.Effect>
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Margin="0,0,0,16"
                                   HorizontalAlignment="Center"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   Text="âœ¨ Glassmorphism Design Principles" />
                        <UniformGrid HorizontalAlignment="Center"
                                     Columns="4">
                            <StackPanel Margin="0,0,20,0">
                                <TextBlock HorizontalAlignment="Center"
                                           FontSize="30"
                                           Text="ðŸ’Ž" />
                                <TextBlock HorizontalAlignment="Center"
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           Text="Semi-Transparent" />
                                <TextBlock HorizontalAlignment="Center"
                                           FontSize="11"
                                           Foreground="#E0E0E0"
                                           Text="40-80% opacity" />
                            </StackPanel>
                            <StackPanel Margin="0,0,20,0">
                                <TextBlock HorizontalAlignment="Center"
                                           FontSize="30"
                                           Text="ðŸŒ«ï¸" />
                                <TextBlock HorizontalAlignment="Center"
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           Text="Blur Effects" />
                                <TextBlock HorizontalAlignment="Center"
                                           FontSize="11"
                                           Foreground="#E0E0E0"
                                           Text="Frosted glass" />
                            </StackPanel>
                            <StackPanel Margin="0,0,20,0">
                                <TextBlock HorizontalAlignment="Center"
                                           FontSize="30"
                                           Text="âœ¨" />
                                <TextBlock HorizontalAlignment="Center"
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           Text="Light Borders" />
                                <TextBlock HorizontalAlignment="Center"
                                           FontSize="11"
                                           Foreground="#E0E0E0"
                                           Text="Subtle outlines" />
                            </StackPanel>
                            <StackPanel>
                                <TextBlock HorizontalAlignment="Center"
                                           FontSize="30"
                                           Text="ðŸŽ¨" />
                                <TextBlock HorizontalAlignment="Center"
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           Text="Vibrant Backdrop" />
                                <TextBlock HorizontalAlignment="Center"
                                           FontSize="11"
                                           Foreground="#E0E0E0"
                                           Text="Gradient required" />
                            </StackPanel>
                        </UniformGrid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
