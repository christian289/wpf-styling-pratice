<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Neumorphism (Soft UI) Color Palette -->
    <Color x:Key="BackgroundColor">#E0E5EC</Color>
    <Color x:Key="LightShadowColor">#FFFFFF</Color>
    <Color x:Key="DarkShadowColor">#A3B1C6</Color>
    <Color x:Key="TextColor">#4A5568</Color>
    <Color x:Key="AccentColor">#6366F1</Color>

    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>

    <!-- Button Style with Neumorphism Effect -->
    <Style TargetType="Button">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="24,12"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <!-- Light Shadow Border -->
                        <Border x:Name="lightShadowBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="15">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0"
                                                  Direction="315"
                                                  Color="{StaticResource LightShadowColor}"
                                                  BlurRadius="15"
                                                  Opacity="1"/>
                            </Border.Effect>
                        </Border>

                        <!-- Dark Shadow Border -->
                        <Border x:Name="darkShadowBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="15"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0"
                                                  Direction="135"
                                                  Color="{StaticResource DarkShadowColor}"
                                                  BlurRadius="15"
                                                  Opacity="0.8"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="lightShadowBorder" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect ShadowDepth="0" Direction="315"
                                                      Color="{StaticResource LightShadowColor}"
                                                      BlurRadius="20" Opacity="1"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="darkShadowBorder" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect ShadowDepth="0" Direction="135"
                                                      Color="{StaticResource DarkShadowColor}"
                                                      BlurRadius="20" Opacity="0.8"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="lightShadowBorder" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect ShadowDepth="0" Direction="135"
                                                      Color="{StaticResource LightShadowColor}"
                                                      BlurRadius="10" Opacity="0.5"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="darkShadowBorder" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect ShadowDepth="0" Direction="315"
                                                      Color="{StaticResource DarkShadowColor}"
                                                      BlurRadius="10" Opacity="0.5"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- TextBox Style with Neumorphism Inset Effect -->
    <Style TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Grid>
                        <!-- Dark inset shadow -->
                        <Border x:Name="innerDarkBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="12">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0"
                                                  Direction="135"
                                                  Color="{StaticResource DarkShadowColor}"
                                                  BlurRadius="10"
                                                  Opacity="0.7"/>
                            </Border.Effect>
                        </Border>

                        <!-- Light inset shadow -->
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0"
                                                  Direction="315"
                                                  Color="{StaticResource LightShadowColor}"
                                                  BlurRadius="8"
                                                  Opacity="0.3"/>
                            </Border.Effect>
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="innerDarkBorder" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect ShadowDepth="0" Direction="135"
                                                      Color="{StaticResource AccentColor}"
                                                      BlurRadius="10" Opacity="0.4"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- CheckBox Style with Neumorphism -->
    <Style TargetType="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <StackPanel Orientation="Horizontal">
                        <Grid Width="24" Height="24" Margin="0,0,10,0">
                            <!-- Dark shadow -->
                            <Border Background="{StaticResource BackgroundBrush}"
                                    CornerRadius="8">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0" Direction="135"
                                                      Color="{StaticResource DarkShadowColor}"
                                                      BlurRadius="8" Opacity="0.7"/>
                                </Border.Effect>
                            </Border>

                            <!-- Light shadow -->
                            <Border Background="{StaticResource BackgroundBrush}"
                                    CornerRadius="8">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0" Direction="315"
                                                      Color="{StaticResource LightShadowColor}"
                                                      BlurRadius="8" Opacity="0.5"/>
                                </Border.Effect>
                                <Path x:Name="checkMark"
                                      Data="M 4 11 L 9 16 L 20 5"
                                      Stroke="{StaticResource AccentBrush}"
                                      StrokeThickness="2.5"
                                      StrokeLineJoin="Round"
                                      Opacity="0"
                                      Margin="2"/>
                            </Border>
                        </Grid>
                        <ContentPresenter VerticalAlignment="Center"/>
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="checkMark" Property="Opacity" Value="1"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- RadioButton Style with Neumorphism -->
    <Style TargetType="RadioButton">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <StackPanel Orientation="Horizontal">
                        <Grid Width="24" Height="24" Margin="0,0,10,0">
                            <!-- Dark shadow -->
                            <Border Background="{StaticResource BackgroundBrush}"
                                    CornerRadius="12">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0" Direction="135"
                                                      Color="{StaticResource DarkShadowColor}"
                                                      BlurRadius="8" Opacity="0.7"/>
                                </Border.Effect>
                            </Border>

                            <!-- Light shadow -->
                            <Border Background="{StaticResource BackgroundBrush}"
                                    CornerRadius="12">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0" Direction="315"
                                                      Color="{StaticResource LightShadowColor}"
                                                      BlurRadius="8" Opacity="0.5"/>
                                </Border.Effect>
                                <Ellipse x:Name="radioCheck"
                                         Width="10" Height="10"
                                         Fill="{StaticResource AccentBrush}"
                                         Opacity="0"/>
                            </Border>
                        </Grid>
                        <ContentPresenter VerticalAlignment="Center"/>
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="radioCheck" Property="Opacity" Value="1"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ProgressBar Style with Neumorphism -->
    <Style TargetType="ProgressBar">
        <Setter Property="Height" Value="12"/>
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <Grid>
                        <!-- Inset track dark shadow -->
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0" Direction="135"
                                                  Color="{StaticResource DarkShadowColor}"
                                                  BlurRadius="6" Opacity="0.6"/>
                            </Border.Effect>
                        </Border>

                        <!-- Inset track light shadow -->
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0" Direction="315"
                                                  Color="{StaticResource LightShadowColor}"
                                                  BlurRadius="6" Opacity="0.3"/>
                            </Border.Effect>
                            <Grid Margin="2">
                                <Border x:Name="PART_Track"/>
                                <Border x:Name="PART_Indicator"
                                        HorizontalAlignment="Left"
                                        Background="{TemplateBinding Foreground}"
                                        CornerRadius="4">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="8"
                                                          Color="{StaticResource AccentColor}"
                                                          Opacity="0.5"/>
                                    </Border.Effect>
                                </Border>
                            </Grid>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Slider Style with Neumorphism -->
    <Style TargetType="Slider">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Slider">
                    <Grid>
                        <!-- Inset track dark shadow -->
                        <Border Background="{TemplateBinding Background}"
                                Height="8" CornerRadius="4"
                                VerticalAlignment="Center">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0" Direction="135"
                                                  Color="{StaticResource DarkShadowColor}"
                                                  BlurRadius="6" Opacity="0.6"/>
                            </Border.Effect>
                        </Border>

                        <!-- Inset track light shadow -->
                        <Border Background="{TemplateBinding Background}"
                                Height="8" CornerRadius="4"
                                VerticalAlignment="Center">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0" Direction="315"
                                                  Color="{StaticResource LightShadowColor}"
                                                  BlurRadius="6" Opacity="0.3"/>
                            </Border.Effect>
                        </Border>

                        <Track x:Name="PART_Track">
                            <Track.DecreaseRepeatButton>
                                <RepeatButton Command="Slider.DecreaseLarge" Opacity="0"/>
                            </Track.DecreaseRepeatButton>
                            <Track.Thumb>
                                <Thumb>
                                    <Thumb.Template>
                                        <ControlTemplate>
                                            <Grid>
                                                <!-- Thumb light shadow -->
                                                <Border Width="24" Height="24"
                                                        Background="{StaticResource BackgroundBrush}"
                                                        CornerRadius="12">
                                                    <Border.Effect>
                                                        <DropShadowEffect ShadowDepth="0" Direction="315"
                                                                          Color="{StaticResource LightShadowColor}"
                                                                          BlurRadius="10" Opacity="1"/>
                                                    </Border.Effect>
                                                </Border>

                                                <!-- Thumb dark shadow -->
                                                <Border Width="24" Height="24"
                                                        Background="{StaticResource BackgroundBrush}"
                                                        CornerRadius="12">
                                                    <Border.Effect>
                                                        <DropShadowEffect ShadowDepth="0" Direction="135"
                                                                          Color="{StaticResource DarkShadowColor}"
                                                                          BlurRadius="10" Opacity="0.8"/>
                                                    </Border.Effect>
                                                </Border>
                                            </Grid>
                                        </ControlTemplate>
                                    </Thumb.Template>
                                </Thumb>
                            </Track.Thumb>
                            <Track.IncreaseRepeatButton>
                                <RepeatButton Command="Slider.IncreaseLarge" Opacity="0"/>
                            </Track.IncreaseRepeatButton>
                        </Track>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Label Style -->
    <Style TargetType="Label">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="FontWeight" Value="Medium"/>
    </Style>

    <!-- ComboBox Style with Neumorphism -->
    <Style TargetType="ComboBox">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <Grid>
                            <!-- Light shadow -->
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="12">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0" Direction="315"
                                                      Color="{StaticResource LightShadowColor}"
                                                      BlurRadius="12" Opacity="1"/>
                                </Border.Effect>
                            </Border>

                            <!-- Dark shadow with content -->
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="12">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0" Direction="135"
                                                      Color="{StaticResource DarkShadowColor}"
                                                      BlurRadius="12" Opacity="0.8"/>
                                </Border.Effect>
                                <Grid Margin="{TemplateBinding Padding}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter Grid.Column="0"
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      VerticalAlignment="Center"/>
                                    <Path Grid.Column="1"
                                          Data="M 0 0 L 4 4 L 8 0"
                                          Stroke="{StaticResource TextBrush}"
                                          StrokeThickness="2"
                                          Margin="10,0,0,0"
                                          VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </Grid>

                        <Popup x:Name="PART_Popup"
                               IsOpen="{TemplateBinding IsDropDownOpen}"
                               Placement="Bottom"
                               AllowsTransparency="True">
                            <Grid>
                                <!-- Popup light shadow -->
                                <Border Background="{StaticResource BackgroundBrush}"
                                        CornerRadius="12"
                                        Margin="0,5,0,0"
                                        MinWidth="{TemplateBinding ActualWidth}">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="0" Direction="315"
                                                          Color="{StaticResource LightShadowColor}"
                                                          BlurRadius="15" Opacity="1"/>
                                    </Border.Effect>
                                </Border>

                                <!-- Popup dark shadow with content -->
                                <Border Background="{StaticResource BackgroundBrush}"
                                        CornerRadius="12"
                                        Margin="0,5,0,0"
                                        MinWidth="{TemplateBinding ActualWidth}">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="0" Direction="135"
                                                          Color="{StaticResource DarkShadowColor}"
                                                          BlurRadius="15" Opacity="0.8"/>
                                    </Border.Effect>
                                    <ScrollViewer MaxHeight="300" Margin="8">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Grid>
                        </Popup>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ComboBoxItem Style -->
    <Style TargetType="ComboBoxItem">
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBoxItem">
                    <Border x:Name="border"
                            Background="Transparent"
                            CornerRadius="8"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsHighlighted" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBrush}"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBrush}"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ListBox Style with Neumorphism -->
    <Style TargetType="ListBox">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBox">
                    <Grid>
                        <!-- Dark inset shadow -->
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="15">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0" Direction="135"
                                                  Color="{StaticResource DarkShadowColor}"
                                                  BlurRadius="10" Opacity="0.7"/>
                            </Border.Effect>
                        </Border>

                        <!-- Light inset shadow with content -->
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="15">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0" Direction="315"
                                                  Color="{StaticResource LightShadowColor}"
                                                  BlurRadius="8" Opacity="0.3"/>
                            </Border.Effect>
                            <ScrollViewer Padding="{TemplateBinding Padding}">
                                <ItemsPresenter/>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ListBoxItem Style -->
    <Style TargetType="ListBoxItem">
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="Margin" Value="4"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Border x:Name="border"
                            Background="Transparent"
                            CornerRadius="10"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBrush}"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBrush}"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- TabControl Style with Neumorphism -->
    <Style TargetType="TabControl">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabControl">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TabPanel x:Name="HeaderPanel"
                                  Grid.Row="0"
                                  IsItemsHost="True"
                                  Margin="0,0,0,15"/>
                        <Grid Grid.Row="1">
                            <!-- Dark inset shadow -->
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="20">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0" Direction="135"
                                                      Color="{StaticResource DarkShadowColor}"
                                                      BlurRadius="15" Opacity="0.7"/>
                                </Border.Effect>
                            </Border>

                            <!-- Light inset shadow with content -->
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="20"
                                    Padding="{TemplateBinding Padding}">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0" Direction="315"
                                                      Color="{StaticResource LightShadowColor}"
                                                      BlurRadius="12" Opacity="0.5"/>
                                </Border.Effect>
                                <ContentPresenter x:Name="PART_SelectedContentHost"
                                                  ContentSource="SelectedContent"/>
                            </Border>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- TabItem Style with Neumorphism -->
    <Style TargetType="TabItem">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabItem">
                    <Grid>
                        <!-- Light shadow -->
                        <Border x:Name="lightBorder"
                                Background="{StaticResource BackgroundBrush}"
                                CornerRadius="12"
                                Margin="4,0">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0" Direction="315"
                                                  Color="{StaticResource LightShadowColor}"
                                                  BlurRadius="10" Opacity="1"/>
                            </Border.Effect>
                        </Border>

                        <!-- Dark shadow with content -->
                        <Border x:Name="darkBorder"
                                Background="{StaticResource BackgroundBrush}"
                                CornerRadius="12"
                                Padding="20,10"
                                Margin="4,0">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0" Direction="135"
                                                  Color="{StaticResource DarkShadowColor}"
                                                  BlurRadius="10" Opacity="0.8"/>
                            </Border.Effect>
                            <ContentPresenter x:Name="ContentSite"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"
                                              ContentSource="Header"/>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="lightBorder" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect ShadowDepth="0" Direction="135"
                                                      Color="{StaticResource LightShadowColor}"
                                                      BlurRadius="8" Opacity="1"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="darkBorder" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect ShadowDepth="0" Direction="315"
                                                      Color="{StaticResource DarkShadowColor}"
                                                      BlurRadius="8" Opacity="0.8"/>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- GroupBox Style with Neumorphism -->
    <Style TargetType="GroupBox">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="GroupBox">
                    <Grid>
                        <!-- Dark shadow -->
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="18">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0" Direction="135"
                                                  Color="{StaticResource DarkShadowColor}"
                                                  BlurRadius="12" Opacity="0.7"/>
                            </Border.Effect>
                        </Border>

                        <!-- Light shadow with content -->
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="18"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0" Direction="315"
                                                  Color="{StaticResource LightShadowColor}"
                                                  BlurRadius="10" Opacity="0.5"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <ContentPresenter Grid.Row="0"
                                                  ContentSource="Header"
                                                  Margin="5,0,0,12"/>
                                <ContentPresenter Grid.Row="1"/>
                            </Grid>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ToggleButton Style with Neumorphism -->
    <Style TargetType="ToggleButton">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="24,12"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Grid>
                        <!-- Light shadow -->
                        <Border x:Name="lightBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="15">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0" Direction="315"
                                                  Color="{StaticResource LightShadowColor}"
                                                  BlurRadius="15" Opacity="1"/>
                            </Border.Effect>
                        </Border>

                        <!-- Dark shadow with content -->
                        <Border x:Name="darkBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="15"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0" Direction="135"
                                                  Color="{StaticResource DarkShadowColor}"
                                                  BlurRadius="15" Opacity="0.8"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="lightBorder" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect ShadowDepth="0" Direction="135"
                                                      Color="{StaticResource LightShadowColor}"
                                                      BlurRadius="10" Opacity="1"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="darkBorder" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect ShadowDepth="0" Direction="315"
                                                      Color="{StaticResource DarkShadowColor}"
                                                      BlurRadius="10" Opacity="0.8"/>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="lightBorder" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect ShadowDepth="0" Direction="315"
                                                      Color="{StaticResource LightShadowColor}"
                                                      BlurRadius="18" Opacity="1"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="darkBorder" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect ShadowDepth="0" Direction="135"
                                                      Color="{StaticResource DarkShadowColor}"
                                                      BlurRadius="18" Opacity="0.8"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
