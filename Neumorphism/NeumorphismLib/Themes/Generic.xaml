<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Neumorphism (Soft UI) Color Palette -->
    <Color x:Key="BackgroundColor">#E0E5EC</Color>
    <Color x:Key="LightShadowColor">#FFFFFF</Color>
    <Color x:Key="DarkShadowColor">#A3B1C6</Color>
    <Color x:Key="TextColor">#4A5568</Color>
    <Color x:Key="AccentColor">#6366F1</Color>

    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>

    <!-- Button Style with Neumorphism Effect -->
    <Style TargetType="Button">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="24,12"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="15"
                            Padding="{TemplateBinding Padding}">
                        <Border.Effect>
                            <DropShadowEffect x:Name="lightShadow"
                                              ShadowDepth="0"
                                              Direction="315"
                                              Color="{StaticResource LightShadowColor}"
                                              BlurRadius="15"
                                              Opacity="1"/>
                        </Border.Effect>
                        <Grid>
                            <Border CornerRadius="15">
                                <Border.Effect>
                                    <DropShadowEffect x:Name="darkShadow"
                                                      ShadowDepth="0"
                                                      Direction="135"
                                                      Color="{StaticResource DarkShadowColor}"
                                                      BlurRadius="15"
                                                      Opacity="0.8"/>
                                </Border.Effect>
                            </Border>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="lightShadow" Property="BlurRadius" Value="20"/>
                            <Setter TargetName="darkShadow" Property="BlurRadius" Value="20"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="lightShadow" Property="Direction" Value="135"/>
                            <Setter TargetName="darkShadow" Property="Direction" Value="315"/>
                            <Setter TargetName="lightShadow" Property="BlurRadius" Value="10"/>
                            <Setter TargetName="darkShadow" Property="BlurRadius" Value="10"/>
                            <Setter TargetName="lightShadow" Property="Opacity" Value="0.5"/>
                            <Setter TargetName="darkShadow" Property="Opacity" Value="0.5"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- TextBox Style with Neumorphism Inset Effect -->
    <Style TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="12"
                            Padding="{TemplateBinding Padding}">
                        <Border.Effect>
                            <DropShadowEffect x:Name="innerLight"
                                              ShadowDepth="0"
                                              Direction="135"
                                              Color="{StaticResource DarkShadowColor}"
                                              BlurRadius="10"
                                              Opacity="0.7"/>
                        </Border.Effect>
                        <Grid>
                            <Border CornerRadius="12">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0"
                                                      Direction="315"
                                                      Color="{StaticResource LightShadowColor}"
                                                      BlurRadius="8"
                                                      Opacity="0.3"/>
                                </Border.Effect>
                            </Border>
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="innerLight" Property="Color" Value="{StaticResource AccentColor}"/>
                            <Setter TargetName="innerLight" Property="Opacity" Value="0.4"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- CheckBox Style with Neumorphism -->
    <Style TargetType="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <StackPanel Orientation="Horizontal">
                        <Border x:Name="checkBorder"
                                Width="24"
                                Height="24"
                                Background="{StaticResource BackgroundBrush}"
                                CornerRadius="8"
                                Margin="0,0,10,0">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0"
                                                  Direction="135"
                                                  Color="{StaticResource DarkShadowColor}"
                                                  BlurRadius="8"
                                                  Opacity="0.7"/>
                            </Border.Effect>
                            <Grid>
                                <Border CornerRadius="8">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="0"
                                                          Direction="315"
                                                          Color="{StaticResource LightShadowColor}"
                                                          BlurRadius="8"
                                                          Opacity="0.5"/>
                                    </Border.Effect>
                                </Border>
                                <Path x:Name="checkMark"
                                      Data="M 4 11 L 9 16 L 20 5"
                                      Stroke="{StaticResource AccentBrush}"
                                      StrokeThickness="2.5"
                                      StrokeLineJoin="Round"
                                      Opacity="0"
                                      Margin="2"/>
                            </Grid>
                        </Border>
                        <ContentPresenter VerticalAlignment="Center"/>
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="checkMark" Property="Opacity" Value="1"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- RadioButton Style with Neumorphism -->
    <Style TargetType="RadioButton">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <StackPanel Orientation="Horizontal">
                        <Border x:Name="radioBorder"
                                Width="24"
                                Height="24"
                                Background="{StaticResource BackgroundBrush}"
                                CornerRadius="12"
                                Margin="0,0,10,0">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0"
                                                  Direction="135"
                                                  Color="{StaticResource DarkShadowColor}"
                                                  BlurRadius="8"
                                                  Opacity="0.7"/>
                            </Border.Effect>
                            <Grid>
                                <Border CornerRadius="12">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="0"
                                                          Direction="315"
                                                          Color="{StaticResource LightShadowColor}"
                                                          BlurRadius="8"
                                                          Opacity="0.5"/>
                                    </Border.Effect>
                                </Border>
                                <Ellipse x:Name="radioCheck"
                                         Width="10"
                                         Height="10"
                                         Fill="{StaticResource AccentBrush}"
                                         Opacity="0"/>
                            </Grid>
                        </Border>
                        <ContentPresenter VerticalAlignment="Center"/>
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="radioCheck" Property="Opacity" Value="1"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ProgressBar Style with Neumorphism -->
    <Style TargetType="ProgressBar">
        <Setter Property="Height" Value="12"/>
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="6">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="0"
                                              Direction="135"
                                              Color="{StaticResource DarkShadowColor}"
                                              BlurRadius="6"
                                              Opacity="0.6"/>
                        </Border.Effect>
                        <Grid>
                            <Border CornerRadius="6">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0"
                                                      Direction="315"
                                                      Color="{StaticResource LightShadowColor}"
                                                      BlurRadius="6"
                                                      Opacity="0.3"/>
                                </Border.Effect>
                            </Border>
                            <Border x:Name="PART_Track"/>
                            <Border x:Name="PART_Indicator"
                                    HorizontalAlignment="Left"
                                    Background="{TemplateBinding Foreground}"
                                    CornerRadius="6"
                                    Margin="2">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0"
                                                      BlurRadius="8"
                                                      Color="{StaticResource AccentColor}"
                                                      Opacity="0.5"/>
                                </Border.Effect>
                            </Border>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Slider Style with Neumorphism -->
    <Style TargetType="Slider">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Slider">
                    <Grid>
                        <Border Background="{TemplateBinding Background}"
                                Height="8"
                                CornerRadius="4"
                                VerticalAlignment="Center">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0"
                                                  Direction="135"
                                                  Color="{StaticResource DarkShadowColor}"
                                                  BlurRadius="6"
                                                  Opacity="0.6"/>
                            </Border.Effect>
                            <Border CornerRadius="4">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0"
                                                      Direction="315"
                                                      Color="{StaticResource LightShadowColor}"
                                                      BlurRadius="6"
                                                      Opacity="0.3"/>
                                </Border.Effect>
                            </Border>
                        </Border>
                        <Track x:Name="PART_Track">
                            <Track.DecreaseRepeatButton>
                                <RepeatButton Command="Slider.DecreaseLarge" Opacity="0"/>
                            </Track.DecreaseRepeatButton>
                            <Track.Thumb>
                                <Thumb>
                                    <Thumb.Template>
                                        <ControlTemplate>
                                            <Border Width="24"
                                                    Height="24"
                                                    Background="{StaticResource BackgroundBrush}"
                                                    CornerRadius="12">
                                                <Border.Effect>
                                                    <DropShadowEffect ShadowDepth="0"
                                                                      Direction="315"
                                                                      Color="{StaticResource LightShadowColor}"
                                                                      BlurRadius="10"
                                                                      Opacity="1"/>
                                                </Border.Effect>
                                                <Border CornerRadius="12">
                                                    <Border.Effect>
                                                        <DropShadowEffect ShadowDepth="0"
                                                                          Direction="135"
                                                                          Color="{StaticResource DarkShadowColor}"
                                                                          BlurRadius="10"
                                                                          Opacity="0.8"/>
                                                    </Border.Effect>
                                                </Border>
                                            </Border>
                                        </ControlTemplate>
                                    </Thumb.Template>
                                </Thumb>
                            </Track.Thumb>
                            <Track.IncreaseRepeatButton>
                                <RepeatButton Command="Slider.IncreaseLarge" Opacity="0"/>
                            </Track.IncreaseRepeatButton>
                        </Track>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Label Style -->
    <Style TargetType="Label">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="FontWeight" Value="Medium"/>
    </Style>

    <!-- ComboBox Style with Neumorphism -->
    <Style TargetType="ComboBox">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="12">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0"
                                                  Direction="315"
                                                  Color="{StaticResource LightShadowColor}"
                                                  BlurRadius="12"
                                                  Opacity="1"/>
                            </Border.Effect>
                            <Grid>
                                <Border CornerRadius="12">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="0"
                                                          Direction="135"
                                                          Color="{StaticResource DarkShadowColor}"
                                                          BlurRadius="12"
                                                          Opacity="0.8"/>
                                    </Border.Effect>
                                </Border>
                                <Grid Margin="{TemplateBinding Padding}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter Grid.Column="0"
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      VerticalAlignment="Center"/>
                                    <Path Grid.Column="1"
                                          Data="M 0 0 L 4 4 L 8 0"
                                          Stroke="{StaticResource TextBrush}"
                                          StrokeThickness="2"
                                          Margin="10,0,0,0"
                                          VerticalAlignment="Center"/>
                                </Grid>
                            </Grid>
                        </Border>
                        <Popup x:Name="PART_Popup"
                               IsOpen="{TemplateBinding IsDropDownOpen}"
                               Placement="Bottom"
                               AllowsTransparency="True">
                            <Border Background="{StaticResource BackgroundBrush}"
                                    CornerRadius="12"
                                    Margin="0,5,0,0"
                                    MinWidth="{TemplateBinding ActualWidth}">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0"
                                                      Direction="315"
                                                      Color="{StaticResource LightShadowColor}"
                                                      BlurRadius="15"
                                                      Opacity="1"/>
                                </Border.Effect>
                                <Grid>
                                    <Border CornerRadius="12">
                                        <Border.Effect>
                                            <DropShadowEffect ShadowDepth="0"
                                                              Direction="135"
                                                              Color="{StaticResource DarkShadowColor}"
                                                              BlurRadius="15"
                                                              Opacity="0.8"/>
                                        </Border.Effect>
                                    </Border>
                                    <ScrollViewer MaxHeight="300" Margin="8">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Grid>
                            </Border>
                        </Popup>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ComboBoxItem Style -->
    <Style TargetType="ComboBoxItem">
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBoxItem">
                    <Border x:Name="border"
                            Background="Transparent"
                            CornerRadius="8"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsHighlighted" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBrush}"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBrush}"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ListBox Style with Neumorphism -->
    <Style TargetType="ListBox">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBox">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="15">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="0"
                                              Direction="135"
                                              Color="{StaticResource DarkShadowColor}"
                                              BlurRadius="10"
                                              Opacity="0.7"/>
                        </Border.Effect>
                        <Grid>
                            <Border CornerRadius="15">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0"
                                                      Direction="315"
                                                      Color="{StaticResource LightShadowColor}"
                                                      BlurRadius="8"
                                                      Opacity="0.3"/>
                                </Border.Effect>
                            </Border>
                            <ScrollViewer Padding="{TemplateBinding Padding}">
                                <ItemsPresenter/>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ListBoxItem Style -->
    <Style TargetType="ListBoxItem">
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="Margin" Value="4"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Border x:Name="border"
                            Background="Transparent"
                            CornerRadius="10"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBrush}"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBrush}"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- TabControl Style with Neumorphism -->
    <Style TargetType="TabControl">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabControl">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TabPanel x:Name="HeaderPanel"
                                  Grid.Row="0"
                                  IsItemsHost="True"
                                  Margin="0,0,0,15"/>
                        <Border Grid.Row="1"
                                Background="{TemplateBinding Background}"
                                CornerRadius="20"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0"
                                                  Direction="135"
                                                  Color="{StaticResource DarkShadowColor}"
                                                  BlurRadius="15"
                                                  Opacity="0.7"/>
                            </Border.Effect>
                            <Grid>
                                <Border CornerRadius="20">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="0"
                                                          Direction="315"
                                                          Color="{StaticResource LightShadowColor}"
                                                          BlurRadius="12"
                                                          Opacity="0.5"/>
                                    </Border.Effect>
                                </Border>
                                <ContentPresenter x:Name="PART_SelectedContentHost"
                                                  ContentSource="SelectedContent"/>
                            </Grid>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- TabItem Style with Neumorphism -->
    <Style TargetType="TabItem">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabItem">
                    <Border x:Name="border"
                            Background="{StaticResource BackgroundBrush}"
                            CornerRadius="12"
                            Padding="20,10"
                            Margin="4,0">
                        <Border.Effect>
                            <DropShadowEffect x:Name="lightShadow"
                                              ShadowDepth="0"
                                              Direction="315"
                                              Color="{StaticResource LightShadowColor}"
                                              BlurRadius="10"
                                              Opacity="1"/>
                        </Border.Effect>
                        <Grid>
                            <Border CornerRadius="12">
                                <Border.Effect>
                                    <DropShadowEffect x:Name="darkShadow"
                                                      ShadowDepth="0"
                                                      Direction="135"
                                                      Color="{StaticResource DarkShadowColor}"
                                                      BlurRadius="10"
                                                      Opacity="0.8"/>
                                </Border.Effect>
                            </Border>
                            <ContentPresenter x:Name="ContentSite"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"
                                              ContentSource="Header"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="lightShadow" Property="Direction" Value="135"/>
                            <Setter TargetName="darkShadow" Property="Direction" Value="315"/>
                            <Setter TargetName="lightShadow" Property="BlurRadius" Value="8"/>
                            <Setter TargetName="darkShadow" Property="BlurRadius" Value="8"/>
                            <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- GroupBox Style with Neumorphism -->
    <Style TargetType="GroupBox">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="GroupBox">
                    <Grid>
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="18"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0"
                                                  Direction="135"
                                                  Color="{StaticResource DarkShadowColor}"
                                                  BlurRadius="12"
                                                  Opacity="0.7"/>
                            </Border.Effect>
                            <Grid>
                                <Border CornerRadius="18">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="0"
                                                          Direction="315"
                                                          Color="{StaticResource LightShadowColor}"
                                                          BlurRadius="10"
                                                          Opacity="0.5"/>
                                    </Border.Effect>
                                </Border>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <ContentPresenter Grid.Row="0"
                                                      ContentSource="Header"
                                                      Margin="5,0,0,12"/>
                                    <ContentPresenter Grid.Row="1"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ToggleButton Style with Neumorphism -->
    <Style TargetType="ToggleButton">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="24,12"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="15"
                            Padding="{TemplateBinding Padding}">
                        <Border.Effect>
                            <DropShadowEffect x:Name="lightShadow"
                                              ShadowDepth="0"
                                              Direction="315"
                                              Color="{StaticResource LightShadowColor}"
                                              BlurRadius="15"
                                              Opacity="1"/>
                        </Border.Effect>
                        <Grid>
                            <Border CornerRadius="15">
                                <Border.Effect>
                                    <DropShadowEffect x:Name="darkShadow"
                                                      ShadowDepth="0"
                                                      Direction="135"
                                                      Color="{StaticResource DarkShadowColor}"
                                                      BlurRadius="15"
                                                      Opacity="0.8"/>
                                </Border.Effect>
                            </Border>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="lightShadow" Property="Direction" Value="135"/>
                            <Setter TargetName="darkShadow" Property="Direction" Value="315"/>
                            <Setter TargetName="lightShadow" Property="BlurRadius" Value="10"/>
                            <Setter TargetName="darkShadow" Property="BlurRadius" Value="10"/>
                            <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="lightShadow" Property="BlurRadius" Value="18"/>
                            <Setter TargetName="darkShadow" Property="BlurRadius" Value="18"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
