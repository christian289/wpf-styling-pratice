                    </StackPanel>

                    <TextBlock Text="RadioButton - ë¶€ë“œëŸ¬ìš´ ì›í˜• ë””ìžì¸"
                              FontSize="16"
                              FontWeight="SemiBold"
                              Foreground="#4A5568"
                              Margin="0,0,0,15"/>

                    <StackPanel Margin="0,0,0,35">
                        <RadioButton Content="Small size" GroupName="Size" IsChecked="True" Margin="0,0,0,12"/>
                        <RadioButton Content="Medium size" GroupName="Size" Margin="0,0,0,12"/>
                        <RadioButton Content="Large size" GroupName="Size" Margin="0,0,0,12"/>
                        <RadioButton Content="Disabled size" GroupName="Size" IsEnabled="False" Margin="0,0,0,12"/>
                    </StackPanel>

                    <TextBlock Text="ComboBox - Elevated dropdown"
                              FontSize="16"
                              FontWeight="SemiBold"
                              Foreground="#4A5568"
                              Margin="0,0,0,15"/>

                    <ComboBox Width="350" HorizontalAlignment="Left" Margin="0,0,0,20">
                        <ComboBoxItem Content="Neumorphism Design" IsSelected="True"/>
                        <ComboBoxItem Content="Soft UI Components"/>
                        <ComboBoxItem Content="3D Shadow Effects"/>
                        <ComboBoxItem Content="Elevated Elements"/>
                        <ComboBoxItem Content="Pressed State"/>
                    </ComboBox>

                    <TextBlock Text="ListBox - Soft container"
                              FontSize="16"
                              FontWeight="SemiBold"
                              Foreground="#4A5568"
                              Margin="0,20,0,15"/>

                    <ListBox Width="350" Height="200" HorizontalAlignment="Left" Margin="0,0,0,50">
                        <ListBoxItem Content="Item with hover effect"/>
