                            <RadioButton Content="Radio 2" GroupName="All" Margin="0,0,0,10"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Dropdown & List -->
                    <TextBlock Text="ComboBox &amp; ListBox" FontSize="18" FontWeight="SemiBold" Foreground="#4A5568" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,30">
                        <ComboBox Width="200" Margin="0,0,20,0">
                            <ComboBoxItem Content="Option 1" IsSelected="True"/>
                            <ComboBoxItem Content="Option 2"/>
                            <ComboBoxItem Content="Option 3"/>
                        </ComboBox>
                        <ListBox Width="200" Height="100">
                            <ListBoxItem Content="List Item 1"/>
                            <ListBoxItem Content="List Item 2"/>
                            <ListBoxItem Content="List Item 3"/>
