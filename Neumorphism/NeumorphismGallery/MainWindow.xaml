                            <TextBlock Text="â€¢ Light background with subtle contrast"
                                      Foreground="#718096"
                                      Margin="0,0,0,8"/>
                            <TextBlock Text="â€¢ Pressed state reverses shadow direction"
                                      Foreground="#718096"
                                      Margin="0,0,0,8"/>
                            <TextBlock Text="â€¢ Soft, rounded corners enhance the effect"
                                      Foreground="#718096"/>
                        </StackPanel>
