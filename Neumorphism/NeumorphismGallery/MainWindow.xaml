                    </StackPanel>

                    <!-- Progress & Slider -->
                    <TextBlock Text="Progress &amp; Slider" FontSize="18" FontWeight="SemiBold" Foreground="#4A5568" Margin="0,0,0,10"/>
                    <ProgressBar Value="60" Height="12" Width="350" HorizontalAlignment="Left" Margin="0,0,0,15"/>
                    <Slider Value="60" Minimum="0" Maximum="100" Width="350" HorizontalAlignment="Left" Margin="0,0,0,30"/>

                    <!-- Tabs -->
                    <TextBlock Text="Tab Navigation" FontSize="18" FontWeight="SemiBold" Foreground="#4A5568" Margin="0,0,0,10"/>
                    <TabControl Height="200" Margin="0,0,0,30">
                        <TabItem Header="Tab 1">
                            <TextBlock Text="Tab 1 Content" Padding="20" Foreground="#4A5568"/>
                        </TabItem>
                        <TabItem Header="Tab 2">
                            <TextBlock Text="Tab 2 Content" Padding="20" Foreground="#4A5568"/>
                        </TabItem>
                        <TabItem Header="Tab 3">
                            <TextBlock Text="Tab 3 Content" Padding="20" Foreground="#4A5568"/>
                        </TabItem>
                    </TabControl>

                    <!-- Info Box -->
