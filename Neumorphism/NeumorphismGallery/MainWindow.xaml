<Window x:Class="NeumorphismGallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Neumorphism Gallery - Soft UI (2021 Trend)"
        Height="900" Width="1400"
        Background="#E0E5EC"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Navigation Sidebar with Neumorphism -->
        <Border Grid.Column="0"
                Background="#E0E5EC"
                CornerRadius="0,20,20,0"
                Margin="0,20,10,20">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0"
                                  Direction="135"
                                  Color="#A3B1C6"
                                  BlurRadius="20"
                                  Opacity="0.5"/>
            </Border.Effect>
            <Grid>
                <Border CornerRadius="0,20,20,0">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="0"
                                          Direction="315"
                                          Color="#FFFFFF"
                                          BlurRadius="20"
                                          Opacity="0.8"/>
                    </Border.Effect>
                </Border>
                <StackPanel Margin="30,40,20,40">
                    <TextBlock Text="Neumorphism"
                              FontSize="28"
                              FontWeight="Bold"
                              Foreground="#4A5568"
                              Margin="0,0,0,10"/>

                    <TextBlock Text="Soft UI Gallery"
                              FontSize="14"
                              Foreground="#718096"
                              Margin="0,0,0,40"/>

                    <TextBlock Text="CONTROLS"
                              FontSize="11"
                              Foreground="#A0AEC0"
                              FontWeight="SemiBold"
                              Margin="0,0,0,15"/>

                    <ListBox x:Name="NavigationList"
                             Background="Transparent"
                             BorderThickness="0">
                        <ListBoxItem Content="Buttons" Tag="Buttons"/>
                        <ListBoxItem Content="Input Controls" Tag="Inputs"/>
                        <ListBoxItem Content="Selection Controls" Tag="Selection"/>
                        <ListBoxItem Content="Navigation" Tag="Navigation"/>
                        <ListBoxItem Content="Progress &amp; Sliders" Tag="Progress"/>
                        <ListBoxItem Content="All Controls" Tag="All"/>
                    </ListBox>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
