                              Margin="0,0,0,15"/>

                    <TabControl Height="400" Margin="0,0,0,50">
                        <TabItem Header="Home">
                            <StackPanel Padding="20">
                                <TextBlock Text="Home Tab Content"
                                          FontSize="20"
                                          FontWeight="SemiBold"
                                          Foreground="#4A5568"
                                          Margin="0,0,0,15"/>
                                <TextBlock Text="Neumorphism (ë‰´ëª¨í”¼ì¦˜)ì€ 2021ë…„ì— ì¸ê¸°ë¥¼ ì–»ì€ UI ë””ìžì¸ íŠ¸ë Œë“œìž…ë‹ˆë‹¤."
                                          Foreground="#718096"
                                          TextWrapping="Wrap"
                                          Margin="0,0,0,10"/>
                                <TextBlock Text="ë°ì€ ê·¸ë¦¼ìžì™€ ì–´ë‘ìš´ ê·¸ë¦¼ìžë¥¼ ë™ì‹œì— ì‚¬ìš©í•˜ì—¬ ìž…ì²´ì ì¸ íš¨ê³¼ë¥¼ ë§Œë“­ë‹ˆë‹¤."
                                          Foreground="#718096"
                                          TextWrapping="Wrap"/>
                            </StackPanel>
                        </TabItem>
                        <TabItem Header="Design">
                            <StackPanel Padding="20">
                                <TextBlock Text="Design Principles"
                                          FontSize="20"
                                          FontWeight="SemiBold"
                                          Foreground="#4A5568"
                                          Margin="0,0,0,15"/>
                                <TextBlock Text="â€¢ Soft shadows for depth perception"
                                          Foreground="#718096"
                                          Margin="0,0,0,8"/>
                                <TextBlock Text="â€¢ Light background colors (#E0E5EC)"
                                          Foreground="#718096"
                                          Margin="0,0,0,8"/>
                                <TextBlock Text="â€¢ Dual shadow system (light + dark)"
                                          Foreground="#718096"
                                          Margin="0,0,0,8"/>
                                <TextBlock Text="â€¢ Smooth rounded corners"
                                          Foreground="#718096"/>
                            </StackPanel>
                        </TabItem>
                        <TabItem Header="Effects">
                            <StackPanel Padding="20">
                                <TextBlock Text="3D Effects"
                                          FontSize="20"
                                          FontWeight="SemiBold"
                                          Foreground="#4A5568"
                                          Margin="0,0,0,15"/>
                                <TextBlock Text="Raised elements: Light shadow (top-left) + Dark shadow (bottom-right)"
                                          Foreground="#718096"
                                          TextWrapping="Wrap"
                                          Margin="0,0,0,10"/>
                                <TextBlock Text="Pressed elements: Reverse shadow directions for inset effect"
                                          Foreground="#718096"
                                          TextWrapping="Wrap"/>
                            </StackPanel>
                        </TabItem>
                        <TabItem Header="About">
                            <StackPanel Padding="20">
                                <TextBlock Text="About Neumorphism"
                                          FontSize="20"
                                          FontWeight="SemiBold"
                                          Foreground="#4A5568"
                                          Margin="0,0,0,15"/>
                                <TextBlock Text="Also known as 'Soft UI', this design trend creates a subtle, extruded plastic look."
                                          Foreground="#718096"
                                          TextWrapping="Wrap"
                                          Margin="0,0,0,10"/>
                                <TextBlock Text="Best used on light backgrounds with careful attention to accessibility."
                                          Foreground="#718096"
                                          TextWrapping="Wrap"/>
                            </StackPanel>
                        </TabItem>
                    </TabControl>

                    <TextBlock Text="GroupBox - Container with depth"
                              FontSize="16"
                              FontWeight="SemiBold"
                              Foreground="#4A5568"
                              Margin="0,0,0,15"/>

                    <GroupBox Header="Neumorphism Settings" Width="450" HorizontalAlignment="Left" Margin="0,0,0,50">
                        <StackPanel Margin="10">
                            <CheckBox Content="Enable 3D effects" IsChecked="True" Margin="0,0,0,10"/>
                            <CheckBox Content="Soft shadows" IsChecked="True" Margin="0,0,0,10"/>
                            <CheckBox Content="Smooth transitions" Margin="0,0,0,10"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>

                <!-- Progress & Sliders Section -->
                <StackPanel x:Name="ProgressSection" Visibility="Collapsed">
                    <TextBlock Text="Progress &amp; Sliders"
                              FontSize="28"
                              FontWeight="SemiBold"
                              Foreground="#4A5568"
                              Margin="0,0,0,20"/>

                    <TextBlock Text="ProgressBar - Inset track with elevated indicator"
                              FontSize="16"
                              FontWeight="SemiBold"
                              Foreground="#4A5568"
                              Margin="0,0,0,15"/>

                    <ProgressBar Value="25" Height="14" Width="450" HorizontalAlignment="Left" Margin="0,0,0,15"/>
                    <ProgressBar Value="50" Height="14" Width="450" HorizontalAlignment="Left" Margin="0,0,0,15"/>
                    <ProgressBar Value="75" Height="14" Width="450" HorizontalAlignment="Left" Margin="0,0,0,35"/>

                    <TextBlock Text="Slider - Soft UI thumb"
                              FontSize="16"
                              FontWeight="SemiBold"
                              Foreground="#4A5568"
                              Margin="0,0,0,15"/>

                    <Slider Value="40" Minimum="0" Maximum="100" Width="450" HorizontalAlignment="Left" Margin="0,0,0,15"/>
                    <Slider Value="70" Minimum="0" Maximum="100" Width="450" HorizontalAlignment="Left" Margin="0,0,0,50"/>
                </StackPanel>

                <!-- All Controls Section -->
                <StackPanel x:Name="AllSection" Visibility="Collapsed">
                    <TextBlock Text="All Controls Overview"
                              FontSize="28"
                              FontWeight="SemiBold"
                              Foreground="#4A5568"
                              Margin="0,0,0,20"/>

                    <!-- Buttons -->
                    <TextBlock Text="Buttons &amp; Toggles" FontSize="18" FontWeight="SemiBold" Foreground="#4A5568" Margin="0,0,0,10"/>
                    <WrapPanel Margin="0,0,0,30">
                        <Button Content="Button 1" Margin="0,0,10,10" Padding="20,10"/>
                        <Button Content="Button 2" Margin="0,0,10,10" Padding="20,10"/>
                        <ToggleButton Content="Toggle" Margin="0,0,10,10" Padding="20,10"/>
                        <ToggleButton Content="Checked" IsChecked="True" Margin="0,0,10,10" Padding="20,10"/>
                    </WrapPanel>

                    <!-- Input -->
                    <TextBlock Text="Text Input" FontSize="18" FontWeight="SemiBold" Foreground="#4A5568" Margin="0,0,0,10"/>
                    <TextBox Text="Sample input text" Width="350" HorizontalAlignment="Left" Margin="0,0,0,30"/>

                    <!-- Selection -->
                    <TextBlock Text="Selection Controls" FontSize="18" FontWeight="SemiBold" Foreground="#4A5568" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,30">
                        <StackPanel Margin="0,0,40,0">
                            <CheckBox Content="Checkbox 1" Margin="0,0,0,10"/>
                            <CheckBox Content="Checkbox 2" IsChecked="True" Margin="0,0,0,10"/>
                        </StackPanel>
                        <StackPanel>
