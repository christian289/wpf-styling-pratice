                          Margin="0,0,0,50"/>

                <!-- Buttons Section -->
                <StackPanel x:Name="ButtonsSection" Visibility="Visible">
                    <TextBlock Text="Buttons"
                              FontSize="28"
                              FontWeight="SemiBold"
                              Foreground="#4A5568"
                              Margin="0,0,0,20"/>

