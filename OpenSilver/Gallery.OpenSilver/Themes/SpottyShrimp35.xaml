<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Gallery.OpenSilver.Controls">

    <!--
    CSS Original:
    background: repeating-linear-gradient(45deg, #0050fc, #0050fc 20px, #0684fade 20px, #0684fade 40px);

    OpenSilver Implementation:
    DrawingBrush not supported, using LinearGradientBrush approximation
    -->

    <Style TargetType="controls:SpottyShrimp35">
        <Setter Property="MinWidth" Value="200"/>
        <Setter Property="MinHeight" Value="100"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:SpottyShrimp35">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <!-- Striped Pattern Background (simplified for OpenSilver) -->
                            <Rectangle>
                                <Rectangle.Fill>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#0050fc" Offset="0"/>
                                        <GradientStop Color="#0050fc" Offset="0.25"/>
                                        <GradientStop Color="#0684fa" Offset="0.25"/>
                                        <GradientStop Color="#0684fa" Offset="0.5"/>
                                        <GradientStop Color="#0050fc" Offset="0.5"/>
                                        <GradientStop Color="#0050fc" Offset="0.75"/>
                                        <GradientStop Color="#0684fa" Offset="0.75"/>
                                        <GradientStop Color="#0684fa" Offset="1"/>
                                    </LinearGradientBrush>
                                </Rectangle.Fill>
                            </Rectangle>

                            <!-- Content -->
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              Margin="{TemplateBinding Padding}"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
