<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Gallery.OpenSilver.Controls">

    <Style TargetType="controls:NeonGlowButton">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:NeonGlowButton">
                    <!-- 최외곽 컨테이너: .button -->
                    <!-- Outer container: .button -->
                    <Border x:Name="OuterBorder"
                            CornerRadius="16"
                            Padding="2"
                            RenderTransformOrigin="0.5,0.5">
                        <Border.RenderTransform>
                            <ScaleTransform x:Name="OuterScale" ScaleX="1" ScaleY="1"/>
                        </Border.RenderTransform>

                        <!-- .button 배경: radial-gradient -->
                        <!-- .button background: radial-gradient -->
                        <Border.Background>
                            <RadialGradientBrush GradientOrigin="0.8,-0.1" Center="0.8,-0.1" RadiusX="0.5" RadiusY="0.8">
                                <GradientStop Color="#FFFFFF" Offset="0"/>
                                <GradientStop Color="#181B1B" Offset="1"/>
                            </RadialGradientBrush>
                        </Border.Background>

                        <!-- VisualStateManager: Trigger 대체 -->
                        <!-- VisualStateManager: Replaces Triggers -->
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualStateGroup.Transitions>
                                    <VisualTransition GeneratedDuration="0:0:0.1"/>
                                </VisualStateGroup.Transitions>

                                <VisualState x:Name="Normal"/>

                                <!-- IsMouseOver=True -> Opacity 0.95 -->
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="OuterBorder"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0.95"
                                                         Duration="0:0:0.1"/>
                                    </Storyboard>
                                </VisualState>

                                <!-- IsPressed=True -> Scale 0.98 -->
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="OuterScale"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="0.98"
                                                         Duration="0:0:0.05"/>
                                        <DoubleAnimation Storyboard.TargetName="OuterScale"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="0.98"
                                                         Duration="0:0:0.05"/>
                                    </Storyboard>
                                </VisualState>

                                <!-- IsEnabled=False -> Opacity 0.5 -->
                                <VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="OuterBorder"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0.5"
                                                         Duration="0:0:0.1"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                        <Grid>
                            <!-- .button::after: 우상단 글로우 효과 -->
                            <!-- .button::after: Top-right glow effect -->
                            <Border x:Name="GlowEffect"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    MinWidth="50"
                                    MinHeight="30"
                                    CornerRadius="60"
                                    Background="Transparent">
                                <!-- Note: DropShadowEffect may have limited support in OpenSilver -->
                            </Border>

                            <!-- .blob1: 좌하단 시안/블루 블롭 -->
                            <!-- .blob1: Bottom-left cyan/blue blob -->
                            <Border x:Name="Blob1"
                                    Width="70"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Stretch"
                                    CornerRadius="16">
                                <!-- radial-gradient(circle 60px at 0% 100%, #3fe9ff, #0000ff80, transparent) -->
                                <Border.Background>
                                    <RadialGradientBrush GradientOrigin="0,1" Center="0,1" RadiusX="0.8" RadiusY="1.2">
                                        <GradientStop Color="#3FE9FF" Offset="0"/>
                                        <GradientStop Color="#800000FF" Offset="0.5"/>
                                        <GradientStop Color="Transparent" Offset="1"/>
                                    </RadialGradientBrush>
                                </Border.Background>
                            </Border>

                            <!-- .inner: 내부 콘텐츠 영역 -->
                            <!-- .inner: Inner content area -->
                            <Border x:Name="InnerBorder"
                                    CornerRadius="14"
                                    Padding="25,14">
                                <!-- radial-gradient(circle 80px at 80% -50%, #777777, #0f1111) -->
                                <Border.Background>
                                    <RadialGradientBrush GradientOrigin="0.8,-0.5" Center="0.8,-0.5" RadiusX="0.5" RadiusY="0.8">
                                        <GradientStop Color="#777777" Offset="0"/>
                                        <GradientStop Color="#0F1111" Offset="1"/>
                                    </RadialGradientBrush>
                                </Border.Background>

                                <Grid>
                                    <!-- .inner::before: 시안 오버레이 -->
                                    <!-- .inner::before: Cyan overlay -->
                                    <Border x:Name="InnerOverlay"
                                            CornerRadius="14"
                                            Margin="-25,-14">
                                        <!-- radial-gradient(circle 60px at 0% 100%, #00e1ff1a, #0000ff11, transparent) -->
                                        <Border.Background>
                                            <RadialGradientBrush GradientOrigin="0,1" Center="0,1" RadiusX="0.6" RadiusY="1">
                                                <GradientStop Color="#1A00E1FF" Offset="0"/>
                                                <GradientStop Color="#110000FF" Offset="0.5"/>
                                                <GradientStop Color="Transparent" Offset="1"/>
                                            </RadialGradientBrush>
                                        </Border.Background>
                                    </Border>

                                    <!-- 콘텐츠 / Content -->
                                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
