                                        <Ellipse.Fill>
                                            <RadialGradientBrush Center="0.4,0.3" GradientOrigin="0.3,0.2" RadiusX="0.7" RadiusY="0.7">
                                                <GradientStop Offset="0" Color="#FFFFFFFF" />
                                                <GradientStop Offset="0.4" Color="#FFF3FDFF" />
                                                <GradientStop Offset="0.75" Color="#FFE5F5FA" />
                                                <GradientStop Offset="1" Color="#FFD5EBF5" />
                                            </RadialGradientBrush>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <Ellipse Canvas.Left="97"
                                             Canvas.Top="66"
                                             Width="37"
                                             Height="37">
                                        <Ellipse.Fill>
                                            <RadialGradientBrush Center="0.4,0.3" GradientOrigin="0.3,0.2" RadiusX="0.7" RadiusY="0.7">
                                                <GradientStop Offset="0" Color="#FFFFFFFF" />
                                                <GradientStop Offset="0.4" Color="#FFF3FDFF" />
                                                <GradientStop Offset="0.75" Color="#FFE5F5FA" />
                                                <GradientStop Offset="1" Color="#FFD5EBF5" />
                                            </RadialGradientBrush>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <Ellipse Canvas.Left="118"
                                             Canvas.Top="54"
                                             Width="37"
                                             Height="37">
                                        <Ellipse.Fill>
                                            <RadialGradientBrush Center="0.4,0.3" GradientOrigin="0.3,0.2" RadiusX="0.7" RadiusY="0.7">
                                                <GradientStop Offset="0" Color="#FFFFFFFF" />
                                                <GradientStop Offset="0.4" Color="#FFF3FDFF" />
                                                <GradientStop Offset="0.75" Color="#FFE5F5FA" />
                                                <GradientStop Offset="1" Color="#FFD5EBF5" />
                                            </RadialGradientBrush>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <Ellipse Canvas.Left="144"
                                             Canvas.Top="47"
                                             Width="37"
                                             Height="37">
                                        <Ellipse.Fill>
                                            <RadialGradientBrush Center="0.4,0.3" GradientOrigin="0.3,0.2" RadiusX="0.7" RadiusY="0.7">
                                                <GradientStop Offset="0" Color="#FFFFFFFF" />
                                                <GradientStop Offset="0.4" Color="#FFF3FDFF" />
                                                <GradientStop Offset="0.75" Color="#FFE5F5FA" />
                                                <GradientStop Offset="1" Color="#FFD5EBF5" />
                                            </RadialGradientBrush>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <Ellipse Canvas.Left="139"
                                             Canvas.Top="4"
                                             Width="51"
                                             Height="51">
                                        <Ellipse.Fill>
                                            <RadialGradientBrush Center="0.4,0.3" GradientOrigin="0.3,0.2" RadiusX="0.7" RadiusY="0.7">
                                                <GradientStop Offset="0" Color="#FFFFFFFF" />
                                                <GradientStop Offset="0.4" Color="#FFF3FDFF" />
                                                <GradientStop Offset="0.75" Color="#FFE5F5FA" />
                                                <GradientStop Offset="1" Color="#FFD5EBF5" />
                                            </RadialGradientBrush>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                </Canvas>

                                <!--  별 (z=3)  -->
                                <Canvas x:Name="StarsCanvas"
                                        Canvas.Left="10"
                                        Width="100"
                                        Height="55"
                                        Opacity="0">
                                    <Canvas.RenderTransform>
                                        <TranslateTransform x:Name="StarsTranslate" Y="-75" />
                                    </Canvas.RenderTransform>
                                    <!--  간단한 별 모양으로 대체  -->
                                    <Ellipse Canvas.Left="10"
                                             Canvas.Top="10"
                                             Width="4"
                                             Height="4"
                                             Fill="White" />
                                    <Ellipse Canvas.Left="30"
                                             Canvas.Top="25"
                                             Width="3"
                                             Height="3"
                                             Fill="White" />
                                    <Ellipse Canvas.Left="50"
                                             Canvas.Top="15"
                                             Width="4"
                                             Height="4"
                                             Fill="White" />
                                    <Ellipse Canvas.Left="70"
                                             Canvas.Top="30"
                                             Width="3"
                                             Height="3"
                                             Fill="White" />
                                    <Ellipse Canvas.Left="20"
                                             Canvas.Top="40"
                                             Width="3"
                                             Height="3"
                                             Fill="White" />
                                    <Ellipse Canvas.Left="60"
                                             Canvas.Top="5"
                                             Width="3"
                                             Height="3"
                                             Fill="White" />
                                    <Ellipse Canvas.Left="45"
                                             Canvas.Top="35"
                                             Width="4"
                                             Height="4"
                                             Fill="White" />
                                </Canvas>

                                <!--  Glow Ring (z=4)  -->
                                <Canvas x:Name="CircleCanvas"
                                        Width="169"
                                        Height="75">
                                    <Canvas.RenderTransform>
                                        <TranslateTransform x:Name="CircleTranslate" X="-13" />
                                    </Canvas.RenderTransform>
                                    <Ellipse Canvas.Left="-37.5"
                                             Canvas.Top="-50.5"
                                             Width="176"
                                             Height="176"
                                             Fill="#19FFFFFF" />
                                    <Ellipse Canvas.Left="-18.75"
                                             Canvas.Top="-31.75"
                                             Width="138.5"
                                             Height="138.5"
                                             Fill="#19FFFFFF" />
                                    <Ellipse Canvas.Left="0"
                                             Canvas.Top="-13"
                                             Width="101"
                                             Height="101"
                                             Fill="#19FFFFFF" />
                                </Canvas>

                                <!--  해/달 (z=5)  -->
                                <Canvas x:Name="SunMoonCanvas"
                                        Width="169"
                                        Height="75">
                                    <Canvas.RenderTransform>
                                        <TranslateTransform x:Name="SunMoonTranslate" X="-13" />
                                    </Canvas.RenderTransform>

                                    <!--  해  -->
                                    <Grid Canvas.Left="18.5"
                                          Canvas.Top="5.5"
                                          Width="64"
                                          Height="64">
                                        <Ellipse Fill="#ECCA2F" />
                                        <Ellipse>
                                            <Ellipse.Fill>
                                                <RadialGradientBrush Center="0.35,0.35" GradientOrigin="0.25,0.25" RadiusX="0.75" RadiusY="0.75">
                                                    <GradientStop Offset="0" Color="#FFF5D670" />
                                                    <GradientStop Offset="0.4" Color="#FFECCA2F" />
                                                    <GradientStop Offset="0.85" Color="#FFD4AA1C" />
                                                    <GradientStop Offset="1" Color="#FFC49515" />
                                                </RadialGradientBrush>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <Ellipse>
                                            <Ellipse.Fill>
                                                <RadialGradientBrush Center="0.28,0.28" GradientOrigin="0.2,0.2" RadiusX="0.5" RadiusY="0.5">
                                                    <GradientStop Offset="0" Color="#B0FFFEF0" />
                                                    <GradientStop Offset="0.4" Color="#60FEFFEF" />
                                                    <GradientStop Offset="0.8" Color="Transparent" />
                                                </RadialGradientBrush>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                    </Grid>

                                    <!--  달 컨테이너  -->
                                    <Canvas Canvas.Left="18.5"
                                            Canvas.Top="5.5"
                                            Width="64"
                                            Height="64"
                                            ClipToBounds="True">
