<Page x:Class="Gallery.OpenSilver.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:controls="clr-namespace:Gallery.OpenSilver.Controls"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Foreground="White">

    <Grid Background="#1a1a2e">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#16213e" Padding="20">
            <TextBlock Text="WPF Control Gallery (OpenSilver)"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#e94560"/>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Margin="40">
                <!-- NeonGlowButton Section -->
                <Border Background="#0f3460" CornerRadius="12" Padding="30" Margin="0,0,0,30">
                    <StackPanel>
                        <TextBlock Text="NeonGlowButton"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="#e94560"/>
                        <TextBlock Text="Realism style neon glow button with radial gradients"
                                   FontSize="14"
                                   Foreground="#aaaaaa"
                                   Margin="0,10,0,0"/>

                        <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                            <controls:NeonGlowButton Content="Click Me"/>
                            <controls:NeonGlowButton Content="Hover Me" Margin="20,0,0,0"/>
                            <controls:NeonGlowButton Content="Disabled" IsEnabled="False" Margin="20,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- SpottyShrimp35 Section -->
                <Border Background="#0f3460" CornerRadius="12" Padding="30" Margin="0,0,0,30">
                    <StackPanel>
                        <TextBlock Text="SpottyShrimp35"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="#e94560"/>
                        <TextBlock Text="CSS repeating-linear-gradient stripe pattern"
                                   FontSize="14"
                                   Foreground="#aaaaaa"
                                   Margin="0,10,0,0"/>

                        <controls:SpottyShrimp35 Width="300" Height="100" Margin="0,20,0,0"/>
                    </StackPanel>
                </Border>

                <!-- RudeMouse79 Section -->
                <Border Background="#0f3460" CornerRadius="12" Padding="30" Margin="0,0,0,30">
                    <StackPanel>
                        <TextBlock Text="RudeMouse79"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="#e94560"/>
                        <TextBlock Text="Radio button style tab selector"
                                   FontSize="14"
                                   Foreground="#aaaaaa"
                                   Margin="0,10,0,0"/>

                        <controls:RudeMouse79 Margin="0,20,0,0">
                            <controls:RudeMouse79Item Content="Home"/>
                            <controls:RudeMouse79Item Content="About"/>
                            <controls:RudeMouse79Item Content="Contact"/>
                        </controls:RudeMouse79>
                    </StackPanel>
                </Border>

                <!-- DangerousQuail58 Section -->
                <Border Background="#0f3460" CornerRadius="12" Padding="30" Margin="0,0,0,30">
                    <StackPanel>
                        <TextBlock Text="DangerousQuail58"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="#e94560"/>
                        <TextBlock Text="Gradient card with hover effect"
                                   FontSize="14"
                                   Foreground="#aaaaaa"
                                   Margin="0,10,0,0"/>

                        <controls:DangerousQuail58 Margin="0,20,0,0">
                            <TextBlock Text="Card Content" FontSize="18" Foreground="White"/>
                        </controls:DangerousQuail58>
                    </StackPanel>
                </Border>

                <!-- ThemeSwitchToggle Section -->
                <Border Background="#0f3460" CornerRadius="12" Padding="30" Margin="0,0,0,30">
                    <StackPanel>
                        <TextBlock Text="ThemeSwitchToggle"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="#e94560"/>
                        <TextBlock Text="Day/Night theme toggle with sun/moon animation"
                                   FontSize="14"
                                   Foreground="#aaaaaa"
                                   Margin="0,10,0,0"/>

                        <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                            <controls:ThemeSwitchToggle/>
                            <controls:ThemeSwitchToggle IsChecked="True" Margin="20,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
