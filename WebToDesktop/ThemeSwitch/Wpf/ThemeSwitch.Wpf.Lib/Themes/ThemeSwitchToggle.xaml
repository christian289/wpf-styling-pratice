<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:ThemeSwitch.Wpf.Lib.Controls">

    <Style TargetType="{x:Type controls:ThemeSwitchToggle}">
        <Setter Property="Width" Value="169"/>
        <Setter Property="Height" Value="75"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:ThemeSwitchToggle}">
                    <!-- Outer wrapper for recessed effect (움푹 들어간 효과) -->
                    <Grid Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                        <!-- Outer shadow: top dark, bottom light = recessed look -->
                        <Border CornerRadius="37.5"
                                BorderThickness="0"
                                Margin="0,-2,0,0">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="1.9" Direction="270" Color="#000000" Opacity="0.25" BlurRadius="1.9"/>
                            </Border.Effect>
                        </Border>
                        <Border CornerRadius="37.5"
                                BorderThickness="0"
                                Margin="0,0,0,-2">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="1.9" Direction="90" Color="#FFFFFF" Opacity="0.94" BlurRadius="3.75"/>
                            </Border.Effect>
                        </Border>

                        <!-- Main container -->
                        <Border x:Name="Container"
                                CornerRadius="37.5"
                                ClipToBounds="True">
                            <Border.Background>
                                <SolidColorBrush x:Name="ContainerBg" Color="#3D7EAE"/>
                            </Border.Background>

                            <Grid ClipToBounds="True">
                                <!-- Inset shadow for container (내부 그림자) -->
                                <Border CornerRadius="37.5" Panel.ZIndex="100">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="1.5" Direction="90" Color="#000000" Opacity="0.25" BlurRadius="5.6"/>
                                    </Border.Effect>
                                </Border>

                                <!-- Back clouds layer (회색 - 뒤쪽) -->
                                <Canvas x:Name="BackCloudsCanvas" ClipToBounds="True" Panel.ZIndex="1">
                                    <Ellipse Canvas.Left="-9" Canvas.Bottom="-9" Width="38" Height="38" Fill="#AACADF"/>
                                    <Ellipse Canvas.Left="15" Canvas.Bottom="-4" Width="38" Height="38" Fill="#AACADF"/>
                                    <Ellipse Canvas.Left="37" Canvas.Bottom="-9" Width="38" Height="38" Fill="#AACADF"/>
                                    <Ellipse Canvas.Left="60" Canvas.Bottom="-2" Width="38" Height="38" Fill="#AACADF"/>
                                    <Ellipse Canvas.Left="79" Canvas.Bottom="-9" Width="38" Height="38" Fill="#AACADF"/>
                                    <Ellipse Canvas.Left="101" Canvas.Bottom="-13" Width="38" Height="38" Fill="#AACADF"/>
                                    <Ellipse Canvas.Left="120" Canvas.Bottom="-19" Width="38" Height="38" Fill="#AACADF"/>
                                    <Ellipse Canvas.Left="124" Canvas.Bottom="26" Width="50" Height="50" Fill="#AACADF"/>

                                    <Canvas.RenderTransform>
                                        <TranslateTransform x:Name="BackCloudsTranslate" Y="0"/>
                                    </Canvas.RenderTransform>
                                </Canvas>

                                <!-- Front clouds layer (흰색 - 앞쪽) -->
                                <Canvas x:Name="FrontCloudsCanvas" ClipToBounds="True" Panel.ZIndex="2">
                                    <Ellipse Canvas.Left="9" Canvas.Bottom="-19" Width="38" Height="38" Fill="#F3FDFF"/>
                                    <Ellipse Canvas.Left="28" Canvas.Bottom="9" Width="38" Height="38" Fill="#F3FDFF"/>
                                    <Ellipse Canvas.Left="43" Canvas.Bottom="11" Width="38" Height="38" Fill="#F3FDFF"/>
                                    <Ellipse Canvas.Left="66" Canvas.Bottom="0" Width="38" Height="38" Fill="#F3FDFF"/>
                                    <Ellipse Canvas.Left="88" Canvas.Bottom="-2" Width="38" Height="38" Fill="#F3FDFF"/>
                                    <Ellipse Canvas.Left="109" Canvas.Bottom="9" Width="38" Height="38" Fill="#F3FDFF"/>
                                    <Ellipse Canvas.Left="135" Canvas.Bottom="-2" Width="38" Height="38" Fill="#F3FDFF"/>
                                    <Ellipse Canvas.Left="139" Canvas.Bottom="52" Width="50" Height="50" Fill="#F3FDFF"/>

                                    <Canvas.RenderTransform>
                                        <TranslateTransform x:Name="FrontCloudsTranslate" Y="0"/>
                                    </Canvas.RenderTransform>
                                </Canvas>

                                <!-- Stars layer -->
                                <Canvas x:Name="StarsCanvas" Opacity="0" Panel.ZIndex="3">
                                    <Canvas.RenderTransform>
                                        <TransformGroup>
                                            <TranslateTransform x:Name="StarsTranslate" Y="-75"/>
                                        </TransformGroup>
                                    </Canvas.RenderTransform>
                                    <Path Canvas.Left="135" Canvas.Top="3" Fill="White" Data="M 2.831 3.007 C 2.055 3.85 1.111 4.299 0 4.354 C 1.111 4.409 2.055 4.859 2.831 5.711 C 3.607 6.555 3.996 7.563 3.996 8.727 C 3.996 7.957 4.172 7.251 4.525 6.591 C 4.886 5.931 5.372 5.4 5.98 5.005 C 6.598 4.602 7.268 4.391 8 4.354 C 6.88 4.29 5.936 3.85 5.16 3.007 C 4.384 2.163 3.996 1.164 3.996 0 C 3.996 1.164 3.607 2.163 2.831 3.007 Z"/>
                                    <Path Canvas.Left="31" Canvas.Top="23" Fill="White" Data="M 2.831 3.007 C 2.055 3.85 1.111 4.299 0 4.354 C 1.111 4.409 2.055 4.859 2.831 5.711 C 3.607 6.555 3.996 7.563 3.996 8.727 C 3.996 7.957 4.172 7.251 4.525 6.591 C 4.886 5.931 5.372 5.4 5.98 5.005 C 6.598 4.602 7.268 4.391 8 4.354 C 6.88 4.29 5.936 3.85 5.16 3.007 C 4.384 2.163 3.996 1.164 3.996 0 C 3.996 1.164 3.607 2.163 2.831 3.007 Z"/>
                                    <Path Canvas.Left="0" Canvas.Top="36" Fill="White" Data="M 2.831 3.007 C 2.055 3.85 1.111 4.299 0 4.354 C 1.111 4.409 2.055 4.859 2.831 5.711 C 3.607 6.555 3.996 7.563 3.996 8.727 C 3.996 7.957 4.172 7.251 4.525 6.591 C 4.886 5.931 5.372 5.4 5.98 5.005 C 6.598 4.602 7.268 4.391 8 4.354 C 6.88 4.29 5.936 3.85 5.16 3.007 C 4.384 2.163 3.996 1.164 3.996 0 C 3.996 1.164 3.607 2.163 2.831 3.007 Z"/>
                                    <Path Canvas.Left="54" Canvas.Top="24" Fill="White" Data="M 2.831 3.007 C 2.055 3.85 1.111 4.299 0 4.354 C 1.111 4.409 2.055 4.859 2.831 5.711 C 3.607 6.555 3.996 7.563 3.996 8.727 C 3.996 7.957 4.172 7.251 4.525 6.591 C 4.886 5.931 5.372 5.4 5.98 5.005 C 6.598 4.602 7.268 4.391 8 4.354 C 6.88 4.29 5.936 3.85 5.16 3.007 C 4.384 2.163 3.996 1.164 3.996 0 C 3.996 1.164 3.607 2.163 2.831 3.007 Z"/>
                                    <Path Canvas.Left="81" Canvas.Top="25" Fill="White" Data="M 2.831 3.007 C 2.055 3.85 1.111 4.299 0 4.354 C 1.111 4.409 2.055 4.859 2.831 5.711 C 3.607 6.555 3.996 7.563 3.996 8.727 C 3.996 7.957 4.172 7.251 4.525 6.591 C 4.886 5.931 5.372 5.4 5.98 5.005 C 6.598 4.602 7.268 4.391 8 4.354 C 6.88 4.29 5.936 3.85 5.16 3.007 C 4.384 2.163 3.996 1.164 3.996 0 C 3.996 1.164 3.607 2.163 2.831 3.007 Z"/>
                                    <Path Canvas.Left="136" Canvas.Top="36" Fill="White" Data="M 2.831 3.007 C 2.055 3.85 1.111 4.299 0 4.354 C 1.111 4.409 2.055 4.859 2.831 5.711 C 3.607 6.555 3.996 7.563 3.996 8.727 C 3.996 7.957 4.172 7.251 4.525 6.591 C 4.886 5.931 5.372 5.4 5.98 5.005 C 6.598 4.602 7.268 4.391 8 4.354 C 6.88 4.29 5.936 3.85 5.16 3.007 C 4.384 2.163 3.996 1.164 3.996 0 C 3.996 1.164 3.607 2.163 2.831 3.007 Z"/>
                                    <Path Canvas.Left="99" Canvas.Top="50" Fill="White" Data="M 2.831 3.007 C 2.055 3.85 1.111 4.299 0 4.354 C 1.111 4.409 2.055 4.859 2.831 5.711 C 3.607 6.555 3.996 7.563 3.996 8.727 C 3.996 7.957 4.172 7.251 4.525 6.591 C 4.886 5.931 5.372 5.4 5.98 5.005 C 6.598 4.602 7.268 4.391 8 4.354 C 6.88 4.29 5.936 3.85 5.16 3.007 C 4.384 2.163 3.996 1.164 3.996 0 C 3.996 1.164 3.607 2.163 2.831 3.007 Z"/>
                                </Canvas>

                                <!-- Circle container with glow rings -->
                                <!-- circle-container-offset = (101 - 75) / 2 * -1 = -13 -->
                                <Canvas x:Name="CircleCanvas" Panel.ZIndex="4">
                                    <Canvas.RenderTransform>
                                        <TranslateTransform x:Name="CircleTranslate" X="-13"/>
                                    </Canvas.RenderTransform>
                                    <!-- Outer glow ring 2 (101x101) -->
                                    <Ellipse Canvas.Left="-13" Canvas.Top="-13" Width="101" Height="101"
                                             Fill="#1AFFFFFF" Opacity="0.6"/>
                                    <!-- Outer glow ring 1 -->
                                    <Ellipse Canvas.Left="6" Canvas.Top="6" Width="63" Height="63"
                                             Fill="#1AFFFFFF" Opacity="0.8"/>
                                    <!-- Inner glow -->
                                    <Ellipse Canvas.Left="19" Canvas.Top="19" Width="37" Height="37"
                                             Fill="#1AFFFFFF"/>
                                </Canvas>

                                <!-- Sun/Moon container -->
                                <!-- sun-moon centered in circle-container: (101-64)/2 = 18.5 -->
                                <Canvas x:Name="SunMoonCanvas" Panel.ZIndex="5">
                                    <Canvas.RenderTransform>
                                        <TranslateTransform x:Name="SunMoonTranslate" X="-13"/>
                                    </Canvas.RenderTransform>

                                    <!-- Sun with 3D effect (64x64, centered at 18.5, 5.5) -->
                                    <Grid Canvas.Left="5.5" Canvas.Top="5.5" Width="64" Height="64">
                                        <!-- Sun base -->
                                        <Ellipse Fill="#ECCA2F">
                                            <Ellipse.Effect>
                                                <DropShadowEffect ShadowDepth="2" Direction="315" Color="#000000" Opacity="0.25" BlurRadius="4"/>
                                            </Ellipse.Effect>
                                        </Ellipse>
                                        <!-- Sun highlight (top-left inset) -->
                                        <Ellipse Margin="2">
                                            <Ellipse.Fill>
                                                <RadialGradientBrush GradientOrigin="0.3,0.3" Center="0.3,0.3" RadiusX="0.7" RadiusY="0.7">
                                                    <GradientStop Color="#61FEFFEF" Offset="0"/>
                                                    <GradientStop Color="Transparent" Offset="1"/>
                                                </RadialGradientBrush>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <!-- Sun shadow (bottom inset) -->
                                        <Ellipse Margin="2">
                                            <Ellipse.Fill>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                    <GradientStop Color="Transparent" Offset="0.6"/>
                                                    <GradientStop Color="#30A1872A" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                    </Grid>

                                    <!-- Moon container (slides in from right) -->
                                    <Canvas Canvas.Left="5.5" Canvas.Top="5.5" ClipToBounds="True" Width="64" Height="64">
                                        <!-- Moon with 3D effect -->
                                        <Grid x:Name="MoonGrid" Canvas.Left="64" Width="64" Height="64">
                                            <!-- Moon base -->
                                            <Ellipse Fill="#C4C9D1">
                                                <Ellipse.Effect>
                                                    <DropShadowEffect ShadowDepth="2" Direction="315" Color="#000000" Opacity="0.25" BlurRadius="4"/>
                                                </Ellipse.Effect>
                                            </Ellipse>
                                            <!-- Moon highlight (top-left inset) -->
                                            <Ellipse Margin="2">
                                                <Ellipse.Fill>
                                                    <RadialGradientBrush GradientOrigin="0.3,0.3" Center="0.3,0.3" RadiusX="0.7" RadiusY="0.7">
                                                        <GradientStop Color="#61FEFFEF" Offset="0"/>
                                                        <GradientStop Color="Transparent" Offset="1"/>
                                                    </RadialGradientBrush>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                            <!-- Moon shadow (bottom inset) -->
                                            <Ellipse Margin="2">
                                                <Ellipse.Fill>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                        <GradientStop Color="Transparent" Offset="0.6"/>
                                                        <GradientStop Color="#30969696" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                        </Grid>

                                        <!-- Moon spots with inset shadow effect -->
                                        <!-- spot1: top=0.75em=22.5, left=0.312em=9.4, size=0.75em=22.5 -->
                                        <Grid x:Name="Spot1Grid" Canvas.Left="73" Canvas.Top="22" Width="22" Height="22">
                                            <Ellipse Fill="#959DB1"/>
                                            <Ellipse Margin="1">
                                                <Ellipse.Fill>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                        <GradientStop Color="#30000000" Offset="0"/>
                                                        <GradientStop Color="Transparent" Offset="0.5"/>
                                                    </LinearGradientBrush>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                        </Grid>
                                        <!-- spot2: size=0.375em=11.25 -->
                                        <Grid x:Name="Spot2Grid" Canvas.Left="105" Canvas.Top="28" Width="11" Height="11">
                                            <Ellipse Fill="#959DB1"/>
                                            <Ellipse Margin="0.5">
                                                <Ellipse.Fill>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                        <GradientStop Color="#30000000" Offset="0"/>
                                                        <GradientStop Color="Transparent" Offset="0.5"/>
                                                    </LinearGradientBrush>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                        </Grid>
                                        <!-- spot3: size=0.25em=7.5 -->
                                        <Grid x:Name="Spot3Grid" Canvas.Left="88" Canvas.Top="9" Width="7" Height="7">
                                            <Ellipse Fill="#959DB1"/>
                                            <Ellipse Margin="0.3">
                                                <Ellipse.Fill>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                        <GradientStop Color="#30000000" Offset="0"/>
                                                        <GradientStop Color="Transparent" Offset="0.5"/>
                                                    </LinearGradientBrush>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                        </Grid>
                                    </Canvas>
                                </Canvas>
                            </Grid>
                        </Border>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- Checked state (Night mode) -->
                        <Trigger Property="IsChecked" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Background color transition -->
                                        <ColorAnimation Storyboard.TargetName="ContainerBg"
                                                        Storyboard.TargetProperty="Color"
                                                        To="#1D1F2C" Duration="0:0:0.5">
                                            <ColorAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </ColorAnimation.EasingFunction>
                                        </ColorAnimation>

                                        <!-- Circle container moves right -->
                                        <!-- Move from -13 to (169 - 101 + 13) = 81 -->
                                        <DoubleAnimation Storyboard.TargetName="CircleTranslate"
                                                         Storyboard.TargetProperty="X"
                                                         To="81" Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>

                                        <!-- Sun/Moon container moves right -->
                                        <DoubleAnimation Storyboard.TargetName="SunMoonTranslate"
                                                         Storyboard.TargetProperty="X"
                                                         To="81" Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>

                                        <!-- Moon slides in -->
                                        <DoubleAnimation Storyboard.TargetName="MoonGrid"
                                                         Storyboard.TargetProperty="(Canvas.Left)"
                                                         To="0" Duration="0:0:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>

                                        <!-- Moon spots slide in -->
                                        <DoubleAnimation Storyboard.TargetName="Spot1Grid"
                                                         Storyboard.TargetProperty="(Canvas.Left)"
                                                         To="9" Duration="0:0:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="Spot2Grid"
                                                         Storyboard.TargetProperty="(Canvas.Left)"
                                                         To="41" Duration="0:0:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="Spot3Grid"
                                                         Storyboard.TargetProperty="(Canvas.Left)"
                                                         To="24" Duration="0:0:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>

                                        <!-- Back clouds move down -->
                                        <DoubleAnimation Storyboard.TargetName="BackCloudsTranslate"
                                                         Storyboard.TargetProperty="Y"
                                                         To="122" Duration="0:0:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>

                                        <!-- Front clouds move down -->
                                        <DoubleAnimation Storyboard.TargetName="FrontCloudsTranslate"
                                                         Storyboard.TargetProperty="Y"
                                                         To="122" Duration="0:0:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>

                                        <!-- Stars appear -->
                                        <DoubleAnimation Storyboard.TargetName="StarsCanvas"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1" Duration="0:0:0.5"/>
                                        <DoubleAnimation Storyboard.TargetName="StarsTranslate"
                                                         Storyboard.TargetProperty="Y"
                                                         To="0" Duration="0:0:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Background color transition back -->
                                        <ColorAnimation Storyboard.TargetName="ContainerBg"
                                                        Storyboard.TargetProperty="Color"
                                                        To="#3D7EAE" Duration="0:0:0.5">
                                            <ColorAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </ColorAnimation.EasingFunction>
                                        </ColorAnimation>

                                        <!-- Circle container moves left -->
                                        <DoubleAnimation Storyboard.TargetName="CircleTranslate"
                                                         Storyboard.TargetProperty="X"
                                                         To="-13" Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>

                                        <!-- Sun/Moon container moves left -->
                                        <DoubleAnimation Storyboard.TargetName="SunMoonTranslate"
                                                         Storyboard.TargetProperty="X"
                                                         To="-13" Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>

                                        <!-- Moon slides out -->
                                        <DoubleAnimation Storyboard.TargetName="MoonGrid"
                                                         Storyboard.TargetProperty="(Canvas.Left)"
                                                         To="64" Duration="0:0:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>

                                        <!-- Moon spots slide out -->
                                        <DoubleAnimation Storyboard.TargetName="Spot1Grid"
                                                         Storyboard.TargetProperty="(Canvas.Left)"
                                                         To="73" Duration="0:0:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="Spot2Grid"
                                                         Storyboard.TargetProperty="(Canvas.Left)"
                                                         To="105" Duration="0:0:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="Spot3Grid"
                                                         Storyboard.TargetProperty="(Canvas.Left)"
                                                         To="88" Duration="0:0:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>

                                        <!-- Back clouds move up -->
                                        <DoubleAnimation Storyboard.TargetName="BackCloudsTranslate"
                                                         Storyboard.TargetProperty="Y"
                                                         To="0" Duration="0:0:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>

                                        <!-- Front clouds move up -->
                                        <DoubleAnimation Storyboard.TargetName="FrontCloudsTranslate"
                                                         Storyboard.TargetProperty="Y"
                                                         To="0" Duration="0:0:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>

                                        <!-- Stars disappear -->
                                        <DoubleAnimation Storyboard.TargetName="StarsCanvas"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0" Duration="0:0:0.5"/>
                                        <DoubleAnimation Storyboard.TargetName="StarsTranslate"
                                                         Storyboard.TargetProperty="Y"
                                                         To="-75" Duration="0:0:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>

                        <!-- Disabled state -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
