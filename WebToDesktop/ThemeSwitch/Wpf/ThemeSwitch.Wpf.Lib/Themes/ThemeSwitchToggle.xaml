<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:ThemeSwitch.Wpf.Lib.Controls">

    <Style TargetType="{x:Type controls:ThemeSwitchToggle}">
        <!--  CSS: 1em = 30px  -->
        <!--  container-width: 5.625em = 168.75px ≈ 169px  -->
        <!--  container-height: 2.5em = 75px  -->
        <Setter Property="Width" Value="169" />
        <Setter Property="Height" Value="75" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:ThemeSwitchToggle}">
                    <Grid Width="{TemplateBinding Width}"
                          Height="{TemplateBinding Height}">
                        <!--  ═══════════════════════════════════════════════════════════════  -->
                        <!--  외부 입체감 (뉴모피즘 스타일 - 버튼이 튀어나온 느낌)  -->
                        <!--  CSS: box-shadow: 0em -0.062em 0.062em rgba(0,0,0,0.25),  -->
                        <!--  0em 0.062em 0.125em rgba(255,255,255,0.94)  -->
                        <!--  ═══════════════════════════════════════════════════════════════  -->

                        <!--  하단-우측 밝은 하이라이트 (광원이 좌상단에 있다고 가정)  -->
                        <Border Margin="0,2,0,-2"
                                CornerRadius="37.5">
                            <Border.Effect>
                                <BlurEffect Radius="3" />
                            </Border.Effect>
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Offset="0" Color="Transparent" />
                                    <GradientStop Offset="0.5" Color="#E0FFFFFF" />
                                    <GradientStop Offset="1" Color="#F0FFFFFF" />
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>

                        <!--  상단-좌측 어두운 그림자  -->
                        <Border Margin="0,-2,0,2"
                                CornerRadius="37.5">
                            <Border.Effect>
                                <BlurEffect Radius="2" />
                            </Border.Effect>
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Offset="0" Color="#40000000" />
                                    <GradientStop Offset="0.5" Color="#20000000" />
                                    <GradientStop Offset="1" Color="Transparent" />
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>

                        <!--  ═══════════════════════════════════════════════════════════════  -->
                        <!--  메인 컨테이너  -->
                        <!--  ═══════════════════════════════════════════════════════════════  -->
                        <Border x:Name="Container"
                                CornerRadius="37.5">
                            <Border.Background>
                                <SolidColorBrush x:Name="ContainerBg"
                                                 Color="#3D7EAE" />
                            </Border.Background>

                            <Grid>
                                <Grid.Clip>
                                    <RectangleGeometry RadiusX="37.5"
                                                       RadiusY="37.5"
                                                       Rect="0,0,169,75" />
                                </Grid.Clip>
                                <!--  내부 inset 그림자 (오목하게 파인 효과)  -->
                                <!--  CSS: box-shadow: 0em 0.05em 0.187em rgba(0,0,0,0.25) inset  -->
                                <!--  상단에서 내려오는 그림자 + 하단 밝은 반사광  -->
                                <Border Panel.ZIndex="100"
                                        CornerRadius="37.5"
                                        IsHitTestVisible="False">
                                    <Border.Background>
                                        <!--  상단 inset shadow  -->
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Offset="0" Color="#45000000" />
                                            <GradientStop Offset="0.08" Color="#30000000" />
                                            <GradientStop Offset="0.2" Color="#10000000" />
                                            <GradientStop Offset="0.4" Color="Transparent" />
                                            <GradientStop Offset="0.85" Color="Transparent" />
                                            <GradientStop Offset="1" Color="#15FFFFFF" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>

                                <!--  좌우 테두리 inset 효과  -->
                                <Border Panel.ZIndex="101"
                                        CornerRadius="37.5"
                                        IsHitTestVisible="False">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                            <GradientStop Offset="0" Color="#20000000" />
                                            <GradientStop Offset="0.05" Color="#08000000" />
                                            <GradientStop Offset="0.15" Color="Transparent" />
                                            <GradientStop Offset="0.85" Color="Transparent" />
                                            <GradientStop Offset="0.95" Color="#05000000" />
                                            <GradientStop Offset="1" Color="#15000000" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>

                                <!--  ═══════════════════════════════════════════════════════  -->
                                <!--  뒤쪽 구름 (#AACADF) - 입체감 있는 구름  -->
                                <!--  ═══════════════════════════════════════════════════════  -->
                                <Canvas x:Name="BackCloudsCanvas"
                                        Panel.ZIndex="1">
                                    <Canvas.RenderTransform>
                                        <TranslateTransform x:Name="BackCloudsTranslate" Y="0" />
                                    </Canvas.RenderTransform>

                                    <!--  약간 blur로 뒤쪽 느낌  -->
                                    <Canvas.Effect>
                                        <BlurEffect Radius="0.8" />
                                    </Canvas.Effect>

                                    <!--  뒤쪽 구름용 공통 그라데이션 브러시  -->
                                    <Canvas.Resources>
                                        <RadialGradientBrush x:Key="BackCloudBrush"
                                                             Center="0.4,0.35"
                                                             GradientOrigin="0.3,0.25"
                                                             RadiusX="0.7"
                                                             RadiusY="0.7">
                                            <GradientStop Offset="0" Color="#FFC5DAE8" />
                                            <GradientStop Offset="0.5" Color="#FFAACADF" />
                                            <GradientStop Offset="0.85" Color="#FF95B8CC" />
                                            <GradientStop Offset="1" Color="#FF85A8BC" />
                                        </RadialGradientBrush>
                                    </Canvas.Resources>

                                    <!--  CSS box-shadow 순서대로 변환  -->
                                    <Ellipse Canvas.Left="0"
                                             Canvas.Top="47"
                                             Width="37"
                                             Height="37"
                                             Fill="{StaticResource BackCloudBrush}" />
                                    <Ellipse Canvas.Left="24"
                                             Canvas.Top="52"
                                             Width="37"
                                             Height="37"
                                             Fill="{StaticResource BackCloudBrush}" />
                                    <Ellipse Canvas.Left="47"
                                             Canvas.Top="54"
                                             Width="37"
                                             Height="37"
                                             Fill="{StaticResource BackCloudBrush}" />
                                    <Ellipse Canvas.Left="69"
                                             Canvas.Top="47"
                                             Width="37"
                                             Height="37"
                                             Fill="{StaticResource BackCloudBrush}" />
                                    <Ellipse Canvas.Left="88"
                                             Canvas.Top="56"
                                             Width="37"
                                             Height="37"
                                             Fill="{StaticResource BackCloudBrush}" />
                                    <Ellipse Canvas.Left="110"
                                             Canvas.Top="43"
                                             Width="37"
                                             Height="37"
                                             Fill="{StaticResource BackCloudBrush}" />
                                    <Ellipse Canvas.Left="129"
                                             Canvas.Top="37"
                                             Width="37"
                                             Height="37"
                                             Fill="{StaticResource BackCloudBrush}" />
                                    <!--  큰 구름 (spread 포함)  -->
                                    <Ellipse Canvas.Left="123"
                                             Canvas.Top="-7"
                                             Width="51"
                                             Height="51"
                                             Fill="{StaticResource BackCloudBrush}" />
                                </Canvas>

                                <!--  ═══════════════════════════════════════════════════════  -->
                                <!--  앞쪽 구름 (#F3FDFF) - 입체감 있는 구름  -->
                                <!--  ═══════════════════════════════════════════════════════  -->
                                <Canvas x:Name="FrontCloudsCanvas"
                                        Panel.ZIndex="2">
                                    <Canvas.RenderTransform>
                                        <TranslateTransform x:Name="FrontCloudsTranslate" Y="0" />
                                    </Canvas.RenderTransform>

                                    <!--  앞쪽 구름용 공통 그라데이션 브러시  -->
                                    <Canvas.Resources>
                                        <RadialGradientBrush x:Key="FrontCloudBrush"
                                                             Center="0.4,0.3"
                                                             GradientOrigin="0.3,0.2"
                                                             RadiusX="0.7"
                                                             RadiusY="0.7">
                                            <GradientStop Offset="0" Color="#FFFFFFFF" />
                                            <GradientStop Offset="0.4" Color="#FFF3FDFF" />
                                            <GradientStop Offset="0.75" Color="#FFE5F5FA" />
                                            <GradientStop Offset="1" Color="#FFD5EBF5" />
                                        </RadialGradientBrush>
                                    </Canvas.Resources>

                                    <!--  CSS box-shadow 순서대로 변환  -->
                                    <Ellipse Canvas.Left="9"
                                             Canvas.Top="56"
                                             Width="37"
                                             Height="37"
                                             Fill="{StaticResource FrontCloudBrush}" />
                                    <Ellipse Canvas.Left="37"
                                             Canvas.Top="66"
                                             Width="37"
                                             Height="37"
                                             Fill="{StaticResource FrontCloudBrush}" />
                                    <Ellipse Canvas.Left="52"
                                             Canvas.Top="67"
                                             Width="37"
                                             Height="37"
                                             Fill="{StaticResource FrontCloudBrush}" />
                                    <Ellipse Canvas.Left="75"
                                             Canvas.Top="56"
                                             Width="37"
                                             Height="37"
                                             Fill="{StaticResource FrontCloudBrush}" />
                                    <Ellipse Canvas.Left="97"
                                             Canvas.Top="66"
                                             Width="37"
                                             Height="37"
                                             Fill="{StaticResource FrontCloudBrush}" />
                                    <Ellipse Canvas.Left="118"
                                             Canvas.Top="54"
                                             Width="37"
                                             Height="37"
                                             Fill="{StaticResource FrontCloudBrush}" />
                                    <Ellipse Canvas.Left="144"
                                             Canvas.Top="47"
                                             Width="37"
                                             Height="37"
                                             Fill="{StaticResource FrontCloudBrush}" />
                                    <!--  큰 구름 (spread 포함)  -->
                                    <Ellipse Canvas.Left="139"
                                             Canvas.Top="4"
                                             Width="51"
                                             Height="51"
                                             Fill="{StaticResource FrontCloudBrush}" />
                                </Canvas>

                                <!--  ═══════════════════════════════════════════════════════  -->
                                <!--  별 레이어  -->
                                <!--  ═══════════════════════════════════════════════════════  -->
                                <Canvas x:Name="StarsCanvas"
                                        Width="100"
                                        Height="55"
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Panel.ZIndex="3"
                                        Opacity="0">
                                    <Canvas.RenderTransform>
                                        <TranslateTransform x:Name="StarsTranslate" Y="-75" />
                                    </Canvas.RenderTransform>

                                    <!--  SVG 별 패턴을 WPF Path로 변환 (가로 0.65 압축)  -->
                                    <Path Canvas.Left="0"
                                          Canvas.Top="10"
                                          Data="M135.831 3.00688C135.055 3.85027 134.111 4.29946 133 4.35447C134.111 4.40947 135.055 4.85867 135.831 5.71123C136.607 6.55462 136.996 7.56303 136.996 8.72727C136.996 7.95722 137.172 7.25134 137.525 6.59129C137.886 5.93124 138.372 5.39954 138.98 5.00535C139.598 4.60199 140.268 4.39114 141 4.35447C139.88 4.2903 138.936 3.85027 138.16 3.00688C137.384 2.16348 136.996 1.16425 136.996 0C136.996 1.16425 136.607 2.16348 135.831 3.00688ZM31 23.3545C32.1114 23.2995 33.0551 22.8503 33.8313 22.0069C34.6075 21.1635 34.9956 20.1642 34.9956 19C34.9956 20.1642 35.3837 21.1635 36.1599 22.0069C36.9361 22.8503 37.8798 23.2903 39 23.3545C38.2679 23.3911 37.5976 23.602 36.9802 24.0053C36.3716 24.3995 35.8864 24.9312 35.5248 25.5913C35.172 26.2513 34.9956 26.9572 34.9956 27.7273C34.9956 26.563 34.6075 25.5546 33.8313 24.7112C33.0551 23.8587 32.1114 23.4095 31 23.3545ZM0 36.3545C1.11136 36.2995 2.05513 35.8503 2.83131 35.0069C3.6075 34.1635 3.99559 33.1642 3.99559 32C3.99559 33.1642 4.38368 34.1635 5.15987 35.0069C5.93605 35.8503 6.87982 36.2903 8 36.3545C7.26792 36.3911 6.59757 36.602 5.98015 37.0053C5.37155 37.3995 4.88644 37.9312 4.52481 38.5913C4.172 39.2513 3.99559 39.9572 3.99559 40.7273C3.99559 39.563 3.6075 38.5546 2.83131 37.7112C2.05513 36.8587 1.11136 36.4095 0 36.3545ZM56.8313 24.0069C56.0551 24.8503 55.1114 25.2995 54 25.3545C55.1114 25.4095 56.0551 25.8587 56.8313 26.7112C57.6075 27.5546 57.9956 28.563 57.9956 29.7273C57.9956 28.9572 58.172 28.2513 58.5248 27.5913C58.8864 26.9312 59.3716 26.3995 59.9802 26.0053C60.5976 25.602 61.2679 25.3911 62 25.3545C60.8798 25.2903 59.9361 24.8503 59.1599 24.0069C58.3837 23.1635 57.9956 22.1642 57.9956 21C57.9956 22.1642 57.6075 23.1635 56.8313 24.0069ZM81 25.3545C82.1114 25.2995 83.0551 24.8503 83.8313 24.0069C84.6075 23.1635 84.9956 22.1642 84.9956 21C84.9956 22.1642 85.3837 23.1635 86.1599 24.0069C86.9361 24.8503 87.8798 25.2903 89 25.3545C88.2679 25.3911 87.5976 25.602 86.9802 26.0053C86.