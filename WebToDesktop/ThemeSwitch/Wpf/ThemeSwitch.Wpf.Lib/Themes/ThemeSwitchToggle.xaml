                                          Fill="White"
                                          RenderTransformOrigin="0,0">
                                        <Path.RenderTransform>
                                            <ScaleTransform ScaleX="0.55" ScaleY="0.55" />
                                        </Path.RenderTransform>
                                    </Path>
                                </Canvas>

                                <!--  ═══════════════════════════════════════════════════════  -->
                                <!--  Glow Ring (circle-container)  -->
                                <!--  CSS: diameter=101px, offset=-13px  -->
                                <!--  CSS: box-shadow: inset 0 0 0 3.375em rgba(255,255,255,0.1),  -->
                                <!--  0 0 0 0.625em rgba(255,255,255,0.1),  -->
                                <!--  0 0 0 1.25em rgba(255,255,255,0.1)  -->
                                <!--  ═══════════════════════════════════════════════════════  -->
                                <Canvas x:Name="CircleCanvas"
                                        Panel.ZIndex="4">
                                    <Canvas.RenderTransform>
                                        <TransformGroup>
                                            <TranslateTransform x:Name="CircleTranslate" X="-13" />
                                            <TranslateTransform x:Name="CircleHoverTranslate" X="0" />
                                        </TransformGroup>
                                    </Canvas.RenderTransform>

                                    <!--  바깥 링 3 (1.25em = 37.5px spread)  -->
                                    <!--  해 중심: 18.5 + 32 = 50.5 (X), 5.5 + 32 = 37.5 (Y)  -->
                                    <!--  링 중심 = Canvas.Left + Width/2 = 50.5  -->
                                    <!--  Canvas.Left = 50.5 - 88 = -37.5  -->
                                    <!--  Canvas.Top = 37.5 - 88 = -50.5  -->
                                    <Ellipse Canvas.Left="-37.5"
                                             Canvas.Top="-50.5"
                                             Width="176"
                                             Height="176"
                                             Fill="#19FFFFFF" />
                                    <!--  바깥 링 2 (0.625em = 18.75px spread)  -->
                                    <!--  Canvas.Left = 50.5 - 69.25 = -18.75  -->
                                    <!--  Canvas.Top = 37.5 - 69.25 = -31.75  -->
                                    <Ellipse Canvas.Left="-18.75"
                                             Canvas.Top="-31.75"
                                             Width="138.5"
                                             Height="138.5"
                                             Fill="#19FFFFFF" />
                                    <!--  바깥 링 1 (101x101)  -->
                                    <!--  Canvas.Left = 50.5 - 50.5 = 0  -->
                                    <!--  Canvas.Top = 37.5 - 50.5 = -13  -->
                                    <Ellipse Canvas.Left="0"
                                             Canvas.Top="-13"
                                             Width="101"
                                             Height="101"
                                             Fill="#19FFFFFF" />
                                </Canvas>

                                <!--  ═══════════════════════════════════════════════════════  -->
                                <!--  해/달 컨테이너  -->
                                <!--  CSS: sun-moon-diameter: 2.125em = 63.75px ≈ 64px  -->
                                <!--  중심 위치: (101-64)/2 - 13 = 5.5  -->
                                <!--  ═══════════════════════════════════════════════════════  -->
                                <Canvas x:Name="SunMoonCanvas"
                                        Panel.ZIndex="5">
                                    <Canvas.RenderTransform>
                                        <TransformGroup>
                                            <TranslateTransform x:Name="SunMoonTranslate" X="-13" />
                                            <TranslateTransform x:Name="SunMoonHoverTranslate" X="0" />
                                        </TransformGroup>
                                    </Canvas.RenderTransform>

                                    <!--  해 (Sun) with strong 3D effect  -->
                                    <Grid Canvas.Left="18.5"
                                          Canvas.Top="5.5"
                                          Width="64"
                                          Height="64">
                                        <!--  외부 그림자 (drop-shadow) - 더 깊은 그림자  -->
                                        <!--  CSS: filter: drop-shadow(0.062em 0.125em 0.125em rgba(0,0,0,0.25))  -->
                                        <Ellipse Fill="#ECCA2F">
                                            <Ellipse.Effect>
                                                <DropShadowEffect BlurRadius="6"
                                                                  Direction="290"
                                                                  Opacity="0.45"
                                                                  ShadowDepth="6"
                                                                  Color="#000000" />
                                            </Ellipse.Effect>
                                        </Ellipse>

                                        <!--  기본 구체 그라데이션 (3D 볼륨감)  -->
                                        <Ellipse>
                                            <Ellipse.Fill>
                                                <RadialGradientBrush Center="0.35,0.35" GradientOrigin="0.25,0.25" RadiusX="0.75" RadiusY="0.75">
                                                    <GradientStop Offset="0" Color="#FFF5D670" />
                                                    <GradientStop Offset="0.4" Color="#FFECCA2F" />
                                                    <GradientStop Offset="0.85" Color="#FFD4AA1C" />
                                                    <GradientStop Offset="1" Color="#FFC49515" />
                                                </RadialGradientBrush>
                                            </Ellipse.Fill>
                                        </Ellipse>

                                        <!--  상단-좌측 하이라이트 (inset light) - 더 강한 반사  -->
                                        <!--  CSS: box-shadow: 0.062em 0.062em 0.062em 0em rgba(254,255,239,0.61) inset  -->
                                        <Ellipse>
                                            <Ellipse.Fill>
                                                <RadialGradientBrush Center="0.28,0.28" GradientOrigin="0.2,0.2" RadiusX="0.5" RadiusY="0.5">
                                                    <GradientStop Offset="0" Color="#B0FFFEF0" />
                                                    <GradientStop Offset="0.4" Color="#60FEFFEF" />
                                                    <GradientStop Offset="0.8" Color="Transparent" />
                                                </RadialGradientBrush>
                                            </Ellipse.Fill>
                                        </Ellipse>

                                        <!--  하단-우측 그림자 (inset dark) - 더 깊은 음영  -->
                                        <!--  CSS: box-shadow: 0em -0.062em 0.062em 0em #a1872a inset  -->
                                        <Ellipse>
                                            <Ellipse.Fill>
                                                <RadialGradientBrush Center="0.7,0.7" GradientOrigin="0.8,0.8" RadiusX="0.6" RadiusY="0.6">
                                                    <GradientStop Offset="0" Color="#60A1872A" />
                                                    <GradientStop Offset="0.5" Color="#30A1872A" />
                                                    <GradientStop Offset="1" Color="Transparent" />
                                                </RadialGradientBrush>
                                            </Ellipse.Fill>
                                        </Ellipse>

                                        <!--  테두리 하이라이트 - 상단만 강조  -->
                                        <Ellipse Margin="1">
                                            <Ellipse.Stroke>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                    <GradientStop Offset="0" Color="#50FFFFFF" />
                                                    <GradientStop Offset="0.4" Color="#20FFFFFF" />
                                                    <GradientStop Offset="0.6" Color="Transparent" />
                                                </LinearGradientBrush>
                                            </Ellipse.Stroke>
                                            <Ellipse.StrokeThickness>1.5</Ellipse.StrokeThickness>
                                        </Ellipse>
                                    </Grid>

                                    <!--  달 (Moon) 컨테이너  -->
                                    <Canvas Canvas.Left="18.5"
                                            Canvas.Top="5.5"
                                            Width="64"
                                            Height="64"
                                            ClipToBounds="True">

                                        <!--  달 본체  -->
                                        <Grid x:Name="MoonGrid"
                                              Canvas.Left="64"
                                              Width="64"
                                              Height="64">
                                            <!--  외부 그림자 - 더 깊은 그림자  -->
                                            <Ellipse Fill="#C4C9D1">
                                                <Ellipse.Effect>
                                                    <DropShadowEffect BlurRadius="6"
                                                                      Direction="290"
                                                                      Opacity="0.50"
                                                                      ShadowDepth="5"
                                                                      Color="#000000" />
                                                </Ellipse.Effect>
                                            </Ellipse>

                                            <!--  기본 구체 그라데이션 (3D 볼륨감)  -->
                                            <Ellipse>
                                                <Ellipse.Fill>
                                                    <RadialGradientBrush Center="0.35,0.35" GradientOrigin="0.25,0.25" RadiusX="0.75" RadiusY="0.75">
                                                        <GradientStop Offset="0" Color="#FFE0E4EA" />
                                                        <GradientStop Offset="0.4" Color="#FFC4C9D1" />
                                                        <GradientStop Offset="0.85" Color="#FFA8ADB8" />
                                                        <GradientStop Offset="1" Color="#FF9299A5" />
                                                    </RadialGradientBrush>
                                                </Ellipse.Fill>
                                            </Ellipse>

                                            <!--  상단-좌측 하이라이트 - 더 강한 반사  -->
                                            <Ellipse>
                                                <Ellipse.Fill>
                                                    <RadialGradientBrush Center="0.28,0.28" GradientOrigin="0.2,0.2" RadiusX="0.5" RadiusY="0.5">
                                                        <GradientStop Offset="0" Color="#A0FFFFFF" />
                                                        <GradientStop Offset="0.4" Color="#50F8F8F8" />
                                                        <GradientStop Offset="0.8" Color="Transparent" />
                                                    </RadialGradientBrush>
                                                </Ellipse.Fill>
                                            </Ellipse>

                                            <!--  하단-우측 그림자 - 더 깊은 음영  -->
                                            <Ellipse>
                                                <Ellipse.Fill>
                                                    <RadialGradientBrush Center="0.7,0.7" GradientOrigin="0.8,0.8" RadiusX="0.6" RadiusY="0.6">
                                                        <GradientStop Offset="0" Color="#50707580" />
                                                        <GradientStop Offset="0.5" Color="#25707580" />
                                                        <GradientStop Offset="1" Color="Transparent" />
                                                    </RadialGradientBrush>
                                                </Ellipse.Fill>
                                            </Ellipse>

                                            <!--  테두리 하이라이트 - 상단만 강조  -->
                                            <Ellipse Margin="1">
                                                <Ellipse.Stroke>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                        <GradientStop Offset="0" Color="#40FFFFFF" />
                                                        <GradientStop Offset="0.4" Color="#18FFFFFF" />
                                                        <GradientStop Offset="0.6" Color="Transparent" />
                                                    </LinearGradientBrush>
                                                </Ellipse.Stroke>
                                                <Ellipse.StrokeThickness>1.5</Ellipse.StrokeThickness>
                                            </Ellipse>
                                        </Grid>

                                        <!--  달 크레이터 (spots) with inset shadow  -->
                                        <!--  CSS: spot1: top=22.5px, left=9.4px, size=22.5px  -->
                                        <Grid x:Name="Spot1Grid"
                                              Canvas.Left="73"
                                              Canvas.Top="22"
                                              Width="22"
                                              Height="22">
                                            <Ellipse Fill="#959DB1" />
                                            <!--  inset shadow  -->
                                            <Ellipse>
                                                <Ellipse.Fill>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                        <GradientStop Offset="0" Color="#50000000" />
                                                        <GradientStop Offset="0.5" Color="Transparent" />
                                                    </LinearGradientBrush>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                        </Grid>

                                        <!--  CSS: spot2: size=11.25px  -->
                                        <Grid x:Name="Spot2Grid"
                                              Canvas.Left="105"
                                              Canvas.Top="28"
                                              Width="11"
                                              Height="11">
                                            <Ellipse Fill="#959DB1" />
                                            <Ellipse>
                                                <Ellipse.Fill>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                        <GradientStop Offset="0" Color="#50000000" />
                                                        <GradientStop Offset="0.5" Color="Transparent" />
                                                    </LinearGradientBrush>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                        </Grid>

                                        <!--  CSS: spot3: size=7.5px  -->
                                        <Grid x:Name="Spot3Grid"
                                              Canvas.Left="88"
                                              Canvas.Top="9"
                                              Width="7"
                                              Height="7">
                                            <Ellipse Fill="#959DB1" />
                                            <Ellipse>
                                                <Ellipse.Fill>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                        <GradientStop Offset="0" Color="#50000000" />
                                                        <GradientStop Offset="0.5" Color="Transparent" />
                                                    </LinearGradientBrush>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                        </Grid>
                                    </Canvas>
                                </Canvas>
                            </Grid>
                        </Border>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!--  Checked state (Night mode)  -->
                        <Trigger Property="IsChecked" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!--  배경색 전환  -->
                                        <ColorAnimation Storyboard.TargetName="ContainerBg"
                                                        Storyboard.TargetProperty="Color"
                                                        To="#1D1F2C"
                                                        Duration="0:0:0.5">
                                            <ColorAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </ColorAnimation.EasingFunction>
                                        </ColorAnimation>

                                        <!--  Circle/SunMoon 이동: -13 → 81  -->
                                        <DoubleAnimation Storyboard.TargetName="CircleTranslate"
                                                         Storyboard.TargetProperty="X"
                                                         To="81"
                                                         Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="SunMoonTranslate"
                                                         Storyboard.TargetProperty="X"
                                                         To="81"
                                                         Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>

                                        <!--  달 슬라이드 인  -->
                                        <DoubleAnimation Storyboard.TargetName="MoonGrid"
                                                         Storyboard.TargetProperty="(Canvas.Left)"
                                                         To="0"
                                                         Duration="0:0:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>

                                        <!--  크레이터 이동  -->
                                        <DoubleAnimation Storyboard.TargetName="Spot1Grid"
                                                         Storyboard.TargetProperty="(Canvas.Left)"
                                                         To="9"
                                                         Duration="0:0:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="Spot2Grid"
                                                         Storyboard.TargetProperty="(Canvas.Left)"
                                                         To="41"
                                                         Duration="0:0:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="Spot3Grid"
                                                         Storyboard.TargetProperty="(Canvas.Left)"
                                                         To="24"
                                                         Duration="0:0:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>

                                        <!--  구름 하강: 0 → 122 (CSS: bottom: -4.062em = -122px)  -->
                                        <DoubleAnimation Storyboard.TargetName="BackCloudsTranslate"
                                                         Storyboard.TargetProperty="Y"
                                                         To="122"
                                                         Duration="0:0:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="FrontCloudsTranslate"
                                                         Storyboard.TargetProperty="Y"
                                                         To="122"
                                                         Duration="0:0:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>

                                        <!--  별 등장  -->
                                        <DoubleAnimation Storyboard.TargetName="StarsCanvas"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1"
                                                         Duration="0:0:0.5" />
                                        <DoubleAnimation Storyboard.TargetName="StarsTranslate"
                                                         Storyboard.TargetProperty="Y"
                                                         To="0"
                                                         Duration="0:0:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="ContainerBg"
                                                        Storyboard.TargetProperty="Color"
                                                        To="#3D7EAE"
                                                        Duration="0:0:0.5">
                                            <ColorAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </ColorAnimation.EasingFunction>
                                        </ColorAnimation>
                                        <DoubleAnimation Storyboard.TargetName="CircleTranslate"
                                                         Storyboard.TargetProperty="X"
                                                         To="-13"
                                                         Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="SunMoonTranslate"
                                                         Storyboard.TargetProperty="X"
                                                         To="-13"
                                                         Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="MoonGrid"
                                                         Storyboard.TargetProperty="(Canvas.Left)"
                                                         To="64"
                                                         Duration="0:0:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="Spot1Grid"
                                                         Storyboard.TargetProperty="(Canvas.Left)"
                                                         To="73"
                                                         Duration="0:0:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="Spot2Grid"
                                                         Storyboard.TargetProperty="(Canvas.Left)"
                                                         To="105"
                                                         Duration="0:0:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="Spot3Grid"
                                                         Storyboard.TargetProperty="(Canvas.Left)"
                                                         To="88"
                                                         Duration="0:0:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="BackCloudsTranslate"
                                                         Storyboard.TargetProperty="Y"
                                                         To="0"
                                                         Duration="0:0:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="FrontCloudsTranslate"
                                                         Storyboard.TargetProperty="Y"
                                                         To="0"
                                                         Duration="0:0:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="StarsCanvas"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0"
                                                         Duration="0:0:0.5" />
                                        <DoubleAnimation Storyboard.TargetName="StarsTranslate"
                                                         Storyboard.TargetProperty="Y"
                                                         To="-75"
                                                         Duration="0:0:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>

                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5" />
                        </Trigger>

                        <!--  낮 상태에서 마우스 오버 시 해가 오른쪽으로 5px 이동  -->
                        <!--  HoverTranslate를 사용하여 IsChecked 애니메이션과 분리  -->
                        <!--  RemoveStoryboard로 애니메이션 완전 제거하여 속성을 기본값으로 복원  -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsChecked" Value="False" />
                                <Condition Property="IsMouseOver" Value="True" />
                            </MultiTrigger.Conditions>
                            <MultiTrigger.EnterActions>
                                <RemoveStoryboard BeginStoryboardName="DayHoverExitStoryboard" />
                                <RemoveStoryboard BeginStoryboardName="NightHoverExitStoryboard" />
                                <BeginStoryboard x:Name="DayHoverStoryboard">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="CircleHoverTranslate"
                                                         Storyboard.TargetProperty="X"
                                                         To="5"
                                                         Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="SunMoonHoverTranslate"
                                                         Storyboard.TargetProperty="X"
                                                         To="5"
                                                         Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiTrigger.EnterActions>
                            <MultiTrigger.ExitActions>
                                <RemoveStoryboard BeginStoryboardName="DayHoverStoryboard" />
                                <BeginStoryboard x:Name="DayHoverExitStoryboard">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="CircleHoverTranslate"
                                                         Storyboard.TargetProperty="X"
                                                         To="0"
                                                         Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="SunMoonHoverTranslate"
                                                         Storyboard.TargetProperty="X"
                                                         To="0"
                                                         Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiTrigger.ExitActions>
                        </MultiTrigger>

                        <!--  밤 상태에서 마우스 오버 시 달이 왼쪽으로 5px 이동  -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsChecked" Value="True" />
                                <Condition Property="IsMouseOver" Value="True" />
                            </MultiTrigger.Conditions>
                            <MultiTrigger.EnterActions>
                                <RemoveStoryboard BeginStoryboardName="DayHoverExitStoryboard" />
                                <RemoveStoryboard BeginStoryboardName="NightHoverExitStoryboard" />
                                <BeginStoryboard x:Name="NightHoverStoryboard">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="CircleHoverTranslate"
                                                         Storyboard.TargetProperty="X"
                                                         To="-5"
                                                         Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="SunMoonHoverTranslate"
                                                         Storyboard.TargetProperty="X"
                                                         To="-5"
                                                         Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiTrigger.EnterActions>
                            <MultiTrigger.ExitActions>
                                <RemoveStoryboard BeginStoryboardName="NightHoverStoryboard" />
                                <BeginStoryboard x:Name="NightHoverExitStoryboard">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="CircleHoverTranslate"
                                                         Storyboard.TargetProperty="X"
                                                         To="0"
                                                         Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="SunMoonHoverTranslate"
                                                         Storyboard.TargetProperty="X"
                                                         To="0"
                                                         Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiTrigger.ExitActions>
                        </MultiTrigger>

                        <!--  IsChecked 변경 시 호버 Storyboard 완전 제거하여 HoverTranslate를 기본값(0)으로 복원  -->
                        <Trigger Property="IsChecked" Value="True">
                            <Trigger.EnterActions>
                                <RemoveStoryboard BeginStoryboardName="DayHoverStoryboard" />
                                <RemoveStoryboard BeginStoryboardName="DayHoverExitStoryboard" />
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <RemoveStoryboard BeginStoryboardName="NightHoverStoryboard" />
                                <RemoveStoryboard BeginStoryboardName="NightHoverExitStoryboard" />
                            </Trigger.ExitActions>
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>