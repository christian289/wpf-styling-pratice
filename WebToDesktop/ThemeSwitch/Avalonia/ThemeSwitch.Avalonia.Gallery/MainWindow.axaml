<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:ThemeSwitch.Avalonia.Lib.Controls"
        x:Class="ThemeSwitch.Avalonia.Gallery.MainWindow"
        Title="ThemeSwitch Toggle Gallery"
        Width="600"
        Height="400"
        WindowStartupLocation="CenterScreen">

    <Window.Background>
        <SolidColorBrush Color="#E8E8E8"/>
    </Window.Background>

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <TextBlock Text="Day/Night Theme Switch"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#333333"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,40"/>

            <!-- Default (Day mode) -->
            <controls:ThemeSwitchToggle Margin="0,0,0,30"/>

        </StackPanel>
    </Grid>
</Window>
