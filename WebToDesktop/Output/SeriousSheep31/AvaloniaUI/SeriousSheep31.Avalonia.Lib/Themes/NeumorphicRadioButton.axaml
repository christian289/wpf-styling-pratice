<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:SeriousSheep31.Avalonia.Lib.Controls">

    <!-- Color Resources -->
    <Color x:Key="Neumorphic.Background">#ECF0F3</Color>
    <Color x:Key="Neumorphic.Shadow.Dark">#D1D9E6</Color>
    <Color x:Key="Neumorphic.Shadow.Light">#FFFFFF</Color>
    <Color x:Key="Neumorphic.Text">#394A56</Color>

    <SolidColorBrush x:Key="Neumorphic.Background.Brush" Color="{StaticResource Neumorphic.Background}" />
    <SolidColorBrush x:Key="Neumorphic.Text.Brush" Color="{StaticResource Neumorphic.Text}" />

    <!-- NeumorphicRadioButton Style -->
    <ControlTheme x:Key="{x:Type controls:NeumorphicRadioButton}" TargetType="controls:NeumorphicRadioButton">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{StaticResource Neumorphic.Text.Brush}" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Margin" Value="0,8" />
        <Setter Property="Template">
            <ControlTemplate>
                <Panel>
                    <!-- Main Container -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- Indicator (Outer Circle with Neumorphic Shadow) -->
                        <Border x:Name="PART_Indicator"
                                Width="30"
                                Height="30"
                                CornerRadius="15"
                                ClipToBounds="True"
                                BoxShadow="-8 -4 8 0 #FFFFFF, 8 4 12 0 #D1D9E6">
                            <Panel>
                                <!-- Inner shadow effect (::before) -->
                                <Ellipse x:Name="PART_InnerShadow"
                                         Width="24"
                                         Height="24"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center" />

                                <!-- Cover layer (::after) - hides inner shadow when unchecked -->
                                <Ellipse x:Name="PART_Cover"
                                         Width="24"
                                         Height="24"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         Fill="{StaticResource Neumorphic.Background.Brush}"
                                         RenderTransformOrigin="0.5,0.5">
                                    <Ellipse.Effect>
                                        <DropShadowEffect BlurRadius="4"
                                                          OffsetX="-4"
                                                          OffsetY="-2"
                                                          Color="#FFFFFF" />
                                    </Ellipse.Effect>
                                    <Ellipse.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform ScaleX="1" ScaleY="1" />
                                            <TranslateTransform Y="0" />
                                        </TransformGroup>
                                    </Ellipse.RenderTransform>
                                </Ellipse>
                            </Panel>
                        </Border>

                        <!-- Text Label -->
                        <TextBlock x:Name="PART_Text"
                                   Text="{TemplateBinding Content}"
                                   Foreground="{TemplateBinding Foreground}"
                                   VerticalAlignment="Center"
                                   Margin="16,0,0,0"
                                   Opacity="0.6"
                                   RenderTransformOrigin="0,0.5">
                            <TextBlock.RenderTransform>
                                <TranslateTransform X="0" />
                            </TextBlock.RenderTransform>
                        </TextBlock>
                    </StackPanel>
                </Panel>
            </ControlTemplate>
        </Setter>

        <!-- Hover State - Text Opacity -->
        <Style Selector="^:pointerover /template/ TextBlock#PART_Text">
            <Setter Property="Opacity" Value="1" />
        </Style>

        <!-- Checked State - Cover Fade Out and Scale -->
        <Style Selector="^:checked /template/ Ellipse#PART_Cover">
            <Style.Animations>
                <Animation Duration="0:0:0.25" Easing="QuadraticEaseInOut" FillMode="Forward">
                    <KeyFrame Cue="100%">
                        <Setter Property="Opacity" Value="0" />
                        <Setter Property="RenderTransform">
                            <TransformGroup>
                                <ScaleTransform ScaleX="0.975" ScaleY="0.975" />
                                <TranslateTransform Y="2.4" />
                            </TransformGroup>
                        </Setter>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <!-- Focus State - Text Opacity and Transform -->
        <Style Selector="^:focus /template/ TextBlock#PART_Text">
            <Setter Property="Opacity" Value="1" />
            <Style.Animations>
                <Animation Duration="0:0:0.2" Easing="QuadraticEaseOut" FillMode="Forward">
                    <KeyFrame Cue="100%">
                        <Setter Property="RenderTransform">
                            <TranslateTransform X="8" />
                        </Setter>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

    </ControlTheme>

</ResourceDictionary>
