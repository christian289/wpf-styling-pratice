<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:LovelyDragon72.Wpf.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/LovelyDragon72.Wpf.UI;component/Themes/LovelyDragon72Resources.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!--
    LovelyDragon72 스타일 - 호버 애니메이션이 있는 프로필 카드
    LovelyDragon72 Style - Profile card with hover animation
    원본: uiverse.io by gagan-gv
    -->

    <Style TargetType="{x:Type controls:LovelyDragon72}">
        <Setter Property="Width" Value="{StaticResource LovelyDragon72.Width}"/>
        <Setter Property="Height" Value="{StaticResource LovelyDragon72.Height}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:LovelyDragon72}">
                    <Border x:Name="PART_Root"
                            Background="{StaticResource LovelyDragon72.Background.Normal}"
                            CornerRadius="{StaticResource LovelyDragon72.CornerRadius}"
                            ClipToBounds="True">
                        <Border.Effect>
                            <DropShadowEffect x:Name="PART_Shadow"
                                              BlurRadius="0"
                                              ShadowDepth="0"
                                              Opacity="0"
                                              Color="Black"/>
                        </Border.Effect>

                        <Grid>
                            <!-- Blob (상단 장식) -->
                            <Border x:Name="PART_Blob"
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Center"
                                    Width="142.5"
                                    Height="{StaticResource LovelyDragon72.Blob.Height}"
                                    Background="{StaticResource LovelyDragon72.Blob.Background}"
                                    CornerRadius="{StaticResource LovelyDragon72.Blob.CornerRadius}"/>

                            <!-- 메인 콘텐츠 영역 -->
                            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center">
                                <!-- 프로필 이미지 영역 -->
                                <Border x:Name="PART_ImageArea"
                                        Margin="0,30,0,10"
                                        Width="{StaticResource LovelyDragon72.Image.Size}"
                                        Height="{StaticResource LovelyDragon72.Image.Size}"
                                        Background="{StaticResource LovelyDragon72.Image.Background}"
                                        CornerRadius="35"
                                        HorizontalAlignment="Center">
                                    <ContentPresenter Content="{TemplateBinding ImageSource}"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>

                                <!-- 이름 영역 -->
                                <StackPanel x:Name="PART_NamePanel" HorizontalAlignment="Center">
                                    <TextBlock x:Name="PART_FirstName"
                                               Text="{TemplateBinding FirstName}"
                                               FontSize="{StaticResource LovelyDragon72.FirstName.FontSize}"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"
                                               Foreground="{StaticResource LovelyDragon72.Text.Foreground}"/>
                                    <TextBlock x:Name="PART_LastName"
                                               Text="{TemplateBinding LastName}"
                                               FontSize="{StaticResource LovelyDragon72.LastName.FontSize}"
                                               HorizontalAlignment="Center"
                                               Foreground="{StaticResource LovelyDragon72.Text.Foreground}"
                                               Margin="0,-5,0,0"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- 소셜 아이콘 영역 -->
                            <StackPanel x:Name="PART_IconPanel"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Bottom"
                                        Margin="0,0,0,15"
                                        Opacity="0">
                                <!-- Twitter -->
                                <Path Data="{StaticResource LovelyDragon72.Icon.Twitter}"
                                      Fill="{StaticResource LovelyDragon72.Icon.Foreground}"
                                      Width="{StaticResource LovelyDragon72.Icon.Size}"
                                      Height="{StaticResource LovelyDragon72.Icon.Size}"
                                      Stretch="Uniform"
                                      Margin="5,0"/>
                                <!-- CodePen -->
                                <Path Data="{StaticResource LovelyDragon72.Icon.CodePen}"
                                      Fill="{StaticResource LovelyDragon72.Icon.Foreground}"
                                      Width="{StaticResource LovelyDragon72.Icon.Size}"
                                      Height="{StaticResource LovelyDragon72.Icon.Size}"
                                      Stretch="Uniform"
                                      Margin="5,0"/>
                                <!-- GitHub -->
                                <Path Data="{StaticResource LovelyDragon72.Icon.GitHub}"
                                      Fill="{StaticResource LovelyDragon72.Icon.Foreground}"
                                      Width="{StaticResource LovelyDragon72.Icon.Size}"
                                      Height="{StaticResource LovelyDragon72.Icon.Size}"
                                      Stretch="Uniform"
                                      Margin="5,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <!-- 배경색 변경 -->
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- 배경색 애니메이션 -->
                                        <ColorAnimation Storyboard.TargetName="PART_Root"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#4BB8FF"
                                                        Duration="0:0:0.5"/>

                                        <!-- 그림자 애니메이션 -->
                                        <DoubleAnimation Storyboard.TargetName="PART_Shadow"
                                                         Storyboard.TargetProperty="BlurRadius"
                                                         To="20"
                                                         Duration="0:0:0.5"/>
                                        <DoubleAnimation Storyboard.TargetName="PART_Shadow"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0.623"
                                                         Duration="0:0:0.5"/>

                                        <!-- Blob 높이 애니메이션 -->
                                        <DoubleAnimation Storyboard.TargetName="PART_Blob"
                                                         Storyboard.TargetProperty="Height"
                                                         To="0"
                                                         Duration="0:0:0.3"/>

                                        <!-- 이미지 영역 확장 애니메이션 -->
                                        <DoubleAnimation Storyboard.TargetName="PART_ImageArea"
                                                         Storyboard.TargetProperty="Width"
                                                         To="190"
                                                         Duration="0:0:0.5"/>
                                        <DoubleAnimation Storyboard.TargetName="PART_ImageArea"
                                                         Storyboard.TargetProperty="Height"
                                                         To="177.8"
                                                         Duration="0:0:0.5"/>
                                        <ThicknessAnimation Storyboard.TargetName="PART_ImageArea"
                                                            Storyboard.TargetProperty="Margin"
                                                            To="0,0,0,10"
                                                            Duration="0:0:0.5"/>
                                        <ColorAnimation Storyboard.TargetName="PART_ImageArea"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#F0F0F0"
                                                        Duration="0:0:0.5"/>
                                        <!-- CornerRadius를 직접 애니메이션할 수 없으므로 Setter로 처리 -->

                                        <!-- 이름 숨기기 -->
                                        <DoubleAnimation Storyboard.TargetName="PART_NamePanel"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0"
                                                         Duration="0:0:0.1"/>

                                        <!-- 아이콘 표시 -->
                                        <DoubleAnimation Storyboard.TargetName="PART_IconPanel"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1"
                                                         Duration="0:0:0.75"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- 배경색 복원 -->
                                        <ColorAnimation Storyboard.TargetName="PART_Root"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#F0F0F0"
                                                        Duration="0:0:0.5"/>

                                        <!-- 그림자 복원 -->
                                        <DoubleAnimation Storyboard.TargetName="PART_Shadow"
                                                         Storyboard.TargetProperty="BlurRadius"
                                                         To="0"
                                                         Duration="0:0:0.5"/>
                                        <DoubleAnimation Storyboard.TargetName="PART_Shadow"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0"
                                                         Duration="0:0:0.5"/>

                                        <!-- Blob 높이 복원 -->
                                        <DoubleAnimation Storyboard.TargetName="PART_Blob"
                                                         Storyboard.TargetProperty="Height"
                                                         To="10"
                                                         Duration="0:0:0.3"/>

                                        <!-- 이미지 영역 복원 -->
                                        <DoubleAnimation Storyboard.TargetName="PART_ImageArea"
                                                         Storyboard.TargetProperty="Width"
                                                         To="70"
                                                         Duration="0:0:0.5"/>
                                        <DoubleAnimation Storyboard.TargetName="PART_ImageArea"
                                                         Storyboard.TargetProperty="Height"
                                                         To="70"
                                                         Duration="0:0:0.5"/>
                                        <ThicknessAnimation Storyboard.TargetName="PART_ImageArea"
                                                            Storyboard.TargetProperty="Margin"
                                                            To="0,30,0,10"
                                                            Duration="0:0:0.5"/>
                                        <ColorAnimation Storyboard.TargetName="PART_ImageArea"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#4BB8FF"
                                                        Duration="0:0:0.5"/>

                                        <!-- 이름 표시 -->
                                        <DoubleAnimation Storyboard.TargetName="PART_NamePanel"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1"
                                                         Duration="0:0:0.5"/>

                                        <!-- 아이콘 숨기기 -->
                                        <DoubleAnimation Storyboard.TargetName="PART_IconPanel"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0"
                                                         Duration="0:0:0.1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>

                            <!-- 정적 속성 변경 (CornerRadius) -->
                            <Setter TargetName="PART_ImageArea" Property="CornerRadius" Value="10,0,0,0"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
