<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:WisePanda94.Avalonia.Lib.Controls">

    <!-- Colors -->
    <Color x:Key="SendMessageButton.Background">#FFFFFF</Color>
    <Color x:Key="SendMessageButton.Foreground">#000000</Color>
    <Color x:Key="SendMessageButton.Shadow">#40000000</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="SendMessageButton.BackgroundBrush" Color="{StaticResource SendMessageButton.Background}" />
    <SolidColorBrush x:Key="SendMessageButton.ForegroundBrush" Color="{StaticResource SendMessageButton.Foreground}" />

    <!-- SendMessageButton Style -->
    <ControlTheme x:Key="{x:Type controls:SendMessageButton}" TargetType="controls:SendMessageButton">
        <Setter Property="Background" Value="{StaticResource SendMessageButton.BackgroundBrush}" />
        <Setter Property="Foreground" Value="{StaticResource SendMessageButton.ForegroundBrush}" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
        <Setter Property="RenderTransform">
            <ScaleTransform ScaleX="1" ScaleY="1" />
        </Setter>
        <Setter Property="Template">
            <ControlTemplate TargetType="controls:SendMessageButton">
                <Border x:Name="PART_Border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="9999"
                        Padding="{TemplateBinding Padding}"
                        BoxShadow="0 4 6 -1 #26000000, 0 2 4 -2 #1A000000">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <!-- SVG Icon: 45 degree rotated send arrow -->
                        <Path x:Name="PART_Icon"
                              Width="24"
                              Height="24"
                              Stretch="Uniform"
                              Stroke="{TemplateBinding Foreground}"
                              StrokeThickness="2"
                              StrokeLineCap="Round"
                              StrokeJoin="Round"
                              Data="M12 19l9 2-9-18-9 18 9-2 M12 19v-8"
                              RenderTransformOrigin="0.5,0.5">
                            <Path.RenderTransform>
                                <RotateTransform Angle="45" />
                            </Path.RenderTransform>
                        </Path>
                        <!-- Text -->
                        <TextBlock x:Name="PART_Text"
                                   Text="{TemplateBinding Text}"
                                   Foreground="{TemplateBinding Foreground}"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </Border>
            </ControlTemplate>
        </Setter>

        <!-- Transitions for smooth animation -->
        <Setter Property="Transitions">
            <Transitions>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.3" Easing="CubicEaseOut" />
            </Transitions>
        </Setter>

        <!-- PointerOver (Hover) State -->
        <Style Selector="^:pointerover">
            <Setter Property="RenderTransform" Value="scale(1.1)" />
        </Style>
    </ControlTheme>

</ResourceDictionary>
