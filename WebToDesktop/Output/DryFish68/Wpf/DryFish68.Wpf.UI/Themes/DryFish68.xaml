<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:DryFish68.Wpf.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/DryFish68.Wpf.UI;component/Themes/DryFish68Resources.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type controls:DryFish68}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{StaticResource DryFish68.Brush.Foreground.Normal}" />
        <Setter Property="BorderBrush" Value="{StaticResource DryFish68.Brush.Border}" />
        <Setter Property="BorderThickness" Value="{StaticResource DryFish68.BorderThickness}" />
        <Setter Property="Padding" Value="{StaticResource DryFish68.Padding}" />
        <Setter Property="FontFamily" Value="Segoe UI, sans-serif" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:DryFish68}">
                    <!--
                        메인 Border: 둥근 테두리 + overflow: hidden 효과
                        Main Border: rounded border + overflow: hidden effect
                    -->
                    <Border x:Name="OuterBorder"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource DryFish68.CornerRadius}"
                            Background="Transparent"
                            ClipToBounds="True">
                        <Grid>
                            <!--
                                배경 Rectangle: CSS ::before pseudo-element 역할
                                hover 시 아래로 이동하여 사라지는 효과
                                Background Rectangle: acts as CSS ::before pseudo-element
                                slides down on hover to disappear
                            -->
                            <Rectangle x:Name="BackgroundRect"
                                       Fill="{StaticResource DryFish68.Brush.Background}"
                                       Margin="-5,-5,-5,-5"
                                       VerticalAlignment="Stretch"
                                       HorizontalAlignment="Stretch">
                                <Rectangle.RenderTransform>
                                    <TranslateTransform x:Name="BackgroundTranslate" Y="0" />
                                </Rectangle.RenderTransform>
                            </Rectangle>

                            <!--
                                ContentPresenter: 텍스트 표시 (z-index: 2 역할)
                                ContentPresenter: displays text (acts as z-index: 2)
                            -->
                            <ContentPresenter x:Name="ContentPresenter"
                                              Margin="{TemplateBinding Padding}"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              RecognizesAccessKey="True" />
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <!--
                            MouseOver 트리거: 배경이 아래로 슬라이드, 텍스트 색상 변경
                            MouseOver trigger: background slides down, text color changes
                        -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- 배경을 아래로 이동 (height: 111% -> 11% 효과) -->
                                        <!-- Move background down (height: 111% -> 11% effect) -->
                                        <DoubleAnimation Storyboard.TargetName="BackgroundTranslate"
                                                         Storyboard.TargetProperty="Y"
                                                         To="100"
                                                         Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <!-- 텍스트 색상 변경 -->
                                        <!-- Change text color -->
                                        <ColorAnimation Storyboard.TargetName="ContentPresenter"
                                                        Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)"
                                                        To="{StaticResource DryFish68.Color.Foreground.Hover}"
                                                        Duration="0:0:0.3">
                                            <ColorAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </ColorAnimation.EasingFunction>
                                        </ColorAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- 배경을 원위치로 복원 -->
                                        <!-- Restore background to original position -->
                                        <DoubleAnimation Storyboard.TargetName="BackgroundTranslate"
                                                         Storyboard.TargetProperty="Y"
                                                         To="0"
                                                         Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <!-- 텍스트 색상 복원 -->
                                        <!-- Restore text color -->
                                        <ColorAnimation Storyboard.TargetName="ContentPresenter"
                                                        Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)"
                                                        To="{StaticResource DryFish68.Color.Foreground.Normal}"
                                                        Duration="0:0:0.3">
                                            <ColorAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </ColorAnimation.EasingFunction>
                                        </ColorAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>

                        <!-- Disabled 상태 -->
                        <!-- Disabled state -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
