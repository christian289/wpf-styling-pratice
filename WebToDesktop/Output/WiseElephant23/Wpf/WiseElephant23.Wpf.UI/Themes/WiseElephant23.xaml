<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:WiseElephant23.Wpf.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/WiseElephant23.Wpf.UI;component/Themes/WiseElephant23Resources.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!--
    CSS → WPF 변환 매핑 / CSS to WPF Mapping:
    - .checkmark → Border (원형 배경 / circular background)
    - .checkmark:after → Path (체크마크 / checkmark indicator)
    - input:checked ~ .checkmark → Trigger IsChecked=True
    - transition: 0.15s → ColorAnimation Duration="0:0:0.15"
    - transform: rotate(45deg) → RotateTransform Angle="45"
    -->

    <Style TargetType="{x:Type controls:WiseElephant23}">
        <Setter Property="Width" Value="{StaticResource WiseElephant23.Size}"/>
        <Setter Property="Height" Value="{StaticResource WiseElephant23.Size}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Focusable" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:WiseElephant23}">
                    <Grid>
                        <!-- 원형 배경 (.checkmark) / Circular background -->
                        <Border x:Name="PART_Background"
                                CornerRadius="{StaticResource WiseElephant23.CornerRadius}"
                                Background="{StaticResource WiseElephant23.Background.Unchecked}"/>

                        <!-- 체크마크 (.checkmark:after) / Checkmark indicator -->
                        <!-- CSS: border-right + border-bottom, rotated 45deg -->
                        <Path x:Name="PART_Checkmark"
                              Stroke="{StaticResource WiseElephant23.Checkmark.Stroke}"
                              StrokeThickness="{StaticResource WiseElephant23.Checkmark.BorderThickness}"
                              StrokeLineJoin="Round"
                              StrokeStartLineCap="Round"
                              StrokeEndLineCap="Round"
                              Data="M 0,5 L 0,10 L 5,10"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Margin="0,-2,0,0"
                              RenderTransformOrigin="0.5,0.5"
                              Opacity="0">
                            <Path.RenderTransform>
                                <RotateTransform Angle="45"/>
                            </Path.RenderTransform>
                        </Path>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- 체크됨 상태 / Checked state -->
                        <Trigger Property="IsChecked" Value="True">
                            <!-- 초기 상태 설정 (Setter) - 로드 시 올바른 상태 표시 -->
                            <Setter TargetName="PART_Background" Property="Background" Value="{StaticResource WiseElephant23.Background.Checked}"/>
                            <Setter TargetName="PART_Checkmark" Property="Opacity" Value="1"/>
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="PART_Background"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="LimeGreen"
                                                        Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="PART_Checkmark"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1"
                                                         Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="PART_Background"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#CCCCCC"
                                                        Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="PART_Checkmark"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0"
                                                         Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
