<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:BrightTiger84.Avalonia.Lib.Controls">

    <!--
    Source: Uiverse.io by andrew-demchenk0
    Tags: checkbox, thumb, like
    -->

    <!-- Colors -->
    <Color x:Key="ThumbLike.Default.Color">#666666</Color>
    <Color x:Key="ThumbLike.Checked.Color">#2196F3</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="ThumbLike.Default.Brush" Color="{StaticResource ThumbLike.Default.Color}" />
    <SolidColorBrush x:Key="ThumbLike.Checked.Brush" Color="{StaticResource ThumbLike.Checked.Color}" />

    <!-- Thumb Icon Path Data -->
