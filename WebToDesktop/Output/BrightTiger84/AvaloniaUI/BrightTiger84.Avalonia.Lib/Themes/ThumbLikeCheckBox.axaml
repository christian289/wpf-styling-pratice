    <!-- ThumbLikeCheckBox Style -->
    <ControlTheme x:Key="{x:Type controls:ThumbLikeCheckBox}" TargetType="controls:ThumbLikeCheckBox">
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Width" Value="50" />
        <Setter Property="Height" Value="50" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Template">
            <ControlTemplate>
                <Panel>
                    <Path x:Name="ThumbIcon"
                          Data="{StaticResource ThumbLike.IconData}"
                          Fill="{StaticResource ThumbLike.Default.Brush}"
                          Stretch="Uniform"
                          Width="50"
                          Height="50"
                          RenderTransformOrigin="0.5,0.5">
                        <Path.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="1" ScaleY="1" />
                                <RotateTransform Angle="0" />
                            </TransformGroup>
                        </Path.RenderTransform>
                    </Path>
                </Panel>
            </ControlTemplate>
        </Setter>

        <!-- Hover Animation: scale(1.1) rotate(-10deg) -->
        <Style Selector="^:pointerover /template/ Path#ThumbIcon">
            <Style.Animations>
                <Animation Duration="0:0:0.3" FillMode="Forward" Easing="CubicEaseOut">
                    <KeyFrame Cue="100%">
                        <Setter Property="RenderTransform">
                            <TransformGroup>
                                <ScaleTransform ScaleX="1.1" ScaleY="1.1" />
                                <RotateTransform Angle="-10" />
                            </TransformGroup>
                        </Setter>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <!-- Hover Out Animation: reset to default -->
        <Style Selector="^:not(:pointerover) /template/ Path#ThumbIcon">
            <Style.Animations>
                <Animation Duration="0:0:0.3" FillMode="Forward" Easing="CubicEaseOut">
                    <KeyFrame Cue="100%">
                        <Setter Property="RenderTransform">
                            <TransformGroup>
                                <ScaleTransform ScaleX="1" ScaleY="1" />
                                <RotateTransform Angle="0" />
                            </TransformGroup>
                        </Setter>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <!-- Checked State: Blue Fill -->
        <Style Selector="^:checked /template/ Path#ThumbIcon">
            <Setter Property="Fill" Value="{StaticResource ThumbLike.Checked.Brush}" />
        </Style>

        <!-- Unchecked State: Gray Fill -->
        <Style Selector="^:unchecked /template/ Path#ThumbIcon">
            <Setter Property="Fill" Value="{StaticResource ThumbLike.Default.Brush}" />
        </Style>

    </ControlTheme>

</ResourceDictionary>
