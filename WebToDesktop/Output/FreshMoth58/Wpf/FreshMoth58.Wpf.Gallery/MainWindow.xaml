<Window x:Class="FreshMoth58.Wpf.Gallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:FreshMoth58.Wpf.UI.Controls;assembly=FreshMoth58.Wpf.UI"
        mc:Ignorable="d"
        Title="FreshMoth58 Toggle Switch Gallery"
        Height="450" Width="800"
        Background="#E0E0E0">
    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <!-- Title -->
            <TextBlock Text="Neumorphism Toggle Switch"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Foreground="#333333"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Toggle switches -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <StackPanel Margin="20">
                    <controls:FreshMoth58 x:Name="Toggle1"/>
                    <TextBlock Text="Toggle 1"
                               Foreground="#666666"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                </StackPanel>

                <StackPanel Margin="20">
                    <controls:FreshMoth58 x:Name="Toggle2" IsChecked="True"/>
                    <TextBlock Text="Toggle 2 (Checked)"
                               Foreground="#666666"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                </StackPanel>

                <StackPanel Margin="20">
                    <controls:FreshMoth58 x:Name="Toggle3"/>
                    <TextBlock Text="Toggle 3"
                               Foreground="#666666"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </StackPanel>

            <!-- Description -->
            <TextBlock Text="Click to toggle. Features: Neumorphism shadows, smooth animation, 220Â° rotation."
                       Foreground="#888888"
                       FontSize="12"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
