<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Container Size -->
    <!-- width: 60px; height: 30px; -->
    <sys:Double x:Key="FreshMoth58.Container.Width">60</sys:Double>
    <sys:Double x:Key="FreshMoth58.Container.Height">30</sys:Double>

    <!-- Container Background -->
    <!-- background: #d3d3d3; -->
    <SolidColorBrush x:Key="FreshMoth58.Container.Background" Color="#D3D3D3"/>

    <!-- Container CornerRadius -->
    <!-- border-radius: 50px; -->
    <CornerRadius x:Key="FreshMoth58.Container.CornerRadius">15</CornerRadius>

    <!-- Outer Shadow Colors (neumorphism convex effect) -->
    <!-- box-shadow: 9px 9px 29px #969696, -9px -9px 29px #ffffff; -->
    <Color x:Key="FreshMoth58.Shadow.Dark">#969696</Color>
    <Color x:Key="FreshMoth58.Shadow.Light">#FFFFFF</Color>

    <!-- Inner Shadow Track Size -->
    <!-- width: 50px; height: 20px; left: 5px; top: 5px; -->
    <sys:Double x:Key="FreshMoth58.Track.Width">50</sys:Double>
    <sys:Double x:Key="FreshMoth58.Track.Height">20</sys:Double>
    <Thickness x:Key="FreshMoth58.Track.Margin">5</Thickness>
    <CornerRadius x:Key="FreshMoth58.Track.CornerRadius">10</CornerRadius>

    <!-- Inner Shadow Colors -->
    <!-- box-shadow: inset 3px 3px 10px #969696, inset -3px -3px 5px #ffffffbd; -->
    <Color x:Key="FreshMoth58.Track.Shadow.Dark">#969696</Color>
    <Color x:Key="FreshMoth58.Track.Shadow.Light">#BDFFFFFFBD</Color>

    <!-- Thumb Size and Position -->
    <!-- width: 20px; height: 20px; margin: 5px; -->
    <sys:Double x:Key="FreshMoth58.Thumb.Size">20</sys:Double>
    <Thickness x:Key="FreshMoth58.Thumb.Margin">5</Thickness>
    <CornerRadius x:Key="FreshMoth58.Thumb.CornerRadius">10</CornerRadius>

    <!-- Thumb Colors -->
    <!-- Unchecked: background-color: #ffaa00; -->
    <!-- Checked: background: #0a100d; -->
    <SolidColorBrush x:Key="FreshMoth58.Thumb.Background.Unchecked" Color="#FFAA00"/>
    <SolidColorBrush x:Key="FreshMoth58.Thumb.Background.Checked" Color="#0A100D"/>

    <!-- Thumb Translation on Checked -->
    <!-- left: 29px (from 0) -->
    <sys:Double x:Key="FreshMoth58.Thumb.TranslateX.Unchecked">0</sys:Double>
    <sys:Double x:Key="FreshMoth58.Thumb.TranslateX.Checked">30</sys:Double>

    <!-- Thumb Rotation on Checked -->
    <!-- transform: rotate(220deg); -->
    <sys:Double x:Key="FreshMoth58.Thumb.Rotation.Unchecked">0</sys:Double>
    <sys:Double x:Key="FreshMoth58.Thumb.Rotation.Checked">220</sys:Double>

    <!-- Animation Duration -->
    <!-- transition: all 0.3s ease-in; -->
    <Duration x:Key="FreshMoth58.Animation.Duration">0:0:0.3</Duration>

</ResourceDictionary>
