<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:PerfectCheetah72.Avalonia.Lib.Controls"
        x:Class="PerfectCheetah72.Avalonia.Gallery.MainWindow"
        Title="PerfectCheetah72 - Theme Popup Gallery"
        Width="400"
        Height="300"
        Background="#1E1E1E">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="20">

            <TextBlock Text="Theme Popup Control"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#E0E0E0"
                       HorizontalAlignment="Center" />

            <TextBlock Text="Click the button to open theme selection"
                       FontSize="12"
                       Foreground="#A0A0A0"
                       HorizontalAlignment="Center" />

            <controls:ThemePopup x:Name="ThemePopupControl"
                                  HorizontalAlignment="Center" />

            <TextBlock x:Name="SelectedThemeText"
                       Text="Selected: Default"
                       FontSize="14"
                       Foreground="#E0E0E0"
                       HorizontalAlignment="Center" />

        </StackPanel>
    </Grid>

</Window>
