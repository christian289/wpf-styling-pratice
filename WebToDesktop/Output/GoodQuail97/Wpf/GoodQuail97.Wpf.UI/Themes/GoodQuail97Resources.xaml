<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Size -->
    <!-- 크기 -->
    <sys:Double x:Key="GoodQuail97.Size">30</sys:Double>
    <CornerRadius x:Key="GoodQuail97.CornerRadius">15</CornerRadius>

    <!-- Colors -->
    <!-- 색상 -->
    <Color x:Key="GoodQuail97.Background.Normal.Color">#4D051310</Color>
    <SolidColorBrush x:Key="GoodQuail97.Background.Normal" Color="{StaticResource GoodQuail97.Background.Normal.Color}" />

    <Color x:Key="GoodQuail97.Background.Hover.Color">#c3bacc</Color>
    <SolidColorBrush x:Key="GoodQuail97.Background.Hover" Color="{StaticResource GoodQuail97.Background.Hover.Color}" />

    <Color x:Key="GoodQuail97.Checked.Color">White</Color>
    <SolidColorBrush x:Key="GoodQuail97.Checked.Background" Color="{StaticResource GoodQuail97.Checked.Color}" />

    <!-- Glow Animation Colors -->
    <!-- 글로우 애니메이션 색상 -->
    <Color x:Key="GoodQuail97.Glow.Purple.Color">#5D34A8</Color>
    <Color x:Key="GoodQuail97.Glow.Cyan.Color">#51E0D2</Color>

    <!-- Scale Transform -->
    <!-- 스케일 변환 -->
    <sys:Double x:Key="GoodQuail97.Scale.Normal">1.0</sys:Double>
    <sys:Double x:Key="GoodQuail97.Scale.Hover">0.9</sys:Double>

    <!-- Animation Durations (참조용, XAML에서 Duration은 인라인으로 지정) -->
    <!-- Animation Durations (for reference, Duration must be inline in XAML) -->
    <!-- Glow: 1s infinite -->
    <!-- Hover Transition: 0.5s -->

</ResourceDictionary>
