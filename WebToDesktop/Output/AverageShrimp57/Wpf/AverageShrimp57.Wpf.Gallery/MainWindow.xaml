<Window x:Class="AverageShrimp57.Wpf.Gallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:AverageShrimp57.Wpf.UI.Controls;assembly=AverageShrimp57.Wpf.UI"
        mc:Ignorable="d"
        Title="AverageShrimp57 - Toggle Switch Gallery"
        Height="450" Width="800"
        Background="#F0F0F0">
    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Vertical">

            <!-- 제목 / Title -->
            <TextBlock Text="AverageShrimp57 Toggle Switch"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>

            <!-- 기본 토글 스위치 / Default toggle switch -->
            <controls:AverageShrimp57 x:Name="Toggle1"
                                      Margin="0,10"/>

            <!-- 상태 표시 / Status display -->
            <TextBlock x:Name="StatusText"
                       Text="Current State: Off"
                       FontSize="14"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0"/>

            <!-- 커스텀 텍스트 토글 / Custom text toggle -->
            <TextBlock Text="Custom Text Example:"
                       FontSize="12"
                       HorizontalAlignment="Center"
                       Margin="0,30,0,10"
                       Foreground="#666"/>

            <controls:AverageShrimp57 OnText="Yes"
                                      OffText="No"
                                      Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>
