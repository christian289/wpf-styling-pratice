<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Sizes -->
    <!-- 외부 컨테이너 크기 / Outer container size -->
    <sys:Double x:Key="AverageShrimp57.Container.Width">150</sys:Double>
    <sys:Double x:Key="AverageShrimp57.Container.Height">75</sys:Double>
    <sys:Double x:Key="AverageShrimp57.Container.Padding">10</sys:Double>
    <CornerRadius x:Key="AverageShrimp57.Container.CornerRadius">50</CornerRadius>

    <!-- 내부 토글 트랙 크기 / Inner toggle track size -->
    <sys:Double x:Key="AverageShrimp57.Track.Width">130</sys:Double>
    <sys:Double x:Key="AverageShrimp57.Track.Height">55</sys:Double>
    <CornerRadius x:Key="AverageShrimp57.Track.CornerRadius">50</CornerRadius>
    <Thickness x:Key="AverageShrimp57.Track.BorderThickness">1</Thickness>

    <!-- 텍스트 위치 / Text position -->
    <Thickness x:Key="AverageShrimp57.OnText.Margin">30,17,0,0</Thickness>
    <Thickness x:Key="AverageShrimp57.OffText.Margin">0,17,30,0</Thickness>

    <!-- Border Colors -->
    <SolidColorBrush x:Key="AverageShrimp57.Track.BorderBrush" Color="#979797"/>

    <!-- Container Background Gradient (상단에서 하단으로) -->
    <!-- Container Background Gradient (top to bottom) -->
    <LinearGradientBrush x:Key="AverageShrimp57.Container.Background" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#BDBFC1" Offset="0"/>
        <GradientStop Color="#F9FBFE" Offset="1"/>
    </LinearGradientBrush>

    <!-- Track Background Unchecked (왼쪽에서 오른쪽으로) -->
    <!-- Track Background Unchecked (left to right) -->
    <LinearGradientBrush x:Key="AverageShrimp57.Track.Background.Unchecked" StartPoint="0,0.5" EndPoint="1,0.5">
        <GradientStop Color="#FDFCFB" Offset="0.37"/>
        <GradientStop Color="#E5E5E5" Offset="0.61"/>
    </LinearGradientBrush>

    <!-- Track Background Checked (왼쪽에서 오른쪽으로) -->
    <!-- Track Background Checked (left to right) -->
    <LinearGradientBrush x:Key="AverageShrimp57.Track.Background.Checked" StartPoint="0,0.5" EndPoint="1,0.5">
        <GradientStop Color="#E5E5E5" Offset="0.39"/>
        <GradientStop Color="#FDFCFB" Offset="0.63"/>
    </LinearGradientBrush>

    <!-- Text Colors -->
    <!-- Unchecked 상태: On 텍스트 검정, Off 텍스트 빨강 -->
    <!-- Unchecked state: On text black, Off text red -->
    <SolidColorBrush x:Key="AverageShrimp57.OnText.Foreground.Unchecked" Color="#000000"/>
    <SolidColorBrush x:Key="AverageShrimp57.OffText.Foreground.Unchecked" Color="#DF0000"/>

    <!-- Checked 상태: On 텍스트 초록, Off 텍스트 검정 -->
    <!-- Checked state: On text green, Off text black -->
    <SolidColorBrush x:Key="AverageShrimp57.OnText.Foreground.Checked" Color="#119400"/>
    <SolidColorBrush x:Key="AverageShrimp57.OffText.Foreground.Checked" Color="#000000"/>

    <!-- Glow Effect Colors -->
    <Color x:Key="AverageShrimp57.OnText.GlowColor">#007A08</Color>
    <Color x:Key="AverageShrimp57.OffText.GlowColor">#DF0000</Color>

</ResourceDictionary>
