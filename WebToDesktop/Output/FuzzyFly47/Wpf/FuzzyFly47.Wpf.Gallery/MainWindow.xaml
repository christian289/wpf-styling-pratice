<Window x:Class="FuzzyFly47.Wpf.Gallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:FuzzyFly47.Wpf.UI.Controls;assembly=FuzzyFly47.Wpf.UI"
        mc:Ignorable="d"
        Title="FuzzyFly47 Gallery" Height="450" Width="800"
        Background="#1a1a2e">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Default notification -->
            <controls:FuzzyFly47 Margin="0,0,0,20"/>

            <!-- Custom message and level -->
            <controls:FuzzyFly47 Message="Victory Achieved!"
                                 LevelText="Level 99"/>
        </StackPanel>
    </Grid>
</Window>
