<Window x:Class="YoungBulldog90.Wpf.Gallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:YoungBulldog90.Wpf.UI.Controls;assembly=YoungBulldog90.Wpf.UI"
        mc:Ignorable="d"
        Title="YoungBulldog90 - Loader Gallery"
        Height="450"
        Width="800"
        Background="#1a1a2e">
    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="YoungBulldog90 Loader"
                       Foreground="White"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10" />
            <TextBlock Text="Circular spinning loader by Clemix37"
                       Foreground="#888"
                       FontSize="14"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20" />
            <controls:YoungBulldog90 HorizontalAlignment="Center" />
        </StackPanel>
    </Grid>
</Window>
