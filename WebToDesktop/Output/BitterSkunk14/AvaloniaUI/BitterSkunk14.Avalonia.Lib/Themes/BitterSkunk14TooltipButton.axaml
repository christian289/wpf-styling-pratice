<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:BitterSkunk14.Avalonia.Lib.Controls">

    <!-- 색상 리소스 / Color Resources -->
    <Color x:Key="TooltipButton.Container.Background">#A9A9A9</Color>
    <Color x:Key="TooltipButton.Container.Shadow">#CC000000</Color>
    <Color x:Key="TooltipButton.Tooltip.Background">#000000</Color>
    <Color x:Key="TooltipButton.Tooltip.Foreground">#FFFFFF</Color>
    <Color x:Key="TooltipButton.Line.Color">#000000</Color>

    <SolidColorBrush x:Key="TooltipButton.Container.BackgroundBrush" Color="{StaticResource TooltipButton.Container.Background}"/>
    <SolidColorBrush x:Key="TooltipButton.Tooltip.BackgroundBrush" Color="{StaticResource TooltipButton.Tooltip.Background}"/>
    <SolidColorBrush x:Key="TooltipButton.Tooltip.ForegroundBrush" Color="{StaticResource TooltipButton.Tooltip.Foreground}"/>
    <SolidColorBrush x:Key="TooltipButton.Line.Brush" Color="{StaticResource TooltipButton.Line.Color}"/>

    <!-- 크기 리소스 / Size Resources -->
    <x:Double x:Key="TooltipButton.Container.Width">200</x:Double>
    <x:Double x:Key="TooltipButton.Container.Height">50</x:Double>
    <CornerRadius x:Key="TooltipButton.CornerRadius">5</CornerRadius>
    <x:Double x:Key="TooltipButton.Tooltip.Width">200</x:Double>
    <Thickness x:Key="TooltipButton.Tooltip.Padding">10</Thickness>
    <x:Double x:Key="TooltipButton.Line.Width">3</x:Double>
    <x:Double x:Key="TooltipButton.Line.Height">25</x:Double>
    <x:Double x:Key="TooltipButton.Dot.Size">10</x:Double>

    <!-- 컨트롤 템플릿 스타일 / Control Template Style -->
    <ControlTheme x:Key="{x:Type controls:BitterSkunk14TooltipButton}" TargetType="controls:BitterSkunk14TooltipButton">
        <Setter Property="Width" Value="{StaticResource TooltipButton.Container.Width}"/>
        <Setter Property="Height" Value="{StaticResource TooltipButton.Container.Height}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <ControlTemplate>
                <Panel>
                    <!-- 메인 컨테이너 / Main Container -->
                    <Border x:Name="PART_Container"
                            Background="{StaticResource TooltipButton.Container.BackgroundBrush}"
                            CornerRadius="{StaticResource TooltipButton.CornerRadius}"
                            BoxShadow="0 3 0 #CC000000"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                        <TextBlock Text="{TemplateBinding Text}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="Black"/>
                    </Border>

                    <!-- 툴팁 패널 / Tooltip Panel -->
                    <Panel x:Name="PART_TooltipPanel"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           Margin="0,-135,0,0"
                           Opacity="0">

                        <!-- 툴팁 콘텐츠 / Tooltip Content -->
                        <Border x:Name="PART_Tooltip"
                                Background="{StaticResource TooltipButton.Tooltip.BackgroundBrush}"
                                CornerRadius="{StaticResource TooltipButton.CornerRadius}"
                                BoxShadow="0 0 10 #80000000"
                                Padding="{StaticResource TooltipButton.Tooltip.Padding}"
                                Width="{StaticResource TooltipButton.Tooltip.Width}">
                            <StackPanel Spacing="10">
                                <TextBlock Text="{TemplateBinding TooltipMessage}"
                                           Foreground="{StaticResource TooltipButton.Tooltip.ForegroundBrush}"
                                           FontStyle="Oblique"
                                           TextWrapping="Wrap"/>
                                <Button x:Name="PART_TooltipButton"
                                        Content="{TemplateBinding TooltipButtonText}"
                                        HorizontalAlignment="Right"
                                        Width="70"
                                        Height="30"
                                        Background="Transparent"
                                        Foreground="{StaticResource TooltipButton.Tooltip.ForegroundBrush}"
                                        BorderBrush="{StaticResource TooltipButton.Tooltip.ForegroundBrush}"
                                        BorderThickness="1"
                                        CornerRadius="{StaticResource TooltipButton.CornerRadius}"
                                        Cursor="Hand"/>
                            </StackPanel>
                        </Border>

                        <!-- 연결 라인 / Connection Line -->
                        <Panel HorizontalAlignment="Center"
                               VerticalAlignment="Bottom"
                               Margin="0,0,0,-35">
                            <Border x:Name="PART_Line"
                                    Background="{StaticResource TooltipButton.Line.Brush}"
                                    Width="{StaticResource TooltipButton.Line.Width}"
                                    Height="0"
                                    VerticalAlignment="Top"/>
                            <!-- 연결 점 / Connection Dot -->
                            <Ellipse x:Name="PART_Dot"
                                     Fill="{StaticResource TooltipButton.Line.Brush}"
                                     Width="{StaticResource TooltipButton.Dot.Size}"
                                     Height="{StaticResource TooltipButton.Dot.Size}"
                                     VerticalAlignment="Bottom"
                                     Margin="0,0,0,-5"/>
                        </Panel>
                    </Panel>
                </Panel>
            </ControlTemplate>
        </Setter>

        <!-- 호버 상태 스타일 / Hover State Style -->
        <Style Selector="^:pointerover /template/ Panel#PART_TooltipPanel">
            <Style.Animations>
                <Animation Duration="0:0:0.3" Easing="CubicEaseOut" FillMode="Forward">
                    <KeyFrame Cue="0%">
                        <Setter Property="Opacity" Value="0"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="Opacity" Value="1"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <Style Selector="^:pointerover /template/ Border#PART_Line">
            <Style.Animations>
                <Animation Duration="0:0:0.4" Easing="CubicEaseOut" FillMode="Forward">
                    <KeyFrame Cue="0%">
                        <Setter Property="Height" Value="0"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="Height" Value="25"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <!-- 호버 해제 상태 / Pointer Leave State -->
        <Style Selector="^:not(:pointerover) /template/ Panel#PART_TooltipPanel">
            <Setter Property="Opacity" Value="0"/>
        </Style>

        <Style Selector="^:not(:pointerover) /template/ Border#PART_Line">
            <Setter Property="Height" Value="0"/>
        </Style>
    </ControlTheme>

</ResourceDictionary>
