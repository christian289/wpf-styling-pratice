<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Container (tooltip-container) -->
    <!-- 컨테이너 배경색: darkgray -->
    <SolidColorBrush x:Key="BitterSkunk14.Container.Background" Color="DarkGray"/>
    <!-- 컨테이너 너비 -->
    <sys:Double x:Key="BitterSkunk14.Container.Width">200</sys:Double>
    <!-- 컨테이너 높이 -->
    <sys:Double x:Key="BitterSkunk14.Container.Height">50</sys:Double>
    <!-- 컨테이너 모서리 반경 -->
    <CornerRadius x:Key="BitterSkunk14.Container.CornerRadius">5</CornerRadius>

    <!-- Container Shadow (box-shadow: 0 3px 0 rgb(0 0 0 / 80%)) -->
    <!-- 컨테이너 그림자: 아래쪽으로 3px, 80% 불투명도 검정 -->
    <sys:Double x:Key="BitterSkunk14.Container.Shadow.BlurRadius">0</sys:Double>
    <sys:Double x:Key="BitterSkunk14.Container.Shadow.ShadowDepth">3</sys:Double>
    <sys:Double x:Key="BitterSkunk14.Container.Shadow.Opacity">0.8</sys:Double>
    <Color x:Key="BitterSkunk14.Container.Shadow.Color">Black</Color>

    <!-- Tooltip Popup -->
    <!-- 툴팁 배경색: 검정 -->
    <SolidColorBrush x:Key="BitterSkunk14.Tooltip.Background" Color="#000000"/>
    <!-- 툴팁 전경색(텍스트): 흰색 -->
    <SolidColorBrush x:Key="BitterSkunk14.Tooltip.Foreground" Color="#FFFFFF"/>
    <!-- 툴팁 너비 -->
    <sys:Double x:Key="BitterSkunk14.Tooltip.Width">200</sys:Double>
    <!-- 툴팁 내부 여백 -->
    <Thickness x:Key="BitterSkunk14.Tooltip.Padding">10</Thickness>
    <!-- 툴팁 모서리 반경 -->
    <CornerRadius x:Key="BitterSkunk14.Tooltip.CornerRadius">5</CornerRadius>

    <!-- Tooltip Shadow (box-shadow: 0 0 10px rgb(0 0 0 / 50%)) -->
    <!-- 툴팁 그림자: 블러 10px, 50% 불투명도 검정 -->
    <sys:Double x:Key="BitterSkunk14.Tooltip.Shadow.BlurRadius">10</sys:Double>
    <sys:Double x:Key="BitterSkunk14.Tooltip.Shadow.ShadowDepth">0</sys:Double>
    <sys:Double x:Key="BitterSkunk14.Tooltip.Shadow.Opacity">0.5</sys:Double>
    <Color x:Key="BitterSkunk14.Tooltip.Shadow.Color">Black</Color>

    <!-- Tooltip Button -->
    <!-- 툴팁 버튼 테두리: 흰색 1px -->
    <SolidColorBrush x:Key="BitterSkunk14.Button.BorderBrush" Color="#FFFFFF"/>
    <Thickness x:Key="BitterSkunk14.Button.BorderThickness">1</Thickness>
    <!-- 버튼 배경: 투명 -->
    <SolidColorBrush x:Key="BitterSkunk14.Button.Background" Color="Transparent"/>
    <!-- 버튼 전경색(텍스트): 흰색 -->
    <SolidColorBrush x:Key="BitterSkunk14.Button.Foreground" Color="#FFFFFF"/>
    <!-- 버튼 크기 -->
    <sys:Double x:Key="BitterSkunk14.Button.Width">70</sys:Double>
    <sys:Double x:Key="BitterSkunk14.Button.Height">30</sys:Double>
    <!-- 버튼 모서리 반경 -->
    <CornerRadius x:Key="BitterSkunk14.Button.CornerRadius">5</CornerRadius>

    <!-- Connector Line -->
    <!-- 연결선 배경색: 검정 -->
    <SolidColorBrush x:Key="BitterSkunk14.Line.Background" Color="#000000"/>
    <!-- 연결선 너비 -->
    <sys:Double x:Key="BitterSkunk14.Line.Width">3</sys:Double>
    <!-- 연결선 높이 -->
    <sys:Double x:Key="BitterSkunk14.Line.Height">25</sys:Double>

    <!-- Line Dot (::before pseudo-element) -->
    <!-- 연결선 끝 원형 점: 검정 -->
    <SolidColorBrush x:Key="BitterSkunk14.Dot.Background" Color="#000000"/>
    <!-- 원형 점 크기 -->
    <sys:Double x:Key="BitterSkunk14.Dot.Size">10</sys:Double>

    <!-- Animation Durations -->
    <!-- 페이드 애니메이션 지속시간: 300ms -->
    <Duration x:Key="BitterSkunk14.Animation.FadeDuration">0:0:0.3</Duration>
    <!-- 높이 애니메이션 지속시간: 400ms -->
    <Duration x:Key="BitterSkunk14.Animation.HeightDuration">0:0:0.4</Duration>

    <!-- Layout Offsets -->
    <!-- 툴팁 위치 오프셋: 컨테이너 위 110px -->
    <sys:Double x:Key="BitterSkunk14.Tooltip.VerticalOffset">-110</sys:Double>
    <!-- 원형 점 하단 오프셋 -->
    <sys:Double x:Key="BitterSkunk14.Dot.BottomOffset">5</sys:Double>

</ResourceDictionary>
