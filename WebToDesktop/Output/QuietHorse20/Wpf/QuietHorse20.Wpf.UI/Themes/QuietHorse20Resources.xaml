<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Container Dimensions -->
    <sys:Double x:Key="QuietHorse20.Container.CornerRadius">7</sys:Double>

    <!-- Button Dimensions -->
    <sys:Double x:Key="QuietHorse20.Button.Padding">20</sys:Double>
    <sys:Double x:Key="QuietHorse20.Button.CornerRadius">30</sys:Double>
    <sys:Double x:Key="QuietHorse20.Button.Margin">3</sys:Double>

    <!-- Icon Dimensions -->
    <sys:Double x:Key="QuietHorse20.Icon.Width">25</sys:Double>
    <sys:Double x:Key="QuietHorse20.Icon.Height">25</sys:Double>
    <sys:Double x:Key="QuietHorse20.Icon.MarginRight">5</sys:Double>

    <!-- Font Settings -->
    <sys:Double x:Key="QuietHorse20.Font.Size">16</sys:Double>
    <FontWeight x:Key="QuietHorse20.Font.Weight">SemiBold</FontWeight>

    <!-- Colors -->
    <Color x:Key="QuietHorse20.Color.Light">#FFFFFF</Color>
    <Color x:Key="QuietHorse20.Color.Medium">#EEEEEE</Color>
    <Color x:Key="QuietHorse20.Color.Dark">#DADADA</Color>
    <Color x:Key="QuietHorse20.Color.Shadow">#990C0C0C</Color>
    <Color x:Key="QuietHorse20.Color.Text">#000000</Color>

    <!-- Container Background Gradient (top: white → bottom: gray) -->
    <LinearGradientBrush x:Key="QuietHorse20.Container.Background" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource QuietHorse20.Color.Light}" Offset="0" />
        <GradientStop Color="{StaticResource QuietHorse20.Color.Medium}" Offset="0.75" />
        <GradientStop Color="{StaticResource QuietHorse20.Color.Dark}" Offset="1" />
    </LinearGradientBrush>

    <!-- Button Background Gradient (top: gray → bottom: white) -->
    <LinearGradientBrush x:Key="QuietHorse20.Button.Background" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource QuietHorse20.Color.Dark}" Offset="0" />
        <GradientStop Color="{StaticResource QuietHorse20.Color.Medium}" Offset="0.25" />
        <GradientStop Color="{StaticResource QuietHorse20.Color.Light}" Offset="1" />
    </LinearGradientBrush>

    <!-- Text and Icon Brush -->
    <SolidColorBrush x:Key="QuietHorse20.Text.Foreground" Color="{StaticResource QuietHorse20.Color.Text}" />

    <!-- Shadow Effects -->
    <DropShadowEffect x:Key="QuietHorse20.Container.Shadow.Normal"
                      Color="#0C0C0C"
                      BlurRadius="10"
                      ShadowDepth="4"
                      Direction="315"
                      Opacity="0.6" />

    <DropShadowEffect x:Key="QuietHorse20.Container.Shadow.Hover"
                      Color="#0C0C0C"
                      BlurRadius="3"
                      ShadowDepth="1"
                      Direction="315"
                      Opacity="0.6" />

    <DropShadowEffect x:Key="QuietHorse20.Container.Shadow.Pressed"
                      Color="#0C0C0C"
                      BlurRadius="1"
                      ShadowDepth="0.5"
                      Direction="315"
                      Opacity="0.6" />

