<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:QuietHorse20.Avalonia.Lib.Controls">

    <!--
    From Uiverse.io by aurellsoleil
    Tags: icon, white, button, hover, active, rounded, modern, hover effect
    -->

    <!-- Color Resources -->
    <Color x:Key="SendMessageButton.Gradient.Start">#DADADA</Color>
    <Color x:Key="SendMessageButton.Gradient.Middle">#EEEEEE</Color>
    <Color x:Key="SendMessageButton.Gradient.End">#FFFFFF</Color>

    <Color x:Key="SendMessageButton.Container.Gradient.Start">#FFFFFF</Color>
    <Color x:Key="SendMessageButton.Container.Gradient.Middle">#EEEEEE</Color>
    <Color x:Key="SendMessageButton.Container.Gradient.End">#DADADA</Color>

    <Color x:Key="SendMessageButton.Shadow.Color">#990C0C0C</Color>

    <!-- Button Background Gradient (top to bottom: #dadada -> #eeeeee -> #ffffff) -->
    <LinearGradientBrush x:Key="SendMessageButton.Background" StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="{StaticResource SendMessageButton.Gradient.Start}" Offset="0"/>
        <GradientStop Color="{StaticResource SendMessageButton.Gradient.Middle}" Offset="0.25"/>
        <GradientStop Color="{StaticResource SendMessageButton.Gradient.End}" Offset="1"/>
    </LinearGradientBrush>

    <!-- Container Background Gradient (top to bottom: #ffffff -> #eeeeee -> #dadada) -->
    <LinearGradientBrush x:Key="SendMessageButton.Container.Background" StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="{StaticResource SendMessageButton.Container.Gradient.Start}" Offset="0"/>
        <GradientStop Color="{StaticResource SendMessageButton.Container.Gradient.Middle}" Offset="0.75"/>
        <GradientStop Color="{StaticResource SendMessageButton.Container.Gradient.End}" Offset="1"/>
    </LinearGradientBrush>

    <!-- Paper Plane Icon Path Data -->
    <StreamGeometry x:Key="SendMessageButton.IconGeometry">M10.3078 13.6923L15.1539 8.84619M20.1113 5.88867L16.0207 19.1833C15.6541 20.3747 15.4706 20.9707 15.1544 21.1683C14.8802 21.3396 14.5406 21.3683 14.2419 21.2443C13.8975 21.1014 13.618 20.5433 13.0603 19.428L10.4694 14.2461C10.3809 14.0691 10.3366 13.981 10.2775 13.9043C10.225 13.8363 10.1645 13.7749 10.0965 13.7225C10.0215 13.6647 9.93486 13.6214 9.76577 13.5369L4.57192 10.9399C3.45662 10.3823 2.89892 10.1032 2.75601 9.75879C2.63207 9.4601 2.66033 9.12023 2.83169 8.84597C3.02928 8.52974 3.62523 8.34603 4.81704 7.97932L18.1116 3.88867C19.0486 3.60038 19.5173 3.45635 19.8337 3.57253C20.1094 3.67373 20.3267 3.89084 20.4279 4.16651C20.544 4.48283 20.3999 4.95126 20.1119 5.88729L20.1113 5.88867Z</StreamGeometry>

    <!-- Control Template -->
    <ControlTheme x:Key="{x:Type controls:SendMessageButton}" TargetType="controls:SendMessageButton">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <ControlTemplate>
                <!-- Container: outer border with shadow effect -->
                <Border x:Name="Container"
                        Background="{StaticResource SendMessageButton.Container.Background}"
                        CornerRadius="7"
                        BoxShadow="4 2 10 -1 #990C0C0C">

                    <!-- Inner Button -->
                    <Border x:Name="InnerButton"
                            Background="{StaticResource SendMessageButton.Background}"
                            CornerRadius="30"
                            Padding="20"
                            Margin="3">

                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center">

                            <!-- Paper Plane Icon -->
                            <Path x:Name="Icon"
                                  Data="{StaticResource SendMessageButton.IconGeometry}"
                                  Stroke="#000000"
                                  StrokeThickness="2"
                                  StrokeLineCap="Round"
                                  StrokeJoin="Round"
                                  Width="25"
                                  Height="25"
                                  Stretch="Uniform"
                                  Margin="0,0,5,0"/>

                            <!-- Text -->
                            <TextBlock x:Name="TextContent"
                                       Text="{TemplateBinding Text}"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Border>
            </ControlTemplate>
        </Setter>

        <!-- Hover State: box-shadow shrinks -->
        <Style Selector="^:pointerover /template/ Border#Container">
            <Setter Property="BoxShadow" Value="1 0 3 0 #990C0C0C"/>
        </Style>

        <!-- Pressed State: box-shadow even smaller -->
        <Style Selector="^:pressed /template/ Border#Container">
            <Setter Property="BoxShadow" Value="0 0 1 0 #990C0C0C"/>
        </Style>
    </ControlTheme>

</ResourceDictionary>
