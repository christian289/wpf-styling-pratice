<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:SwiftChicken44.Avalonia.Lib.Controls"
        x:Class="SwiftChicken44.Avalonia.Gallery.MainWindow"
        Title="SwiftChicken44 - ValidationTextBox Gallery"
        Width="400"
        Height="300"
        WindowStartupLocation="CenterScreen">

    <StackPanel Margin="20" Spacing="20" VerticalAlignment="Center" HorizontalAlignment="Center">

        <TextBlock Text="ValidationTextBox Demo"
                   FontSize="18"
                   FontWeight="Bold"
                   HorizontalAlignment="Center" />

        <TextBlock Text="Required field - shows green when valid, red when empty"
                   FontSize="12"
                   Foreground="Gray"
                   HorizontalAlignment="Center" />

        <controls:ValidationTextBox Placeholder="Enter Text"
                                    IsRequired="True" />

        <TextBlock Text="Optional field - no validation styling"
                   FontSize="12"
                   Foreground="Gray"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,0" />

        <controls:ValidationTextBox Placeholder="Optional Text"
                                    IsRequired="False" />

    </StackPanel>

</Window>
