<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:SwiftChicken44.Wpf.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/SwiftChicken44.Wpf.UI;component/Themes/SwiftChicken44Resources.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type controls:SwiftChicken44}">
        <Setter Property="MaxWidth" Value="{StaticResource SwiftChicken44.MaxWidth}"/>
        <Setter Property="Height" Value="{StaticResource SwiftChicken44.Height}"/>
        <Setter Property="FontSize" Value="{StaticResource SwiftChicken44.FontSize}"/>
        <Setter Property="Padding" Value="{StaticResource SwiftChicken44.Padding}"/>
        <Setter Property="BorderThickness" Value="{StaticResource SwiftChicken44.BorderThickness}"/>
        <Setter Property="Background" Value="{StaticResource SwiftChicken44.Background.Normal}"/>
        <Setter Property="Foreground" Value="{StaticResource SwiftChicken44.Foreground.Normal}"/>
        <Setter Property="BorderBrush" Value="{StaticResource SwiftChicken44.Border.Normal}"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:SwiftChicken44}">
                    <Border x:Name="PART_Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource SwiftChicken44.CornerRadius}"
                            SnapsToDevicePixels="True">
                        <ScrollViewer x:Name="PART_ContentHost"
                                      Focusable="False"
                                      HorizontalScrollBarVisibility="Hidden"
                                      VerticalScrollBarVisibility="Hidden"
                                      Margin="{TemplateBinding Padding}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Valid State: IsValid == true -->
                        <Trigger Property="IsValid" Value="True">
                            <Setter TargetName="PART_Border" Property="BorderBrush" Value="{StaticResource SwiftChicken44.Border.Valid}"/>
                            <Setter Property="Foreground" Value="{StaticResource SwiftChicken44.Foreground.Valid}"/>
                            <Setter TargetName="PART_Border" Property="Effect" Value="{StaticResource SwiftChicken44.Shadow.Valid}"/>
                        </Trigger>
                        <!-- Invalid State: IsValid == false -->
                        <Trigger Property="IsValid" Value="False">
                            <Setter TargetName="PART_Border" Property="BorderBrush" Value="{StaticResource SwiftChicken44.Border.Invalid}"/>
                            <Setter Property="Foreground" Value="{StaticResource SwiftChicken44.Foreground.Invalid}"/>
                            <Setter TargetName="PART_Border" Property="Effect" Value="{StaticResource SwiftChicken44.Shadow.Invalid}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
