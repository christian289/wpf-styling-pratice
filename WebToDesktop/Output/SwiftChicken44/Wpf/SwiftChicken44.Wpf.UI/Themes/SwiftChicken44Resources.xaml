<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Size Resources -->
    <!-- max-width: 190px -->
    <sys:Double x:Key="SwiftChicken44.MaxWidth">190</sys:Double>
    <!-- height: 45px -->
    <sys:Double x:Key="SwiftChicken44.Height">45</sys:Double>
    <!-- font-size: 16px -->
    <sys:Double x:Key="SwiftChicken44.FontSize">16</sys:Double>
    <!-- border-radius: 5px -->
    <CornerRadius x:Key="SwiftChicken44.CornerRadius">5</CornerRadius>
    <!-- padding-left: 15px -->
    <Thickness x:Key="SwiftChicken44.Padding">15,0,5,0</Thickness>
    <!-- border: 1px solid, border-bottom-width: 2px -->
    <Thickness x:Key="SwiftChicken44.BorderThickness">1,1,1,2</Thickness>

    <!-- Color Resources -->
    <!-- border: 1px solid #ccc -->
    <SolidColorBrush x:Key="SwiftChicken44.Border.Normal" Color="#CCCCCC"/>
    <!-- background -->
    <SolidColorBrush x:Key="SwiftChicken44.Background.Normal" Color="#FFFFFF"/>
    <!-- foreground -->
    <SolidColorBrush x:Key="SwiftChicken44.Foreground.Normal" Color="#000000"/>

    <!-- Valid State: border-color: #00ff2a, color: #00ff2a -->
    <Color x:Key="SwiftChicken44.Color.Valid">#00FF2A</Color>
    <SolidColorBrush x:Key="SwiftChicken44.Border.Valid" Color="{StaticResource SwiftChicken44.Color.Valid}"/>
    <SolidColorBrush x:Key="SwiftChicken44.Foreground.Valid" Color="{StaticResource SwiftChicken44.Color.Valid}"/>

    <!-- Invalid State: border-color: #ff0000, color: #ff0000 -->
    <Color x:Key="SwiftChicken44.Color.Invalid">#FF0000</Color>
    <SolidColorBrush x:Key="SwiftChicken44.Border.Invalid" Color="{StaticResource SwiftChicken44.Color.Invalid}"/>
    <SolidColorBrush x:Key="SwiftChicken44.Foreground.Invalid" Color="{StaticResource SwiftChicken44.Color.Invalid}"/>

    <!-- Shadow Effects for each state -->
    <!-- box-shadow: 2px 2px 8px 1px #00ff2a (valid) -->
    <DropShadowEffect x:Key="SwiftChicken44.Shadow.Valid"
                      BlurRadius="8"
                      ShadowDepth="2.83"
                      Direction="315"
                      Opacity="0.8"
                      Color="{StaticResource SwiftChicken44.Color.Valid}"/>

    <!-- box-shadow: 2px 2px 8px 1px #ff0000 (invalid) -->
    <DropShadowEffect x:Key="SwiftChicken44.Shadow.Invalid"
                      BlurRadius="8"
                      ShadowDepth="2.83"
                      Direction="315"
                      Opacity="0.8"
                      Color="{StaticResource SwiftChicken44.Color.Invalid}"/>

</ResourceDictionary>
