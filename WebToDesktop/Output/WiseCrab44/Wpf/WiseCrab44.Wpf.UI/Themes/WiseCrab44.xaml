<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:WiseCrab44.Wpf.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/WiseCrab44.Wpf.UI;component/Themes/WiseCrab44Resources.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- Icon Button Style (for upload and submit buttons) -->
    <Style x:Key="WiseCrab44.IconButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="{StaticResource WiseCrab44.Button.Padding}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="PART_Border"
                            Background="{TemplateBinding Background}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="PART_Border" Property="Background"
                                    Value="{StaticResource WiseCrab44.Button.Hover}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="PART_Border" Property="Background"
                                    Value="{StaticResource WiseCrab44.Border}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- TextBox Style with placeholder -->
    <Style x:Key="WiseCrab44.TextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="{StaticResource WiseCrab44.Text}"/>
        <Setter Property="CaretBrush" Value="{StaticResource WiseCrab44.Text}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Grid>
                        <ScrollViewer x:Name="PART_ContentHost"
                                      VerticalAlignment="Center"/>
                        <TextBlock x:Name="PART_Placeholder"
                                   Text="{Binding Placeholder, RelativeSource={RelativeSource AncestorType=controls:WiseCrab44}}"
                                   Foreground="{StaticResource WiseCrab44.Placeholder}"
                                   VerticalAlignment="Center"
                                   Margin="2,0,0,0"
                                   IsHitTestVisible="False"
                                   Visibility="Collapsed"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Text" Value="">
                            <Setter TargetName="PART_Placeholder" Property="Visibility" Value="Visible"/>
                        </Trigger>
                        <Trigger Property="Text" Value="{x:Null}">
                            <Setter TargetName="PART_Placeholder" Property="Visibility" Value="Visible"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Main WiseCrab44 Control Style -->
    <Style TargetType="{x:Type controls:WiseCrab44}">
        <Setter Property="Background" Value="{StaticResource WiseCrab44.Background}"/>
        <Setter Property="BorderBrush" Value="{StaticResource WiseCrab44.Border}"/>
        <Setter Property="BorderThickness" Value="{StaticResource WiseCrab44.BorderThickness}"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="MinHeight" Value="44"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:WiseCrab44}">
                    <!-- Outer container with shadow (form element) -->
                    <Border Background="{TemplateBinding Background}"
                            Padding="{StaticResource WiseCrab44.Padding}"
                            CornerRadius="{StaticResource WiseCrab44.CornerRadius}">
                        <Border.Effect>
                            <DropShadowEffect Color="{StaticResource WiseCrab44.Shadow.Color}"
                                              BlurRadius="{StaticResource WiseCrab44.Shadow.BlurRadius}"
                                              ShadowDepth="{StaticResource WiseCrab44.Shadow.Depth}"
                                              Direction="270"/>
                        </Border.Effect>

                        <!-- Inner container with border (input group) -->
                        <Border BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{StaticResource WiseCrab44.CornerRadius}"
                                Background="{TemplateBinding Background}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Upload Button -->
                                <Button Grid.Column="0"
                                        Style="{StaticResource WiseCrab44.IconButtonStyle}"
                                        Command="{TemplateBinding UploadCommand}">
                                    <Path Data="{StaticResource WiseCrab44.UploadIcon}"
                                          Stroke="{StaticResource WiseCrab44.Stroke}"
                                          StrokeThickness="2"
                                          StrokeLineJoin="Round"
                                          StrokeStartLineCap="Round"
                                          StrokeEndLineCap="Round"
                                          Width="{StaticResource WiseCrab44.Icon.Size}"
                                          Height="{StaticResource WiseCrab44.Icon.Size}"
                                          Stretch="Uniform"/>
                                </Button>

                                <!-- Text Input -->
                                <TextBox Grid.Column="1"
                                         Style="{StaticResource WiseCrab44.TextBoxStyle}"
                                         Text="{Binding Text, RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}"/>

                                <!-- Submit Button -->
                                <Button Grid.Column="2"
                                        Style="{StaticResource WiseCrab44.IconButtonStyle}"
                                        Command="{TemplateBinding SubmitCommand}">
                                    <Path Data="{StaticResource WiseCrab44.SubmitIcon}"
                                          Stroke="{StaticResource WiseCrab44.Stroke}"
                                          StrokeThickness="1.5"
                                          StrokeLineJoin="Round"
                                          StrokeStartLineCap="Round"
                                          StrokeEndLineCap="Round"
                                          Width="{StaticResource WiseCrab44.Icon.Size}"
                                          Height="{StaticResource WiseCrab44.Icon.Size}"
                                          Stretch="Uniform"/>
                                </Button>
                            </Grid>
                        </Border>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
