<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Colors - Tailwind CSS gray palette -->
    <!-- bg-white -->
    <SolidColorBrush x:Key="WiseCrab44.Background" Color="#FFFFFF"/>
    <!-- border-gray-300 -->
    <SolidColorBrush x:Key="WiseCrab44.Border" Color="#D1D5DB"/>
    <!-- text-gray-600 -->
    <SolidColorBrush x:Key="WiseCrab44.Icon" Color="#4B5563"/>
    <!-- hover:bg-gray-100 -->
    <SolidColorBrush x:Key="WiseCrab44.Button.Hover" Color="#F3F4F6"/>
    <!-- placeholder text color -->
    <SolidColorBrush x:Key="WiseCrab44.Placeholder" Color="#9CA3AF"/>
    <!-- text color -->
    <SolidColorBrush x:Key="WiseCrab44.Text" Color="#111827"/>
    <!-- stroke color for SVG -->
    <SolidColorBrush x:Key="WiseCrab44.Stroke" Color="#000000"/>
    <!-- shadow color -->
    <Color x:Key="WiseCrab44.Shadow.Color">#26000000</Color>

    <!-- Sizes -->
    <!-- p-6 = 1.5rem = 24px -->
    <sys:Double x:Key="WiseCrab44.Padding">24</sys:Double>
    <!-- p-2 = 0.5rem = 8px -->
    <sys:Double x:Key="WiseCrab44.Button.Padding">8</sys:Double>
    <!-- h-6 w-6 = 1.5rem = 24px -->
    <sys:Double x:Key="WiseCrab44.Icon.Size">24</sys:Double>
    <!-- rounded-md = 0.375rem = 6px -->
    <CornerRadius x:Key="WiseCrab44.CornerRadius">6</CornerRadius>
    <!-- border width -->
    <Thickness x:Key="WiseCrab44.BorderThickness">1</Thickness>
    <!-- shadow blur radius -->
    <sys:Double x:Key="WiseCrab44.Shadow.BlurRadius">8</sys:Double>
    <sys:Double x:Key="WiseCrab44.Shadow.Depth">2</sys:Double>

