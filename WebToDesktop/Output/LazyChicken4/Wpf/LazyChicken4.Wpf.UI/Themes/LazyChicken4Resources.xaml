<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- w-80 = 20rem = 320px -->
    <sys:Double x:Key="LazyChicken4.Width">320</sys:Double>

    <!-- p-6 = 1.5rem = 24px -->
    <Thickness x:Key="LazyChicken4.Padding">24</Thickness>

    <!-- rounded-lg = 0.5rem = 8px -->
    <CornerRadius x:Key="LazyChicken4.CornerRadius">8</CornerRadius>

    <!-- rounded-md = 0.375rem = 6px -->
    <CornerRadius x:Key="LazyChicken4.Input.CornerRadius">6</CornerRadius>

    <!-- Background Colors -->
    <SolidColorBrush x:Key="LazyChicken4.Background" Color="White"/>

    <!-- text-slate-700 = #334155 -->
    <SolidColorBrush x:Key="LazyChicken4.Title.Foreground" Color="#334155"/>

    <!-- text-slate-500 = #64748B -->
    <SolidColorBrush x:Key="LazyChicken4.Subtitle.Foreground" Color="#64748B"/>
    <SolidColorBrush x:Key="LazyChicken4.Input.Foreground" Color="#64748B"/>
    <SolidColorBrush x:Key="LazyChicken4.RememberMe.Foreground" Color="#64748B"/>

    <!-- border-2 = #E2E8F0 (slate-200) -->
    <SolidColorBrush x:Key="LazyChicken4.Input.Border" Color="#E2E8F0"/>

    <!-- focus:border-blue-300 = #93C5FD -->
    <SolidColorBrush x:Key="LazyChicken4.Input.Border.Focus" Color="#93C5FD"/>

    <!-- bg-blue-500 = #3B82F6 -->
    <SolidColorBrush x:Key="LazyChicken4.Button.Background" Color="#3B82F6"/>

    <!-- hover:bg-blue-600 = #2563EB -->
    <SolidColorBrush x:Key="LazyChicken4.Button.Background.Hover" Color="#2563EB"/>

    <!-- active:bg-blue-700 = #1D4ED8 -->
    <SolidColorBrush x:Key="LazyChicken4.Button.Background.Pressed" Color="#1D4ED8"/>

    <!-- ring-2 (blue ring effect) -->
    <SolidColorBrush x:Key="LazyChicken4.Button.Ring" Color="#93C5FD"/>

    <!-- text-blue-500 = #3B82F6 -->
    <SolidColorBrush x:Key="LazyChicken4.Link.Foreground" Color="#3B82F6"/>

    <!-- Button text -->
    <SolidColorBrush x:Key="LazyChicken4.Button.Foreground" Color="White"/>

    <!-- Font Sizes -->
    <!-- text-2xl = 1.5rem = 24px -->
    <sys:Double x:Key="LazyChicken4.Title.FontSize">24</sys:Double>

    <!-- Default = 1rem = 16px -->
    <sys:Double x:Key="LazyChicken4.Default.FontSize">14</sys:Double>

    <!-- Small = 14px -->
    <sys:Double x:Key="LazyChicken4.Small.FontSize">13</sys:Double>

    <!-- Spacing -->
    <!-- space-y-2 = 0.5rem = 8px -->
    <Thickness x:Key="LazyChicken4.Header.Spacing">0,0,0,8</Thickness>

    <!-- mt-4 = 1rem = 16px -->
    <Thickness x:Key="LazyChicken4.Form.Margin">0,16,0,0</Thickness>

    <!-- space-y-3 = 0.75rem = 12px -->
    <Thickness x:Key="LazyChicken4.Input.Margin">0,0,0,12</Thickness>

    <!-- px-2 py-1 -->
    <Thickness x:Key="LazyChicken4.Input.Padding">8,4,8,4</Thickness>

    <!-- py-1 -->
    <Thickness x:Key="LazyChicken4.Button.Padding">0,6,0,6</Thickness>

    <!-- mr-2 -->
    <Thickness x:Key="LazyChicken4.Checkbox.Margin">0,0,8,0</Thickness>

    <!-- space-x-1 -->
    <Thickness x:Key="LazyChicken4.SignUp.Spacing">4,0,0,0</Thickness>

    <!-- Shadow (shadow class) -->
    <DropShadowEffect x:Key="LazyChicken4.Shadow"
                      BlurRadius="10"
                      ShadowDepth="2"
                      Direction="270"
                      Opacity="0.15"
                      Color="Black"/>

    <!-- Input Height -->
    <sys:Double x:Key="LazyChicken4.Input.Height">32</sys:Double>

    <!-- Checkbox Size (w-4 h-4 = 16px) -->
    <sys:Double x:Key="LazyChicken4.Checkbox.Size">16</sys:Double>

</ResourceDictionary>
