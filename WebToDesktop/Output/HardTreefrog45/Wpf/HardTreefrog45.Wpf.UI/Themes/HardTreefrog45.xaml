<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:HardTreefrog45.Wpf.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/HardTreefrog45.Wpf.UI;component/Themes/HardTreefrog45Resources.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- TextBox Style for Input Fields -->
    <Style x:Key="HardTreefrog45.InputTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource HardTreefrog45.Input.Background}"/>
        <Setter Property="BorderBrush" Value="{StaticResource HardTreefrog45.Input.BorderBrush}"/>
        <Setter Property="BorderThickness" Value="{StaticResource HardTreefrog45.Input.BorderThickness}"/>
        <Setter Property="Padding" Value="{StaticResource HardTreefrog45.Input.Padding}"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource HardTreefrog45.Input.CornerRadius}">
                        <ScrollViewer x:Name="PART_ContentHost"
                                      Margin="{TemplateBinding Padding}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- PasswordBox Style -->
    <Style x:Key="HardTreefrog45.PasswordBoxStyle" TargetType="PasswordBox">
        <Setter Property="Background" Value="{StaticResource HardTreefrog45.Input.Background}"/>
        <Setter Property="BorderBrush" Value="{StaticResource HardTreefrog45.Input.BorderBrush}"/>
        <Setter Property="BorderThickness" Value="{StaticResource HardTreefrog45.Input.BorderThickness}"/>
        <Setter Property="Padding" Value="{StaticResource HardTreefrog45.Input.Padding}"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="PasswordBox">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource HardTreefrog45.Input.CornerRadius}">
                        <ScrollViewer x:Name="PART_ContentHost"
                                      Margin="{TemplateBinding Padding}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ComboBox Style -->
    <Style x:Key="HardTreefrog45.ComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="{StaticResource HardTreefrog45.Input.BorderBrush}"/>
        <Setter Property="BorderThickness" Value="{StaticResource HardTreefrog45.Input.BorderThickness}"/>
        <Setter Property="Padding" Value="{StaticResource HardTreefrog45.Select.Padding}"/>
    </Style>

    <!-- RadioButton Style for Gender -->
    <Style x:Key="HardTreefrog45.GenderRadioButtonStyle" TargetType="RadioButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{StaticResource HardTreefrog45.Input.BorderBrush}"/>
        <Setter Property="BorderThickness" Value="{StaticResource HardTreefrog45.Input.BorderThickness}"/>
        <Setter Property="Padding" Value="{StaticResource HardTreefrog45.GenderOption.Padding}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource HardTreefrog45.Input.CornerRadius}"
                            Padding="{TemplateBinding Padding}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ContentPresenter Grid.Column="0"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"/>
                            <Grid Grid.Column="1" Width="16" Height="16">
                                <Ellipse x:Name="OuterCircle"
                                         Width="16" Height="16"
                                         Stroke="{StaticResource HardTreefrog45.Input.BorderBrush}"
                                         StrokeThickness="1"
                                         Fill="White"/>
                                <Ellipse x:Name="InnerCircle"
                                         Width="8" Height="8"
                                         Fill="{StaticResource HardTreefrog45.SignUpButton.Background}"
                                         Visibility="Collapsed"/>
                            </Grid>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="InnerCircle" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="OuterCircle" Property="Stroke" Value="{StaticResource HardTreefrog45.SignUpButton.Background}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Sign Up Button Style -->
    <Style x:Key="HardTreefrog45.SignUpButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource HardTreefrog45.SignUpButton.Background}"/>
        <Setter Property="Foreground" Value="{StaticResource HardTreefrog45.SignUpButton.Foreground}"/>
        <Setter Property="FontSize" Value="{StaticResource HardTreefrog45.SignUpButton.FontSize}"/>
        <Setter Property="FontWeight" Value="{StaticResource HardTreefrog45.SignUpButton.FontWeight}"/>
        <Setter Property="Padding" Value="{StaticResource HardTreefrog45.SignUpButton.Padding}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="{StaticResource HardTreefrog45.Input.CornerRadius}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#009000"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#008000"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Close Button Style -->
    <Style x:Key="HardTreefrog45.CloseButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Width" Value="28"/>
        <Setter Property="Height" Value="28"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid Background="{TemplateBinding Background}">
                        <Path Data="M6,18 L18,6 M6,6 L18,18"
                              Stroke="{StaticResource HardTreefrog45.CloseButton.Foreground}"
                              StrokeThickness="3"
                              StrokeStartLineCap="Round"
                              StrokeEndLineCap="Round"
                              Width="24" Height="24"
                              Stretch="Uniform"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="0.7"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Main Control Style -->
    <Style TargetType="{x:Type controls:HardTreefrog45}">
        <Setter Property="MaxWidth" Value="{StaticResource HardTreefrog45.Container.MaxWidth}"/>
        <Setter Property="Background" Value="{StaticResource HardTreefrog45.Container.Background}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:HardTreefrog45}">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="{StaticResource HardTreefrog45.Container.CornerRadius}"
                            MaxWidth="{TemplateBinding MaxWidth}">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="{StaticResource HardTreefrog45.Container.ShadowBlurRadius}"
                                              Opacity="{StaticResource HardTreefrog45.Container.ShadowOpacity}"
                                              ShadowDepth="2"
                                              Direction="270"/>
                        </Border.Effect>

                        <StackPanel>
                            <!-- Header Section -->
                            <Grid Margin="{StaticResource HardTreefrog45.Header.Padding}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Title and Subtitle -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{TemplateBinding Title}"
                                               FontSize="{StaticResource HardTreefrog45.Title.FontSize}"
                                               FontWeight="{StaticResource HardTreefrog45.Title.FontWeight}"/>
                                    <TextBlock Text="{TemplateBinding Subtitle}"
                                               FontSize="{StaticResource HardTreefrog45.Subtitle.FontSize}"
                                               Foreground="{StaticResource HardTreefrog45.Subtitle.Foreground}"/>
                                </StackPanel>

                                <!-- Close Button -->
                                <Button Grid.Column="1"
                                        Style="{StaticResource HardTreefrog45.CloseButtonStyle}"
                                        Command="{TemplateBinding CloseCommand}"
                                        VerticalAlignment="Top"/>
                            </Grid>

                            <!-- Separator -->
                            <Rectangle Height="1"
                                       Fill="{StaticResource HardTreefrog45.Separator.Background}"
                                       Opacity="0.3"/>

                            <!-- Form Content -->
                            <StackPanel Margin="{StaticResource HardTreefrog45.Content.Padding}">
                                <!-- Name Row -->
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="12"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0"
                                             Style="{StaticResource HardTreefrog45.InputTextBoxStyle}"
                                             Text="{Binding FirstName, RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}"/>
                                    <TextBox Grid.Column="2"
                                             Style="{StaticResource HardTreefrog45.InputTextBoxStyle}"
                                             Text="{Binding Surname, RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}"/>
                                </Grid>

                                <!-- Email/Phone -->
                                <TextBox Style="{StaticResource HardTreefrog45.InputTextBoxStyle}"
                                         Text="{Binding EmailOrPhone, RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}"
                                         Margin="0,0,0,12"/>

                                <!-- Password -->
                                <PasswordBox Style="{StaticResource HardTreefrog45.PasswordBoxStyle}"
                                             Margin="0,0,0,12"/>

                                <!-- Date of Birth Section -->
                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="Date of birth"
                                               FontSize="{StaticResource HardTreefrog45.Label.FontSize}"
                                               Foreground="{StaticResource HardTreefrog45.Label.Foreground}"
                                               Margin="0,0,0,4"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="12"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="12"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <ComboBox Grid.Column="0"
                                                  Style="{StaticResource HardTreefrog45.ComboBoxStyle}"
                                                  SelectedIndex="{Binding SelectedDay, RelativeSource={RelativeSource TemplatedParent}, Converter={x:Static controls:DayIndexConverter.Instance}}">
                                            <ComboBoxItem Content="1"/><ComboBoxItem Content="2"/><ComboBoxItem Content="3"/>
                                            <ComboBoxItem Content="4"/><ComboBoxItem Content="5"/><ComboBoxItem Content="6"/>
                                            <ComboBoxItem Content="7"/><ComboBoxItem Content="8"/><ComboBoxItem Content="9"/>
                                            <ComboBoxItem Content="10"/><ComboBoxItem Content="11"/><ComboBoxItem Content="12"/>
                                            <ComboBoxItem Content="13"/><ComboBoxItem Content="14"/><ComboBoxItem Content="15"/>
                                            <ComboBoxItem Content="16"/><ComboBoxItem Content="17"/><ComboBoxItem Content="18"/>
                                            <ComboBoxItem Content="19"/><ComboBoxItem Content="20"/><ComboBoxItem Content="21"/>
                                            <ComboBoxItem Content="22"/><ComboBoxItem Content="23"/><ComboBoxItem Content="24"/>
                                            <ComboBoxItem Content="25"/><ComboBoxItem Content="26"/><ComboBoxItem Content="27"/>
                                            <ComboBoxItem Content="28"/><ComboBoxItem Content="29"/><ComboBoxItem Content="30"/>
                                            <ComboBoxItem Content="31"/>
                                        </ComboBox>
                                        <ComboBox Grid.Column="2"
                                                  Style="{StaticResource HardTreefrog45.ComboBoxStyle}"
                                                  SelectedIndex="{Binding SelectedMonth, RelativeSource={RelativeSource TemplatedParent}, Converter={x:Static controls:MonthIndexConverter.Instance}}">
                                            <ComboBoxItem Content="January"/><ComboBoxItem Content="February"/>
                                            <ComboBoxItem Content="March"/><ComboBoxItem Content="April"/>
                                            <ComboBoxItem Content="May"/><ComboBoxItem Content="June"/>
                                            <ComboBoxItem Content="July"/><ComboBoxItem Content="August"/>
                                            <ComboBoxItem Content="September"/><ComboBoxItem Content="October"/>
                                            <ComboBoxItem Content="November"/><ComboBoxItem Content="December"/>
                                        </ComboBox>
                                        <ComboBox Grid.Column="4"
                                                  Style="{StaticResource HardTreefrog45.ComboBoxStyle}"
                                                  SelectedIndex="{Binding SelectedYear, RelativeSource={RelativeSource TemplatedParent}, Converter={x:Static controls:YearIndexConverter.Instance}}">
                                            <ComboBoxItem Content="1990"/><ComboBoxItem Content="1991"/>
                                            <ComboBoxItem Content="1992"/><ComboBoxItem Content="1993"/>
                                            <ComboBoxItem Content="1994"/><ComboBoxItem Content="1995"/>
                                            <ComboBoxItem Content="1996"/><ComboBoxItem Content="1997"/>
                                            <ComboBoxItem Content="1998"/><ComboBoxItem Content="1999"/>
                                            <ComboBoxItem Content="2000"/><ComboBoxItem Content="2001"/>
                                            <ComboBoxItem Content="2002"/><ComboBoxItem Content="2003"/>
                                            <ComboBoxItem Content="2004"/><ComboBoxItem Content="2005"/>
                                            <ComboBoxItem Content="2006"/><ComboBoxItem Content="2007"/>
                                            <ComboBoxItem Content="2008"/><ComboBoxItem Content="2009"/>
                                            <ComboBoxItem Content="2010"/><ComboBoxItem Content="2011"/>
                                            <ComboBoxItem Content="2012"/><ComboBoxItem Content="2013"/>
                                            <ComboBoxItem Content="2014"/><ComboBoxItem Content="2015"/>
                                            <ComboBoxItem Content="2016"/><ComboBoxItem Content="2017"/>
                                            <ComboBoxItem Content="2018"/><ComboBoxItem Content="2019"/>
                                            <ComboBoxItem Content="2020"/><ComboBoxItem Content="2021"/>
                                            <ComboBoxItem Content="2022"/><ComboBoxItem Content="2023"/>
                                        </ComboBox>
                                    </Grid>
                                </StackPanel>

                                <!-- Gender Section -->
                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="Gender"
                                               FontSize="{StaticResource HardTreefrog45.Label.FontSize}"
                                               Foreground="{StaticResource HardTreefrog45.Label.Foreground}"
                                               Margin="0,0,0,4"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="12"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="12"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <RadioButton Grid.Column="0"
                                                     Content="Female"
                                                     GroupName="Gender"
                                                     Style="{StaticResource HardTreefrog45.GenderRadioButtonStyle}"/>
                                        <RadioButton Grid.Column="2"
                                                     Content="Male"
                                                     GroupName="Gender"
                                                     Style="{StaticResource HardTreefrog45.GenderRadioButtonStyle}"/>
                                        <RadioButton Grid.Column="4"
                                                     Content="Custom"
                                                     GroupName="Gender"
                                                     Style="{StaticResource HardTreefrog45.GenderRadioButtonStyle}"/>
                                    </Grid>
                                </StackPanel>

                                <!-- Info Text -->
                                <TextBlock FontSize="{StaticResource HardTreefrog45.InfoText.FontSize}"
                                           Foreground="{StaticResource HardTreefrog45.InfoText.Foreground}"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,8">
                                    <Run Text="People who use our service may have uploaded your contact information to Facebook. "/>
                                    <Hyperlink>Learn more</Hyperlink>
                                    <Run Text="."/>
                                </TextBlock>

                                <TextBlock FontSize="{StaticResource HardTreefrog45.InfoText.FontSize}"
                                           Foreground="{StaticResource HardTreefrog45.InfoText.Foreground}"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,12">
                                    <Run Text="By clicking Sign Up, you agree to our "/>
                                    <Hyperlink>Terms</Hyperlink>
                                    <Run Text=", "/>
                                    <Hyperlink>Privacy Policy</Hyperlink>
                                    <Run Text=" and "/>
                                    <Hyperlink>Cookies Policy</Hyperlink>
                                    <Run Text=". You may receive SMS notifications from us and can opt out at any time."/>
                                </TextBlock>

                                <!-- Sign Up Button -->
                                <Button Content="Sign Up"
                                        Style="{StaticResource HardTreefrog45.SignUpButtonStyle}"
                                        Command="{TemplateBinding SignUpCommand}"
                                        HorizontalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
