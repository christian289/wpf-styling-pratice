<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:LovelyMonkey46.Wpf.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/LovelyMonkey46.Wpf.UI;component/Themes/LovelyMonkey46Resources.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- DrawingBrush for radial pattern 1 (470x470, position 0,0) -->
    <!-- CSS: background-size: 470px 470px, position: 0 0 -->
    <DrawingBrush x:Key="LovelyMonkey46.TileBrush.Pattern1"
                  TileMode="Tile" Viewport="0,0,470,470" ViewportUnits="Absolute"
                  Viewbox="0,0,470,470" ViewboxUnits="Absolute">
        <DrawingBrush.Drawing>
            <GeometryDrawing>
                <GeometryDrawing.Geometry>
                    <EllipseGeometry Center="235,235" RadiusX="235" RadiusY="235"/>
                </GeometryDrawing.Geometry>
                <GeometryDrawing.Brush>
                    <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5">
                        <GradientStop Color="#00FFFFFF" Offset="0.0"/>
                        <GradientStop Color="#26FFFFFF" Offset="0.30"/>
                        <GradientStop Color="#4DFFFFFF" Offset="0.32"/>
                        <GradientStop Color="#00FFFFFF" Offset="0.33"/>
                        <GradientStop Color="#00FFFFFF" Offset="1.0"/>
                    </RadialGradientBrush>
                </GeometryDrawing.Brush>
            </GeometryDrawing>
        </DrawingBrush.Drawing>
    </DrawingBrush>

