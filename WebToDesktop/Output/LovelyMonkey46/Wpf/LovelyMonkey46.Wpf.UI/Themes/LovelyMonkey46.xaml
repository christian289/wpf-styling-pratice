                        <GradientStop Color="#1AFFFFFF" Offset="0.11"/>
                        <GradientStop Color="#4DFFFFFF" Offset="0.13"/>
                        <GradientStop Color="#00FFFFFF" Offset="0.14"/>
                        <GradientStop Color="#00FFFFFF" Offset="1.0"/>
                    </RadialGradientBrush>
                </GeometryDrawing.Brush>
            </GeometryDrawing>
        </DrawingBrush.Drawing>
    </DrawingBrush>

