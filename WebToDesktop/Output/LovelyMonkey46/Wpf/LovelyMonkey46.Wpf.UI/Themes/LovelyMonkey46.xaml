    <Style TargetType="{x:Type controls:LovelyMonkey46}">
        <Setter Property="ClipToBounds" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:LovelyMonkey46}">
                    <Grid>
                        <!-- Layer 1: Base linear gradient (45deg diagonal) -->
                        <!-- 레이어 1: 기본 선형 그라데이션 (45도 대각선) -->
                        <Border Background="{StaticResource LovelyMonkey46.Background.LinearGradient}"/>

                        <!-- Layer 2: Radial pattern 6 (730x730) - lowest layer among patterns -->
                        <!-- 레이어 2: 원형 패턴 6 (730x730) - 패턴 중 가장 아래 -->
                        <Rectangle Fill="{StaticResource LovelyMonkey46.TileBrush.Pattern6}"/>

                        <!-- Layer 3: Radial pattern 5 (530x530, offset 130,370) -->
                        <Rectangle Fill="{StaticResource LovelyMonkey46.TileBrush.Pattern5}"/>

                        <!-- Layer 4: Radial pattern 4 (610x610, offset -130,-170) -->
                        <Rectangle Fill="{StaticResource LovelyMonkey46.TileBrush.Pattern4}"/>

                        <!-- Layer 5: Radial pattern 3 (410x410, offset 0,110) -->
                        <Rectangle Fill="{StaticResource LovelyMonkey46.TileBrush.Pattern3}"/>

                        <!-- Layer 6: Radial pattern 2 (970x970) -->
                        <Rectangle Fill="{StaticResource LovelyMonkey46.TileBrush.Pattern2}"/>

                        <!-- Layer 7: Radial pattern 1 (470x470) - topmost pattern -->
                        <!-- 레이어 7: 원형 패턴 1 (470x470) - 가장 위 패턴 -->
                        <Rectangle Fill="{StaticResource LovelyMonkey46.TileBrush.Pattern1}"/>

                        <!-- Content presenter for any child content -->
                        <!-- 자식 콘텐츠를 위한 ContentPresenter -->
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          Margin="{TemplateBinding Padding}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
