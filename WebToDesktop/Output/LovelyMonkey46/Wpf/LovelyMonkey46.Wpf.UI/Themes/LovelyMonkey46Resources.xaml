<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Background Colors from linear-gradient (45deg) -->
    <!-- 배경 그라데이션 색상들 -->
    <Color x:Key="LovelyMonkey46.Gradient.Color1">#343702</Color>
    <Color x:Key="LovelyMonkey46.Gradient.Color2">#184500</Color>
    <Color x:Key="LovelyMonkey46.Gradient.Color3">#187546</Color>
    <Color x:Key="LovelyMonkey46.Gradient.Color4">#006782</Color>
    <Color x:Key="LovelyMonkey46.Gradient.Color5">#0b1284</Color>
    <Color x:Key="LovelyMonkey46.Gradient.Color6">#760ea1</Color>
    <Color x:Key="LovelyMonkey46.Gradient.Color7">#83096e</Color>
    <Color x:Key="LovelyMonkey46.Gradient.Color8">#840b2a</Color>
    <Color x:Key="LovelyMonkey46.Gradient.Color9">#b13e12</Color>
    <Color x:Key="LovelyMonkey46.Gradient.Color10">#e27412</Color>

    <!-- Background Color -->
    <!-- 배경 기본 색상 -->
    <Color x:Key="LovelyMonkey46.Background.Color">#840b2a</Color>

    <!-- Radial gradient pattern colors (white with various opacities) -->
    <!-- radial-gradient 패턴 색상들 (다양한 불투명도의 흰색) -->
    <Color x:Key="LovelyMonkey46.Pattern.Transparent">#00FFFFFF</Color>
    <Color x:Key="LovelyMonkey46.Pattern.White10">#1AFFFFFF</Color>
    <Color x:Key="LovelyMonkey46.Pattern.White15">#26FFFFFF</Color>
    <Color x:Key="LovelyMonkey46.Pattern.White20">#33FFFFFF</Color>
    <Color x:Key="LovelyMonkey46.Pattern.White30">#4DFFFFFF</Color>
    <Color x:Key="LovelyMonkey46.Pattern.White40">#66FFFFFF</Color>
    <Color x:Key="LovelyMonkey46.Pattern.White43">#6EFFFFFF</Color>

    <!-- Pattern sizes (CSS background-size values) -->
    <!-- 패턴 크기 (CSS background-size 값) -->
    <sys:Double x:Key="LovelyMonkey46.Pattern.Size1">470</sys:Double>
    <sys:Double x:Key="LovelyMonkey46.Pattern.Size2">970</sys:Double>
    <sys:Double x:Key="LovelyMonkey46.Pattern.Size3">410</sys:Double>
    <sys:Double x:Key="LovelyMonkey46.Pattern.Size4">610</sys:Double>
    <sys:Double x:Key="LovelyMonkey46.Pattern.Size5">530</sys:Double>
    <sys:Double x:Key="LovelyMonkey46.Pattern.Size6">730</sys:Double>

    <!-- Main linear gradient brush (45deg diagonal) -->
    <!-- 메인 선형 그라데이션 브러시 (45도 대각선) -->
    <LinearGradientBrush x:Key="LovelyMonkey46.Background.LinearGradient" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="{StaticResource LovelyMonkey46.Gradient.Color1}" Offset="0.0"/>
        <GradientStop Color="{StaticResource LovelyMonkey46.Gradient.Color2}" Offset="0.2"/>
        <GradientStop Color="{StaticResource LovelyMonkey46.Gradient.Color3}" Offset="0.3"/>
        <GradientStop Color="{StaticResource LovelyMonkey46.Gradient.Color4}" Offset="0.4"/>
        <GradientStop Color="{StaticResource LovelyMonkey46.Gradient.Color5}" Offset="0.5"/>
        <GradientStop Color="{StaticResource LovelyMonkey46.Gradient.Color6}" Offset="0.6"/>
        <GradientStop Color="{StaticResource LovelyMonkey46.Gradient.Color7}" Offset="0.7"/>
        <GradientStop Color="{StaticResource LovelyMonkey46.Gradient.Color8}" Offset="0.8"/>
        <GradientStop Color="{StaticResource LovelyMonkey46.Gradient.Color9}" Offset="0.9"/>
        <GradientStop Color="{StaticResource LovelyMonkey46.Gradient.Color10}" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- Radial gradient pattern brushes -->
    <!-- 원형 그라데이션 패턴 브러시들 -->

    <!-- Pattern 1: 0-30-32-33% (large ring) -->
    <RadialGradientBrush x:Key="LovelyMonkey46.Pattern.Radial1"
                         GradientOrigin="0.5,0.5" Center="0.5,0.5"
                         RadiusX="0.5" RadiusY="0.5">
        <GradientStop Color="{StaticResource LovelyMonkey46.Pattern.Transparent}" Offset="0.0"/>
        <GradientStop Color="{StaticResource LovelyMonkey46.Pattern.White15}" Offset="0.30"/>
        <GradientStop Color="{StaticResource LovelyMonkey46.Pattern.White30}" Offset="0.32"/>
        <GradientStop Color="{StaticResource LovelyMonkey46.Pattern.Transparent}" Offset="0.33"/>
    </RadialGradientBrush>

    <!-- Pattern 2: 0-11-13-14% (small ring) -->
    <RadialGradientBrush x:Key="LovelyMonkey46.Pattern.Radial2"
                         GradientOrigin="0.5,0.5" Center="0.5,0.5"
                         RadiusX="0.5" RadiusY="0.5">
        <GradientStop Color="{StaticResource LovelyMonkey46.Pattern.Transparent}" Offset="0.0"/>
        <GradientStop Color="{StaticResource LovelyMonkey46.Pattern.White10}" Offset="0.11"/>
        <GradientStop Color="{StaticResource LovelyMonkey46.Pattern.White30}" Offset="0.13"/>
        <GradientStop Color="{StaticResource LovelyMonkey46.Pattern.Transparent}" Offset="0.14"/>
    </RadialGradientBrush>

    <!-- Pattern 3: 0-17-19-20% (medium ring) -->
    <RadialGradientBrush x:Key="LovelyMonkey46.Pattern.Radial3"
                         GradientOrigin="0.5,0.5" Center="0.5,0.5"
                         RadiusX="0.5" RadiusY="0.5">
        <GradientStop Color="{StaticResource LovelyMonkey46.Pattern.Transparent}" Offset="0.0"/>
        <GradientStop Color="{StaticResource LovelyMonkey46.Pattern.White20}" Offset="0.17"/>
        <GradientStop Color="{StaticResource LovelyMonkey46.Pattern.White43}" Offset="0.19"/>
        <GradientStop Color="{StaticResource LovelyMonkey46.Pattern.Transparent}" Offset="0.20"/>
    </RadialGradientBrush>

    <!-- Pattern 4: 0-11-13-14% (small ring with higher opacity) -->
    <RadialGradientBrush x:Key="LovelyMonkey46.Pattern.Radial4"
                         GradientOrigin="0.5,0.5" Center="0.5,0.5"
                         RadiusX="0.5" RadiusY="0.5">
        <GradientStop Color="{StaticResource LovelyMonkey46.Pattern.Transparent}" Offset="0.0"/>
        <GradientStop Color="{StaticResource LovelyMonkey46.Pattern.White20}" Offset="0.11"/>
        <GradientStop Color="{StaticResource LovelyMonkey46.Pattern.White40}" Offset="0.13"/>
        <GradientStop Color="{StaticResource LovelyMonkey46.Pattern.Transparent}" Offset="0.14"/>
    </RadialGradientBrush>

    <!-- Pattern 5: same as Pattern 4 but different position -->
    <RadialGradientBrush x:Key="LovelyMonkey46.Pattern.Radial5"
                         GradientOrigin="0.5,0.5" Center="0.5,0.5"
                         RadiusX="0.5" RadiusY="0.5">
        <GradientStop Color="{StaticResource LovelyMonkey46.Pattern.Transparent}" Offset="0.0"/>
        <GradientStop Color="{StaticResource LovelyMonkey46.Pattern.White20}" Offset="0.11"/>
        <GradientStop Color="{StaticResource LovelyMonkey46.Pattern.White40}" Offset="0.13"/>
        <GradientStop Color="{StaticResource LovelyMonkey46.Pattern.Transparent}" Offset="0.14"/>
    </RadialGradientBrush>

    <!-- Pattern 6: 0-11-13-14% (lower opacity ring) -->
    <RadialGradientBrush x:Key="LovelyMonkey46.Pattern.Radial6"
                         GradientOrigin="0.5,0.5" Center="0.5,0.5"
                         RadiusX="0.5" RadiusY="0.5">
        <GradientStop Color="{StaticResource LovelyMonkey46.Pattern.Transparent}" Offset="0.0"/>
        <GradientStop Color="{StaticResource LovelyMonkey46.Pattern.White10}" Offset="0.11"/>
        <GradientStop Color="{StaticResource LovelyMonkey46.Pattern.White20}" Offset="0.13"/>
        <GradientStop Color="{StaticResource LovelyMonkey46.Pattern.Transparent}" Offset="0.14"/>
    </RadialGradientBrush>

</ResourceDictionary>
