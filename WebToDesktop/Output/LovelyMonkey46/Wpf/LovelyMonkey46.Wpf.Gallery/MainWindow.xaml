<Window x:Class="LovelyMonkey46.Wpf.Gallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:LovelyMonkey46.Wpf.UI.Controls;assembly=LovelyMonkey46.Wpf.UI"
        mc:Ignorable="d"
        Title="LovelyMonkey46 Pattern - Gallery" Height="600" Width="800">

    <!-- 전체 창에 패턴 배경을 적용 -->
    <!-- Apply pattern background to entire window -->
    <controls:LovelyMonkey46>
        <Grid>
            <TextBlock Text="LovelyMonkey46 Pattern Background"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2"/>
                </TextBlock.Effect>
            </TextBlock>
        </Grid>
    </controls:LovelyMonkey46>
</Window>
