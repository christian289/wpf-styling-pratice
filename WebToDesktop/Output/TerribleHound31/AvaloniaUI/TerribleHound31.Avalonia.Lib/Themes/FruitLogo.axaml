<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:TerribleHound31.Avalonia.Lib.Controls">

    <!--
        From Uiverse.io by Hoseinnaqvi
        Tags: logo, one-div, fruit
        과일 모양 로고 컨트롤 스타일
        Fruit-shaped logo control style
    -->

    <Design.PreviewWith>
        <Border Padding="20" Background="#222">
            <controls:FruitLogo />
        </Border>
    </Design.PreviewWith>

    <!-- Color Resources -->
    <Color x:Key="FruitLogo.Red">#FF0000</Color>
    <Color x:Key="FruitLogo.Orange">#FFA500</Color>
    <Color x:Key="FruitLogo.Green">#008000</Color>
    <Color x:Key="FruitLogo.Shadow">#000000</Color>
    <Color x:Key="FruitLogo.LeafShadow">#B1040404</Color>

    <ControlTheme x:Key="{x:Type controls:FruitLogo}" TargetType="controls:FruitLogo">
        <Setter Property="Width" Value="300" />
        <Setter Property="Height" Value="300" />
        <Setter Property="Template">
            <ControlTemplate>
                <Panel>
                    <!-- 잎 (Leaf) - ::before pseudo-element -->
                    <!-- z-index: -1이므로 뒤에 배치 -->
                    <Border Width="90" Height="90"
                            Background="{StaticResource FruitLogo.Green}"
                            CornerRadius="0,36,0,54"
                            BoxShadow="0 -3 6 #B1040404"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Margin="36,-45,0,0"
                            ZIndex="0" />

                    <!-- 메인 과일 본체 (Main fruit body) -->
                    <Border Width="300" Height="300"
                            CornerRadius="120"
                            BoxShadow="0 0 10 Black"
                            ClipToBounds="True"
                            ZIndex="1">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0%,50%" EndPoint="100%,50%">
                                <GradientStop Color="{StaticResource FruitLogo.Red}" Offset="0" />
                                <GradientStop Color="{StaticResource FruitLogo.Orange}" Offset="1" />
                            </LinearGradientBrush>
                        </Border.Background>

                        <!-- 이모지 텍스트 (Emoji text) - ::after pseudo-element -->
                        <!-- hue-rotate(130deg)는 XAML에서 직접 지원하지 않으므로 원본 이모지 사용 -->
                        <!-- hue-rotate(130deg) is not directly supported in XAML, using original emoji -->
                        <TextBlock Text="&#x1F60B;"
                                   FontSize="120"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Name="PART_Emoji">
                            <TextBlock.Styles>
                                <Style Selector="TextBlock#PART_Emoji">
                                    <Style.Animations>
                                        <Animation Duration="0:0:1"
                                                   IterationCount="Infinite"
                                                   PlaybackDirection="Alternate">
                                            <KeyFrame Cue="0%">
                                                <Setter Property="Opacity" Value="0.1" />
                                            </KeyFrame>
                                            <KeyFrame Cue="100%">
                                                <Setter Property="Opacity" Value="1" />
                                            </KeyFrame>
                                        </Animation>
                                    </Style.Animations>
                                </Style>
                            </TextBlock.Styles>
                        </TextBlock>
                    </Border>
                </Panel>
            </ControlTemplate>
        </Setter>
    </ControlTheme>

</ResourceDictionary>
