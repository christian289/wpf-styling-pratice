<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:SeriousSeahorse3.Wpf.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/SeriousSeahorse3.Wpf.UI;component/Themes/SeriousSeahorse3Resources.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type controls:SeriousSeahorse3}">
        <Setter Property="Background" Value="{StaticResource SeriousSeahorse3.Button.Background.Normal}" />
        <Setter Property="BorderBrush" Value="{StaticResource SeriousSeahorse3.Button.Border}" />
        <Setter Property="BorderThickness" Value="{StaticResource SeriousSeahorse3.Button.BorderThickness}" />
        <Setter Property="Foreground" Value="{StaticResource SeriousSeahorse3.Button.Foreground}" />
        <Setter Property="Padding" Value="{StaticResource SeriousSeahorse3.Button.Padding}" />
        <Setter Property="FontSize" Value="{StaticResource SeriousSeahorse3.Button.FontSize}" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:SeriousSeahorse3}">
                    <Grid>
                        <!-- Tooltip Container (positioned above button) -->
                        <Grid x:Name="TooltipContainer"
                              VerticalAlignment="Top"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,0"
                              Opacity="0"
                              RenderTransformOrigin="0.5,1">
                            <Grid.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform x:Name="TooltipScale" ScaleX="0.5" ScaleY="0.5" />
                                    <TranslateTransform x:Name="TooltipTranslate" />
                                </TransformGroup>
                            </Grid.RenderTransform>
                            <StackPanel VerticalAlignment="Bottom">
                                <!-- Tooltip Box -->
                                <Border Background="{StaticResource SeriousSeahorse3.Tooltip.Background}"
                                        CornerRadius="{StaticResource SeriousSeahorse3.Tooltip.CornerRadius}"
                                        Padding="{StaticResource SeriousSeahorse3.Tooltip.Padding}"
                                        HorizontalAlignment="Center">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="2" Opacity="0.3" BlurRadius="4" />
                                    </Border.Effect>
                                    <TextBlock Text="{TemplateBinding TooltipText}"
                                               Foreground="{StaticResource SeriousSeahorse3.Tooltip.Foreground}"
                                               FontSize="{StaticResource SeriousSeahorse3.Tooltip.FontSize}"
                                               TextAlignment="Center" />
                                </Border>
                                <!-- Tooltip Arrow (Triangle pointing down) -->
                                <Polygon Points="0,0 6,4 12,0"
                                         Fill="{StaticResource SeriousSeahorse3.Tooltip.Background}"
                                         HorizontalAlignment="Center"
                                         Width="{StaticResource SeriousSeahorse3.Tooltip.Arrow.Width}"
                                         Height="{StaticResource SeriousSeahorse3.Tooltip.Arrow.Height}">
                                    <Polygon.Effect>
                                        <DropShadowEffect ShadowDepth="1" Opacity="0.2" BlurRadius="2" />
                                    </Polygon.Effect>
                                </Polygon>
                            </StackPanel>
                        </Grid>

                        <!-- Button Content -->
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{StaticResource SeriousSeahorse3.Button.CornerRadius}"
                                Padding="{TemplateBinding Padding}"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              RecognizesAccessKey="True" />
                        </Border>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- Mouse Over Trigger -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Background"
                                    Value="{StaticResource SeriousSeahorse3.Button.Background.Hover}" />
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Fade in tooltip -->
                                        <DoubleAnimation Storyboard.TargetName="TooltipContainer"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1"
                                                         Duration="0:0:0.15" />
                                        <!-- Scale up tooltip -->
                                        <DoubleAnimation Storyboard.TargetName="TooltipScale"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="1"
                                                         Duration="0:0:0.15" />
                                        <DoubleAnimation Storyboard.TargetName="TooltipScale"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="1"
                                                         Duration="0:0:0.15" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Fade out tooltip -->
                                        <DoubleAnimation Storyboard.TargetName="TooltipContainer"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0"
                                                         Duration="0:0:0.15" />
                                        <!-- Scale down tooltip -->
                                        <DoubleAnimation Storyboard.TargetName="TooltipScale"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="0.5"
                                                         Duration="0:0:0.15" />
                                        <DoubleAnimation Storyboard.TargetName="TooltipScale"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="0.5"
                                                         Duration="0:0:0.15" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>

                        <!-- Pressed Trigger -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Background"
                                    Value="{StaticResource SeriousSeahorse3.Button.Background.Pressed}" />
                        </Trigger>

                        <!-- Disabled Trigger -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
