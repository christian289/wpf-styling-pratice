<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Colors -->
    <Color x:Key="WiseMule92.Color.Primary">#F44336</Color>
    <Color x:Key="WiseMule92.Color.White">#FFFFFF</Color>
    <Color x:Key="WiseMule92.Color.Shadow">#000000</Color>

    <!-- Brushes: Normal State -->
    <SolidColorBrush x:Key="WiseMule92.Background.Normal" Color="{StaticResource WiseMule92.Color.Primary}" />
    <SolidColorBrush x:Key="WiseMule92.Foreground.Normal" Color="{StaticResource WiseMule92.Color.White}" />
    <SolidColorBrush x:Key="WiseMule92.Border.Normal" Color="Transparent" />

    <!-- Brushes: Hover State -->
    <SolidColorBrush x:Key="WiseMule92.Background.Hover" Color="{StaticResource WiseMule92.Color.White}" />
    <SolidColorBrush x:Key="WiseMule92.Foreground.Hover" Color="{StaticResource WiseMule92.Color.Primary}" />

    <!-- Brushes: Pressed State -->
    <SolidColorBrush x:Key="WiseMule92.Background.Pressed" Color="#E53935" />
    <SolidColorBrush x:Key="WiseMule92.Foreground.Pressed" Color="{StaticResource WiseMule92.Color.White}" />

    <!-- Sizes -->
    <sys:Double x:Key="WiseMule92.FontSize">20</sys:Double>
    <Thickness x:Key="WiseMule92.Padding">20,10,20,10</Thickness>
    <sys:Double x:Key="WiseMule92.LetterSpacing">2</sys:Double>

    <!-- Animation Duration -->
    <Duration x:Key="WiseMule92.Animation.Duration">0:0:0.3</Duration>

    <!-- Transform Values -->
    <sys:Double x:Key="WiseMule92.Transform.RotateAngle">-10</sys:Double>
    <sys:Double x:Key="WiseMule92.Transform.ScaleX">1.1</sys:Double>
    <sys:Double x:Key="WiseMule92.Transform.ScaleY">1.1</sys:Double>

</ResourceDictionary>
