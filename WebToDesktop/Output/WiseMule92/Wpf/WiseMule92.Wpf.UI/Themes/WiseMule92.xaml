<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:WiseMule92.Wpf.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/WiseMule92.Wpf.UI;component/Themes/WiseMule92Resources.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type controls:WiseMule92}">
        <Setter Property="Background" Value="{StaticResource WiseMule92.Background.Normal}" />
        <Setter Property="Foreground" Value="{StaticResource WiseMule92.Foreground.Normal}" />
        <Setter Property="BorderBrush" Value="{StaticResource WiseMule92.Border.Normal}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="FontSize" Value="{StaticResource WiseMule92.FontSize}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Padding" Value="{StaticResource WiseMule92.Padding}" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:WiseMule92}">
                    <Border x:Name="PART_Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}"
                            SnapsToDevicePixels="True">
                        <Border.Effect>
                            <DropShadowEffect x:Name="PART_Shadow"
                                              ShadowDepth="0"
                                              BlurRadius="0"
                                              Opacity="0"
                                              Color="Black" />
                        </Border.Effect>
                        <ContentPresenter x:Name="PART_ContentPresenter"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          RecognizesAccessKey="True"
                                          RenderTransformOrigin="0.5,0.5">
                            <ContentPresenter.RenderTransform>
                                <TransformGroup>
                                    <RotateTransform x:Name="PART_RotateTransform" Angle="0" />
                                    <ScaleTransform x:Name="PART_ScaleTransform" ScaleX="1" ScaleY="1" />
                                </TransformGroup>
                            </ContentPresenter.RenderTransform>
                        </ContentPresenter>
                    </Border>

                    <ControlTemplate.Triggers>
                        <!-- MouseOver Trigger -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Background color animation -->
                                        <ColorAnimation Storyboard.TargetName="PART_Border"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="{StaticResource WiseMule92.Color.White}"
                                                        Duration="0:0:0.3" />
                                        <!-- Foreground color animation -->
                                        <ColorAnimation Storyboard.TargetName="PART_ContentPresenter"
                                                        Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                                        To="{StaticResource WiseMule92.Color.Primary}"
                                                        Duration="0:0:0.3" />
                                        <!-- Rotate animation -->
                                        <DoubleAnimation Storyboard.TargetName="PART_RotateTransform"
                                                         Storyboard.TargetProperty="Angle"
                                                         To="{StaticResource WiseMule92.Transform.RotateAngle}"
                                                         Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseInOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <!-- Scale X animation -->
                                        <DoubleAnimation Storyboard.TargetName="PART_ScaleTransform"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="{StaticResource WiseMule92.Transform.ScaleX}"
                                                         Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseInOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <!-- Scale Y animation -->
                                        <DoubleAnimation Storyboard.TargetName="PART_ScaleTransform"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="{StaticResource WiseMule92.Transform.ScaleY}"
                                                         Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseInOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <!-- Shadow animation -->
                                        <DoubleAnimation Storyboard.TargetName="PART_Shadow"
                                                         Storyboard.TargetProperty="BlurRadius"
                                                         To="20"
                                                         Duration="0:0:0.3" />
                                        <DoubleAnimation Storyboard.TargetName="PART_Shadow"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0.3"
                                                         Duration="0:0:0.3" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Background color animation back -->
                                        <ColorAnimation Storyboard.TargetName="PART_Border"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="{StaticResource WiseMule92.Color.Primary}"
                                                        Duration="0:0:0.3" />
                                        <!-- Foreground color animation back -->
                                        <ColorAnimation Storyboard.TargetName="PART_ContentPresenter"
                                                        Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                                        To="{StaticResource WiseMule92.Color.White}"
                                                        Duration="0:0:0.3" />
                                        <!-- Rotate animation back -->
                                        <DoubleAnimation Storyboard.TargetName="PART_RotateTransform"
                                                         Storyboard.TargetProperty="Angle"
                                                         To="0"
                                                         Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseInOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <!-- Scale X animation back -->
                                        <DoubleAnimation Storyboard.TargetName="PART_ScaleTransform"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="1"
                                                         Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseInOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <!-- Scale Y animation back -->
                                        <DoubleAnimation Storyboard.TargetName="PART_ScaleTransform"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="1"
                                                         Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseInOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <!-- Shadow animation back -->
                                        <DoubleAnimation Storyboard.TargetName="PART_Shadow"
                                                         Storyboard.TargetProperty="BlurRadius"
                                                         To="0"
                                                         Duration="0:0:0.3" />
                                        <DoubleAnimation Storyboard.TargetName="PART_Shadow"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0"
                                                         Duration="0:0:0.3" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>

                        <!-- Pressed Trigger -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="PART_Border" Property="Background" Value="{StaticResource WiseMule92.Background.Pressed}" />
                            <Setter TargetName="PART_ContentPresenter" Property="TextBlock.Foreground" Value="{StaticResource WiseMule92.Foreground.Pressed}" />
                        </Trigger>

                        <!-- Disabled Trigger -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
