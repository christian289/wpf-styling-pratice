<Window x:Class="WickedLiger39.Wpf.Gallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:WickedLiger39.Wpf.UI.Controls;assembly=WickedLiger39.Wpf.UI"
        mc:Ignorable="d"
        Title="Gender Selector Gallery"
        Height="450"
        Width="800"
        Background="#F0F0F0">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Gender Selector with predefined options -->
            <!-- 사전 정의된 옵션이 있는 성별 선택기 -->
            <controls:GenderSelector Header="PLEASE SELECT YOUR GENDER">
                <!-- Male Option -->
                <!-- 남성 옵션 -->
                <controls:GenderOption Background="{StaticResource GenderOption.Blue.Background}"
                                        RippleBrush="{StaticResource GenderOption.Blue.RippleBackground}"
                                        RingBrush="{StaticResource GenderOption.Blue.Ring}"
                                        IconStroke="{StaticResource GenderOption.Blue.Icon}"
                                        Icon="{StaticResource GenderOption.Icon.Male}"
                                        GroupName="Gender"
                                        ToolTip="Male"/>

                <!-- Female Option -->
                <!-- 여성 옵션 -->
                <controls:GenderOption Background="{StaticResource GenderOption.Pink.Background}"
                                        RippleBrush="{StaticResource GenderOption.Pink.RippleBackground}"
                                        RingBrush="{StaticResource GenderOption.Pink.Ring}"
                                        IconBrush="{StaticResource GenderOption.Pink.Icon}"
                                        Icon="{StaticResource GenderOption.Icon.Female}"
                                        GroupName="Gender"
                                        ToolTip="Female"/>

                <!-- Non-binary Option -->
                <!-- 논바이너리 옵션 -->
                <controls:GenderOption Background="{StaticResource GenderOption.Purple.Background}"
                                        RippleBrush="{StaticResource GenderOption.Purple.RippleBackground}"
                                        RingBrush="{StaticResource GenderOption.Purple.Ring}"
                                        IconBrush="{StaticResource GenderOption.Purple.Icon}"
                                        Icon="{StaticResource GenderOption.Icon.NonBinary}"
                                        GroupName="Gender"
                                        ToolTip="Non-binary"/>

                <!-- Unknown Option -->
                <!-- 알 수 없음 옵션 -->
                <controls:GenderOption Background="{StaticResource GenderOption.Neutral.Background}"
                                        RippleBrush="{StaticResource GenderOption.Neutral.RippleBackground}"
                                        RingBrush="{StaticResource GenderOption.Neutral.Ring}"
                                        IconStroke="{StaticResource GenderOption.Neutral.Icon}"
                                        Icon="{StaticResource GenderOption.Icon.Unknown}"
                                        GroupName="Gender"
                                        ToolTip="Prefer not to say"/>
            </controls:GenderSelector>
        </StackPanel>
    </Grid>
</Window>
