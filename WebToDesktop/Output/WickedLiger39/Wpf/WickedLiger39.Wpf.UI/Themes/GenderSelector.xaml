<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:WickedLiger39.Wpf.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/WickedLiger39.Wpf.UI;component/Themes/GenderSelectorResources.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- GenderOption Style -->
    <!-- 성별 옵션 스타일 -->
    <Style TargetType="{x:Type controls:GenderOption}">
        <Setter Property="Width" Value="{StaticResource GenderOption.Size}"/>
        <Setter Property="Height" Value="{StaticResource GenderOption.Size}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Background" Value="{StaticResource GenderOption.Neutral.Background}"/>
        <Setter Property="RippleBrush" Value="{StaticResource GenderOption.Neutral.RippleBackground}"/>
        <Setter Property="RingBrush" Value="{StaticResource GenderOption.Neutral.Ring}"/>
        <Setter Property="IconBrush" Value="{StaticResource GenderOption.Neutral.Icon}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:GenderOption}">
                    <Grid>
                        <!-- Ripple Effect Layer (Expanding Circle) -->
                        <!-- 파동 효과 레이어 (확장되는 원) -->
                        <Ellipse x:Name="RippleCircle"
                                 Width="{TemplateBinding Width}"
                                 Height="{TemplateBinding Height}"
                                 Fill="{TemplateBinding RippleBrush}"
                                 RenderTransformOrigin="0.5,0.5"
                                 Opacity="0">
                            <Ellipse.RenderTransform>
                                <ScaleTransform x:Name="RippleScale" ScaleX="0" ScaleY="0"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>

                        <!-- Main Circle Background -->
                        <!-- 메인 원형 배경 -->
                        <Border x:Name="MainCircle"
                                Width="{TemplateBinding Width}"
                                Height="{TemplateBinding Height}"
                                Background="{TemplateBinding Background}"
                                CornerRadius="{StaticResource GenderOption.CornerRadius}"
                                BorderThickness="0"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.Effect>
                                <DropShadowEffect Color="{StaticResource GenderSelector.Shadow.Color}"
                                                  BlurRadius="4"
                                                  ShadowDepth="1"
                                                  Opacity="0.5"/>
                            </Border.Effect>
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="MainScale" ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                        </Border>

                        <!-- Ring Border (Visible on Checked) -->
                        <!-- 링 테두리 (선택 시 표시) -->
                        <Border x:Name="RingBorder"
                                Width="{TemplateBinding Width}"
                                Height="{TemplateBinding Height}"
                                CornerRadius="{StaticResource GenderOption.CornerRadius}"
                                BorderBrush="{TemplateBinding RingBrush}"
                                BorderThickness="0"
                                Background="Transparent"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="RingScale" ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                        </Border>

                        <!-- Icon -->
                        <!-- 아이콘 -->
                        <Path x:Name="IconPath"
                              Data="{TemplateBinding Icon}"
                              Fill="{TemplateBinding IconBrush}"
                              Stroke="{TemplateBinding IconStroke}"
                              StrokeThickness="1.5"
                              StrokeLineJoin="Round"
                              StrokeStartLineCap="Round"
                              StrokeEndLineCap="Round"
                              Stretch="Uniform"
                              Width="24"
                              Height="24"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- Checked State -->
                        <!-- 선택 상태 -->
                        <Trigger Property="IsChecked" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Scale up main circle -->
                                        <!-- 메인 원 확대 -->
                                        <DoubleAnimation Storyboard.TargetName="MainScale"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="1.1"
                                                         Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="MainScale"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="1.1"
                                                         Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>

                                        <!-- Scale up ring -->
                                        <!-- 링 확대 -->
                                        <DoubleAnimation Storyboard.TargetName="RingScale"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="1.1"
                                                         Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="RingScale"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="1.1"
                                                         Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>

                                        <!-- Show ring border -->
                                        <!-- 링 테두리 표시 -->
                                        <ThicknessAnimation Storyboard.TargetName="RingBorder"
                                                            Storyboard.TargetProperty="BorderThickness"
                                                            To="2"
                                                            Duration="0:0:0.2"/>

                                        <!-- Ripple effect -->
                                        <!-- 파동 효과 -->
                                        <DoubleAnimation Storyboard.TargetName="RippleCircle"
                                                         Storyboard.TargetProperty="Opacity"
                                                         From="0.6"
                                                         To="0"
                                                         Duration="0:0:0.5"/>
                                        <DoubleAnimation Storyboard.TargetName="RippleScale"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         From="1"
                                                         To="5"
                                                         Duration="0:0:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="RippleScale"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         From="1"
                                                         To="5"
                                                         Duration="0:0:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Scale down main circle -->
                                        <!-- 메인 원 축소 -->
                                        <DoubleAnimation Storyboard.TargetName="MainScale"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="1"
                                                         Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="MainScale"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="1"
                                                         Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>

                                        <!-- Scale down ring -->
                                        <!-- 링 축소 -->
                                        <DoubleAnimation Storyboard.TargetName="RingScale"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="1"
                                                         Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="RingScale"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="1"
                                                         Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>

                                        <!-- Hide ring border -->
                                        <!-- 링 테두리 숨기기 -->
                                        <ThicknessAnimation Storyboard.TargetName="RingBorder"
                                                            Storyboard.TargetProperty="BorderThickness"
                                                            To="0"
                                                            Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- GenderSelector Style -->
    <!-- 성별 선택기 스타일 -->
    <Style TargetType="{x:Type controls:GenderSelector}">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Padding" Value="{StaticResource GenderSelector.Padding}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:GenderSelector}">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="{StaticResource GenderSelector.CornerRadius}"
                            Padding="{TemplateBinding Padding}">
                        <Border.Effect>
                            <DropShadowEffect Color="{StaticResource GenderSelector.Shadow.Color}"
                                              BlurRadius="8"
                                              ShadowDepth="2"
                                              Opacity="0.3"/>
                        </Border.Effect>
                        <StackPanel>
                            <!-- Header -->
                            <!-- 헤더 -->
                            <TextBlock Text="{TemplateBinding Header}"
                                       FontFamily="Consolas"
                                       FontSize="14"
                                       FontWeight="Black"
                                       Foreground="{StaticResource GenderSelector.Header.Foreground}"
                                       Margin="0,0,0,16">
                                <TextBlock.Resources>
                                    <Style TargetType="Run">
                                        <Setter Property="Typography.Capitals" Value="AllSmallCaps"/>
                                    </Style>
                                </TextBlock.Resources>
                            </TextBlock>

                            <!-- Options Container -->
                            <!-- 옵션 컨테이너 -->
                            <ItemsPresenter/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal">
                        <StackPanel.Resources>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="Margin" Value="0,0,16,0"/>
                            </Style>
                        </StackPanel.Resources>
                    </StackPanel>
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
