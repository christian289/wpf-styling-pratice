<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Size Constants -->
    <!-- 크기 상수 -->
    <sys:Double x:Key="GenderOption.Size">50</sys:Double>
    <sys:Double x:Key="GenderOption.IconSize">35</sys:Double>
    <sys:Double x:Key="GenderOption.ScaleChecked">1.1</sys:Double>
    <sys:Double x:Key="GenderOption.RingThickness">2</sys:Double>
    <Thickness x:Key="GenderOption.Padding">8</Thickness>
    <CornerRadius x:Key="GenderOption.CornerRadius">25</CornerRadius>

    <!-- Container Styles -->
    <!-- 컨테이너 스타일 -->
    <CornerRadius x:Key="GenderSelector.CornerRadius">6</CornerRadius>
    <Thickness x:Key="GenderSelector.Padding">24</Thickness>
    <sys:Double x:Key="GenderSelector.ItemSpacing">16</sys:Double>

    <!-- Shadow Color -->
    <!-- 그림자 색상 -->
    <Color x:Key="GenderSelector.Shadow.Color">#50000000</Color>

    <!-- Header Style -->
    <!-- 헤더 스타일 -->
    <SolidColorBrush x:Key="GenderSelector.Header.Foreground" Color="#525252"/>

    <!-- Blue Theme (Male) -->
    <!-- 파란색 테마 (남성) -->
    <SolidColorBrush x:Key="GenderOption.Blue.Background" Color="#DBEAFE"/>
    <SolidColorBrush x:Key="GenderOption.Blue.RippleBackground" Color="#BFDBFE"/>
    <SolidColorBrush x:Key="GenderOption.Blue.Ring" Color="#60A5FA"/>
    <SolidColorBrush x:Key="GenderOption.Blue.Icon" Color="#60A5FA"/>

    <!-- Pink Theme (Female) -->
    <!-- 분홍색 테마 (여성) -->
    <SolidColorBrush x:Key="GenderOption.Pink.Background" Color="#FCE7F3"/>
    <SolidColorBrush x:Key="GenderOption.Pink.RippleBackground" Color="#FBCFE8"/>
    <SolidColorBrush x:Key="GenderOption.Pink.Ring" Color="#F472B6"/>
    <SolidColorBrush x:Key="GenderOption.Pink.Icon" Color="#F472B6"/>

    <!-- Purple Theme (Non-binary) -->
    <!-- 보라색 테마 (논바이너리) -->
    <SolidColorBrush x:Key="GenderOption.Purple.Background" Color="#F3E8FF"/>
    <SolidColorBrush x:Key="GenderOption.Purple.RippleBackground" Color="#E9D5FF"/>
    <SolidColorBrush x:Key="GenderOption.Purple.Ring" Color="#A855F7"/>
    <SolidColorBrush x:Key="GenderOption.Purple.Icon" Color="#A855F7"/>

    <!-- Neutral Theme (Unknown/Prefer not to say) -->
    <!-- 중립 테마 (알 수 없음/밝히지 않음) -->
    <SolidColorBrush x:Key="GenderOption.Neutral.Background" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="GenderOption.Neutral.RippleBackground" Color="#E5E5E5"/>
    <SolidColorBrush x:Key="GenderOption.Neutral.Ring" Color="#A3A3A3"/>
    <SolidColorBrush x:Key="GenderOption.Neutral.Icon" Color="#A3A3A3"/>

