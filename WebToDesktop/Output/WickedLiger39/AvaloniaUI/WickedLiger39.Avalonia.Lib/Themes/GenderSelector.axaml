    <ControlTheme x:Key="{x:Type controls:GenderSelector}" TargetType="controls:GenderSelector">
        <Setter Property="Background" Value="#FFFFFF"/>
        <Setter Property="Padding" Value="24"/>
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}"
                        CornerRadius="8"
                        Padding="{TemplateBinding Padding}"
                        BoxShadow="0 1 3 0 #80000000"
                        ClipToBounds="True">
                    <StackPanel Spacing="16">
                        <!-- Header -->
                        <TextBlock Text="{TemplateBinding HeaderText}"
                                   FontFamily="Consolas, monospace"
                                   FontSize="14"
                                   FontWeight="Black"
                                   Foreground="#525252"
                                   HorizontalAlignment="Left"/>

                        <!-- Gender Options -->
                        <StackPanel Orientation="Horizontal" Spacing="16">
                            <!-- Male -->
                            <controls:GenderOption x:Name="PART_MaleOption"
                                                   GroupName="GenderGroup"
                                                   CircleBackground="#DBEAFE"
                                                   RippleBackground="#BFDBFE"
                                                   RingBrush="#60A5FA"
                                                   IconStroke="#60A5FA"
                                                   IconStrokeThickness="1.5"
                                                   IconData="{StaticResource MaleIconGeometry}"/>

                            <!-- Female -->
                            <controls:GenderOption x:Name="PART_FemaleOption"
                                                   GroupName="GenderGroup"
                                                   CircleBackground="#FCE7F3"
                                                   RippleBackground="#FBCFE8"
                                                   RingBrush="#F472B6"
                                                   IconFill="#F472B6"
                                                   IconData="{StaticResource FemaleIconGeometry}"/>

                            <!-- Non-Binary -->
                            <controls:GenderOption x:Name="PART_NonBinaryOption"
                                                   GroupName="GenderGroup"
                                                   CircleBackground="#F3E8FF"
                                                   RippleBackground="#E9D5FF"
                                                   RingBrush="#A855F7"
                                                   IconFill="#A855F7"
                                                   IconData="{StaticResource NonBinaryIconGeometry}"/>

                            <!-- None -->
                            <controls:GenderOption x:Name="PART_NoneOption"
                                                   GroupName="GenderGroup"
                                                   CircleBackground="#F5F5F5"
                                                   RippleBackground="#E5E5E5"
                                                   RingBrush="#A3A3A3"
                                                   IconStroke="#A3A3A3"
                                                   IconStrokeThickness="2"
                                                   IconData="{StaticResource NoneIconGeometry}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </ControlTemplate>
        </Setter>
    </ControlTheme>

</ResourceDictionary>
