<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Container Size (20em = 320px at 16px base) -->
    <sys:Double x:Key="SillySheep7.Container.Size">320</sys:Double>

    <!-- Knob Size (13em = 208px at 16px base) -->
    <sys:Double x:Key="SillySheep7.Knob.Size">208</sys:Double>

    <!-- Knob Border -->
    <sys:Double x:Key="SillySheep7.Knob.BorderThickness">3</sys:Double>
    <SolidColorBrush x:Key="SillySheep7.Knob.BorderBrush" Color="Black"/>
    <SolidColorBrush x:Key="SillySheep7.Knob.OutlineBrush" Color="Gray"/>

    <!-- Knob Background (beige color: #cfc9bd) -->
    <SolidColorBrush x:Key="SillySheep7.Knob.Background" Color="#CFC9BD"/>

    <!-- Center Handle Width (2.25em = 36px at 16px base) -->
    <sys:Double x:Key="SillySheep7.Center.Width">36</sys:Double>
    <CornerRadius x:Key="SillySheep7.Center.CornerRadius">7</CornerRadius>
    <SolidColorBrush x:Key="SillySheep7.Center.OutlineBrush" Color="#60FFFFFF"/>

    <!-- Indicator on Center (3px x 25px black line) -->
    <sys:Double x:Key="SillySheep7.Indicator.Width">3</sys:Double>
    <sys:Double x:Key="SillySheep7.Indicator.Height">25</sys:Double>
    <SolidColorBrush x:Key="SillySheep7.Indicator.Background" Color="Black"/>

    <!-- Radio Dot Size (0.5em = 8px at 16px base) -->
    <sys:Double x:Key="SillySheep7.RadioDot.Size">8</sys:Double>
    <SolidColorBrush x:Key="SillySheep7.RadioDot.Background" Color="Black"/>

    <!-- Label Font -->
    <sys:Double x:Key="SillySheep7.Label.FontSize">13.6</sys:Double>
    <FontWeight x:Key="SillySheep7.Label.FontWeight">Black</FontWeight>
    <SolidColorBrush x:Key="SillySheep7.Label.Foreground" Color="Black"/>

    <!-- Margin for radio containers (1em = 16px at 16px base) -->
    <Thickness x:Key="SillySheep7.RadioContainer.Margin">16</Thickness>

    <!-- Animation Duration -->
    <Duration x:Key="SillySheep7.Animation.Duration">0:0:0.35</Duration>

    <!-- Position percentages for radio containers -->
    <!-- Container1: left=0, top=25%, rotation=-45deg -->
    <!-- Container2: left=15%, top=5%, rotation=-25deg -->
    <!-- Container3: left=44%, top=-5%, rotation=0deg -->
    <!-- Container4: right=15%, top=5%, rotation=25deg -->
    <!-- Container5: right=0, top=25%, rotation=45deg -->

</ResourceDictionary>
