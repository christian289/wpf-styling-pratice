<Window x:Class="WetQuail86.Wpf.Gallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:WetQuail86.Wpf.UI.Controls;assembly=WetQuail86.Wpf.UI"
        mc:Ignorable="d"
        Title="WetQuail86 Gallery" Height="450" Width="800"
        Background="#1a1a2e">
    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <!-- 기본 사용 예시 -->
            <!-- Basic usage example -->
            <controls:WetQuail86 Title="Username"
                                  Width="200"
                                  Margin="0,0,0,30" />

            <!-- Placeholder 예시 -->
            <!-- Placeholder example -->
            <controls:WetQuail86 Title="Email"
                                  Placeholder="Enter your email"
                                  Width="200"
                                  Margin="0,0,0,30" />

            <!-- 다른 Title 예시 -->
            <!-- Different title example -->
            <controls:WetQuail86 Title="Password"
                                  Width="200" />
        </StackPanel>
    </Grid>
</Window>
