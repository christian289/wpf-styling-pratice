<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:WetQuail86.Wpf.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/WetQuail86.Wpf.UI;component/Themes/WetQuail86Resources.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type controls:WetQuail86}">
        <Setter Property="MaxWidth" Value="{StaticResource WetQuail86.MaxWidth}" />
        <Setter Property="Padding" Value="{StaticResource WetQuail86.Padding}" />
        <Setter Property="Foreground" Value="{StaticResource WetQuail86.Light}" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="{StaticResource WetQuail86.Border}" />
        <Setter Property="BorderThickness" Value="{StaticResource WetQuail86.BorderThickness}" />
        <Setter Property="Opacity" Value="{StaticResource WetQuail86.Opacity.Normal}" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:WetQuail86}">
                    <Grid>
                        <!-- Title Popup (::before arrow 포함) -->
                        <!-- Title Popup (includes ::before arrow) -->
                        <Grid x:Name="PART_TitleContainer"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Top"
                              Opacity="0"
                              RenderTransformOrigin="0.5,1">
                            <Grid.RenderTransform>
                                <TranslateTransform Y="-5" />
                            </Grid.RenderTransform>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!-- Title Box -->
                            <Border Grid.Row="0"
                                    Padding="{StaticResource WetQuail86.Padding}"
                                    Background="{StaticResource WetQuail86.Light}"
                                    CornerRadius="{StaticResource WetQuail86.CornerRadius}">
                                <!-- WPF에서는 letter-spacing 직접 지원하지 않음 -->
                                <!-- WPF does not directly support letter-spacing -->
                                <TextBlock x:Name="PART_Title"
                                           Text="{TemplateBinding Title}"
                                           FontSize="{StaticResource WetQuail86.Title.FontSize}"
                                           FontWeight="{StaticResource WetQuail86.Title.FontWeight}"
                                           Foreground="{StaticResource WetQuail86.Dark}"
                                           HorizontalAlignment="Center" />
                            </Border>

                            <!-- Arrow (::before pseudo-element) -->
                            <!-- 45도 회전된 정사각형으로 화살표 표현 -->
                            <!-- Arrow represented by 45-degree rotated square -->
                            <Border Grid.Row="1"
                                    Width="{StaticResource WetQuail86.Arrow.Size}"
                                    Height="{StaticResource WetQuail86.Arrow.Size}"
                                    Background="{StaticResource WetQuail86.Light}"
                                    HorizontalAlignment="Center"
                                    Margin="0,-5,0,0"
                                    RenderTransformOrigin="0.5,0.5">
                                <Border.RenderTransform>
                                    <RotateTransform Angle="45" />
                                </Border.RenderTransform>
                            </Border>
                        </Grid>

                        <!-- Input Box -->
                        <Border Padding="{TemplateBinding Padding}"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{StaticResource WetQuail86.CornerRadius}"
                                Margin="0,40,0,0">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Focusable="False"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden">
                                <TextBox x:Name="PART_TextBox"
                                         Text="{Binding Text, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Foreground="{TemplateBinding Foreground}"
                                         CaretBrush="{TemplateBinding Foreground}"
                                         Padding="0"
                                         VerticalContentAlignment="Center" />
                            </ScrollViewer>
                        </Border>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- Hover: Title 표시 -->
                        <!-- Hover: Show Title -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="PART_TitleContainer"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1"
                                                         Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="PART_TitleContainer"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0"
                                                         Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>

                        <!-- Focus: Opacity 증가 -->
                        <!-- Focus: Increase Opacity -->
                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         To="1"
                                                         Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         To="0.8"
                                                         Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
