<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:AngryGrasshopper50.Wpf.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/AngryGrasshopper50.Wpf.UI;component/Themes/AngryGrasshopper50Resources.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!--
    CSS 구조:
    - .burger: 40x40 컨테이너, flexbox 중앙 정렬
    - .burger::before: 상단 라인 (translateY: 8px)
    - .burger .line: 중간 라인 (체크 시 width: 0)
    - .burger::after: 하단 라인 (translateY: -8px)

    체크 시 애니메이션:
    - animation1 (before): translateY(8px) → translateY(0) → rotate(45deg)
    - animation2 (after): translateY(-8px) → translateY(0) → rotate(-45deg)

    CSS structure:
    - .burger: 40x40 container, flexbox center aligned
    - .burger::before: top line (translateY: 8px)
    - .burger .line: middle line (width: 0 when checked)
    - .burger::after: bottom line (translateY: -8px)

    Checked animation:
    - animation1 (before): translateY(8px) → translateY(0) → rotate(45deg)
    - animation2 (after): translateY(-8px) → translateY(0) → rotate(-45deg)
    -->

    <Style TargetType="{x:Type controls:AngryGrasshopper50}">
        <Setter Property="Width" Value="{StaticResource AngryGrasshopper50.Size}"/>
        <Setter Property="Height" Value="{StaticResource AngryGrasshopper50.Size}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Background" Value="{StaticResource AngryGrasshopper50.Background.Normal}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:AngryGrasshopper50}">
                    <Border x:Name="PART_Border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="{StaticResource AngryGrasshopper50.CornerRadius.Normal}"
                            RenderTransformOrigin="0.5,0.5">
                        <Border.RenderTransform>
                            <ScaleTransform x:Name="BorderScale" ScaleX="1" ScaleY="1"/>
                        </Border.RenderTransform>

                        <!-- 라인들을 담는 Grid / Grid containing lines -->
                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                            <!-- 상단 라인 (::before) / Top line (::before) -->
                            <Border x:Name="TopLine"
                                    Width="{StaticResource AngryGrasshopper50.Line.Width}"
                                    Height="{StaticResource AngryGrasshopper50.Line.Height}"
                                    Background="{StaticResource AngryGrasshopper50.Line.Color.Normal}"
                                    CornerRadius="{StaticResource AngryGrasshopper50.Line.CornerRadius}"
                                    RenderTransformOrigin="0.5,0.5">
                                <Border.RenderTransform>
                                    <TransformGroup>
                                        <TranslateTransform x:Name="TopLineTranslate" Y="-8"/>
                                        <RotateTransform x:Name="TopLineRotate" Angle="0"/>
                                    </TransformGroup>
                                </Border.RenderTransform>
                            </Border>

                            <!-- 중간 라인 (.line) / Middle line (.line) -->
                            <Border x:Name="MiddleLine"
                                    Width="{StaticResource AngryGrasshopper50.Line.Width}"
                                    Height="{StaticResource AngryGrasshopper50.Line.Height}"
                                    Background="{StaticResource AngryGrasshopper50.Line.Color.Normal}"
                                    CornerRadius="{StaticResource AngryGrasshopper50.Line.CornerRadius}"
                                    RenderTransformOrigin="0.5,0.5"/>

                            <!-- 하단 라인 (::after) / Bottom line (::after) -->
                            <Border x:Name="BottomLine"
                                    Width="{StaticResource AngryGrasshopper50.Line.Width}"
                                    Height="{StaticResource AngryGrasshopper50.Line.Height}"
                                    Background="{StaticResource AngryGrasshopper50.Line.Color.Normal}"
                                    CornerRadius="{StaticResource AngryGrasshopper50.Line.CornerRadius}"
                                    RenderTransformOrigin="0.5,0.5">
                                <Border.RenderTransform>
                                    <TransformGroup>
                                        <TranslateTransform x:Name="BottomLineTranslate" Y="8"/>
                                        <RotateTransform x:Name="BottomLineRotate" Angle="0"/>
                                    </TransformGroup>
                                </Border.RenderTransform>
                            </Border>
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <!-- 호버 상태 / Hover state -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="PART_Border"
                                                       Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                       To="#aeaeae" Duration="0:0:0.3"/>
                                        <ColorAnimation Storyboard.TargetName="TopLine"
                                                       Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                       To="#e8e8e8" Duration="0:0:0.3"/>
                                        <ColorAnimation Storyboard.TargetName="MiddleLine"
                                                       Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                       To="#e8e8e8" Duration="0:0:0.3"/>
                                        <ColorAnimation Storyboard.TargetName="BottomLine"
                                                       Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                       To="#e8e8e8" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="PART_Border"
                                                       Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                       To="Transparent" Duration="0:0:0.3"/>
                                        <ColorAnimation Storyboard.TargetName="TopLine"
                                                       Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                       To="Black" Duration="0:0:0.3"/>
                                        <ColorAnimation Storyboard.TargetName="MiddleLine"
                                                       Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                       To="Black" Duration="0:0:0.3"/>
                                        <ColorAnimation Storyboard.TargetName="BottomLine"
                                                       Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                       To="Black" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                            <Setter TargetName="PART_Border" Property="CornerRadius" Value="{StaticResource AngryGrasshopper50.CornerRadius.Hover}"/>
                        </Trigger>

                        <!-- 클릭(눌림) 상태 / Pressed state -->
                        <Trigger Property="IsPressed" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="BorderScale"
                                                        Storyboard.TargetProperty="ScaleX"
                                                        To="0.95" Duration="0:0:0.1"/>
                                        <DoubleAnimation Storyboard.TargetName="BorderScale"
                                                        Storyboard.TargetProperty="ScaleY"
                                                        To="0.95" Duration="0:0:0.1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="BorderScale"
                                                        Storyboard.TargetProperty="ScaleX"
                                                        To="1" Duration="0:0:0.1"/>
                                        <DoubleAnimation Storyboard.TargetName="BorderScale"
                                                        Storyboard.TargetProperty="ScaleY"
                                                        To="1" Duration="0:0:0.1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>

                        <!-- 체크 상태 (X 아이콘으로 변환) / Checked state (transform to X icon) -->
                        <Trigger Property="IsChecked" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- 중간 라인 사라짐 / Middle line disappears -->
                                        <DoubleAnimation Storyboard.TargetName="MiddleLine"
                                                        Storyboard.TargetProperty="Width"
                                                        To="0" Duration="0:0:0.1"
                                                        BeginTime="0:0:0.1"/>

                                        <!-- 상단 라인: translateY(0) 후 rotate(45deg) -->
                                        <!-- Top line: translateY(0) then rotate(45deg) -->
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="TopLineTranslate"
                                                                       Storyboard.TargetProperty="Y">
                                            <EasingDoubleKeyFrame KeyTime="0:0:0" Value="-8"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="0">
                                                <EasingDoubleKeyFrame.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </EasingDoubleKeyFrame.EasingFunction>
                                            </EasingDoubleKeyFrame>
                                        </DoubleAnimationUsingKeyFrames>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="TopLineRotate"
                                                                       Storyboard.TargetProperty="Angle">
                                            <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="0"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="-45">
                                                <EasingDoubleKeyFrame.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </EasingDoubleKeyFrame.EasingFunction>
                                            </EasingDoubleKeyFrame>
                                        </DoubleAnimationUsingKeyFrames>

                                        <!-- 하단 라인: translateY(0) 후 rotate(-45deg) -->
                                        <!-- Bottom line: translateY(0) then rotate(-45deg) -->
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="BottomLineTranslate"
                                                                       Storyboard.TargetProperty="Y">
                                            <EasingDoubleKeyFrame KeyTime="0:0:0" Value="8"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="0">
                                                <EasingDoubleKeyFrame.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </EasingDoubleKeyFrame.EasingFunction>
                                            </EasingDoubleKeyFrame>
                                        </DoubleAnimationUsingKeyFrames>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="BottomLineRotate"
                                                                       Storyboard.TargetProperty="Angle">
                                            <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="0"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="45">
                                                <EasingDoubleKeyFrame.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </EasingDoubleKeyFrame.EasingFunction>
                                            </EasingDoubleKeyFrame>
                                        </DoubleAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- 중간 라인 복원 / Middle line restore -->
                                        <DoubleAnimation Storyboard.TargetName="MiddleLine"
                                                        Storyboard.TargetProperty="Width"
                                                        To="25" Duration="0:0:0.1"
                                                        BeginTime="0:0:0.3"/>

                                        <!-- 상단 라인 복원: rotate(0) 후 translateY(-8) -->
                                        <!-- Top line restore: rotate(0) then translateY(-8) -->
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="TopLineRotate"
                                                                       Storyboard.TargetProperty="Angle">
                                            <EasingDoubleKeyFrame KeyTime="0:0:0" Value="-45"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="0">
                                                <EasingDoubleKeyFrame.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </EasingDoubleKeyFrame.EasingFunction>
                                            </EasingDoubleKeyFrame>
                                        </DoubleAnimationUsingKeyFrames>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="TopLineTranslate"
                                                                       Storyboard.TargetProperty="Y">
                                            <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="0"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="-8">
                                                <EasingDoubleKeyFrame.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </EasingDoubleKeyFrame.EasingFunction>
                                            </EasingDoubleKeyFrame>
                                        </DoubleAnimationUsingKeyFrames>

                                        <!-- 하단 라인 복원: rotate(0) 후 translateY(8) -->
                                        <!-- Bottom line restore: rotate(0) then translateY(8) -->
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="BottomLineRotate"
                                                                       Storyboard.TargetProperty="Angle">
                                            <EasingDoubleKeyFrame KeyTime="0:0:0" Value="45"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="0">
                                                <EasingDoubleKeyFrame.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </EasingDoubleKeyFrame.EasingFunction>
                                            </EasingDoubleKeyFrame>
                                        </DoubleAnimationUsingKeyFrames>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="BottomLineTranslate"
                                                                       Storyboard.TargetProperty="Y">
                                            <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="0"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="8">
                                                <EasingDoubleKeyFrame.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </EasingDoubleKeyFrame.EasingFunction>
                                            </EasingDoubleKeyFrame>
                                        </DoubleAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
