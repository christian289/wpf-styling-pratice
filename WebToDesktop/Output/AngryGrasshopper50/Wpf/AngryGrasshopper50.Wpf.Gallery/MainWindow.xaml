<Window x:Class="AngryGrasshopper50.Wpf.Gallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:AngryGrasshopper50.Wpf.UI.Controls;assembly=AngryGrasshopper50.Wpf.UI"
        mc:Ignorable="d"
        Title="AngryGrasshopper50 - Hamburger Menu Toggle" Height="450" Width="800"
        Background="#f5f5f5">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- 제목 / Title -->
            <TextBlock Text="Hamburger Menu Toggle Button"
                       FontSize="24" FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- 햄버거 메뉴 컨트롤 / Hamburger menu control -->
            <controls:AngryGrasshopper50 HorizontalAlignment="Center"/>

            <!-- 설명 / Description -->
            <TextBlock Text="Click to toggle between hamburger and X icon"
                       FontSize="14" Foreground="Gray"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
