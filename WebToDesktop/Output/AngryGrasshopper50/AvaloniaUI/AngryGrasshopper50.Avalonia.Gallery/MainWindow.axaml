<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:AngryGrasshopper50.Avalonia.Lib.Controls"
        x:Class="AngryGrasshopper50.Avalonia.Gallery.MainWindow"
        Title="AngryGrasshopper50 - BurgerIcon Gallery"
        Width="400"
        Height="300">

    <Grid Background="#F5F5F5">
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="20">

            <TextBlock Text="BurgerIcon Control"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="Click to toggle hamburger â†” X animation"
                       FontSize="12"
                       Foreground="Gray"
                       HorizontalAlignment="Center"/>

            <Border Background="White"
                    CornerRadius="8"
                    Padding="20"
                    BoxShadow="0 2 8 #20000000"
                    HorizontalAlignment="Center">
                <controls:BurgerIcon/>
            </Border>

            <TextBlock Text="From Uiverse.io by 3bdel3ziz-T"
                       FontSize="10"
                       Foreground="Gray"
                       HorizontalAlignment="Center"/>

        </StackPanel>
    </Grid>

</Window>
