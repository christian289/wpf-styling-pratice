<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Size Values -->
    <!-- font-size: 20px, height/width: 2em = 40px -->
    <sys:Double x:Key="SmartBobcat50.Size">40</sys:Double>
    <sys:Double x:Key="SmartBobcat50.StrokeWidth">20</sys:Double>

    <!-- Colors -->
    <!-- fill: #FF5353 (checked state) -->
    <SolidColorBrush x:Key="SmartBobcat50.Fill.Checked" Color="#FF5353"/>
    <!-- stroke: #FFF (unchecked state) -->
    <SolidColorBrush x:Key="SmartBobcat50.Stroke.Unchecked" Color="#FFFFFF"/>
    <!-- fill: none (unchecked state) - Transparent -->
    <SolidColorBrush x:Key="SmartBobcat50.Fill.Unchecked" Color="Transparent"/>

    <!-- Path Data (Heart Shape) -->
