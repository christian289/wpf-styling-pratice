    <!-- Animation Durations -->
    <!-- animation: 400ms ease -->
    <Duration x:Key="SmartBobcat50.AnimationDuration">0:0:0.4</Duration>

    <!-- Scale Values -->
    <sys:Double x:Key="SmartBobcat50.Scale.Normal">1.0</sys:Double>
    <sys:Double x:Key="SmartBobcat50.Scale.Hover">1.1</sys:Double>
    <sys:Double x:Key="SmartBobcat50.Scale.Bounce">1.2</sys:Double>
    <sys:Double x:Key="SmartBobcat50.Scale.Zero">0.0</sys:Double>

</ResourceDictionary>
