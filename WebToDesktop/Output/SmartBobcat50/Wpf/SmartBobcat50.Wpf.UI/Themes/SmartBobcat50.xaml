<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:SmartBobcat50.Wpf.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/SmartBobcat50.Wpf.UI;component/Themes/SmartBobcat50Resources.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type controls:SmartBobcat50}">
        <Setter Property="Width" Value="{StaticResource SmartBobcat50.Size}"/>
        <Setter Property="Height" Value="{StaticResource SmartBobcat50.Size}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:SmartBobcat50}">
                    <Grid x:Name="RootGrid"
                          Width="{TemplateBinding Width}"
                          Height="{TemplateBinding Height}"
                          RenderTransformOrigin="0.5,0.5">
                        <Grid.RenderTransform>
                            <ScaleTransform x:Name="RootScaleTransform" ScaleX="1" ScaleY="1"/>
                        </Grid.RenderTransform>

                        <!-- Heart Icon Container with animation -->
                        <Viewbox x:Name="HeartViewbox"
                                 Stretch="Uniform"
                                 RenderTransformOrigin="0.5,0.5">
                            <Viewbox.RenderTransform>
                                <ScaleTransform x:Name="HeartScaleTransform" ScaleX="1" ScaleY="1"/>
                            </Viewbox.RenderTransform>

                            <!-- Heart Path - SVG viewBox 256x256 -->
                            <Canvas Width="256" Height="256">
                                <Path x:Name="HeartPath"
                                      Data="M224.6,51.9 A59.5,59.5 0 0 0 181.6,32 A60.5,60.5 0 0 0 137.6,49.6 L128,59.1 L120.5,51.7 C97.2,28.3 59.2,26.3 35.9,47.4 A59.9,59.9 0 0 0 33.6,134.4 L116.7,217.5 A15.9,15.9 0 0 0 139.3,217.5 L220.3,136.5 C243.7,113.2 245.6,75.2 224.6,51.9 Z"
                                      Fill="{StaticResource SmartBobcat50.Fill.Unchecked}"
                                      Stroke="{StaticResource SmartBobcat50.Stroke.Unchecked}"
                                      StrokeThickness="{StaticResource SmartBobcat50.StrokeWidth}"/>
                            </Canvas>
                        </Viewbox>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- Hover Effect: scale(1.1) -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="RootScaleTransform"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="{StaticResource SmartBobcat50.Scale.Hover}"
                                                         Duration="0:0:0.1"/>
                                        <DoubleAnimation Storyboard.TargetName="RootScaleTransform"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="{StaticResource SmartBobcat50.Scale.Hover}"
                                                         Duration="0:0:0.1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="RootScaleTransform"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="{StaticResource SmartBobcat50.Scale.Normal}"
                                                         Duration="0:0:0.1"/>
                                        <DoubleAnimation Storyboard.TargetName="RootScaleTransform"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="{StaticResource SmartBobcat50.Scale.Normal}"
                                                         Duration="0:0:0.1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>

                        <!-- Checked State: fill #FF5353, stroke-width 0 + like_effect animation -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="HeartPath" Property="Fill" Value="{StaticResource SmartBobcat50.Fill.Checked}"/>
                            <Setter TargetName="HeartPath" Property="StrokeThickness" Value="0"/>
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- like_effect: 0% scale(0), 50% scale(1.2), 100% scale(1) -->
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="HeartScaleTransform"
                                                                        Storyboard.TargetProperty="ScaleX">
                                            <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1.2">
                                                <EasingDoubleKeyFrame.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseOut"/>
                                                </EasingDoubleKeyFrame.EasingFunction>
                                            </EasingDoubleKeyFrame>
                                            <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="1">
                                                <EasingDoubleKeyFrame.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseInOut"/>
                                                </EasingDoubleKeyFrame.EasingFunction>
                                            </EasingDoubleKeyFrame>
                                        </DoubleAnimationUsingKeyFrames>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="HeartScaleTransform"
                                                                        Storyboard.TargetProperty="ScaleY">
                                            <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1.2">
                                                <EasingDoubleKeyFrame.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseOut"/>
                                                </EasingDoubleKeyFrame.EasingFunction>
                                            </EasingDoubleKeyFrame>
                                            <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="1">
                                                <EasingDoubleKeyFrame.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseInOut"/>
                                                </EasingDoubleKeyFrame.EasingFunction>
                                            </EasingDoubleKeyFrame>
                                        </DoubleAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                        </Trigger>

                        <!-- Unchecked State: dislike_effect animation -->
                        <Trigger Property="IsChecked" Value="False">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- dislike_effect: 0% scale(0), 50% scale(1.2), 100% scale(1) -->
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="HeartScaleTransform"
                                                                        Storyboard.TargetProperty="ScaleX">
                                            <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1.2">
                                                <EasingDoubleKeyFrame.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseOut"/>
                                                </EasingDoubleKeyFrame.EasingFunction>
                                            </EasingDoubleKeyFrame>
                                            <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="1">
                                                <EasingDoubleKeyFrame.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseInOut"/>
                                                </EasingDoubleKeyFrame.EasingFunction>
                                            </EasingDoubleKeyFrame>
                                        </DoubleAnimationUsingKeyFrames>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="HeartScaleTransform"
                                                                        Storyboard.TargetProperty="ScaleY">
                                            <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1.2">
                                                <EasingDoubleKeyFrame.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseOut"/>
                                                </EasingDoubleKeyFrame.EasingFunction>
                                            </EasingDoubleKeyFrame>
                                            <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="1">
                                                <EasingDoubleKeyFrame.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseInOut"/>
                                                </EasingDoubleKeyFrame.EasingFunction>
                                            </EasingDoubleKeyFrame>
                                        </DoubleAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
