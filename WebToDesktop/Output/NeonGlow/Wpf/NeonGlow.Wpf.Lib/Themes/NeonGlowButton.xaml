<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:NeonGlow.Wpf.Lib.Controls">

    <Style TargetType="{x:Type controls:NeonGlowButton}">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:NeonGlowButton}">
                    <!-- 최외곽 컨테이너: .button -->
                    <Border x:Name="OuterBorder"
                            CornerRadius="16"
                            Padding="2">
                        <!-- .button 배경: radial-gradient(circle 80px at 80% -10%, #ffffff, #181b1b) -->
                        <Border.Background>
                            <RadialGradientBrush GradientOrigin="0.8,-0.1" Center="0.8,-0.1" RadiusX="0.5" RadiusY="0.8">
                                <GradientStop Color="#FFFFFF" Offset="0"/>
                                <GradientStop Color="#181B1B" Offset="1"/>
                            </RadialGradientBrush>
                        </Border.Background>

                        <Grid>
                            <!-- .button::after: 우상단 글로우 효과 -->
                            <Border x:Name="GlowEffect"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Margin="0,0,0,0"
                                    MinWidth="50"
                                    MinHeight="30"
                                    CornerRadius="60"
                                    Background="Transparent">
                                <Border.Effect>
                                    <DropShadowEffect Color="#FFFFFF" BlurRadius="20" ShadowDepth="0" Opacity="0.22"/>
                                </Border.Effect>
                            </Border>

                            <!-- .blob1: 좌하단 시안/블루 블롭 -->
                            <Border x:Name="Blob1"
                                    Width="70"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Stretch"
                                    CornerRadius="16">
                                <!-- radial-gradient(circle 60px at 0% 100%, #3fe9ff, #0000ff80, transparent) -->
                                <Border.Background>
                                    <RadialGradientBrush GradientOrigin="0,1" Center="0,1" RadiusX="0.8" RadiusY="1.2">
                                        <GradientStop Color="#3FE9FF" Offset="0"/>
                                        <GradientStop Color="#800000FF" Offset="0.5"/>
                                        <GradientStop Color="Transparent" Offset="1"/>
                                    </RadialGradientBrush>
                                </Border.Background>
                                <Border.Effect>
                                    <DropShadowEffect Color="#0051FF" BlurRadius="30" ShadowDepth="0" Direction="225" Opacity="0.18"/>
                                </Border.Effect>
                            </Border>

                            <!-- .blob2: HTML에는 있지만 CSS에 정의 없음 - 생략 -->

                            <!-- .inner: 내부 콘텐츠 영역 -->
                            <Border x:Name="InnerBorder"
                                    CornerRadius="14"
                                    Padding="25,14">
                                <!-- radial-gradient(circle 80px at 80% -50%, #777777, #0f1111) -->
                                <Border.Background>
                                    <RadialGradientBrush GradientOrigin="0.8,-0.5" Center="0.8,-0.5" RadiusX="0.5" RadiusY="0.8">
                                        <GradientStop Color="#777777" Offset="0"/>
                                        <GradientStop Color="#0F1111" Offset="1"/>
                                    </RadialGradientBrush>
                                </Border.Background>

                                <Grid>
                                    <!-- .inner::before: 시안 오버레이 -->
                                    <Border x:Name="InnerOverlay"
                                            CornerRadius="14"
                                            Margin="-25,-14">
                                        <!-- radial-gradient(circle 60px at 0% 100%, #00e1ff1a, #0000ff11, transparent) -->
                                        <Border.Background>
                                            <RadialGradientBrush GradientOrigin="0,1" Center="0,1" RadiusX="0.6" RadiusY="1">
                                                <GradientStop Color="#1A00E1FF" Offset="0"/>
                                                <GradientStop Color="#110000FF" Offset="0.5"/>
                                                <GradientStop Color="Transparent" Offset="1"/>
                                            </RadialGradientBrush>
                                        </Border.Background>
                                    </Border>

                                    <!-- 콘텐츠 -->
                                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <!-- 마우스 오버 효과 -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="OuterBorder" Property="Opacity" Value="0.95"/>
                        </Trigger>

                        <!-- 클릭 효과 -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="OuterBorder" Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="OuterBorder" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                        </Trigger>

                        <!-- 비활성화 -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="OuterBorder" Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
