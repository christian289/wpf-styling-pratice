<Window x:Class="NeonGlow.Wpf.Gallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:NeonGlow.Wpf.Lib.Controls;assembly=NeonGlow.Wpf.Lib"
        Title="NeonGlow Button Gallery"
        Width="800"
        Height="600"
        WindowStartupLocation="CenterScreen">

    <!-- 다크 배경 -->
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0A0A0A" Offset="0"/>
            <GradientStop Color="#1A1A2E" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <!-- 타이틀 -->
            <TextBlock Text="NeonGlow Button"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="#FFFFFF"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,40"/>

            <!-- 기본 버튼 -->
            <controls:NeonGlowButton Content="Realism" Margin="0,0,0,20"/>

            <!-- 다양한 콘텐츠 -->
            <controls:NeonGlowButton Content="Click Me" Margin="0,0,0,20"/>

            <controls:NeonGlowButton Content="Hover Effect" Margin="0,0,0,20"/>

            <!-- 비활성화 상태 -->
            <controls:NeonGlowButton Content="Disabled" IsEnabled="False"/>

        </StackPanel>
    </Grid>
</Window>
