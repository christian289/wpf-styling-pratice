<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:SplendidQuail83.Avalonia.Lib.Controls">

    <!-- Default Style for NotebookPaperBackground -->
    <ControlTheme x:Key="{x:Type controls:NotebookPaperBackground}"
                  TargetType="controls:NotebookPaperBackground">
        <Setter Property="BackgroundColor" Value="#f1f1f1"/>
        <Setter Property="MarginLineColor" Value="#ffb4b8"/>
        <Setter Property="HorizontalLineColor" Value="#e1e1e1"/>
        <Setter Property="MarginLeft" Value="50"/>
        <Setter Property="MarginLineThickness" Value="2"/>
        <Setter Property="LineSpacing" Value="30"/>
        <Setter Property="HorizontalLineThickness" Value="1.2"/>
    </ControlTheme>

</ResourceDictionary>
