<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:HungryMoth59.Avalonia.Lib.Controls"
        x:Class="HungryMoth59.Avalonia.Gallery.MainWindow"
        Title="HungryMoth59 - Dog Loader Gallery"
        Width="500"
        Height="400"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#F5F5F5">
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="20">

            <TextBlock Text="Dog Loader"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Foreground="#333333" />

            <TextBlock Text="From Uiverse.io by elijahgummer (ruijadom)"
                       FontSize="12"
                       HorizontalAlignment="Center"
                       Foreground="#666666" />

            <!-- Dog Loader Control -->
            <controls:DogLoader Width="250" Height="250" />

            <TextBlock Text="Animated Dog Loading Indicator"
                       FontSize="14"
                       HorizontalAlignment="Center"
                       Foreground="#888888" />

        </StackPanel>
    </Grid>

</Window>
