<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Size Values -->
    <!-- 크기 값 -->
    <sys:Double x:Key="SmoothChipmunk60.Size">40</sys:Double>
    <sys:Double x:Key="SmoothChipmunk60.LineHeight">2</sys:Double>
    <sys:Double x:Key="SmoothChipmunk60.LineOffset">10</sys:Double>
    <CornerRadius x:Key="SmoothChipmunk60.CornerRadius">5</CornerRadius>

    <!-- Background Gradient -->
    <!-- 배경 그라데이션 -->
    <LinearGradientBrush x:Key="SmoothChipmunk60.Background" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="#FFB700FF" Offset="0.2"/>
        <GradientStop Color="#FFFF00AA" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- Line Color -->
    <!-- 라인 색상 -->
    <SolidColorBrush x:Key="SmoothChipmunk60.LineBrush" Color="#FFFFFFFF"/>

    <!-- Shadow -->
    <!-- 그림자 -->
    <DropShadowEffect x:Key="SmoothChipmunk60.Shadow"
                      BlurRadius="25"
                      ShadowDepth="5"
                      Direction="270"
                      Color="#000000"
                      Opacity="0.363"/>

    <!-- Animation Duration -->
    <!-- 애니메이션 지속 시간 (Duration은 인라인 사용 필요) -->
    <Duration x:Key="SmoothChipmunk60.AnimationDuration">0:0:0.5</Duration>

</ResourceDictionary>
