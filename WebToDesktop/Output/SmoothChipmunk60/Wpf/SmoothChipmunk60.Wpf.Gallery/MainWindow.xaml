        Height="450" Width="800"
        Background="#1a1a2e">
    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

            <!-- Toggle Switch 1 -->
            <controls:SmoothChipmunk60 Margin="20"/>

            <!-- Toggle Switch 2 -->
            <controls:SmoothChipmunk60 Margin="20"/>

            <!-- Toggle Switch 3 -->
