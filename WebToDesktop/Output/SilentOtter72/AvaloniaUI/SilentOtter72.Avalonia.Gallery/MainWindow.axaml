<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:SilentOtter72.Avalonia.Lib.Controls"
        x:Class="SilentOtter72.Avalonia.Gallery.MainWindow"
        Title="SilentOtter72 - Toggle Switch Gallery"
        Width="400"
        Height="300"
        WindowStartupLocation="CenterScreen">

    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="20">

        <TextBlock Text="SilentOtter72 Toggle Switch"
                   FontSize="18"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center" />

        <TextBlock Text="From Uiverse.io by alexruix"
                   FontSize="12"
                   Foreground="Gray"
                   HorizontalAlignment="Center" />

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Spacing="30">

            <!-- Unchecked State -->
            <StackPanel Spacing="8">
                <TextBlock Text="Off"
                           HorizontalAlignment="Center"
                           FontSize="12" />
                <controls:SilentOtter72 IsChecked="False" />
            </StackPanel>

            <!-- Checked State -->
            <StackPanel Spacing="8">
                <TextBlock Text="On"
                           HorizontalAlignment="Center"
                           FontSize="12" />
                <controls:SilentOtter72 IsChecked="True" />
            </StackPanel>

        </StackPanel>

        <!-- Interactive Demo -->
        <StackPanel Spacing="8" Margin="0,20,0,0">
            <TextBlock Text="Interactive Demo"
                       HorizontalAlignment="Center"
                       FontSize="12"
                       Foreground="Gray" />
            <controls:SilentOtter72 HorizontalAlignment="Center" />
        </StackPanel>

    </StackPanel>

</Window>
