<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:SilentOtter72.Wpf.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/SilentOtter72.Wpf.UI;component/Themes/SilentOtter72Resources.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type controls:SilentOtter72}">
        <Setter Property="Width" Value="{StaticResource SilentOtter72.Width}"/>
        <Setter Property="Height" Value="{StaticResource SilentOtter72.Height}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:SilentOtter72}">
                    <Grid>
                        <!-- Track (슬라이더 배경) -->
                        <Border x:Name="PART_Track"
                                CornerRadius="{StaticResource SilentOtter72.Track.CornerRadius}"
                                Background="{StaticResource SilentOtter72.Track.Background.Unchecked}"
                                BorderBrush="{StaticResource SilentOtter72.Track.Border.Unchecked}"
                                BorderThickness="1"/>

                        <!-- Thumb Container -->
                        <Canvas ClipToBounds="False">
                            <!-- Thumb (원형 버튼) -->
                            <Grid x:Name="PART_ThumbContainer"
                                  Width="{StaticResource SilentOtter72.ThumbSize}"
                                  Height="{StaticResource SilentOtter72.ThumbSize}"
                                  Canvas.Left="-1"
                                  Canvas.Top="-1">
                                <Ellipse x:Name="PART_Thumb"
                                         Fill="{StaticResource SilentOtter72.Thumb.Background}"
                                         Stroke="{StaticResource SilentOtter72.Thumb.Border.Unchecked}"
                                         StrokeThickness="2"/>

                                <!-- 체크마크 아이콘 -->
                                <Path x:Name="PART_CheckIcon"
                                      Data="{StaticResource SilentOtter72.Checkmark.Geometry}"
                                      Stroke="{StaticResource SilentOtter72.Icon.Stroke}"
                                      StrokeThickness="2.67"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round"
                                      StrokeLineJoin="Round"
                                      Width="{StaticResource SilentOtter72.IconSize}"
                                      Height="{StaticResource SilentOtter72.IconSize}"
                                      Stretch="Uniform"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Opacity="0">
                                    <Path.RenderTransform>
                                        <TranslateTransform x:Name="IconTranslate" X="5" Y="0"/>
                                    </Path.RenderTransform>
                                </Path>
                            </Grid>
                        </Canvas>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- Checked 상태 -->
                        <Trigger Property="IsChecked" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Track 배경색 변경 -->
                                        <ColorAnimation Storyboard.TargetName="PART_Track"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#222222"
                                                        Duration="0:0:0.4"/>
                                        <!-- Thumb 이동 -->
                                        <DoubleAnimation Storyboard.TargetName="PART_ThumbContainer"
                                                         Storyboard.TargetProperty="(Canvas.Left)"
                                                         To="24.5"
                                                         Duration="0:0:0.25">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseInOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <!-- Thumb 테두리색 변경 -->
                                        <ColorAnimation Storyboard.TargetName="PART_Thumb"
                                                        Storyboard.TargetProperty="(Ellipse.Stroke).(SolidColorBrush.Color)"
                                                        To="#181818"
                                                        Duration="0:0:0.25"/>
                                        <!-- 아이콘 표시 -->
                                        <DoubleAnimation Storyboard.TargetName="PART_CheckIcon"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1"
                                                         Duration="0:0:0.15"/>
                                        <!-- 아이콘 이동 -->
                                        <DoubleAnimation Storyboard.TargetName="IconTranslate"
                                                         Storyboard.TargetProperty="X"
                                                         To="0"
                                                         Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseInOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Track 배경색 복원 -->
                                        <ColorAnimation Storyboard.TargetName="PART_Track"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#B0B0B0"
                                                        Duration="0:0:0.4"/>
                                        <!-- Thumb 복원 -->
                                        <DoubleAnimation Storyboard.TargetName="PART_ThumbContainer"
                                                         Storyboard.TargetProperty="(Canvas.Left)"
                                                         To="-1"
                                                         Duration="0:0:0.25">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseInOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <!-- Thumb 테두리색 복원 -->
                                        <ColorAnimation Storyboard.TargetName="PART_Thumb"
                                                        Storyboard.TargetProperty="(Ellipse.Stroke).(SolidColorBrush.Color)"
                                                        To="#B0B0B0"
                                                        Duration="0:0:0.25"/>
                                        <!-- 아이콘 숨김 -->
                                        <DoubleAnimation Storyboard.TargetName="PART_CheckIcon"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0"
                                                         Duration="0:0:0.15"/>
                                        <!-- 아이콘 위치 복원 -->
                                        <DoubleAnimation Storyboard.TargetName="IconTranslate"
                                                         Storyboard.TargetProperty="X"
                                                         To="5"
                                                         Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseInOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
