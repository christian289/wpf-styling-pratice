<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- 크기 값 / Size values -->
    <sys:Double x:Key="SilentOtter72.Width">59.5</sys:Double>
    <sys:Double x:Key="SilentOtter72.Height">34</sys:Double>
    <sys:Double x:Key="SilentOtter72.ThumbSize">34</sys:Double>
    <sys:Double x:Key="SilentOtter72.IconSize">12</sys:Double>
    <sys:Double x:Key="SilentOtter72.ThumbTranslateX">25.5</sys:Double>

    <!-- CornerRadius -->
    <CornerRadius x:Key="SilentOtter72.Track.CornerRadius">32</CornerRadius>

    <!-- 색상 값 / Color values -->
    <!-- Unchecked 상태 / Unchecked state -->
    <SolidColorBrush x:Key="SilentOtter72.Track.Background.Unchecked" Color="#B0B0B0"/>
    <SolidColorBrush x:Key="SilentOtter72.Track.Border.Unchecked" Color="#B0B0B0"/>
    <SolidColorBrush x:Key="SilentOtter72.Thumb.Background" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SilentOtter72.Thumb.Border.Unchecked" Color="#B0B0B0"/>

    <!-- Checked 상태 / Checked state -->
    <SolidColorBrush x:Key="SilentOtter72.Track.Background.Checked" Color="#222222"/>
    <SolidColorBrush x:Key="SilentOtter72.Thumb.Border.Checked" Color="#181818"/>
    <SolidColorBrush x:Key="SilentOtter72.Icon.Stroke" Color="#222222"/>

    <!-- 아이콘 Path 데이터 (체크마크) / Icon Path data (checkmark) -->
    <StreamGeometry x:Key="SilentOtter72.Checkmark.Geometry">M4 16.5 L12 24.5 L28 8.5</StreamGeometry>

    <!-- 애니메이션 Duration -->
    <Duration x:Key="SilentOtter72.Animation.Duration">0:0:0.25</Duration>

</ResourceDictionary>
