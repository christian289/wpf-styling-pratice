    <ControlTheme x:Key="{x:Type controls:GentleFly78Control}" TargetType="controls:GentleFly78Control">
        <Setter Property="Width" Value="354" />
        <Setter Property="ClipToBounds" Value="True" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border x:Name="PART_Card"
                        Background="#12292929"
                        CornerRadius="50"
                        ClipToBounds="True"
                        BoxShadow="-10 0 33 0 #3A000000, 10 0 33 0 #3A000000">
                    <Canvas x:Name="PART_Canvas" ClipToBounds="True" Height="90">
                        <!-- ì²« ë²ˆì§¸ ì´ëª¨ì§€ ê·¸ë£¹ / First emoji group -->
                        <StackPanel x:Name="PART_Emojis1"
                                    Orientation="Horizontal"
                                    Canvas.Left="0"
                                    Canvas.Top="0">
                            <Button x:Name="Emoji1_1" Content="ðŸ˜„" FontSize="70" Margin="5,0" Padding="0" Background="Transparent" BorderThickness="0" Cursor="Hand" />
                            <Button x:Name="Emoji1_2" Content="ðŸ˜" FontSize="70" Margin="5,0" Padding="0" Background="Transparent" BorderThickness="0" Cursor="Hand" />
                            <Button x:Name="Emoji1_3" Content="ðŸ˜†" FontSize="70" Margin="5,0" Padding="0" Background="Transparent" BorderThickness="0" Cursor="Hand" />
                            <Button x:Name="Emoji1_4" Content="ðŸ˜‚" FontSize="70" Margin="5,0" Padding="0" Background="Transparent" BorderThickness="0" Cursor="Hand" />
                        </StackPanel>

                        <!-- ë‘ ë²ˆì§¸ ì´ëª¨ì§€ ê·¸ë£¹ (ë¬´í•œ ìŠ¤í¬ë¡¤ìš©) / Second emoji group (for infinite scroll) -->
                        <StackPanel x:Name="PART_Emojis2"
                                    Orientation="Horizontal"
                                    Canvas.Left="356"
                                    Canvas.Top="0">
                            <Button x:Name="Emoji2_1" Content="ðŸ˜„" FontSize="70" Margin="5,0" Padding="0" Background="Transparent" BorderThickness="0" Cursor="Hand" />
                            <Button x:Name="Emoji2_2" Content="ðŸ˜" FontSize="70" Margin="5,0" Padding="0" Background="Transparent" BorderThickness="0" Cursor="Hand" />
                            <Button x:Name="Emoji2_3" Content="ðŸ˜†" FontSize="70" Margin="5,0" Padding="0" Background="Transparent" BorderThickness="0" Cursor="Hand" />
                            <Button x:Name="Emoji2_4" Content="ðŸ˜‚" FontSize="70" Margin="5,0" Padding="0" Background="Transparent" BorderThickness="0" Cursor="Hand" />
                        </StackPanel>
                    </Canvas>
                </Border>
            </ControlTemplate>
        </Setter>

        <!-- ìŠ¬ë¼ì´ë”© ì• ë‹ˆë©”ì´ì…˜ / Sliding animation -->
        <Style Selector="^/template/ StackPanel#PART_Emojis1">
            <Style.Animations>
                <Animation Duration="0:0:5" IterationCount="Infinite" Easing="LinearEasing">
                    <KeyFrame Cue="0%">
                        <Setter Property="Canvas.Left" Value="0" />
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="Canvas.Left" Value="-356" />
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <Style Selector="^/template/ StackPanel#PART_Emojis2">
            <Style.Animations>
                <Animation Duration="0:0:5" IterationCount="Infinite" Easing="LinearEasing">
                    <KeyFrame Cue="0%">
                        <Setter Property="Canvas.Left" Value="356" />
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="Canvas.Left" Value="0" />
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <!-- ì´ëª¨ì§€ ë²„íŠ¼ Hover ì• ë‹ˆë©”ì´ì…˜ / Emoji button hover animation -->
        <Style Selector="^/template/ Button:pointerover">
            <Style.Animations>
                <Animation Duration="0:0:0.5" FillMode="Forward" Easing="CubicEaseOut">
                    <KeyFrame Cue="100%">
                        <Setter Property="RenderTransform">
                            <ScaleTransform ScaleX="1.1" ScaleY="1.1" />
                        </Setter>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <Style Selector="^/template/ Button:not(:pointerover)">
            <Style.Animations>
                <Animation Duration="0:0:0.3" FillMode="Forward" Easing="CubicEaseOut">
                    <KeyFrame Cue="100%">
                        <Setter Property="RenderTransform">
                            <ScaleTransform ScaleX="1.0" ScaleY="1.0" />
                        </Setter>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <Style Selector="^/template/ Button">
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
        </Style>
    </ControlTheme>

</ResourceDictionary>
