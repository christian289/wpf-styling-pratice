<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Card Dimensions -->
    <!-- 카드 크기 -->
    <sys:Double x:Key="GentleFly78.Card.Width">354</sys:Double>
    <sys:Double x:Key="GentleFly78.Card.Height">100</sys:Double>
    <CornerRadius x:Key="GentleFly78.Card.CornerRadius">50</CornerRadius>

    <!-- Card Background -->
    <!-- 카드 배경 -->
    <SolidColorBrush x:Key="GentleFly78.Card.Background" Color="#12292929"/>

    <!-- Button Dimensions -->
    <!-- 버튼 크기 -->
    <sys:Double x:Key="GentleFly78.Button.FontSize">70</sys:Double>
    <Thickness x:Key="GentleFly78.Button.Margin">5,0</Thickness>

    <!-- Hover Scale -->
    <!-- 호버 스케일 -->
    <sys:Double x:Key="GentleFly78.Button.HoverScale">1.1</sys:Double>
    <sys:Double x:Key="GentleFly78.Button.NormalScale">1.0</sys:Double>

    <!-- Shadow Effect -->
    <!-- 그림자 효과 -->
    <DropShadowEffect x:Key="GentleFly78.Card.Shadow"
                      Color="#0000003A"
                      BlurRadius="33"
                      ShadowDepth="10"
                      Direction="-90"
                      Opacity="0.5"/>

</ResourceDictionary>
