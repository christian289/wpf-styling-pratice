<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:SmoothDuck62.Wpf.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/SmoothDuck62.Wpf.UI;component/Themes/SmoothDuck62Resources.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type controls:SmoothDuck62}">
        <Setter Property="Width" Value="{StaticResource SmoothDuck62.Size}"/>
        <Setter Property="Height" Value="{StaticResource SmoothDuck62.Size}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:SmoothDuck62}">
                    <Grid>
                        <!-- Checkbox visual element -->
                        <Border x:Name="CheckboxBorder"
                                Width="{StaticResource SmoothDuck62.Size}"
                                Height="{StaticResource SmoothDuck62.Size}"
                                BorderBrush="{StaticResource SmoothDuck62.Border.Normal}"
                                BorderThickness="{StaticResource SmoothDuck62.Border.Thickness.Normal}"
                                CornerRadius="{StaticResource SmoothDuck62.Border.CornerRadius}"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <TransformGroup>
                                    <RotateTransform x:Name="RotateTransform" Angle="0"/>
                                    <TranslateTransform x:Name="TranslateTransform" X="0"/>
                                </TransformGroup>
                            </Border.RenderTransform>
                        </Border>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- Checked state trigger -->
                        <Trigger Property="IsChecked" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Rotate to 45 degrees -->
                                        <DoubleAnimation Storyboard.TargetName="RotateTransform"
                                                         Storyboard.TargetProperty="Angle"
                                                         To="45"
                                                         Duration="0:0:0.375"/>
                                        <!-- Change width to 14 -->
                                        <DoubleAnimation Storyboard.TargetName="CheckboxBorder"
                                                         Storyboard.TargetProperty="Width"
                                                         To="14"
                                                         Duration="0:0:0.375"/>
                                        <!-- Translate left by 5 (margin-left effect) -->
                                        <DoubleAnimation Storyboard.TargetName="TranslateTransform"
                                                         Storyboard.TargetProperty="X"
                                                         To="2.5"
                                                         Duration="0:0:0.375"/>
                                        <!-- Change border thickness -->
                                        <ThicknessAnimation Storyboard.TargetName="CheckboxBorder"
                                                            Storyboard.TargetProperty="BorderThickness"
                                                            To="0,0,5,5"
                                                            Duration="0:0:0.375"/>
                                        <!-- Remove corner radius -->
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="CheckboxBorder"
                                                                       Storyboard.TargetProperty="CornerRadius">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0.375">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <CornerRadius>0</CornerRadius>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Rotate back to 0 degrees -->
                                        <DoubleAnimation Storyboard.TargetName="RotateTransform"
                                                         Storyboard.TargetProperty="Angle"
                                                         To="0"
                                                         Duration="0:0:0.375"/>
                                        <!-- Change width back to 20 -->
                                        <DoubleAnimation Storyboard.TargetName="CheckboxBorder"
                                                         Storyboard.TargetProperty="Width"
                                                         To="20"
                                                         Duration="0:0:0.375"/>
                                        <!-- Translate back -->
                                        <DoubleAnimation Storyboard.TargetName="TranslateTransform"
                                                         Storyboard.TargetProperty="X"
                                                         To="0"
                                                         Duration="0:0:0.375"/>
                                        <!-- Change border thickness back -->
                                        <ThicknessAnimation Storyboard.TargetName="CheckboxBorder"
                                                            Storyboard.TargetProperty="BorderThickness"
                                                            To="3"
                                                            Duration="0:0:0.375"/>
                                        <!-- Restore corner radius -->
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="CheckboxBorder"
                                                                       Storyboard.TargetProperty="CornerRadius">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0.375">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <CornerRadius>6</CornerRadius>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                            <!-- Static property setters for checked state -->
                            <Setter TargetName="CheckboxBorder" Property="BorderBrush" Value="{StaticResource SmoothDuck62.Border.Checked}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
