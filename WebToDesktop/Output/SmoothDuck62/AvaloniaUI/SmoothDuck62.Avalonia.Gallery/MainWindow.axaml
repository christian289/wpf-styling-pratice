<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:SmoothDuck62.Avalonia.Lib.Controls"
        x:Class="SmoothDuck62.Avalonia.Gallery.MainWindow"
        Title="SmoothDuck62 - Checkbox Gallery"
        Width="400"
        Height="300">

    <Grid Background="#1a1a1a">
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="20">

            <TextBlock Text="SmoothDuck62 Checkbox"
                       Foreground="White"
                       FontSize="18"
                       FontWeight="Bold"
                       HorizontalAlignment="Center" />

            <TextBlock Text="Click to toggle"
                       Foreground="#888888"
                       FontSize="12"
                       HorizontalAlignment="Center" />

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Spacing="30">

                <!-- Unchecked state -->
                <StackPanel Spacing="8">
                    <controls:SmoothDuck62CheckBox IsChecked="False" />
                    <TextBlock Text="Unchecked"
                               Foreground="#666666"
                               FontSize="10"
                               HorizontalAlignment="Center" />
                </StackPanel>

                <!-- Checked state -->
                <StackPanel Spacing="8">
                    <controls:SmoothDuck62CheckBox IsChecked="True" />
                    <TextBlock Text="Checked"
                               Foreground="#666666"
                               FontSize="10"
                               HorizontalAlignment="Center" />
                </StackPanel>

            </StackPanel>

            <TextBlock Text="From Uiverse.io by G4b413l"
                       Foreground="#444444"
                       FontSize="10"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0" />

        </StackPanel>
    </Grid>

</Window>
