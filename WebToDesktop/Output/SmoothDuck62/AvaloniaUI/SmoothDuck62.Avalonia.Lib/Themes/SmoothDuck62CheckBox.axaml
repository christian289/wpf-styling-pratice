<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:SmoothDuck62.Avalonia.Lib.Controls">

    <!-- From Uiverse.io by G4b413l - Tags: checkbox -->
    <!-- 체크 시 45도 회전하여 체크마크 모양을 표시하는 체크박스 -->
    <!-- A checkbox that displays a checkmark shape by rotating 45 degrees when checked -->

    <!-- Color Resources -->
    <Color x:Key="SmoothDuck62.BorderColor">#2a2a2ab7</Color>
    <Color x:Key="SmoothDuck62.CheckedColor">#24c78e</Color>

    <SolidColorBrush x:Key="SmoothDuck62.BorderBrush" Color="{StaticResource SmoothDuck62.BorderColor}" />
    <SolidColorBrush x:Key="SmoothDuck62.CheckedBrush" Color="{StaticResource SmoothDuck62.CheckedColor}" />

    <!-- Size Resources -->
    <x:Double x:Key="SmoothDuck62.Size">20</x:Double>
    <x:Double x:Key="SmoothDuck62.CheckedWidth">14</x:Double>
    <x:Double x:Key="SmoothDuck62.BorderThickness">3</x:Double>
    <x:Double x:Key="SmoothDuck62.CheckedBorderThickness">5</x:Double>
    <CornerRadius x:Key="SmoothDuck62.CornerRadius">6</CornerRadius>

    <ControlTheme x:Key="{x:Type controls:SmoothDuck62CheckBox}" TargetType="controls:SmoothDuck62CheckBox">
        <Setter Property="Width" Value="{StaticResource SmoothDuck62.Size}" />
        <Setter Property="Height" Value="{StaticResource SmoothDuck62.Size}" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border x:Name="PART_CheckBox"
                        Width="{StaticResource SmoothDuck62.Size}"
                        Height="{StaticResource SmoothDuck62.Size}"
                        BorderBrush="{StaticResource SmoothDuck62.BorderBrush}"
                        BorderThickness="{StaticResource SmoothDuck62.BorderThickness}"
                        CornerRadius="{StaticResource SmoothDuck62.CornerRadius}"
                        RenderTransformOrigin="0.5,0.5">
                    <Border.RenderTransform>
                        <RotateTransform Angle="0" />
                    </Border.RenderTransform>
                    <Border.Transitions>
                        <Transitions>
                            <DoubleTransition Property="Width" Duration="0:0:0.375" Easing="CubicEaseInOut" />
                            <DoubleTransition Property="Height" Duration="0:0:0.375" Easing="CubicEaseInOut" />
                            <ThicknessTransition Property="Margin" Duration="0:0:0.375" Easing="CubicEaseInOut" />
                            <ThicknessTransition Property="BorderThickness" Duration="0:0:0.375" Easing="CubicEaseInOut" />
                            <CornerRadiusTransition Property="CornerRadius" Duration="0:0:0.375" Easing="CubicEaseInOut" />
                            <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.375" Easing="CubicEaseInOut" />
                        </Transitions>
                    </Border.Transitions>
                </Border>
            </ControlTemplate>
        </Setter>

        <!-- Checked State -->
        <Style Selector="^:checked /template/ Border#PART_CheckBox">
            <Setter Property="RenderTransform" Value="rotate(45deg)" />
            <Setter Property="Width" Value="{StaticResource SmoothDuck62.CheckedWidth}" />
            <Setter Property="Height" Value="{StaticResource SmoothDuck62.Size}" />
            <Setter Property="Margin" Value="5,0,0,0" />
            <Setter Property="BorderBrush" Value="{StaticResource SmoothDuck62.CheckedBrush}" />
            <Setter Property="BorderThickness" Value="0,0,5,5" />
            <Setter Property="CornerRadius" Value="0" />
        </Style>
    </ControlTheme>

</ResourceDictionary>
