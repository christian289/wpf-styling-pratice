<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:NastyMoth15.Avalonia.Lib.Controls"
        x:Class="NastyMoth15.Avalonia.Gallery.MainWindow"
        Title="NastyMoth15 Toggle Switch Gallery"
        Width="400"
        Height="300"
        Background="#1a1a1a">

    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="20">

        <TextBlock Text="NastyMoth15 Toggle Switch"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="#d9d9d9"
                   HorizontalAlignment="Center"/>

        <TextBlock Text="Click the toggle to switch states"
                   FontSize="12"
                   Foreground="#888888"
                   HorizontalAlignment="Center"/>

        <controls:NastyMoth15ToggleSwitch HorizontalAlignment="Center"/>

        <TextBlock x:Name="StatusText"
                   Text="OFF"
                   FontSize="14"
                   Foreground="#54a8fc"
                   HorizontalAlignment="Center"/>

    </StackPanel>

</Window>
