    <!-- ControlTheme for NastyMoth15ToggleSwitch -->
    <ControlTheme x:Key="{x:Type controls:NastyMoth15ToggleSwitch}" TargetType="controls:NastyMoth15ToggleSwitch">
        <Setter Property="Width" Value="126"/>
        <Setter Property="Height" Value="66"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <ControlTemplate>
                <Panel>
                    <!-- Outer border (::before equivalent) -->
                    <Border x:Name="OuterBorder"
                            CornerRadius="9999"
                            Background="{StaticResource NastyMoth15.Gray.Brush}"
                            BorderBrush="{StaticResource NastyMoth15.Border.Brush}"
                            BorderThickness="1,1,1,0"/>

                    <!-- Inner container (toggle-label) -->
                    <Border x:Name="InnerContainer"
                            Margin="12"
                            CornerRadius="9999"
                            Background="{StaticResource NastyMoth15.Dark.Brush}"
                            BorderBrush="{StaticResource NastyMoth15.Border.Brush}"
                            BorderThickness="1,1,1,0">

                        <!-- Radial gradient overlay (::after equivalent) -->
                        <Border.OpacityMask>
                            <VisualBrush Stretch="Fill"/>
                        </Border.OpacityMask>
                    </Border>

                    <!-- Radial gradient background layer -->
                    <Border x:Name="GradientOverlay"
                            Margin="12"
                            CornerRadius="9999"
                            Opacity="0.8">
                        <Border.Background>
                            <!-- Note: AvaloniaUI RadialGradientBrush - Center와 GradientOrigin 동일하게 설정 -->
                            <!-- AvaloniaUI Issue #19888로 인해 GradientOrigin과 Center가 반드시 동일해야 함 -->
                            <RadialGradientBrush GradientOrigin="50%,0%" Center="50%,0%" RadiusX="100%" RadiusY="100%">
                                <GradientStop Color="#3A9BFC" Offset="0"/>
                                <GradientStop Color="#0C0C0C" Offset="0.8"/>
                            </RadialGradientBrush>
                        </Border.Background>
                    </Border>

                    <!-- Toggle knob container -->
                    <Border x:Name="KnobContainer"
                            Margin="20,8,20,8"
                            HorizontalAlignment="Left"
                            Width="50"
                            Height="50"
                            CornerRadius="9999"
                            BorderBrush="#AAAAAA"
                            BorderThickness="1,1,1,0"
                            ClipToBounds="True"
                            RenderTransformOrigin="0.5,0.5"
                            RenderTransform="translate(0px, 0px) rotate(0deg)">
                        <Border.Background>
                            <!-- Note: AvaloniaUI RadialGradientBrush - Center와 GradientOrigin 동일하게 설정 -->
                            <RadialGradientBrush GradientOrigin="50%,0%" Center="50%,0%" RadiusX="100%" RadiusY="100%">
                                <GradientStop Color="#666666" Offset="0"/>
                                <GradientStop Color="#414344" Offset="1"/>
                            </RadialGradientBrush>
                        </Border.Background>

                        <!-- Inner glow effect -->
                        <Border CornerRadius="9999"
                                BoxShadow="inset 0 -2 2 #54a8fc">
                            <Panel>
                                <!-- Sparkle particles -->
                                <Ellipse x:Name="Sparkle1" Width="2" Height="2" Fill="{StaticResource NastyMoth15.Light.Brush}"
                                         HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.7">
                                    <Ellipse.RenderTransform>
                                        <RotateTransform Angle="25"/>
                                    </Ellipse.RenderTransform>
                                </Ellipse>
                                <Ellipse x:Name="Sparkle2" Width="1" Height="1" Fill="{StaticResource NastyMoth15.Light.Brush}"
                                         HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.7">
                                    <Ellipse.RenderTransform>
                                        <RotateTransform Angle="100"/>
                                    </Ellipse.RenderTransform>
                                </Ellipse>
                                <Ellipse x:Name="Sparkle3" Width="1" Height="1" Fill="{StaticResource NastyMoth15.Light.Brush}"
                                         HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.7">
                                    <Ellipse.RenderTransform>
                                        <RotateTransform Angle="280"/>
                                    </Ellipse.RenderTransform>
                                </Ellipse>
                                <Ellipse x:Name="Sparkle4" Width="2" Height="2" Fill="{StaticResource NastyMoth15.Light.Brush}"
                                         HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.7">
                                    <Ellipse.RenderTransform>
                                        <RotateTransform Angle="200"/>
                                    </Ellipse.RenderTransform>
                                </Ellipse>

                                <!-- Flag Icon -->
                                <PathIcon x:Name="FlagIcon"
                                          Width="18" Height="18"
                                          Data="{StaticResource NastyMoth15.FlagIcon}"
                                          Foreground="{StaticResource NastyMoth15.Light.Brush}"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                            </Panel>
                        </Border>
                    </Border>
                </Panel>
            </ControlTemplate>
        </Setter>

        <!-- Transitions -->
        <Setter Property="Transitions">
            <Transitions>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.3" Easing="CubicEaseInOut"/>
            </Transitions>
        </Setter>

        <!-- Unchecked state - explicit for transitions -->
        <Style Selector="^:not(:checked)">
            <Style Selector="^ /template/ Border#KnobContainer">
                <Setter Property="RenderTransform" Value="translate(0px, 0px) rotate(0deg)"/>
            </Style>
        </Style>

        <!-- Checked state -->
        <Style Selector="^:checked">
            <Style Selector="^ /template/ Border#InnerContainer">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderBrush" Value="#3d6970"/>
            </Style>
            <Style Selector="^ /template/ Border#OuterBorder">
                <Setter Property="BoxShadow" Value="0 16 40 -32 #0080ff"/>
            </Style>
            <Style Selector="^ /template/ Border#KnobContainer">
                <Setter Property="BorderBrush" Value="{StaticResource NastyMoth15.Primary.Brush}"/>
                <Setter Property="ClipToBounds" Value="False"/>
                <Setter Property="RenderTransform" Value="translate(36px, 0px) rotate(-225deg)"/>
                <Setter Property="Background">
                    <!-- Note: AvaloniaUI RadialGradientBrush - Center와 GradientOrigin 동일하게 설정 -->
                    <RadialGradientBrush GradientOrigin="50%,0%" Center="50%,0%" RadiusX="100%" RadiusY="100%">
                        <GradientStop Color="#045ab1" Offset="0"/>
                        <GradientStop Color="#54a8fc" Offset="1"/>
                    </RadialGradientBrush>
                </Setter>
            </Style>
        </Style>

        <!-- Border Transitions -->
        <Style Selector="^">
            <Style Selector="^ /template/ Border#KnobContainer">
                <Setter Property="Transitions">
                    <Transitions>
                        <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.3" Easing="CubicEaseInOut"/>
                        <BrushTransition Property="Background" Duration="0:0:0.3"/>
                        <BrushTransition Property="BorderBrush" Duration="0:0:0.3"/>
                    </Transitions>
                </Setter>
            </Style>
            <Style Selector="^ /template/ Border#InnerContainer">
                <Setter Property="Transitions">
                    <Transitions>
                        <BrushTransition Property="Background" Duration="0:0:0.3"/>
                        <BrushTransition Property="BorderBrush" Duration="0:0:0.3"/>
                    </Transitions>
                </Setter>
            </Style>
        </Style>
    </ControlTheme>

</ResourceDictionary>
