    <Color x:Key="NastyMoth15.Light.Color">#d9d9d9</Color>
    <Color x:Key="NastyMoth15.Dark.Color">#121212</Color>
    <Color x:Key="NastyMoth15.Gray.Color">#414344</Color>
    <Color x:Key="NastyMoth15.Border.Color">#777777</Color>
    <Color x:Key="NastyMoth15.IconBorder.Color">#aaaaaa</Color>
    <Color x:Key="NastyMoth15.CheckedBorder.Color">#3d6970</Color>
    <Color x:Key="NastyMoth15.CheckedGradientStart.Color">#045ab1</Color>

    <SolidColorBrush x:Key="NastyMoth15.Primary.Brush" Color="{StaticResource NastyMoth15.Primary.Color}"/>
