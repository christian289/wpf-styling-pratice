<Window x:Class="TastyApe73.Wpf.Gallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:TastyApe73.Wpf.UI.Controls;assembly=TastyApe73.Wpf.UI"
        mc:Ignorable="d"
        Title="TastyApe73 - Level Up Notification Gallery"
        Height="450" Width="800"
        Background="#1a1a2e">
    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <!-- Default Level Up Notification -->
            <!-- 기본 Level Up 알림 -->
            <controls:TastyApe73 Margin="0,0,0,30"/>

            <!-- Custom Text Notification -->
            <!-- 커스텀 텍스트 알림 -->
            <controls:TastyApe73 NotificationText="Victory!"
                                 Width="180"
                                 Height="70"
                                 Margin="0,0,0,30"/>

            <!-- Without Confetti -->
            <!-- 컨페티 없는 버전 -->
            <controls:TastyApe73 NotificationText="New Badge!"
                                 ShowConfetti="False"
                                 Width="220"
                                 Height="70"/>

        </StackPanel>
    </Grid>
</Window>
