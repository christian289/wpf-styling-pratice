<Window x:Class="BreezyGoose71.Wpf.Gallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:BreezyGoose71.Wpf.UI.Controls;assembly=BreezyGoose71.Wpf.UI"
        mc:Ignorable="d"
        Title="BreezyGoose71 - Bookmark Toggle Button Gallery"
        Height="450"
        Width="800"
        Background="#1a1a2e">
    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
            <!-- 북마크 토글 버튼 -->
            <!-- Bookmark toggle button -->
            <controls:BreezyGoose71 Margin="10" />
            <controls:BreezyGoose71 Margin="10" IsChecked="True" />
            <controls:BreezyGoose71 Margin="10" />
        </StackPanel>
    </Grid>
</Window>
