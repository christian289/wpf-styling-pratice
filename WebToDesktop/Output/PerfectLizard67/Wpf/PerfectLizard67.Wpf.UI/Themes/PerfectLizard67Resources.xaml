<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Colors / 색상 -->
    <!-- Primary purple background / 기본 보라색 배경 -->
    <Color x:Key="PerfectLizard67.Color.Primary">#7e4fd4</Color>
    <SolidColorBrush x:Key="PerfectLizard67.Brush.Primary" Color="{StaticResource PerfectLizard67.Color.Primary}" />

    <!-- Text foreground / 텍스트 전경색 -->
    <SolidColorBrush x:Key="PerfectLizard67.Brush.Foreground" Color="#FFFFFF" />

    <!-- Placeholder color / 플레이스홀더 색상 -->
    <SolidColorBrush x:Key="PerfectLizard67.Brush.Placeholder" Color="#8f8f8f" />

    <!-- Shadow color / 그림자 색상 -->
    <Color x:Key="PerfectLizard67.Color.Shadow">#f3f3f3</Color>

    <!-- Icon stroke color / 아이콘 선 색상 -->
    <SolidColorBrush x:Key="PerfectLizard67.Brush.IconStroke" Color="#FFFFFF" />

    <!-- Transparent background / 투명 배경 -->
    <SolidColorBrush x:Key="PerfectLizard67.Brush.Transparent" Color="Transparent" />

    <!-- Sizes / 크기 -->
    <!-- Collapsed state size / 축소 상태 크기 -->
    <sys:Double x:Key="PerfectLizard67.Size.Collapsed">50</sys:Double>

    <!-- Expanded state width / 확장 상태 너비 -->
    <sys:Double x:Key="PerfectLizard67.Size.ExpandedWidth">250</sys:Double>

    <!-- Icon button size / 아이콘 버튼 크기 -->
    <sys:Double x:Key="PerfectLizard67.Size.IconButton">50</sys:Double>

    <!-- Icon size / 아이콘 크기 -->
    <sys:Double x:Key="PerfectLizard67.Size.Icon">25</sys:Double>

    <!-- Border thickness / 테두리 두께 -->
    <sys:Double x:Key="PerfectLizard67.Size.BorderThickness">3</sys:Double>

    <!-- Font size / 글꼴 크기 -->
    <sys:Double x:Key="PerfectLizard67.Size.FontSize">17</sys:Double>

    <!-- Geometry / 도형 -->
    <!-- Search icon circle path / 검색 아이콘 원 경로 -->
    <Geometry x:Key="PerfectLizard67.Geometry.SearchCircle">
        M11.5 21C16.7467 21 21 16.7467 21 11.5C21 6.25329 16.7467 2 11.5 2C6.25329 2 2 6.25329 2 11.5C2 16.7467 6.25329 21 11.5 21Z
    </Geometry>

    <!-- Search icon handle path / 검색 아이콘 손잡이 경로 -->
    <Geometry x:Key="PerfectLizard67.Geometry.SearchHandle">
        M22 22L20 20
    </Geometry>

    <!-- Padding / 패딩 -->
    <Thickness x:Key="PerfectLizard67.Padding.Input">10,10,40,10</Thickness>

    <!-- Corner radius for collapsed state / 축소 상태 모서리 반경 -->
    <CornerRadius x:Key="PerfectLizard67.CornerRadius.Collapsed">25</CornerRadius>

    <!-- Corner radius for expanded state / 확장 상태 모서리 반경 -->
    <CornerRadius x:Key="PerfectLizard67.CornerRadius.Expanded">0</CornerRadius>

    <!-- Animation durations / 애니메이션 지속 시간 -->
    <!-- Note: Duration은 StaticResource로 바인딩 불가, 참조용으로만 정의 -->
    <!-- Note: Duration cannot be bound via StaticResource, defined for reference only -->
    <!-- Expand duration: 0:0:0.5 (500ms) with cubic-bezier(0, 0.110, 0.35, 2) -->
    <!-- Collapse duration: 0:0:0.5 (500ms) with ease-in-out -->

</ResourceDictionary>
