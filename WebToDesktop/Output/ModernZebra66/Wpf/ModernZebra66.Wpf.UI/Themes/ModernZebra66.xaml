<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:ModernZebra66.Wpf.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/ModernZebra66.Wpf.UI;component/Themes/ModernZebra66Resources.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!--
        CSS repeating-conic-gradient를 WPF DrawingBrush로 구현
        원본 CSS:
        - repeating-conic-gradient(from 30deg, c1 0 60deg, c2 0 120deg, c3 0 180deg)
        - 두 개의 conic-gradient를 겹쳐서 패턴 생성

        CSS repeating-conic-gradient implemented with WPF DrawingBrush
        Original CSS:
        - repeating-conic-gradient(from 30deg, c1 0 60deg, c2 0 120deg, c3 0 180deg)
        - Two conic-gradients overlapped to create pattern
    -->

    <Style TargetType="{x:Type controls:ModernZebra66}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:ModernZebra66}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <!--
                                육각형 패턴 배경
                                DrawingBrush를 사용하여 타일 반복

                                Hexagonal pattern background
                                Using DrawingBrush for tile repetition
                            -->
                            <Rectangle>
                                <Rectangle.Fill>
                                    <DrawingBrush TileMode="Tile"
                                                  Viewport="0,0,100,86.6"
                                                  ViewportUnits="Absolute"
                                                  Viewbox="0,0,100,86.6"
                                                  ViewboxUnits="Absolute">
                                        <DrawingBrush.Drawing>
                                            <DrawingGroup>
                                                <!--
                                                    첫 번째 육각형 (중앙)
                                                    30도 회전된 conic gradient 시뮬레이션

                                                    First hexagon (center)
                                                    Simulating 30-degree rotated conic gradient
                                                -->
                                                <DrawingGroup>
                                                    <DrawingGroup.Transform>
                                                        <TransformGroup>
                                                            <RotateTransform Angle="30" CenterX="50" CenterY="43.3" />
                                                        </TransformGroup>
                                                    </DrawingGroup.Transform>

                                                    <!-- 섹터 1: c1 (0-60°) / Sector 1: c1 (0-60°) -->
                                                    <GeometryDrawing Brush="{StaticResource ModernZebra66.Brush1}">
                                                        <GeometryDrawing.Geometry>
                                                            <PathGeometry>
                                                                <PathFigure StartPoint="50,43.3" IsClosed="True">
                                                                    <LineSegment Point="93.3,68.3" />
                                                                    <LineSegment Point="93.3,18.3" />
                                                                </PathFigure>
                                                            </PathGeometry>
                                                        </GeometryDrawing.Geometry>
                                                    </GeometryDrawing>

                                                    <!-- 섹터 2: c2 (60-120°) / Sector 2: c2 (60-120°) -->
                                                    <GeometryDrawing Brush="{StaticResource ModernZebra66.Brush2}">
                                                        <GeometryDrawing.Geometry>
                                                            <PathGeometry>
                                                                <PathFigure StartPoint="50,43.3" IsClosed="True">
                                                                    <LineSegment Point="93.3,18.3" />
                                                                    <LineSegment Point="50,-6.7" />
                                                                </PathFigure>
                                                            </PathGeometry>
                                                        </GeometryDrawing.Geometry>
                                                    </GeometryDrawing>

                                                    <!-- 섹터 3: c3 (120-180°) / Sector 3: c3 (120-180°) -->
                                                    <GeometryDrawing Brush="{StaticResource ModernZebra66.Brush3}">
                                                        <GeometryDrawing.Geometry>
                                                            <PathGeometry>
                                                                <PathFigure StartPoint="50,43.3" IsClosed="True">
                                                                    <LineSegment Point="50,-6.7" />
                                                                    <LineSegment Point="6.7,18.3" />
                                                                </PathFigure>
                                                            </PathGeometry>
                                                        </GeometryDrawing.Geometry>
                                                    </GeometryDrawing>

                                                    <!-- 섹터 4: c1 (180-240°) / Sector 4: c1 (180-240°) -->
                                                    <GeometryDrawing Brush="{StaticResource ModernZebra66.Brush1}">
                                                        <GeometryDrawing.Geometry>
                                                            <PathGeometry>
                                                                <PathFigure StartPoint="50,43.3" IsClosed="True">
                                                                    <LineSegment Point="6.7,18.3" />
                                                                    <LineSegment Point="6.7,68.3" />
                                                                </PathFigure>
                                                            </PathGeometry>
                                                        </GeometryDrawing.Geometry>
                                                    </GeometryDrawing>

                                                    <!-- 섹터 5: c2 (240-300°) / Sector 5: c2 (240-300°) -->
                                                    <GeometryDrawing Brush="{StaticResource ModernZebra66.Brush2}">
                                                        <GeometryDrawing.Geometry>
                                                            <PathGeometry>
                                                                <PathFigure StartPoint="50,43.3" IsClosed="True">
                                                                    <LineSegment Point="6.7,68.3" />
                                                                    <LineSegment Point="50,93.3" />
                                                                </PathFigure>
                                                            </PathGeometry>
                                                        </GeometryDrawing.Geometry>
                                                    </GeometryDrawing>

                                                    <!-- 섹터 6: c3 (300-360°) / Sector 6: c3 (300-360°) -->
                                                    <GeometryDrawing Brush="{StaticResource ModernZebra66.Brush3}">
                                                        <GeometryDrawing.Geometry>
                                                            <PathGeometry>
                                                                <PathFigure StartPoint="50,43.3" IsClosed="True">
                                                                    <LineSegment Point="50,93.3" />
                                                                    <LineSegment Point="93.3,68.3" />
                                                                </PathFigure>
                                                            </PathGeometry>
                                                        </GeometryDrawing.Geometry>
                                                    </GeometryDrawing>
                                                </DrawingGroup>

                                                <!--
                                                    두 번째 레이어 (오프셋)
                                                    CSS의 calc(0.5 * var([s])) 오프셋 시뮬레이션

                                                    Second layer (offset)
                                                    Simulating CSS calc(0.5 * var([s])) offset
                                                -->
                                                <DrawingGroup>
                                                    <DrawingGroup.Transform>
                                                        <TransformGroup>
                                                            <TranslateTransform X="50" Y="43.3" />
                                                            <RotateTransform Angle="30" CenterX="50" CenterY="43.3" />
                                                        </TransformGroup>
                                                    </DrawingGroup.Transform>

                                                    <!-- 오버레이 섹터들 (투명 + c3) / Overlay sectors (transparent + c3) -->
                                                    <!-- 0-120°: 투명 / 0-120°: transparent -->

                                                    <!-- 120-180°: c3 -->
                                                    <GeometryDrawing Brush="{StaticResource ModernZebra66.Brush3}">
                                                        <GeometryDrawing.Geometry>
                                                            <PathGeometry>
                                                                <PathFigure StartPoint="0,0" IsClosed="True">
                                                                    <LineSegment Point="-21.65,37.5" />
                                                                    <LineSegment Point="-43.3,0" />
                                                                </PathFigure>
                                                            </PathGeometry>
                                                        </GeometryDrawing.Geometry>
                                                    </GeometryDrawing>

                                                    <!-- 180-300°: 투명 / 180-300°: transparent -->

                                                    <!-- 300-360°: c3 -->
                                                    <GeometryDrawing Brush="{StaticResource ModernZebra66.Brush3}">
                                                        <GeometryDrawing.Geometry>
                                                            <PathGeometry>
                                                                <PathFigure StartPoint="0,0" IsClosed="True">
                                                                    <LineSegment Point="43.3,0" />
                                                                    <LineSegment Point="21.65,-37.5" />
                                                                </PathFigure>
                                                            </PathGeometry>
                                                        </GeometryDrawing.Geometry>
                                                    </GeometryDrawing>
                                                </DrawingGroup>
                                            </DrawingGroup>
                                        </DrawingBrush.Drawing>
                                    </DrawingBrush>
                                </Rectangle.Fill>
                            </Rectangle>

                            <!-- ContentPresenter for child content -->
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              Margin="{TemplateBinding Padding}" />
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
