<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Colors -->
    <Color x:Key="QuietCougar91.Color.Black">#000000</Color>
    <Color x:Key="QuietCougar91.Color.DarkGray">#333333</Color>
    <Color x:Key="QuietCougar91.Color.MediumGray">#222222</Color>
    <Color x:Key="QuietCougar91.Color.White">#FFFFFF</Color>

    <!-- Brushes - Button Normal -->
    <LinearGradientBrush x:Key="QuietCougar91.Button.Background.Normal" StartPoint="0,0.5" EndPoint="1,0.5">
        <GradientStop Color="{StaticResource QuietCougar91.Color.DarkGray}" Offset="0"/>
        <GradientStop Color="{StaticResource QuietCougar91.Color.Black}" Offset="1"/>
    </LinearGradientBrush>

    <!-- Brushes - Button Hover -->
    <LinearGradientBrush x:Key="QuietCougar91.Button.Background.Hover" StartPoint="0,0.5" EndPoint="1,0.5">
        <GradientStop Color="{StaticResource QuietCougar91.Color.Black}" Offset="0"/>
        <GradientStop Color="{StaticResource QuietCougar91.Color.DarkGray}" Offset="1"/>
    </LinearGradientBrush>

    <!-- Brushes - Button Pressed -->
    <SolidColorBrush x:Key="QuietCougar91.Button.Background.Pressed" Color="{StaticResource QuietCougar91.Color.MediumGray}"/>

    <!-- Brushes - Tooltip -->
    <LinearGradientBrush x:Key="QuietCougar91.Tooltip.Background" StartPoint="0,0.5" EndPoint="1,0.5">
        <GradientStop Color="{StaticResource QuietCougar91.Color.Black}" Offset="0"/>
        <GradientStop Color="{StaticResource QuietCougar91.Color.DarkGray}" Offset="1"/>
    </LinearGradientBrush>

    <!-- Brushes - Text -->
    <SolidColorBrush x:Key="QuietCougar91.Text.Foreground" Color="{StaticResource QuietCougar91.Color.White}"/>

    <!-- Sizes -->
    <sys:Double x:Key="QuietCougar91.Button.FontSize">16</sys:Double>
    <sys:Double x:Key="QuietCougar91.Icon.Width">16</sys:Double>
    <sys:Double x:Key="QuietCougar91.Icon.Height">16</sys:Double>

    <!-- Thickness -->
    <Thickness x:Key="QuietCougar91.Button.Padding">30,15</Thickness>
    <Thickness x:Key="QuietCougar91.Button.Margin">2,4</Thickness>
    <Thickness x:Key="QuietCougar91.Tooltip.Padding">12,8</Thickness>

    <!-- CornerRadius -->
    <CornerRadius x:Key="QuietCougar91.CornerRadius">6</CornerRadius>

    <!-- Animation Durations - Used as reference only -->
    <!-- WPF Duration은 StaticResource로 바인딩할 수 없으므로 인라인으로 작성해야 함 -->
    <!-- WPF Duration cannot be bound via StaticResource, must be written inline -->

    <!-- SVG Path Data for default icon (QR code like icon) -->
    <Geometry x:Key="QuietCougar91.Icon.PathData">M13 13h-2v-2h2v2zm0 4h-2v-2h2v2zm1-18h-8v2h8v-2zm0 20h-8v-2h8v2zm5.5-7h-2v-2h2v2zm-7 0h-2v-2h2v2zm1-10h-2v6h2v-6zm6.5 5.5h-1.5v1.5h1.5v-1.5zM4.5 16.5h1.5v1.5h-1.5v-1.5zm12-5h-2v-2h2v2zm-4 4h-2v-2h2v2zm5-3h-2v-2h2v2zm-7 0h-2v-2h2v2zm-3-5h-2v2h2v-2zm-4 8.5h1.5v1.5h-1.5v-1.5zm4.5-12h-2v2h2v-2zm10 1h-2v2h2v-2zm-7 3h-2v2h2v-2zm6 5h-2v-2h2v2zm-7-6h-2v-2h2v2zM6 13H4v-2h2v2zm12 6h-2v-2h2v2zM9 4H7v2h2V4zm11 0h-2v2h2V4z</Geometry>

    <!-- DropShadowEffect for Button -->
    <DropShadowEffect x:Key="QuietCougar91.Button.Shadow.Normal"
                      ShadowDepth="4"
                      BlurRadius="8"
                      Opacity="0.5"
                      Color="Black"
                      Direction="270"/>

    <DropShadowEffect x:Key="QuietCougar91.Button.Shadow.Hover"
                      ShadowDepth="6"
                      BlurRadius="12"
                      Opacity="0.7"
                      Color="Black"
                      Direction="270"/>

    <DropShadowEffect x:Key="QuietCougar91.Button.Shadow.Pressed"
                      ShadowDepth="2"
                      BlurRadius="4"
                      Opacity="0.5"
                      Color="Black"
                      Direction="270"/>

    <!-- DropShadowEffect for Tooltip -->
    <DropShadowEffect x:Key="QuietCougar91.Tooltip.Shadow"
                      ShadowDepth="6"
                      BlurRadius="12"
                      Opacity="0.6"
                      Color="Black"
                      Direction="270"/>

</ResourceDictionary>
