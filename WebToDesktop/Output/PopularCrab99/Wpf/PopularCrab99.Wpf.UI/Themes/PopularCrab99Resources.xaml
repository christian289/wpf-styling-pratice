<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Container Size -->
    <!-- 컨테이너 크기 -->
    <sys:Double x:Key="PopularCrab99.Container.Width">120</sys:Double>
    <sys:Double x:Key="PopularCrab99.Container.Height">120</sys:Double>

    <!-- Box Size -->
    <!-- 박스 크기 -->
    <sys:Double x:Key="PopularCrab99.Box.Size">30</sys:Double>

    <!-- Animation Offset -->
    <!-- 애니메이션 오프셋 -->
    <sys:Double x:Key="PopularCrab99.Offset.Negative">-30</sys:Double>
    <sys:Double x:Key="PopularCrab99.Offset.Positive">30</sys:Double>

    <!-- Box 1 - Purple -->
    <!-- 박스 1 - 보라색 -->
    <Color x:Key="PopularCrab99.Box1.Color">#9E88F6</Color>
    <SolidColorBrush x:Key="PopularCrab99.Box1.Background" Color="{StaticResource PopularCrab99.Box1.Color}" />

    <!-- Box 2 - Blue -->
    <!-- 박스 2 - 파란색 -->
    <Color x:Key="PopularCrab99.Box2.Color">#61B7FD</Color>
    <SolidColorBrush x:Key="PopularCrab99.Box2.Background" Color="{StaticResource PopularCrab99.Box2.Color}" />

    <!-- Box 3 - Green -->
    <!-- 박스 3 - 녹색 -->
    <Color x:Key="PopularCrab99.Box3.Color">#5FF9AF</Color>
    <SolidColorBrush x:Key="PopularCrab99.Box3.Background" Color="{StaticResource PopularCrab99.Box3.Color}" />

    <!-- Box 4 - Orange -->
    <!-- 박스 4 - 주황색 -->
    <Color x:Key="PopularCrab99.Box4.Color">#F3AB59</Color>
    <SolidColorBrush x:Key="PopularCrab99.Box4.Background" Color="{StaticResource PopularCrab99.Box4.Color}" />

    <!-- Shadow Settings -->
    <!-- 그림자 설정: box-shadow: 0px 7px 29px 0px -->
    <sys:Double x:Key="PopularCrab99.Shadow.BlurRadius">29</sys:Double>
    <sys:Double x:Key="PopularCrab99.Shadow.Direction">270</sys:Double>
    <sys:Double x:Key="PopularCrab99.Shadow.ShadowDepth">7</sys:Double>
    <sys:Double x:Key="PopularCrab99.Shadow.Opacity">0.6</sys:Double>

</ResourceDictionary>
