<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:UglyBear28.Wpf.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/UglyBear28.Wpf.UI;component/Themes/UglyBear28Resources.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!--
    CSS 원본:
    .container {
        width: 100%;
        height: 100%;
        position: relative;
        background: #fff;
        filter: contrast(7);
        [mask]: linear-gradient(red, rgba(0, 0, 0, 0.45));
    }
    .container::before {
        position: absolute;
        top: 0; right: 0; bottom: 0; left: 0;
        background: radial-gradient(#000, transparent) 0 0/1em 1em space;
        webkit-mask: var([mask]);
        mask: var([mask]);
        content: "";
    }

    WPF 변환 노트:
    filter: contrast(7)는 WPF에서 직접 지원하지 않음
    radial-gradient를 DrawingBrush의 RadialGradientBrush로 구현
    mask를 OpacityMask로 구현
    -->

    <Style TargetType="{x:Type controls:UglyBear28}">
        <Setter Property="Background" Value="{StaticResource UglyBear28.Background}"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:UglyBear28}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">

                        <!-- ::before pseudo-element: 점 패턴 레이어 -->
                        <!-- ::before pseudo-element: dot pattern layer -->
                        <Rectangle>
                            <Rectangle.Fill>
                                <!-- CSS: background: radial-gradient(#000, transparent) 0 0/1em 1em space -->
                                <!-- DrawingBrush로 반복되는 점 패턴 구현 -->
                                <!-- Implementing repeating dot pattern with DrawingBrush -->
                                <DrawingBrush TileMode="Tile"
                                              Viewport="0,0,16,16"
                                              ViewportUnits="Absolute"
                                              Viewbox="0,0,16,16"
                                              ViewboxUnits="Absolute">
                                    <DrawingBrush.Drawing>
                                        <GeometryDrawing>
                                            <GeometryDrawing.Brush>
                                                <!-- CSS: radial-gradient(#000, transparent) -->
                                                <RadialGradientBrush GradientOrigin="0.5,0.5"
                                                                     Center="0.5,0.5"
                                                                     RadiusX="0.5"
                                                                     RadiusY="0.5">
                                                    <GradientStop Color="Black" Offset="0"/>
                                                    <GradientStop Color="Transparent" Offset="1"/>
                                                </RadialGradientBrush>
                                            </GeometryDrawing.Brush>
                                            <GeometryDrawing.Geometry>
                                                <EllipseGeometry Center="8,8" RadiusX="8" RadiusY="8"/>
                                            </GeometryDrawing.Geometry>
                                        </GeometryDrawing>
                                    </DrawingBrush.Drawing>
                                </DrawingBrush>
                            </Rectangle.Fill>

                            <!-- CSS: mask: linear-gradient(red, rgba(0, 0, 0, 0.45)) -->
                            <!-- 위에서 아래로 점점 투명해지는 마스크 -->
                            <!-- Mask that gradually becomes transparent from top to bottom -->
                            <Rectangle.OpacityMask>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#FFFF0000" Offset="0"/>
                                    <GradientStop Color="#73000000" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.OpacityMask>
                        </Rectangle>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
