<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:SpicyDingo98.Wpf.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/SpicyDingo98.Wpf.UI;component/Themes/SpicyDingo98Resources.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- SpicyDingo98 Container Style -->
    <!-- 라디오 버튼 그룹 컨테이너 스타일 -->
    <Style TargetType="{x:Type controls:SpicyDingo98}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:SpicyDingo98}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ItemsPresenter/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- SpicyDingo98Item Style -->
    <!-- 개별 라디오 버튼 아이템 스타일 -->
    <Style TargetType="{x:Type controls:SpicyDingo98Item}">
        <Setter Property="Width" Value="{StaticResource SpicyDingo98Item.Size}"/>
        <Setter Property="Height" Value="{StaticResource SpicyDingo98Item.Size}"/>
        <Setter Property="Margin" Value="6,0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:SpicyDingo98Item}">
                    <Grid>
                        <!-- ::before pseudo-element - 외곽 테두리 (Outer border with dashed bottom) -->
                        <Border x:Name="OuterBorder"
                                Margin="-5"
                                CornerRadius="{StaticResource SpicyDingo98Item.CornerRadius}"
                                BorderBrush="{StaticResource SpicyDingo98Item.Border.Normal}"
                                BorderThickness="2"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <TransformGroup>
                                    <RotateTransform x:Name="OuterBorderRotate" Angle="0"/>
                                    <ScaleTransform x:Name="OuterBorderScale" ScaleX="1" ScaleY="1"/>
                                </TransformGroup>
                            </Border.RenderTransform>
                        </Border>

                        <!-- 메인 원형 배경 (Main circular background) -->
                        <Border x:Name="MainBorder"
                                CornerRadius="{StaticResource SpicyDingo98Item.CornerRadius}"
                                Background="{StaticResource SpicyDingo98Item.Background.Normal}"
                                Effect="{StaticResource SpicyDingo98Item.Shadow}">
                            <!-- 아이콘 콘텐츠 (Icon content) -->
                            <ContentPresenter x:Name="ContentPresenter"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="8"/>
                        </Border>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- Hover Trigger -->
                        <!-- 마우스 호버 트리거 -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="MainBorder" Property="Background" Value="{StaticResource SpicyDingo98Item.Background.Hover}"/>
                        </Trigger>

                        <!-- Selected Trigger -->
                        <!-- 선택 트리거 -->
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="MainBorder" Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                                        <GradientStop Color="{StaticResource SpicyDingo98Item.Gradient.Start}" Offset="0"/>
                                        <GradientStop Color="{StaticResource SpicyDingo98Item.Gradient.End}" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="OuterBorder" Property="BorderBrush" Value="{StaticResource SpicyDingo98Item.Border.Selected}"/>
                            <Setter Property="Panel.ZIndex" Value="1"/>
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Scale up animation - 확대 애니메이션 -->
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                         To="1.2" Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                         To="1.2" Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>

                                        <!-- Border rotate animation - 테두리 회전 애니메이션 -->
                                        <DoubleAnimation Storyboard.TargetName="OuterBorderRotate"
                                                         Storyboard.TargetProperty="Angle"
                                                         To="90" Duration="0:0:0.15">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>

                                        <!-- Pulse animation - 맥박 애니메이션 -->
                                        <DoubleAnimation Storyboard.TargetName="OuterBorderScale"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         From="1" To="1.08"
                                                         Duration="0:0:1"
                                                         AutoReverse="True"
                                                         RepeatBehavior="Forever"/>
                                        <DoubleAnimation Storyboard.TargetName="OuterBorderScale"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         From="1" To="1.08"
                                                         Duration="0:0:1"
                                                         AutoReverse="True"
                                                         RepeatBehavior="Forever"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Scale back animation - 원래 크기로 -->
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                         To="1" Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                         To="1" Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>

                                        <!-- Border rotate back - 테두리 회전 복구 -->
                                        <DoubleAnimation Storyboard.TargetName="OuterBorderRotate"
                                                         Storyboard.TargetProperty="Angle"
                                                         To="0" Duration="0:0:0.15"/>

                                        <!-- Stop pulse - 맥박 중지 -->
                                        <DoubleAnimation Storyboard.TargetName="OuterBorderScale"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="1" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="OuterBorderScale"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="1" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
