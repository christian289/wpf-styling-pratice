<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:GrumpyBaboon32.Wpf.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/GrumpyBaboon32.Wpf.UI;component/Themes/GrumpyBaboon32Resources.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!--
    CSS 패턴 분석 [CSS pattern analysis]:
    - linear-gradient(45deg, ...) + linear-gradient(135deg, ...) = 다이아몬드 라인 [diamond lines]
    - radial-gradient = 원형 점 [circular dots]

    WPF 구현 [WPF implementation]:
    - DrawingBrush로 타일링 패턴 생성 [Create tiled pattern with DrawingBrush]
    - 2x2 타일 단위로 패턴 반복 [Pattern repeats in 2x2 tile units]
    -->

    <Style TargetType="{x:Type controls:GrumpyBaboon32}">
        <Setter Property="PatternSize" Value="{StaticResource GrumpyBaboon32.PatternSize}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:GrumpyBaboon32}">
                    <Border x:Name="PART_Root">
                        <Border.Background>
                            <!-- 기본 타일 패턴 브러시 [Base tile pattern brush] -->
                            <DrawingBrush TileMode="Tile"
                                          Viewport="0,0,50,50"
                                          ViewportUnits="Absolute"
                                          Viewbox="0,0,50,50"
                                          ViewboxUnits="Absolute">
                                <DrawingBrush.Drawing>
                                    <DrawingGroup>
                                        <!-- 배경색 [Background color] -->
                                        <GeometryDrawing Brush="{StaticResource GrumpyBaboon32.Brush.Background}">
                                            <GeometryDrawing.Geometry>
                                                <RectangleGeometry Rect="0,0,50,50" />
                                            </GeometryDrawing.Geometry>
                                        </GeometryDrawing>

                                        <!-- 45도 대각선 라인들 [45-degree diagonal lines] -->
                                        <GeometryDrawing>
                                            <GeometryDrawing.Pen>
                                                <Pen Brush="{StaticResource GrumpyBaboon32.Brush.Primary}" Thickness="2" />
                                            </GeometryDrawing.Pen>
                                            <GeometryDrawing.Geometry>
                                                <GeometryGroup>
                                                    <!-- 45도 라인 패턴 [45-degree line pattern] -->
                                                    <LineGeometry StartPoint="0,25" EndPoint="25,0" />
                                                    <LineGeometry StartPoint="25,50" EndPoint="50,25" />
                                                </GeometryGroup>
                                            </GeometryDrawing.Geometry>
                                        </GeometryDrawing>

                                        <!-- 135도 대각선 라인들 [135-degree diagonal lines] -->
                                        <GeometryDrawing>
                                            <GeometryDrawing.Pen>
                                                <Pen Brush="{StaticResource GrumpyBaboon32.Brush.Primary}" Thickness="2" />
                                            </GeometryDrawing.Pen>
                                            <GeometryDrawing.Geometry>
                                                <GeometryGroup>
                                                    <!-- 135도 라인 패턴 [135-degree line pattern] -->
                                                    <LineGeometry StartPoint="25,0" EndPoint="50,25" />
                                                    <LineGeometry StartPoint="0,25" EndPoint="25,50" />
                                                </GeometryGroup>
                                            </GeometryDrawing.Geometry>
                                        </GeometryDrawing>

                                        <!-- 원형 점 패턴 (radial-gradient 대체) [Circular dot pattern (radial-gradient replacement)] -->
                                        <!-- 중심점에 원 [Circle at center] -->
                                        <GeometryDrawing Brush="{StaticResource GrumpyBaboon32.Brush.Primary}">
                                            <GeometryDrawing.Geometry>
                                                <EllipseGeometry Center="0,0" RadiusX="4.375" RadiusY="4.375" />
                                            </GeometryDrawing.Geometry>
                                        </GeometryDrawing>
                                        <GeometryDrawing Brush="{StaticResource GrumpyBaboon32.Brush.Primary}">
                                            <GeometryDrawing.Geometry>
                                                <EllipseGeometry Center="25,25" RadiusX="4.375" RadiusY="4.375" />
                                            </GeometryDrawing.Geometry>
                                        </GeometryDrawing>
                                        <GeometryDrawing Brush="{StaticResource GrumpyBaboon32.Brush.Primary}">
                                            <GeometryDrawing.Geometry>
                                                <EllipseGeometry Center="50,0" RadiusX="4.375" RadiusY="4.375" />
                                            </GeometryDrawing.Geometry>
                                        </GeometryDrawing>
                                        <GeometryDrawing Brush="{StaticResource GrumpyBaboon32.Brush.Primary}">
                                            <GeometryDrawing.Geometry>
                                                <EllipseGeometry Center="0,50" RadiusX="4.375" RadiusY="4.375" />
                                            </GeometryDrawing.Geometry>
                                        </GeometryDrawing>
                                        <GeometryDrawing Brush="{StaticResource GrumpyBaboon32.Brush.Primary}">
                                            <GeometryDrawing.Geometry>
                                                <EllipseGeometry Center="50,50" RadiusX="4.375" RadiusY="4.375" />
                                            </GeometryDrawing.Geometry>
                                        </GeometryDrawing>
                                    </DrawingGroup>
                                </DrawingBrush.Drawing>
                            </DrawingBrush>
                        </Border.Background>
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
