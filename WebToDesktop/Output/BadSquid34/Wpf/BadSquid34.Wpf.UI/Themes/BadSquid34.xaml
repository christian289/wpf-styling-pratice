<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:BadSquid34.Wpf.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/BadSquid34.Wpf.UI;component/Themes/BadSquid34Resources.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type controls:BadSquid34}">
        <Setter Property="Width" Value="{StaticResource BadSquid34.Width}" />
        <Setter Property="Padding" Value="{StaticResource BadSquid34.Padding}" />
        <Setter Property="FontSize" Value="{StaticResource BadSquid34.FontSize}" />
        <Setter Property="FontWeight" Value="{StaticResource BadSquid34.FontWeight}" />
        <Setter Property="FontFamily" Value="Segoe UI, system-ui, sans-serif" />
        <Setter Property="Foreground" Value="{StaticResource BadSquid34.Text.Foreground}" />
        <Setter Property="Background" Value="{StaticResource BadSquid34.Background}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:BadSquid34}">
                    <Border x:Name="PART_RootBorder"
                            Background="{TemplateBinding Background}"
                            CornerRadius="{StaticResource BadSquid34.CornerRadius}"
                            Padding="{TemplateBinding Padding}">
                        <Border.Effect>
                            <!-- box-shadow: 0px 0px 5px -3px #111 -->
                            <DropShadowEffect ShadowDepth="0"
                                              BlurRadius="5"
                                              Opacity="0.3"
                                              Color="{StaticResource BadSquid34.Shadow.Color}" />
                        </Border.Effect>

                        <!-- Horizontal layout: icon + title + close -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- Error Icon -->
                            <Path x:Name="PART_ErrorIcon"
                                  Grid.Column="0"
                                  Data="{StaticResource BadSquid34.Icon.ErrorPath}"
                                  Fill="{StaticResource BadSquid34.Icon.Fill}"
                                  Width="{StaticResource BadSquid34.Icon.Size}"
                                  Height="{StaticResource BadSquid34.Icon.Size}"
                                  Stretch="Uniform"
                                  Margin="{StaticResource BadSquid34.Icon.Margin}"
                                  VerticalAlignment="Center">
                                <Path.RenderTransform>
                                    <!-- transform: translateY(-2px) -->
                                    <TranslateTransform Y="{StaticResource BadSquid34.Icon.TranslateY}" />
                                </Path.RenderTransform>
                            </Path>

                            <!-- Title / Message -->
                            <TextBlock x:Name="PART_Title"
                                       Grid.Column="1"
                                       Text="{TemplateBinding Message}"
                                       Foreground="{TemplateBinding Foreground}"
                                       FontSize="{TemplateBinding FontSize}"
                                       FontWeight="{TemplateBinding FontWeight}"
                                       FontFamily="{TemplateBinding FontFamily}"
                                       VerticalAlignment="Center"
                                       TextTrimming="CharacterEllipsis" />

                            <!-- Close Button -->
                            <Border x:Name="PART_CloseButton"
                                    Grid.Column="2"
                                    Width="{StaticResource BadSquid34.Close.Size}"
                                    Height="{StaticResource BadSquid34.Close.Size}"
                                    Cursor="Hand"
                                    Background="Transparent"
                                    VerticalAlignment="Center">
                                <Path x:Name="PART_CloseIcon"
                                      Data="{StaticResource BadSquid34.Icon.ClosePath}"
                                      Fill="{StaticResource BadSquid34.Icon.Fill}"
                                      Width="12"
                                      Height="12"
                                      Stretch="Uniform"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center" />
                            </Border>
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <!-- Hover effect for close button -->
                        <Trigger SourceName="PART_CloseButton" Property="IsMouseOver" Value="True">
                            <Setter TargetName="PART_CloseIcon" Property="Opacity" Value="0.7" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
