<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Colors -->
    <!-- [error-background] #EF665B - Red error background -->
    <SolidColorBrush x:Key="BadSquid34.Background" Color="#EF665B" />

    <!-- [icon-fill] #FFFFFF - White icon fill color -->
    <SolidColorBrush x:Key="BadSquid34.Icon.Fill" Color="#FFFFFF" />

    <!-- [text-color] #FFFFFF - White text color -->
    <SolidColorBrush x:Key="BadSquid34.Text.Foreground" Color="#FFFFFF" />

    <!-- [shadow-color] #111111 - Dark shadow color -->
    <Color x:Key="BadSquid34.Shadow.Color">#111111</Color>

    <!-- Sizes -->
    <!-- [card-width] 320px -->
    <sys:Double x:Key="BadSquid34.Width">320</sys:Double>

    <!-- [card-padding] 12px -->
    <Thickness x:Key="BadSquid34.Padding">12</Thickness>

    <!-- [border-radius] 8px -->
    <CornerRadius x:Key="BadSquid34.CornerRadius">8</CornerRadius>

    <!-- [icon-size] 20px -->
    <sys:Double x:Key="BadSquid34.Icon.Size">20</sys:Double>

    <!-- [icon-margin-right] 8px -->
    <Thickness x:Key="BadSquid34.Icon.Margin">0,0,8,0</Thickness>

    <!-- [icon-translate-y] -2px -->
    <sys:Double x:Key="BadSquid34.Icon.TranslateY">-2</sys:Double>

    <!-- [close-size] 20px -->
    <sys:Double x:Key="BadSquid34.Close.Size">20</sys:Double>

    <!-- [font-size] 14px -->
    <sys:Double x:Key="BadSquid34.FontSize">14</sys:Double>

    <!-- [font-weight] 500 = Medium -->
    <FontWeight x:Key="BadSquid34.FontWeight">Medium</FontWeight>

