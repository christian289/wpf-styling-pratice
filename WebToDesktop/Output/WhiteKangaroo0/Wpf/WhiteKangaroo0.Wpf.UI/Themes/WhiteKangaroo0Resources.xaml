<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- 컨트롤 크기 / Control Dimensions -->
    <sys:Double x:Key="WhiteKangaroo0.Width">175</sys:Double>
    <sys:Double x:Key="WhiteKangaroo0.Height">80</sys:Double>

    <!-- 색상 / Colors -->
    <Color x:Key="WhiteKangaroo0.Color.White">#FFFFFF</Color>
    <Color x:Key="WhiteKangaroo0.Color.GearOrange">#FF3D00</Color>
    <Color x:Key="WhiteKangaroo0.Color.Transparent">Transparent</Color>

    <SolidColorBrush x:Key="WhiteKangaroo0.Brush.White" Color="{StaticResource WhiteKangaroo0.Color.White}" />
    <SolidColorBrush x:Key="WhiteKangaroo0.Brush.GearOrange" Color="{StaticResource WhiteKangaroo0.Color.GearOrange}" />

    <!-- 큰 톱니바퀴 크기 / Large Gear Dimensions -->
    <sys:Double x:Key="WhiteKangaroo0.LargeGear.Size">36</sys:Double>
    <sys:Double x:Key="WhiteKangaroo0.LargeGear.Left">60</sys:Double>
    <sys:Double x:Key="WhiteKangaroo0.LargeGear.Top">26</sys:Double>
    <!-- bottom: 18px, height: 80px, gear: 36px => top = 80 - 18 - 36 = 26 -->

    <!-- 작은 톱니바퀴 크기 / Small Gear Dimensions -->
    <sys:Double x:Key="WhiteKangaroo0.SmallGear.Size">24</sys:Double>
    <sys:Double x:Key="WhiteKangaroo0.SmallGear.Left">94</sys:Double>
    <sys:Double x:Key="WhiteKangaroo0.SmallGear.Top">41</sys:Double>
    <!-- bottom: 15px, height: 80px, gear: 24px => top = 80 - 15 - 24 = 41 -->

    <!-- 배경 요소 크기 / Background Element Dimensions -->
    <!-- 왼쪽 원 (25px 반지름) -->
    <sys:Double x:Key="WhiteKangaroo0.LeftCircle.Size">50</sys:Double>
    <sys:Double x:Key="WhiteKangaroo0.LeftCircle.Left">0</sys:Double>
    <sys:Double x:Key="WhiteKangaroo0.LeftCircle.Top">30</sys:Double>

    <!-- 중앙 큰 원 (50px 반지름) -->
    <sys:Double x:Key="WhiteKangaroo0.CenterCircle.Size">100</sys:Double>
    <sys:Double x:Key="WhiteKangaroo0.CenterCircle.Left">37</sys:Double>
    <sys:Double x:Key="WhiteKangaroo0.CenterCircle.Top">0</sys:Double>

    <!-- 오른쪽 원 (25px 반지름) -->
    <sys:Double x:Key="WhiteKangaroo0.RightCircle.Size">50</sys:Double>
    <sys:Double x:Key="WhiteKangaroo0.RightCircle.Left">122</sys:Double>
    <sys:Double x:Key="WhiteKangaroo0.RightCircle.Top">30</sys:Double>

    <!-- 몸통 사각형 -->
    <sys:Double x:Key="WhiteKangaroo0.Body.Width">120</sys:Double>
    <sys:Double x:Key="WhiteKangaroo0.Body.Height">40</sys:Double>
    <sys:Double x:Key="WhiteKangaroo0.Body.Left">25</sys:Double>
    <sys:Double x:Key="WhiteKangaroo0.Body.Top">40</sys:Double>

</ResourceDictionary>
