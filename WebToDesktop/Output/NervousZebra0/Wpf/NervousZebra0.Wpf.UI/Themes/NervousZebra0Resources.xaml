<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Size Values -->
    <sys:Double x:Key="NervousZebra0.Width">300</sys:Double>
    <sys:Double x:Key="NervousZebra0.Height">100</sys:Double>
    <CornerRadius x:Key="NervousZebra0.CornerRadius">10</CornerRadius>
    <CornerRadius x:Key="NervousZebra0.Button.CornerRadius">5</CornerRadius>

    <!-- Light Mode Colors (Default) -->
    <SolidColorBrush x:Key="NervousZebra0.Background" Color="#c3daf6"/>
    <SolidColorBrush x:Key="NervousZebra0.Foreground" Color="#1e2b3c"/>
    <SolidColorBrush x:Key="NervousZebra0.Highlight" Color="#fc9a32"/>
    <SolidColorBrush x:Key="NervousZebra0.Background.Hover" Color="#1e2b3c"/>
    <SolidColorBrush x:Key="NervousZebra0.Foreground.Hover" Color="#c3daf6"/>

    <!-- Button Colors -->
    <SolidColorBrush x:Key="NervousZebra0.Button.Background" Color="#efefef"/>
    <SolidColorBrush x:Key="NervousZebra0.Button.Foreground" Color="#000000"/>
    <SolidColorBrush x:Key="NervousZebra0.Button.Background.Hover" Color="#c3daf6"/>
    <SolidColorBrush x:Key="NervousZebra0.Button.Foreground.Hover" Color="#1e2b3c"/>

    <!-- Shadow -->
    <Color x:Key="NervousZebra0.Shadow.Color">#33000000</Color>

    <!-- Typography -->
    <sys:Double x:Key="NervousZebra0.Title.FontSize">24</sys:Double>
    <sys:Double x:Key="NervousZebra0.Level.FontSize">20</sys:Double>
    <sys:Double x:Key="NervousZebra0.Button.FontSize">12</sys:Double>
    <FontWeight x:Key="NervousZebra0.FontWeight.Bold">Bold</FontWeight>
    <FontWeight x:Key="NervousZebra0.Button.FontWeight">SemiBold</FontWeight>

    <!-- Padding/Margin -->
    <Thickness x:Key="NervousZebra0.Bottom.Padding">20</Thickness>
    <Thickness x:Key="NervousZebra0.Button.Padding">10,5</Thickness>

</ResourceDictionary>
