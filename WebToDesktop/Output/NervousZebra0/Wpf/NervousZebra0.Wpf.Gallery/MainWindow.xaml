<Window x:Class="NervousZebra0.Wpf.Gallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:NervousZebra0.Wpf.UI.Controls;assembly=NervousZebra0.Wpf.UI"
        mc:Ignorable="d"
        Title="NervousZebra0 Gallery - Level Up Notification"
        Height="450" Width="800"
        Background="#2d2d2d">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Default Notification -->
            <controls:NervousZebra0 Margin="0,0,0,20"/>

            <!-- Customized Notification -->
            <controls:NervousZebra0
                Title="Achievement Unlocked!"
                LevelText="Level 10"
                ButtonText="Continue"/>
        </StackPanel>
    </Grid>
</Window>
