<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:NervousZebra0.Avalonia.Lib.Controls">

    <!-- Color Resources -->
    <Color x:Key="Notification.Background">#C3DAF6</Color>
    <Color x:Key="Notification.Foreground">#1E2B3C</Color>
    <Color x:Key="Notification.Highlight">#FC9A32</Color>
    <Color x:Key="Notification.Background.Hover">#1E2B3C</Color>
    <Color x:Key="Notification.Foreground.Hover">#C3DAF6</Color>
    <Color x:Key="Button.Background">#EFEFEF</Color>
    <Color x:Key="Button.Background.Hover">#C3DAF6</Color>
    <Color x:Key="Button.Shadow">#888888</Color>

    <SolidColorBrush x:Key="Notification.Background.Brush" Color="{StaticResource Notification.Background}"/>
    <SolidColorBrush x:Key="Notification.Foreground.Brush" Color="{StaticResource Notification.Foreground}"/>
    <SolidColorBrush x:Key="Notification.Highlight.Brush" Color="{StaticResource Notification.Highlight}"/>
    <SolidColorBrush x:Key="Notification.Background.Hover.Brush" Color="{StaticResource Notification.Background.Hover}"/>
    <SolidColorBrush x:Key="Notification.Foreground.Hover.Brush" Color="{StaticResource Notification.Foreground.Hover}"/>
    <SolidColorBrush x:Key="Button.Background.Brush" Color="{StaticResource Button.Background}"/>
    <SolidColorBrush x:Key="Button.Background.Hover.Brush" Color="{StaticResource Button.Background.Hover}"/>

    <!-- Next Level Button Theme -->
    <ControlTheme x:Key="NextLevelButtonTheme" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource Button.Background.Brush}"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        <Setter Property="Template">
            <ControlTemplate>
                <Border x:Name="PART_ButtonBorder"
                        Background="{TemplateBinding Background}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        Padding="{TemplateBinding Padding}"
                        BoxShadow="0 0 10 #888888">
                    <ContentPresenter x:Name="PART_ContentPresenter"
                                      Content="{TemplateBinding Content}"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                </Border>
            </ControlTemplate>
        </Setter>

        <Style Selector="^:pointerover /template/ Border#PART_ButtonBorder">
            <Setter Property="Background" Value="{StaticResource Button.Background.Hover.Brush}"/>
            <Setter Property="BoxShadow" Value="0 0 15 #888888"/>
        </Style>

        <Style Selector="^:pointerover">
            <Style.Animations>
                <Animation Duration="0:0:0.3" Easing="QuadraticEaseInOut" FillMode="Forward">
                    <KeyFrame Cue="100%">
                        <Setter Property="RenderTransform">
                            <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                        </Setter>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
    </ControlTheme>

    <!-- LevelUpNotification Style -->
    <ControlTheme x:Key="{x:Type controls:LevelUpNotification}" TargetType="controls:LevelUpNotification">
        <Setter Property="Width" Value="300"/>
        <Setter Property="Height" Value="100"/>
        <Setter Property="ClipToBounds" Value="True"/>
        <Setter Property="Template">
            <ControlTemplate>
                <Border x:Name="PART_Root"
                        Width="{TemplateBinding Width}"
                        Height="{TemplateBinding Height}"
                        Background="{StaticResource Notification.Background.Brush}"
                        CornerRadius="10"
                        BoxShadow="0 8 24 #33000000"
                        ClipToBounds="True">
                    <Panel>
                        <!-- Top Section (Highlight) -->
                        <Border x:Name="PART_TopSection"
                                Background="{StaticResource Notification.Highlight.Brush}"
                                Height="50"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Stretch">
                            <Border.RenderTransform>
                                <TranslateTransform Y="-50"/>
                            </Border.RenderTransform>
                            <TextBlock x:Name="PART_TopText"
                                       Text="{TemplateBinding TopText}"
                                       Foreground="{StaticResource Notification.Foreground.Brush}"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Opacity="0">
                                <TextBlock.RenderTransform>
                                    <RotateTransform Angle="0"/>
                                </TextBlock.RenderTransform>
                            </TextBlock>
                        </Border>

                        <!-- Bottom Section -->
                        <Border x:Name="PART_BottomSection"
                                Background="{StaticResource Notification.Background.Brush}"
                                Height="50"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Stretch"
                                Padding="20,0">
                            <Grid ColumnDefinitions="*,Auto">
                                <TextBlock Grid.Column="0"
                                           Text="{TemplateBinding LevelText}"
                                           Foreground="{StaticResource Notification.Foreground.Brush}"
                                           FontSize="20"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"/>
                                <Button x:Name="PART_NextButton"
                                        Grid.Column="1"
                                        Content="{TemplateBinding ButtonText}"
                                        Theme="{StaticResource NextLevelButtonTheme}"
                                        VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </Panel>
                </Border>
            </ControlTemplate>
        </Setter>

        <!-- Slide Down Animation on Load -->
        <Style Selector="^:loaded /template/ Border#PART_TopSection">
            <Style.Animations>
                <Animation Duration="0:0:1" Easing="QuadraticEaseOut" FillMode="Forward">
                    <KeyFrame Cue="0%">
                        <Setter Property="RenderTransform">
                            <TranslateTransform Y="-50"/>
                        </Setter>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="RenderTransform">
                            <TranslateTransform Y="0"/>
                        </Setter>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <!-- Text Fade In Animation -->
        <Style Selector="^:loaded /template/ TextBlock#PART_TopText">
            <Style.Animations>
                <Animation Duration="0:0:1" Easing="QuadraticEaseInOut" FillMode="Forward">
                    <KeyFrame Cue="0%">
                        <Setter Property="Opacity" Value="0"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="Opacity" Value="1"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <!-- Hover State for Root -->
        <Style Selector="^:pointerover /template/ Border#PART_Root">
            <Setter Property="Background" Value="{StaticResource Notification.Background.Hover.Brush}"/>
        </Style>

        <Style Selector="^:pointerover /template/ Border#PART_BottomSection">
            <Setter Property="Background" Value="{StaticResource Notification.Background.Hover.Brush}"/>
        </Style>

        <Style Selector="^:pointerover /template/ TextBlock">
            <Setter Property="Foreground" Value="{StaticResource Notification.Foreground.Hover.Brush}"/>
        </Style>
    </ControlTheme>

</ResourceDictionary>
