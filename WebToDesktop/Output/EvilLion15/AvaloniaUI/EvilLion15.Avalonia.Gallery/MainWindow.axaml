<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:EvilLion15.Avalonia.Lib.Controls"
        x:Class="EvilLion15.Avalonia.Gallery.MainWindow"
        Title="EvilLion15 Toggle Switch - AvaloniaUI Gallery"
        Width="400"
        Height="300"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#2D2D2D">
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="20">

            <TextBlock Text="EvilLion15 Toggle Switch"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center" />

            <TextBlock Text="Neumorphism / Glassmorphism Style"
                       FontSize="12"
                       Foreground="#AAAAAA"
                       HorizontalAlignment="Center" />

            <!-- 토글 스위치 데모 -->
            <!-- Toggle switch demo -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Spacing="40">

                <controls:EvilLion15ToggleSwitch x:Name="Switch1" />

                <controls:EvilLion15ToggleSwitch x:Name="Switch2" IsChecked="True" />

            </StackPanel>

            <TextBlock x:Name="StatusText"
                       Text="Click the switches to toggle"
                       FontSize="12"
                       Foreground="#888888"
                       HorizontalAlignment="Center" />

        </StackPanel>
    </Grid>

</Window>
