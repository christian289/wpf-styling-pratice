<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Dimensions -->
    <!-- [SwitchWidth] 전체 스위치 너비 / Overall switch width -->
    <sys:Double x:Key="EvilLion15.Switch.Width">115</sys:Double>
    <!-- [SwitchHeight] 전체 스위치 높이 / Overall switch height -->
    <sys:Double x:Key="EvilLion15.Switch.Height">42</sys:Double>
    <!-- [SwitchBorderThickness] 외곽선 두께 / Border thickness -->
    <Thickness x:Key="EvilLion15.Switch.BorderThickness">4</Thickness>
    <!-- [SwitchCornerRadius] 모서리 둥글기 / Corner radius -->
    <CornerRadius x:Key="EvilLion15.Switch.CornerRadius">50</CornerRadius>

    <!-- Thumb (슬라이딩 핸들) Dimensions -->
    <!-- [ThumbWidth] 썸 너비 / Thumb width -->
    <sys:Double x:Key="EvilLion15.Thumb.Width">53</sys:Double>
    <!-- [ThumbHeight] 썸 높이 / Thumb height -->
    <sys:Double x:Key="EvilLion15.Thumb.Height">38</sys:Double>
    <!-- [ThumbCornerRadius] 썸 모서리 둥글기 / Thumb corner radius -->
    <CornerRadius x:Key="EvilLion15.Thumb.CornerRadius">30</CornerRadius>
    <!-- [ThumbMargin] 썸 여백 / Thumb margin -->
    <Thickness x:Key="EvilLion15.Thumb.Margin">1</Thickness>
    <!-- [ThumbCheckedMargin] 체크 시 썸 여백 / Thumb margin when checked -->
    <Thickness x:Key="EvilLion15.Thumb.CheckedMargin">59,1,1,1</Thickness>

    <!-- Thumb Inner Parts (썸 내부 파트) -->
    <!-- [ThumbPartWidth] 썸 내부 파트 너비 / Thumb inner part width -->
    <sys:Double x:Key="EvilLion15.ThumbPart.Width">21</sys:Double>
    <!-- [ThumbPartHeight] 썸 내부 파트 높이 / Thumb inner part height -->
    <sys:Double x:Key="EvilLion15.ThumbPart.Height">33</sys:Double>
    <!-- [ThumbPartMargin] 썸 내부 파트 여백 / Thumb inner part margin -->
    <Thickness x:Key="EvilLion15.ThumbPart.Margin">2</Thickness>
    <!-- [ThumbLeftCornerRadius] 왼쪽 파트 모서리 / Left part corner radius -->
    <CornerRadius x:Key="EvilLion15.ThumbPart.LeftCornerRadius">30,10,10,30</CornerRadius>
    <!-- [ThumbRightCornerRadius] 오른쪽 파트 모서리 / Right part corner radius -->
    <CornerRadius x:Key="EvilLion15.ThumbPart.RightCornerRadius">10,30,30,10</CornerRadius>

    <!-- Indicator Dots (좌우 인디케이터 점) -->
    <!-- [IndicatorSize] 인디케이터 크기 / Indicator size -->
    <sys:Double x:Key="EvilLion15.Indicator.Size">10</sys:Double>
    <!-- [IndicatorCornerRadius] 인디케이터 모서리 / Indicator corner radius -->
    <CornerRadius x:Key="EvilLion15.Indicator.CornerRadius">10</CornerRadius>
    <!-- [IndicatorTop] 인디케이터 상단 위치 / Indicator top position -->
    <sys:Double x:Key="EvilLion15.Indicator.Top">16</sys:Double>
    <!-- [LeftIndicatorMargin] 왼쪽 인디케이터 여백 / Left indicator margin -->
    <Thickness x:Key="EvilLion15.LeftIndicator.Margin">-23,0,0,0</Thickness>
    <!-- [RightIndicatorMargin] 오른쪽 인디케이터 여백 / Right indicator margin -->
    <Thickness x:Key="EvilLion15.RightIndicator.Margin">0,0,-23,0</Thickness>

    <!-- Switch Background Colors -->
    <!-- [SwitchBackground] 스위치 배경색 (반투명 검정) / Switch background (semi-transparent black) -->
    <SolidColorBrush x:Key="EvilLion15.Switch.Background" Color="#33000000"/>
    <!-- [SwitchBorderColor] 스위치 테두리색 / Switch border color -->
    <SolidColorBrush x:Key="EvilLion15.Switch.BorderBrush" Color="#1AD15C5C"/>

    <!-- Thumb Background Gradient -->
    <!-- [ThumbGradientStart] 썸 그라디언트 시작색 / Thumb gradient start -->
    <Color x:Key="EvilLion15.Thumb.GradientStart">#4F4F4F</Color>
    <!-- [ThumbGradientEnd] 썸 그라디언트 끝색 / Thumb gradient end -->
    <Color x:Key="EvilLion15.Thumb.GradientEnd">#2B2B2B</Color>
    <!-- [ThumbBorderColor] 썸 테두리색 / Thumb border color -->
    <SolidColorBrush x:Key="EvilLion15.Thumb.BorderBrush" Color="#1A1A1A"/>

    <!-- Thumb Inner Part Colors -->
    <!-- [ThumbPartGradientStart] 썸 파트 그라디언트 시작 / Thumb part gradient start -->
    <Color x:Key="EvilLion15.ThumbPart.GradientStart">#66303030</Color>
    <!-- [ThumbPartGradientEnd] 썸 파트 그라디언트 끝 / Thumb part gradient end -->
    <Color x:Key="EvilLion15.ThumbPart.GradientEnd">#66222222</Color>

    <!-- Left Indicator (Red/Active) -->
    <!-- [LeftIndicatorGradientCenter] 왼쪽 인디케이터 중심색 / Left indicator center color -->
    <Color x:Key="EvilLion15.LeftIndicator.GradientCenter">#744E4E</Color>
    <!-- [LeftIndicatorGradientOuter] 왼쪽 인디케이터 외곽색 / Left indicator outer color -->
    <Color x:Key="EvilLion15.LeftIndicator.GradientOuter">#FF7171</Color>
    <!-- [LeftIndicatorBorderColor] 왼쪽 인디케이터 테두리 / Left indicator border -->
    <SolidColorBrush x:Key="EvilLion15.LeftIndicator.BorderBrush" Color="#742323"/>

    <!-- Right Indicator (Gray/Inactive) -->
    <!-- [RightIndicatorGradientCenter] 오른쪽 인디케이터 중심색 / Right indicator center color -->
    <Color x:Key="EvilLion15.RightIndicator.GradientCenter">#993C3C3C</Color>
    <!-- [RightIndicatorGradientOuter] 오른쪽 인디케이터 외곽색 / Right indicator outer color -->
    <Color x:Key="EvilLion15.RightIndicator.GradientOuter">#99979797</Color>
    <!-- [RightIndicatorBorderColor] 오른쪽 인디케이터 테두리 / Right indicator border -->
    <SolidColorBrush x:Key="EvilLion15.RightIndicator.BorderBrush" Color="#111111"/>

    <!-- Animation Duration -->
    <!-- [TransitionDuration] 전환 애니메이션 시간 / Transition animation duration -->
    <Duration x:Key="EvilLion15.TransitionDuration">0:0:0.2</Duration>

</ResourceDictionary>
