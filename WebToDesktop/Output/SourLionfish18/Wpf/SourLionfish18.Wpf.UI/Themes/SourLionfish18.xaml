<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:SourLionfish18.Wpf.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/SourLionfish18.Wpf.UI;component/Themes/SourLionfish18Resources.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!--
    SourLionfish18 체크박스 스타일
    SourLionfish18 checkbox style
    From Uiverse.io by mobinkakei

    CSS → WPF 변환:
    - ::after pseudo-element → Border (L자 체크마크, border-right + border-bottom)
    - transform: rotateZ(40deg) → RotateTransform Angle="40"
    - transform: scale(10) → ScaleTransform (애니메이션으로 10→1)
    - transition: 0.4s → Duration="0:0:0.4"
    -->

    <Style TargetType="{x:Type controls:SourLionfish18}">
        <Setter Property="Width" Value="{StaticResource SourLionfish18.Size}"/>
        <Setter Property="Height" Value="{StaticResource SourLionfish18.Size}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:SourLionfish18}">
                    <!--
                    배경 Border + 체크마크
                    Background Border + Checkmark
                    -->
                    <Border x:Name="BackgroundBorder"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            Background="{StaticResource SourLionfish18.Background.Unchecked}"
                            CornerRadius="{StaticResource SourLionfish18.CornerRadius}">

                        <!--
                        체크마크: CSS ::after를 Border로 구현
                        - border-right: 3px solid #fff → BorderThickness="0,0,3,3"의 오른쪽
                        - border-bottom: 3px solid #fff → BorderThickness="0,0,3,3"의 아래쪽
                        - transform: rotateZ(40deg) → RotateTransform Angle="40"

                        Checkmark: CSS ::after implemented as Border
                        - border-right: 3px solid #fff → right side of BorderThickness="0,0,3,3"
                        - border-bottom: 3px solid #fff → bottom side of BorderThickness="0,0,3,3"
                        - transform: rotateZ(40deg) → RotateTransform Angle="40"
                        -->
                        <Border x:Name="Checkmark"
                                Width="{StaticResource SourLionfish18.Checkmark.Width}"
                                Height="{StaticResource SourLionfish18.Checkmark.Height}"
                                BorderBrush="{StaticResource SourLionfish18.Checkmark.Stroke}"
                                BorderThickness="0,0,3,3"
                                Opacity="0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="0,-2,0,0"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <TransformGroup>
                                    <RotateTransform x:Name="CheckmarkRotate" Angle="40"/>
                                    <ScaleTransform x:Name="CheckmarkScale" ScaleX="10" ScaleY="10"/>
                                </TransformGroup>
                            </Border.RenderTransform>
                        </Border>
                    </Border>

                    <ControlTemplate.Triggers>
                        <!--
                        체크 시: 배경색 변경 + 체크마크 표시 애니메이션
                        When checked: Background color change + checkmark show animation
                        -->
                        <Trigger Property="IsChecked" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- 배경색: #ddd → #08bb68 / Background: #ddd → #08bb68 -->
                                        <ColorAnimation Storyboard.TargetName="BackgroundBorder"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#08BB68"
                                                        Duration="0:0:0.4"/>
                                        <!-- 체크마크 나타남 / Checkmark appear -->
                                        <DoubleAnimation Storyboard.TargetName="Checkmark"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1"
                                                         Duration="0:0:0.4"/>
                                        <!-- 스케일: 10 → 1 / Scale: 10 → 1 -->
                                        <DoubleAnimation Storyboard.TargetName="CheckmarkScale"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="1"
                                                         Duration="0:0:0.4"/>
                                        <DoubleAnimation Storyboard.TargetName="CheckmarkScale"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="1"
                                                         Duration="0:0:0.4"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- 배경색: #08bb68 → #ddd / Background: #08bb68 → #ddd -->
                                        <ColorAnimation Storyboard.TargetName="BackgroundBorder"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#DDDDDD"
                                                        Duration="0:0:0.4"/>
                                        <!-- 체크마크 사라짐 / Checkmark disappear -->
                                        <DoubleAnimation Storyboard.TargetName="Checkmark"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0"
                                                         Duration="0:0:0.4"/>
                                        <!-- 스케일: 1 → 10 / Scale: 1 → 10 -->
                                        <DoubleAnimation Storyboard.TargetName="CheckmarkScale"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="10"
                                                         Duration="0:0:0.4"/>
                                        <DoubleAnimation Storyboard.TargetName="CheckmarkScale"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="10"
                                                         Duration="0:0:0.4"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
