<Window x:Class="SpottyElephant13.Wpf.Gallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:SpottyElephant13.Wpf.UI.Controls;assembly=SpottyElephant13.Wpf.UI"
        mc:Ignorable="d"
        Title="SpottyElephant13 - Pulse Checkbox Gallery"
        Height="450" Width="800"
        Background="#1a1a2e">
    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
            <!-- 여러 체크박스 데모 / Multiple checkbox demo -->
            <controls:SpottyElephant13 Margin="20" />
            <controls:SpottyElephant13 Margin="20" IsChecked="True" />
            <controls:SpottyElephant13 Margin="20" />
            <controls:SpottyElephant13 Margin="20" IsChecked="True" />
            <controls:SpottyElephant13 Margin="20" />
        </StackPanel>
    </Grid>
</Window>
