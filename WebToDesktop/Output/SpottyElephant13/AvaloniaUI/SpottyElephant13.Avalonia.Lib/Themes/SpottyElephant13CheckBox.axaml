<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:SpottyElephant13.Avalonia.Lib.Controls">

    <!-- 색상 리소스 / Color Resources -->
    <Color x:Key="SpottyElephant13.CheckedColor">#0B6E4F</Color>
    <Color x:Key="SpottyElephant13.UncheckedColor">#CCCCCC</Color>
    <Color x:Key="SpottyElephant13.CheckmarkColor">#E0E0E2</Color>
    <Color x:Key="SpottyElephant13.PulseShadowColor">#900B6E4F</Color>

    <SolidColorBrush x:Key="SpottyElephant13.CheckedBrush" Color="{StaticResource SpottyElephant13.CheckedColor}"/>
    <SolidColorBrush x:Key="SpottyElephant13.UncheckedBrush" Color="{StaticResource SpottyElephant13.UncheckedColor}"/>
    <SolidColorBrush x:Key="SpottyElephant13.CheckmarkBrush" Color="{StaticResource SpottyElephant13.CheckmarkColor}"/>

    <!-- 크기 리소스 / Size Resources -->
    <!-- 기본 폰트 크기 1.5rem = 18px (12 * 1.5), 1.3em = 23.4px -->
    <x:Double x:Key="SpottyElephant13.Size">24</x:Double>
    <x:Double x:Key="SpottyElephant13.CheckmarkWidth">4.5</x:Double>
    <x:Double x:Key="SpottyElephant13.CheckmarkHeight">9</x:Double>
    <x:Double x:Key="SpottyElephant13.CheckmarkBorderThickness">2.7</x:Double>
    <CornerRadius x:Key="SpottyElephant13.UncheckedCornerRadius">12</CornerRadius>
    <CornerRadius x:Key="SpottyElephant13.CheckedCornerRadius">6</CornerRadius>

    <!-- 체크박스 스타일 / CheckBox Style -->
    <ControlTheme x:Key="{x:Type controls:SpottyElephant13CheckBox}" TargetType="controls:SpottyElephant13CheckBox">
        <Setter Property="Width" Value="{StaticResource SpottyElephant13.Size}"/>
        <Setter Property="Height" Value="{StaticResource SpottyElephant13.Size}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Background" Value="{StaticResource SpottyElephant13.UncheckedBrush}"/>
        <Setter Property="CornerRadius" Value="{StaticResource SpottyElephant13.UncheckedCornerRadius}"/>
        <Setter Property="ClipToBounds" Value="False"/>
        <Setter Property="Template">
            <ControlTemplate>
                <Panel>
                    <!-- 배경 원/사각형 / Background circle/rectangle -->
                    <Border x:Name="PART_Background"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            RenderTransformOrigin="0.5,0.5">
                        <Border.Transitions>
                            <Transitions>
                                <CornerRadiusTransition Property="CornerRadius" Duration="0:0:0.3"/>
                                <BrushTransition Property="Background" Duration="0:0:0.3"/>
                            </Transitions>
                        </Border.Transitions>
                    </Border>

                    <!-- 체크마크 (45도 회전된 L자 모양) / Checkmark (45-degree rotated L-shape) -->
                    <Border x:Name="PART_Checkmark"
                            Width="{StaticResource SpottyElephant13.CheckmarkWidth}"
                            Height="{StaticResource SpottyElephant13.CheckmarkHeight}"
                            BorderBrush="{StaticResource SpottyElephant13.CheckmarkBrush}"
                            BorderThickness="0,0,2.7,2.7"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="0,-2,0,0"
                            IsVisible="False"
                            RenderTransformOrigin="0.5,0.5">
                        <Border.RenderTransform>
                            <RotateTransform Angle="45"/>
                        </Border.RenderTransform>
                    </Border>
                </Panel>
            </ControlTemplate>
        </Setter>

        <!-- Checked 상태 / Checked state -->
        <Style Selector="^:checked">
            <Setter Property="Background" Value="{StaticResource SpottyElephant13.CheckedBrush}"/>
            <Setter Property="CornerRadius" Value="{StaticResource SpottyElephant13.CheckedCornerRadius}"/>

            <Style Selector="^ /template/ Border#PART_Checkmark">
                <Setter Property="IsVisible" Value="True"/>
            </Style>

            <!-- 펄스 애니메이션 / Pulse animation -->
            <Style Selector="^ /template/ Border#PART_Background">
                <Style.Animations>
                    <Animation Duration="0:0:0.5" Easing="CubicEaseInOut" FillMode="Forward">
                        <KeyFrame Cue="0%">
                            <Setter Property="BoxShadow" Value="0 0 0 0 #900B6E4F"/>
                            <Setter Property="RenderTransform">
                                <RotateTransform Angle="20"/>
                            </Setter>
                        </KeyFrame>
                        <KeyFrame Cue="50%">
                            <Setter Property="RenderTransform">
                                <RotateTransform Angle="-20"/>
                            </Setter>
                        </KeyFrame>
                        <KeyFrame Cue="75%">
                            <Setter Property="BoxShadow" Value="0 0 0 10 #600B6E4F"/>
                        </KeyFrame>
                        <KeyFrame Cue="100%">
                            <Setter Property="BoxShadow" Value="0 0 0 13 #300B6E4F"/>
                            <Setter Property="RenderTransform">
                                <RotateTransform Angle="0"/>
                            </Setter>
                        </KeyFrame>
                    </Animation>
                </Style.Animations>
            </Style>
        </Style>

        <!-- Unchecked 상태 / Unchecked state -->
        <Style Selector="^:unchecked">
            <Style Selector="^ /template/ Border#PART_Checkmark">
                <Setter Property="IsVisible" Value="False"/>
            </Style>
        </Style>

        <!-- PointerOver 상태 / PointerOver state -->
        <Style Selector="^:pointerover /template/ Border#PART_Background">
            <Setter Property="Opacity" Value="0.9"/>
        </Style>

        <!-- Pressed 상태 / Pressed state -->
        <Style Selector="^:pressed /template/ Border#PART_Background">
            <Setter Property="Opacity" Value="0.8"/>
        </Style>

    </ControlTheme>

</ResourceDictionary>
