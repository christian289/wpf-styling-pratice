<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:RedGoat27.Avalonia.Lib.Controls"
        x:Class="RedGoat27.Avalonia.Gallery.MainWindow"
        Title="RedGoat27 - Notification Gallery"
        Width="400" Height="350"
        Background="#1a1a2e">

    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="30">

        <!-- Default Notification -->
        <controls:NotificationControl />

        <!-- Custom Notification -->
        <controls:NotificationControl Title="Achievement Unlocked!"
                                       Message="You completed all tasks!" />

    </StackPanel>

</Window>
