<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:YellowFalcon57.Wpf.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/YellowFalcon57.Wpf.UI;component/Themes/YellowFalcon57Resources.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type controls:YellowFalcon57}">
        <Setter Property="Width" Value="{StaticResource YellowFalcon57.Size.Button}"/>
        <Setter Property="Height" Value="{StaticResource YellowFalcon57.Size.Button}"/>
        <Setter Property="Background" Value="{StaticResource YellowFalcon57.Brush.Background}"/>
        <Setter Property="BorderBrush" Value="{StaticResource YellowFalcon57.Brush.Border}"/>
        <Setter Property="BorderThickness" Value="{StaticResource YellowFalcon57.BorderThickness}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:YellowFalcon57}">
                    <Border x:Name="PART_Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource YellowFalcon57.CornerRadius}">
                        <Grid>
                            <!-- 다운로드 아이콘 -->
                            <!-- Download icon -->
                            <Path x:Name="PART_Icon"
                                  Width="{StaticResource YellowFalcon57.Size.Icon}"
                                  Height="{StaticResource YellowFalcon57.Size.Icon}"
                                  Data="{StaticResource YellowFalcon57.Icon.Download}"
                                  Fill="{StaticResource YellowFalcon57.Brush.IconFill}"
                                  Stretch="Uniform"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Hover 상태 -->
                        <!-- Hover state -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- 배경색 전환: 0.2s -->
                                        <!-- Background transition: 0.2s -->
                                        <ColorAnimation Storyboard.TargetName="PART_Border"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="{StaticResource YellowFalcon57.Color.Primary}"
                                                        Duration="0:0:0.2"/>
                                        <!-- 아이콘 색상 전환: 0.3s -->
                                        <!-- Icon color transition: 0.3s -->
                                        <ColorAnimation Storyboard.TargetName="PART_Icon"
                                                        Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                                        To="{StaticResource YellowFalcon57.Color.IconFillHover}"
                                                        Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- 배경색 복귀: 0.2s -->
                                        <!-- Background revert: 0.2s -->
                                        <ColorAnimation Storyboard.TargetName="PART_Border"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="{StaticResource YellowFalcon57.Color.Background}"
                                                        Duration="0:0:0.2"/>
                                        <!-- 아이콘 색상 복귀: 0.3s -->
                                        <!-- Icon color revert: 0.3s -->
                                        <ColorAnimation Storyboard.TargetName="PART_Icon"
                                                        Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                                        To="{StaticResource YellowFalcon57.Color.IconFill}"
                                                        Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
