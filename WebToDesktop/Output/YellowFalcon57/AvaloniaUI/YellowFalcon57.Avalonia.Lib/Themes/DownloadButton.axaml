<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:YellowFalcon57.Avalonia.Lib.Controls">

    <!-- From Uiverse.io by faxriddin20 - Tags: purple, button, download, #button -->

    <!-- Colors -->
    <Color x:Key="DownloadButton.Purple">#A826FF</Color>
    <Color x:Key="DownloadButton.White">#FFFFFF</Color>
    <Color x:Key="DownloadButton.IconDefault">#000000</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="DownloadButton.BorderBrush" Color="{StaticResource DownloadButton.Purple}" />
    <SolidColorBrush x:Key="DownloadButton.BackgroundDefault" Color="{StaticResource DownloadButton.White}" />
    <SolidColorBrush x:Key="DownloadButton.BackgroundHover" Color="{StaticResource DownloadButton.Purple}" />
    <SolidColorBrush x:Key="DownloadButton.IconBrushDefault" Color="{StaticResource DownloadButton.IconDefault}" />
    <SolidColorBrush x:Key="DownloadButton.IconBrushHover" Color="{StaticResource DownloadButton.White}" />

    <!-- Download Icon Path Data -->
    <StreamGeometry x:Key="DownloadButton.IconGeometry">M14.29,17.29 L13,18.59 L13,13 C13,12.45 12.55,12 12,12 C11.45,12 11,12.45 11,13 L11,18.59 L9.71,17.29 C9.32,16.9 8.68,16.9 8.29,17.29 C7.9,17.68 7.9,18.32 8.29,18.71 L11.29,21.71 C11.39,21.81 11.51,21.89 11.62,21.92 C11.86,22.03 12.14,22.03 12.38,21.92 C12.49,21.89 12.61,21.81 12.71,21.71 L15.71,18.71 C16.1,18.32 16.1,17.68 15.71,17.29 C15.32,16.9 14.68,16.9 14.29,17.29 Z M18.42,6.22 C17.71,3.77 15.5,2 12.85,2 C10.11,2 7.78,3.64 6.91,6.03 C6.91,6.05 6.32,6.11 5.06,8.11 C3.24,8.55 2,10.14 2,12 C2,14.21 3.79,16 6,16 C6.55,16 7,15.55 7,15 C7,14.45 6.55,14 6,14 C4.9,14 4,13.1 4,12 C4,10.9 4.9,10 6,10 C6.55,10 7,9.55 7,9 C7,6.24 9.24,4 12,4 C14.18,4 16.08,5.44 16.73,7.39 C16.86,7.76 17.18,8.03 17.57,8.06 C19.3,8.2 20.64,9.64 20.64,11.39 C20.64,12.97 19.57,14.36 18.05,14.73 C17.51,14.87 17.19,15.41 17.33,15.95 C17.44,16.39 17.84,16.67 18.28,16.67 C18.36,16.67 18.44,16.66 18.52,16.64 C20.82,16.06 22.41,13.97 22.41,11.39 C22.41,8.53 20.59,6.49 18.42,6.22 Z</StreamGeometry>

    <!-- DownloadButton Style -->
    <ControlTheme x:Key="{x:Type controls:DownloadButton}" TargetType="controls:DownloadButton">
        <Setter Property="Width" Value="50" />
        <Setter Property="Height" Value="50" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border x:Name="PART_Border"
                        Background="{StaticResource DownloadButton.BackgroundDefault}"
                        BorderBrush="{StaticResource DownloadButton.BorderBrush}"
                        BorderThickness="2"
                        CornerRadius="10">
                    <Path x:Name="PART_Icon"
                          Width="25"
                          Height="25"
                          Data="{StaticResource DownloadButton.IconGeometry}"
                          Fill="{StaticResource DownloadButton.IconBrushDefault}"
                          Stretch="Uniform"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center" />
                </Border>
            </ControlTemplate>
        </Setter>

        <!-- PointerOver State -->
        <Style Selector="^:pointerover /template/ Border#PART_Border">
            <Style.Animations>
                <Animation Duration="0:0:0.2" Easing="CubicEaseOut" FillMode="Forward">
                    <KeyFrame Cue="100%">
                        <Setter Property="Background" Value="{StaticResource DownloadButton.BackgroundHover}" />
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <Style Selector="^:pointerover /template/ Path#PART_Icon">
            <Style.Animations>
                <Animation Duration="0:0:0.3" Easing="CubicEaseOut" FillMode="Forward">
                    <KeyFrame Cue="100%">
                        <Setter Property="Fill" Value="{StaticResource DownloadButton.IconBrushHover}" />
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <!-- Not PointerOver State (Return to default) -->
        <Style Selector="^:not(:pointerover) /template/ Border#PART_Border">
            <Style.Animations>
                <Animation Duration="0:0:0.2" Easing="CubicEaseOut" FillMode="Forward">
                    <KeyFrame Cue="100%">
                        <Setter Property="Background" Value="{StaticResource DownloadButton.BackgroundDefault}" />
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <Style Selector="^:not(:pointerover) /template/ Path#PART_Icon">
            <Style.Animations>
                <Animation Duration="0:0:0.3" Easing="CubicEaseOut" FillMode="Forward">
                    <KeyFrame Cue="100%">
                        <Setter Property="Fill" Value="{StaticResource DownloadButton.IconBrushDefault}" />
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
    </ControlTheme>

</ResourceDictionary>
