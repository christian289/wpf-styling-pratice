<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:YellowFalcon57.Avalonia.Lib.Controls"
        x:Class="YellowFalcon57.Avalonia.Gallery.MainWindow"
        Title="YellowFalcon57 - DownloadButton Gallery"
        Width="400"
        Height="300"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#F5F5F5">
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="20">

            <TextBlock Text="Download Button"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center" />

            <TextBlock Text="From Uiverse.io by faxriddin20"
                       FontSize="12"
                       Foreground="#666666"
                       HorizontalAlignment="Center" />

            <!-- Download Button Control -->
            <controls:DownloadButton HorizontalAlignment="Center" />

            <TextBlock Text="Hover to see animation"
                       FontSize="12"
                       Foreground="#999999"
                       HorizontalAlignment="Center" />

        </StackPanel>
    </Grid>

</Window>
