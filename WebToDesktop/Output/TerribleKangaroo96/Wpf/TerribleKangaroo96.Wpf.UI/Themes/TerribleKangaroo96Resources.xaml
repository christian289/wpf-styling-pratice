<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Colors -->
    <!-- 테두리 및 체크 시 배경색 #212fab -->
    <!-- Border and checked background color #212fab -->
    <Color x:Key="TerribleKangaroo96.Color.Primary">#212fab</Color>

    <!-- 체크마크 색상 #ffffff -->
    <!-- Checkmark color #ffffff -->
    <Color x:Key="TerribleKangaroo96.Color.Checkmark">#ffffff</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="TerribleKangaroo96.Brush.Border" Color="{StaticResource TerribleKangaroo96.Color.Primary}" />
    <SolidColorBrush x:Key="TerribleKangaroo96.Brush.CheckedBackground" Color="{StaticResource TerribleKangaroo96.Color.Primary}" />
    <SolidColorBrush x:Key="TerribleKangaroo96.Brush.Checkmark" Color="{StaticResource TerribleKangaroo96.Color.Checkmark}" />
    <SolidColorBrush x:Key="TerribleKangaroo96.Brush.UncheckedBackground" Color="Transparent" />

    <!-- Sizes -->
    <!-- 컨트롤 크기 30x30 -->
    <!-- Control size 30x30 -->
    <sys:Double x:Key="TerribleKangaroo96.Size.Width">30</sys:Double>
    <sys:Double x:Key="TerribleKangaroo96.Size.Height">30</sys:Double>

    <!-- 테두리 두께 2px -->
    <!-- Border thickness 2px -->
    <sys:Double x:Key="TerribleKangaroo96.Size.BorderThickness">2</sys:Double>

    <!-- 체크마크 두께 4px -->
    <!-- Checkmark thickness 4px -->
    <sys:Double x:Key="TerribleKangaroo96.Size.CheckmarkThickness">4</sys:Double>

    <!-- 체크마크 크기 (6x12) -->
    <!-- Checkmark size (6x12) -->
    <sys:Double x:Key="TerribleKangaroo96.Size.CheckmarkWidth">6</sys:Double>
    <sys:Double x:Key="TerribleKangaroo96.Size.CheckmarkHeight">12</sys:Double>

    <!-- CornerRadius (원형) -->
    <!-- CornerRadius (circular) -->
    <CornerRadius x:Key="TerribleKangaroo96.CornerRadius">15</CornerRadius>

    <!-- Animation Duration -->
    <!-- 애니메이션 지속시간 0.3초 -->
    <!-- Animation duration 0.3s -->
    <Duration x:Key="TerribleKangaroo96.Duration.Transition">0:0:0.3</Duration>

</ResourceDictionary>
