<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:TerribleKangaroo96.Wpf.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/TerribleKangaroo96.Wpf.UI;component/Themes/TerribleKangaroo96Resources.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type controls:TerribleKangaroo96}">
        <Setter Property="Width" Value="{StaticResource TerribleKangaroo96.Size.Width}" />
        <Setter Property="Height" Value="{StaticResource TerribleKangaroo96.Size.Height}" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Background" Value="{StaticResource TerribleKangaroo96.Brush.UncheckedBackground}" />
        <Setter Property="BorderBrush" Value="{StaticResource TerribleKangaroo96.Brush.Border}" />
        <Setter Property="BorderThickness" Value="{StaticResource TerribleKangaroo96.Size.BorderThickness}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:TerribleKangaroo96}">
                    <Grid>
                        <!-- 외곽 원형 테두리 -->
                        <!-- Outer circular border -->
                        <Border x:Name="PART_Border"
                                Width="{TemplateBinding Width}"
                                Height="{TemplateBinding Height}"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{StaticResource TerribleKangaroo96.CornerRadius}">

                            <!-- 체크마크 (::after pseudo-element 대체) -->
                            <!-- Checkmark (replacement for ::after pseudo-element) -->
                            <!-- CSS: border-right + border-bottom으로 L자 모양 체크마크 구현 -->
                            <!-- CSS: L-shaped checkmark using border-right + border-bottom -->
                            <Grid x:Name="PART_CheckmarkContainer"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Opacity="0"
                                  RenderTransformOrigin="0.5,0.5">
                                <Grid.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform x:Name="CheckmarkScale" ScaleX="0" ScaleY="0" />
                                        <RotateTransform x:Name="CheckmarkRotate" Angle="45" />
                                    </TransformGroup>
                                </Grid.RenderTransform>

                                <!-- L자 체크마크: border-right(4px) + border-bottom(4px) -->
                                <!-- L-shaped checkmark: border-right(4px) + border-bottom(4px) -->
                                <Grid Width="{StaticResource TerribleKangaroo96.Size.CheckmarkWidth}"
                                      Height="{StaticResource TerribleKangaroo96.Size.CheckmarkHeight}"
                                      Margin="-1,0,0,-2">
                                    <!-- 수직선 (border-right) -->
                                    <!-- Vertical line (border-right) -->
                                    <Border HorizontalAlignment="Right"
                                            Width="{StaticResource TerribleKangaroo96.Size.CheckmarkThickness}"
                                            Background="{StaticResource TerribleKangaroo96.Brush.Checkmark}" />
                                    <!-- 수평선 (border-bottom) -->
                                    <!-- Horizontal line (border-bottom) -->
                                    <Border VerticalAlignment="Bottom"
                                            Height="{StaticResource TerribleKangaroo96.Size.CheckmarkThickness}"
                                            Background="{StaticResource TerribleKangaroo96.Brush.Checkmark}" />
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- 체크 상태 트리거 -->
                        <!-- Checked state trigger -->
                        <Trigger Property="IsChecked" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- 배경색 변경: 투명 → #212fab -->
                                        <!-- Background change: transparent → #212fab -->
                                        <ColorAnimation Storyboard.TargetName="PART_Border"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="{StaticResource TerribleKangaroo96.Color.Primary}"
                                                        Duration="0:0:0.3" />

                                        <!-- 테두리 제거 -->
                                        <!-- Border removal -->
                                        <ThicknessAnimation Storyboard.TargetName="PART_Border"
                                                            Storyboard.TargetProperty="BorderThickness"
                                                            To="0"
                                                            Duration="0:0:0.3" />

                                        <!-- 체크마크 표시 -->
                                        <!-- Checkmark display -->
                                        <DoubleAnimation Storyboard.TargetName="PART_CheckmarkContainer"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1"
                                                         Duration="0:0:0.3" />

                                        <!-- 체크마크 스케일 애니메이션: scale(0) → scale(1) -->
                                        <!-- Checkmark scale animation: scale(0) → scale(1) -->
                                        <DoubleAnimation Storyboard.TargetName="CheckmarkScale"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="1"
                                                         Duration="0:0:0.3" />
                                        <DoubleAnimation Storyboard.TargetName="CheckmarkScale"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="1"
                                                         Duration="0:0:0.3" />

                                        <!-- 체크마크 회전: 45deg → 50deg -->
                                        <!-- Checkmark rotation: 45deg → 50deg -->
                                        <DoubleAnimation Storyboard.TargetName="CheckmarkRotate"
                                                         Storyboard.TargetProperty="Angle"
                                                         To="50"
                                                         Duration="0:0:0.3" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- 배경색 복원: #212fab → 투명 -->
                                        <!-- Background restore: #212fab → transparent -->
                                        <ColorAnimation Storyboard.TargetName="PART_Border"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="Transparent"
                                                        Duration="0:0:0.3" />

                                        <!-- 테두리 복원 -->
                                        <!-- Border restore -->
                                        <ThicknessAnimation Storyboard.TargetName="PART_Border"
                                                            Storyboard.TargetProperty="BorderThickness"
                                                            To="2"
                                                            Duration="0:0:0.3" />

                                        <!-- 체크마크 숨김 -->
                                        <!-- Checkmark hide -->
                                        <DoubleAnimation Storyboard.TargetName="PART_CheckmarkContainer"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0"
                                                         Duration="0:0:0.3" />

                                        <!-- 체크마크 스케일 복원: scale(1) → scale(0) -->
                                        <!-- Checkmark scale restore: scale(1) → scale(0) -->
                                        <DoubleAnimation Storyboard.TargetName="CheckmarkScale"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="0"
                                                         Duration="0:0:0.3" />
                                        <DoubleAnimation Storyboard.TargetName="CheckmarkScale"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="0"
                                                         Duration="0:0:0.3" />

                                        <!-- 체크마크 회전 복원: 50deg → 45deg -->
                                        <!-- Checkmark rotation restore: 50deg → 45deg -->
                                        <DoubleAnimation Storyboard.TargetName="CheckmarkRotate"
                                                         Storyboard.TargetProperty="Angle"
                                                         To="45"
                                                         Duration="0:0:0.3" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
