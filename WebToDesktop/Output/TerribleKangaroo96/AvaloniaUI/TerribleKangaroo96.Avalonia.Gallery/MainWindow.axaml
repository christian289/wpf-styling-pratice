<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:TerribleKangaroo96.Avalonia.Lib.Controls"
        x:Class="TerribleKangaroo96.Avalonia.Gallery.MainWindow"
        Title="TerribleKangaroo96 - Circle CheckBox Gallery"
        Width="400"
        Height="300"
        Background="#1a1a2e">

    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="20">

        <TextBlock Text="Circle CheckBox Demo"
                   Foreground="White"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"/>

        <StackPanel Orientation="Horizontal" Spacing="30">
            <!-- 체크박스 샘플들 / CheckBox samples -->
            <controls:CircleCheckBox/>
            <controls:CircleCheckBox IsChecked="True"/>
            <controls:CircleCheckBox/>
        </StackPanel>

        <TextBlock Text="클릭하여 토글 / Click to toggle"
                   Foreground="#888888"
                   FontSize="12"
                   HorizontalAlignment="Center"/>

    </StackPanel>

</Window>
