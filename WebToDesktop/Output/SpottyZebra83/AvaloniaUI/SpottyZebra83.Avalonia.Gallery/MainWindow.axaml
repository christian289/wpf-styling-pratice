<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:SpottyZebra83.Avalonia.Lib.Controls"
        x:Class="SpottyZebra83.Avalonia.Gallery.MainWindow"
        Title="SpottyZebra83 - TooltipButton Gallery"
        Width="600"
        Height="400"
        Background="#1a1a2e">

    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="40">

        <TextBlock Text="TooltipButton Gallery"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20" />

        <!-- Default TooltipButton -->
        <controls:TooltipButton />

        <!-- Custom TooltipButton -->
        <controls:TooltipButton Text="HOVER ME"
                                TooltipText="Custom Tooltip"
                                HoverText="Welcome!" />

    </StackPanel>

</Window>
