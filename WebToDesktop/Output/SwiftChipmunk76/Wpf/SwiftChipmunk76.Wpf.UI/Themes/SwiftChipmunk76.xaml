<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:SwiftChipmunk76.Wpf.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/SwiftChipmunk76.Wpf.UI;component/Themes/SwiftChipmunk76Resources.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!--
    SwiftChipmunk76 Rating Control Style
    Based on: https://uiverse.io/PriyanshuGupta28/swift-chipmunk-76

    CSS 변환 매핑:
    - .rating { display: inline-block } → HorizontalAlignment="Left"
    - .rating label { float: right } → StackPanel (FlowDirection="LeftToRight")
    - .rating label:before { content: '\2605'; font-size: 30px } → TextBlock with ★, FontSize=30
    - .rating label { color: #ccc } → Foreground="#CCCCCC" (기본 상태)
    - .rating input:checked ~ label, .rating label:hover { color: #6f00ff } → Foreground="#6F00FF" (선택/호버)
    - .rating label { transition: color 0.3s } → ColorAnimation Duration="0:0:0.3"
    -->

    <!-- Star ToggleButton Style -->
    <Style x:Key="SwiftChipmunk76.StarButtonStyle" TargetType="{x:Type ToggleButton}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Margin" Value="{StaticResource SwiftChipmunk76.Star.Margin}"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ToggleButton}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <TextBlock x:Name="StarText"
                                   Text="{StaticResource SwiftChipmunk76.Star.Character}"
                                   FontSize="{StaticResource SwiftChipmunk76.Star.FontSize}"
                                   Foreground="{StaticResource SwiftChipmunk76.Star.Normal}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Style.Triggers>
                                        <!--
                                        CSS: transition: color 0.3s
                                        WPF: ColorAnimation with Duration="0:0:0.3"
                                        -->
                                        <EventTrigger RoutedEvent="MouseEnter">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimation Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                                                    To="#6F00FF"
                                                                    Duration="0:0:0.3"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!--
                        CSS: .rating input:checked ~ label { color: #6f00ff }
                        WPF: IsChecked=True → Foreground="#6F00FF"
                        -->
                        <Trigger Property="IsChecked" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="StarText"
                                                        Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                                        To="#6F00FF"
                                                        Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="StarText"
                                                        Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                                        To="#CCCCCC"
                                                        Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- SwiftChipmunk76 Rating Control Style -->
    <Style TargetType="{x:Type controls:SwiftChipmunk76}">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Focusable" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:SwiftChipmunk76}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <!--
                        CSS: .rating { display: inline-block }
                        CSS: .rating label { float: right }

                        원본 HTML에서 별은 5→1 순서로 배치되고 float: right로 뒤집힘.
                        WPF에서는 FlowDirection="LeftToRight"로 1→5 순서 배치.
                        -->
                        <StackPanel Orientation="Horizontal">
                            <ToggleButton x:Name="PART_Star1"
                                          Style="{StaticResource SwiftChipmunk76.StarButtonStyle}"/>
                            <ToggleButton x:Name="PART_Star2"
                                          Style="{StaticResource SwiftChipmunk76.StarButtonStyle}"/>
                            <ToggleButton x:Name="PART_Star3"
                                          Style="{StaticResource SwiftChipmunk76.StarButtonStyle}"/>
                            <ToggleButton x:Name="PART_Star4"
                                          Style="{StaticResource SwiftChipmunk76.StarButtonStyle}"/>
                            <ToggleButton x:Name="PART_Star5"
                                          Style="{StaticResource SwiftChipmunk76.StarButtonStyle}"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
