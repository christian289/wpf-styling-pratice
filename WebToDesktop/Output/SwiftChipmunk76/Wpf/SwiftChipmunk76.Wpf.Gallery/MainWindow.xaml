<Window x:Class="SwiftChipmunk76.Wpf.Gallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:SwiftChipmunk76.Wpf.UI.Controls;assembly=SwiftChipmunk76.Wpf.UI"
        mc:Ignorable="d"
        Title="SwiftChipmunk76 - Star Rating Control Gallery"
        Height="450" Width="800"
        Background="#1a1a2e">
    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <!-- Title -->
            <TextBlock Text="Star Rating Control"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>

            <!-- Rating Control Demo -->
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="Click stars to rate:"
                           FontSize="16"
                           Foreground="#888888"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <controls:SwiftChipmunk76 x:Name="RatingControl"
                                          HorizontalAlignment="Center"
                                          Value="3"
                                          Margin="0,0,0,20"/>

                <TextBlock x:Name="RatingText"
                           FontSize="18"
                           Foreground="#6f00ff"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>
            </StackPanel>

            <!-- Additional Demo with different initial values -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">

                <StackPanel Margin="0,0,40,0">
                    <TextBlock Text="Default (0 stars)"
                               FontSize="12"
                               Foreground="#666666"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>
                    <controls:SwiftChipmunk76 Value="0"/>
                </StackPanel>

                <StackPanel Margin="0,0,40,0">
                    <TextBlock Text="Pre-selected (4 stars)"
                               FontSize="12"
                               Foreground="#666666"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>
                    <controls:SwiftChipmunk76 Value="4"/>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Full (5 stars)"
                               FontSize="12"
                               Foreground="#666666"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>
                    <controls:SwiftChipmunk76 Value="5"/>
                </StackPanel>

            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
