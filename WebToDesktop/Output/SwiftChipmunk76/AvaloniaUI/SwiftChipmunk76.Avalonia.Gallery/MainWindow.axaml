<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:SwiftChipmunk76.Avalonia.Lib.Controls"
        x:Class="SwiftChipmunk76.Avalonia.Gallery.MainWindow"
        Title="SwiftChipmunk76 - Star Rating Gallery"
        Width="400"
        Height="300">

    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="20">

        <TextBlock Text="Star Rating Control"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center" />

        <TextBlock Text="From uiverse.io by PriyanshuGupta28"
                   FontSize="12"
                   Foreground="Gray"
                   HorizontalAlignment="Center" />

        <!-- 기본 StarRating -->
        <StackPanel Spacing="8">
            <TextBlock Text="Interactive Rating:" />
            <controls:StarRating x:Name="InteractiveRating" Value="3" />
            <TextBlock>
                <Run Text="Selected: " />
                <Run Text="{Binding Value, ElementName=InteractiveRating}" />
                <Run Text=" stars" />
            </TextBlock>
        </StackPanel>

        <!-- 읽기 전용 StarRating -->
        <StackPanel Spacing="8">
            <TextBlock Text="Read-Only Rating:" />
            <controls:StarRating Value="4" IsReadOnly="True" />
        </StackPanel>

    </StackPanel>

</Window>
