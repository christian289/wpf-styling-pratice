<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:GrumpyWombat18.Wpf.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/GrumpyWombat18.Wpf.UI;component/Themes/GrumpyWombat18Resources.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type controls:GrumpyWombat18}">
        <Setter Property="FontSize" Value="{StaticResource GrumpyWombat18.FontSize}" />
        <Setter Property="Foreground" Value="{StaticResource GrumpyWombat18.Foreground}" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="UncheckedText" Value="ball" />
        <Setter Property="CheckedText" Value="Game" />
        <Setter Property="UncheckedIcon">
            <Setter.Value>
                <Path Data="{StaticResource GrumpyWombat18.Icon.Unchecked}"
                      Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=controls:GrumpyWombat18}}"
                      Width="{StaticResource GrumpyWombat18.IconSize}"
                      Height="{StaticResource GrumpyWombat18.IconSize}"
                      Stretch="Uniform" />
            </Setter.Value>
        </Setter>
        <Setter Property="CheckedIcon">
            <Setter.Value>
                <Path Data="{StaticResource GrumpyWombat18.Icon.Checked}"
                      Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=controls:GrumpyWombat18}}"
                      Width="{StaticResource GrumpyWombat18.IconSize}"
                      Height="{StaticResource GrumpyWombat18.IconSize}"
                      Stretch="Uniform" />
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:GrumpyWombat18}">
                    <Border x:Name="PART_Root"
                            Background="{StaticResource GrumpyWombat18.Background.Unchecked}"
                            CornerRadius="{StaticResource GrumpyWombat18.CornerRadius}"
                            Padding="{StaticResource GrumpyWombat18.Padding}"
                            RenderTransformOrigin="0.5,0.5">
                        <Border.RenderTransform>
                            <ScaleTransform x:Name="RootScaleTransform" ScaleX="1" ScaleY="1" />
                        </Border.RenderTransform>

                        <Grid>
                            <!-- Hover overlay (::before pseudo-element) -->
                            <Border x:Name="PART_HoverOverlay"
                                    Background="Transparent"
                                    CornerRadius="{StaticResource GrumpyWombat18.CornerRadius}"
                                    Opacity="0.5" />

                            <!-- Content -->
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                <!-- Unchecked Icon -->
                                <ContentPresenter x:Name="PART_UncheckedIcon"
                                                  Content="{TemplateBinding UncheckedIcon}"
                                                  VerticalAlignment="Center" />

                                <!-- Unchecked Text -->
                                <TextBlock x:Name="PART_UncheckedText"
                                           Text="{TemplateBinding UncheckedText}"
                                           Foreground="{TemplateBinding Foreground}"
                                           FontSize="{TemplateBinding FontSize}"
                                           VerticalAlignment="Center"
                                           Margin="{StaticResource GrumpyWombat18.TextMargin}" />

                                <!-- Checked Icon -->
                                <ContentPresenter x:Name="PART_CheckedIcon"
                                                  Content="{TemplateBinding CheckedIcon}"
                                                  VerticalAlignment="Center"
                                                  Width="0"
                                                  Visibility="Hidden" />

                                <!-- Checked Text -->
                                <TextBlock x:Name="PART_CheckedText"
                                           Text="{TemplateBinding CheckedText}"
                                           Foreground="{TemplateBinding Foreground}"
                                           FontSize="{TemplateBinding FontSize}"
                                           VerticalAlignment="Center"
                                           Margin="{StaticResource GrumpyWombat18.TextMargin}"
                                           Visibility="Collapsed" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <!-- Hover State -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="RootScaleTransform"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="{StaticResource GrumpyWombat18.Scale.Hover}"
                                                         Duration="0:0:0.2" />
                                        <DoubleAnimation Storyboard.TargetName="RootScaleTransform"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="{StaticResource GrumpyWombat18.Scale.Hover}"
                                                         Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="RootScaleTransform"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="{StaticResource GrumpyWombat18.Scale.Normal}"
                                                         Duration="0:0:0.2" />
                                        <DoubleAnimation Storyboard.TargetName="RootScaleTransform"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="{StaticResource GrumpyWombat18.Scale.Normal}"
                                                         Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                            <Setter TargetName="PART_HoverOverlay" Property="Background" Value="{StaticResource GrumpyWombat18.Hover.Overlay}" />
                        </Trigger>

                        <!-- Pressed State -->
                        <Trigger Property="IsPressed" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="RootScaleTransform"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="{StaticResource GrumpyWombat18.Scale.Pressed}"
                                                         Duration="0:0:0.1" />
                                        <DoubleAnimation Storyboard.TargetName="RootScaleTransform"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="{StaticResource GrumpyWombat18.Scale.Pressed}"
                                                         Duration="0:0:0.1" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Setter TargetName="PART_Root" Property="CornerRadius" Value="{StaticResource GrumpyWombat18.CornerRadius.Pressed}" />
                        </Trigger>

                        <!-- Checked State -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="PART_Root" Property="Background" Value="{StaticResource GrumpyWombat18.Background.Checked}" />
                            <!-- Hide unchecked elements -->
                            <Setter TargetName="PART_UncheckedIcon" Property="Width" Value="0" />
                            <Setter TargetName="PART_UncheckedIcon" Property="Visibility" Value="Hidden" />
                            <Setter TargetName="PART_UncheckedText" Property="Visibility" Value="Collapsed" />
                            <!-- Show checked elements -->
                            <Setter TargetName="PART_CheckedIcon" Property="Width" Value="Auto" />
                            <Setter TargetName="PART_CheckedIcon" Property="Visibility" Value="Visible" />
                            <Setter TargetName="PART_CheckedText" Property="Visibility" Value="Visible" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
