<Window x:Class="GrumpyWombat18.Wpf.Gallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:GrumpyWombat18.Wpf.UI.Controls;assembly=GrumpyWombat18.Wpf.UI"
        mc:Ignorable="d"
        Title="GrumpyWombat18 - Checkbox Gallery"
        Height="450" Width="800"
        Background="#2D2D2D">
    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Vertical">
            <TextBlock Text="GrumpyWombat18 Checkbox"
                       Foreground="White"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30" />

            <TextBlock Text="Click to toggle between ball and Game"
                       Foreground="#AAAAAA"
                       FontSize="14"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20" />

            <controls:GrumpyWombat18 HorizontalAlignment="Center" />

            <TextBlock Text="Original by milegelu - uiverse.io"
                       Foreground="#666666"
                       FontSize="12"
                       HorizontalAlignment="Center"
                       Margin="0,40,0,0" />
        </StackPanel>
    </Grid>
</Window>
