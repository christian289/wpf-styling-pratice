    <!-- IconToggleButton Style -->
    <ControlTheme x:Key="{x:Type controls:IconToggleButton}" TargetType="controls:IconToggleButton">
        <Setter Property="Background" Value="{StaticResource IconToggleButton.Unchecked.Background.Brush}"/>
        <Setter Property="Foreground" Value="{StaticResource IconToggleButton.Foreground.Brush}"/>
        <Setter Property="UncheckedBackground" Value="{StaticResource IconToggleButton.Unchecked.Background.Brush}"/>
        <Setter Property="CheckedBackground" Value="{StaticResource IconToggleButton.Checked.Background.Brush}"/>
        <Setter Property="UncheckedIcon" Value="{StaticResource IconToggleButton.DribbbleBallIcon}"/>
        <Setter Property="CheckedIcon" Value="{StaticResource IconToggleButton.GameControllerIcon}"/>
        <Setter Property="FontSize" Value="{StaticResource IconToggleButton.FontSize}"/>
        <Setter Property="IconSize" Value="{StaticResource IconToggleButton.IconSize}"/>
        <Setter Property="Padding" Value="{StaticResource IconToggleButton.Padding}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="CornerRadius" Value="{StaticResource IconToggleButton.CornerRadius}"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="ClipToBounds" Value="False"/>
        <Setter Property="Template">
            <ControlTemplate>
                <Border x:Name="PART_RootBorder"
                        Background="{TemplateBinding Background}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        Padding="{TemplateBinding Padding}"
                        RenderTransformOrigin="0.5,0.5">
                    <Border.Transitions>
                        <Transitions>
                            <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2" Easing="QuadraticEaseOut"/>
                            <BrushTransition Property="Background" Duration="0:0:0.2"/>
                            <CornerRadiusTransition Property="CornerRadius" Duration="0:0:0.2"/>
                        </Transitions>
                    </Border.Transitions>

                    <Panel>
                        <!-- Hover Overlay (::before pseudo-element equivalent) -->
                        <Border x:Name="PART_HoverOverlay"
                                CornerRadius="{TemplateBinding CornerRadius}"
                                Background="Transparent"
                                Opacity="0.5"
                                IsHitTestVisible="False">
                            <Border.Transitions>
                                <Transitions>
                                    <BrushTransition Property="Background" Duration="0:0:0.2"/>
                                </Transitions>
                            </Border.Transitions>
                        </Border>

                        <!-- Content Container -->
                        <StackPanel x:Name="PART_ContentPanel"
                                    Orientation="Horizontal"
                                    Spacing="5"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    RenderTransformOrigin="0.5,0.5">
                            <StackPanel.Transitions>
                                <Transitions>
                                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2" Easing="QuadraticEaseOut"/>
                                </Transitions>
                            </StackPanel.Transitions>

                            <!-- Unchecked Icon -->
                            <Path x:Name="PART_UncheckedIcon"
                                  Data="{TemplateBinding UncheckedIcon}"
                                  Fill="{TemplateBinding Foreground}"
                                  Width="{TemplateBinding IconSize}"
                                  Height="{TemplateBinding IconSize}"
                                  Stretch="Uniform"
                                  RenderTransformOrigin="0.5,0.5">
                                <Path.Transitions>
                                    <Transitions>
                                        <DoubleTransition Property="Width" Duration="0:0:0.2"/>
                                        <DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
                                        <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2" Easing="QuadraticEaseOut"/>
                                    </Transitions>
                                </Path.Transitions>
                            </Path>

                            <!-- Unchecked Text -->
                            <TextBlock x:Name="PART_UncheckedText"
                                       Text="{TemplateBinding UncheckedText}"
                                       Foreground="{TemplateBinding Foreground}"
                                       FontSize="{TemplateBinding FontSize}"
                                       VerticalAlignment="Center"
                                       RenderTransformOrigin="0.5,0.5">
                                <TextBlock.Transitions>
                                    <Transitions>
                                        <DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
                                        <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2" Easing="QuadraticEaseOut"/>
                                    </Transitions>
                                </TextBlock.Transitions>
                            </TextBlock>

                            <!-- Checked Icon -->
                            <Path x:Name="PART_CheckedIcon"
                                  Data="{TemplateBinding CheckedIcon}"
                                  Fill="{TemplateBinding Foreground}"
                                  Width="0"
                                  Height="{TemplateBinding IconSize}"
                                  Stretch="Uniform"
                                  Opacity="0"
                                  RenderTransformOrigin="0.5,0.5">
                                <Path.Transitions>
                                    <Transitions>
                                        <DoubleTransition Property="Width" Duration="0:0:0.2"/>
                                        <DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
                                        <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2" Easing="QuadraticEaseOut"/>
                                    </Transitions>
                                </Path.Transitions>
                            </Path>

                            <!-- Checked Text -->
                            <TextBlock x:Name="PART_CheckedText"
                                       Text="{TemplateBinding CheckedText}"
                                       Foreground="{TemplateBinding Foreground}"
                                       FontSize="{TemplateBinding FontSize}"
                                       VerticalAlignment="Center"
                                       Opacity="0"
                                       RenderTransformOrigin="0.5,0.5">
                                <TextBlock.Transitions>
                                    <Transitions>
                                        <DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
                                        <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2" Easing="QuadraticEaseOut"/>
                                    </Transitions>
                                </TextBlock.Transitions>
                            </TextBlock>
                        </StackPanel>
                    </Panel>
                </Border>
            </ControlTemplate>
        </Setter>

        <!-- Hover State -->
        <Style Selector="^:pointerover /template/ Border#PART_RootBorder">
            <Setter Property="RenderTransform" Value="scale(1.1)"/>
        </Style>
        <Style Selector="^:pointerover /template/ Border#PART_HoverOverlay">
            <Setter Property="Background" Value="{StaticResource IconToggleButton.Hover.Overlay.Brush}"/>
        </Style>
        <Style Selector="^:pointerover /template/ StackPanel#PART_ContentPanel">
            <Setter Property="RenderTransform" Value="scale(1.1)"/>
        </Style>

        <!-- Pressed State -->
        <Style Selector="^:pressed /template/ Border#PART_RootBorder">
            <Setter Property="RenderTransform" Value="scale(0.95)"/>
            <Setter Property="CornerRadius" Value="32"/>
        </Style>
        <Style Selector="^:pressed /template/ StackPanel#PART_ContentPanel">
            <Setter Property="RenderTransform" Value="scale(0.95)"/>
        </Style>

        <!-- Checked State -->
        <Style Selector="^:checked /template/ Border#PART_RootBorder">
            <Setter Property="Background" Value="{StaticResource IconToggleButton.Checked.Background.Brush}"/>
        </Style>
        <Style Selector="^:checked /template/ Path#PART_UncheckedIcon">
            <Setter Property="Width" Value="0"/>
            <Setter Property="Opacity" Value="0"/>
        </Style>
        <Style Selector="^:checked /template/ TextBlock#PART_UncheckedText">
            <Setter Property="Opacity" Value="0"/>
        </Style>
        <Style Selector="^:checked /template/ Path#PART_CheckedIcon">
            <Setter Property="Width" Value="{Binding IconSize, RelativeSource={RelativeSource TemplatedParent}}"/>
            <Setter Property="Opacity" Value="1"/>
        </Style>
        <Style Selector="^:checked /template/ TextBlock#PART_CheckedText">
            <Setter Property="Opacity" Value="1"/>
        </Style>

        <!-- Disabled State -->
        <Style Selector="^:disabled">
            <Setter Property="Opacity" Value="0.5"/>
        </Style>
    </ControlTheme>

</ResourceDictionary>
