<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:GrumpyWombat18.Avalonia.Lib.Controls">

    <!-- From Uiverse.io by milegelu - Tags: blue, black, button, active, checkbox, modern, click animation -->

    <!-- Color Resources -->
    <Color x:Key="IconToggleButton.Unchecked.Background">#1A1A1A</Color>
    <Color x:Key="IconToggleButton.Checked.Background">#3385FF</Color>
    <Color x:Key="IconToggleButton.Foreground">White</Color>
    <Color x:Key="IconToggleButton.Hover.Overlay">#33808080</Color>

    <SolidColorBrush x:Key="IconToggleButton.Unchecked.Background.Brush" Color="{StaticResource IconToggleButton.Unchecked.Background}"/>
    <SolidColorBrush x:Key="IconToggleButton.Checked.Background.Brush" Color="{StaticResource IconToggleButton.Checked.Background}"/>
    <SolidColorBrush x:Key="IconToggleButton.Foreground.Brush" Color="{StaticResource IconToggleButton.Foreground}"/>
    <SolidColorBrush x:Key="IconToggleButton.Hover.Overlay.Brush" Color="{StaticResource IconToggleButton.Hover.Overlay}"/>

    <!-- Size Resources -->
    <x:Double x:Key="IconToggleButton.IconSize">30</x:Double>
    <x:Double x:Key="IconToggleButton.FontSize">20</x:Double>
    <CornerRadius x:Key="IconToggleButton.CornerRadius">16</CornerRadius>
    <Thickness x:Key="IconToggleButton.Padding">10</Thickness>

