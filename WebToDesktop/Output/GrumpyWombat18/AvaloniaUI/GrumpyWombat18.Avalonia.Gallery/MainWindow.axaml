<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:GrumpyWombat18.Avalonia.Lib.Controls"
        x:Class="GrumpyWombat18.Avalonia.Gallery.MainWindow"
        Title="GrumpyWombat18 - IconToggleButton Gallery"
        Width="600"
        Height="400"
        Background="#2D2D2D">

    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="30">

        <TextBlock Text="IconToggleButton Demo"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"/>

        <TextBlock Text="From Uiverse.io by milegelu"
                   FontSize="14"
                   Foreground="#888888"
                   HorizontalAlignment="Center"/>

        <!-- Default IconToggleButton -->
        <StackPanel Orientation="Horizontal" Spacing="20" HorizontalAlignment="Center">
            <controls:IconToggleButton UncheckedText="ball"
                                        CheckedText="Game"/>

            <controls:IconToggleButton UncheckedText="Off"
                                        CheckedText="On"
                                        IsChecked="True"/>
        </StackPanel>

        <!-- Custom Colors IconToggleButton -->
        <StackPanel Orientation="Horizontal" Spacing="20" HorizontalAlignment="Center">
            <controls:IconToggleButton UncheckedText="Dark"
                                        CheckedText="Light"
                                        CheckedBackground="#4CAF50"/>

            <controls:IconToggleButton UncheckedText="Stop"
                                        CheckedText="Play"
                                        UncheckedBackground="#D32F2F"
                                        CheckedBackground="#4CAF50"/>
        </StackPanel>

        <!-- Different Sizes -->
        <StackPanel Orientation="Horizontal" Spacing="20" HorizontalAlignment="Center">
            <controls:IconToggleButton UncheckedText="S"
                                        CheckedText="S"
                                        IconSize="20"
                                        FontSize="14"/>

            <controls:IconToggleButton UncheckedText="Medium"
                                        CheckedText="Medium"/>

            <controls:IconToggleButton UncheckedText="Large"
                                        CheckedText="Large"
                                        IconSize="40"
                                        FontSize="24"/>
        </StackPanel>

        <!-- Instructions -->
        <TextBlock Text="Click the buttons to toggle between states"
                   FontSize="12"
                   Foreground="#666666"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,0"/>

    </StackPanel>

</Window>
