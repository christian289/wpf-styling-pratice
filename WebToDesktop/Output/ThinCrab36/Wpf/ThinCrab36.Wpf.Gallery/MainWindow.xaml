<Window x:Class="ThinCrab36.Wpf.Gallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:ThinCrab36.Wpf.UI.Controls;assembly=ThinCrab36.Wpf.UI"
        mc:Ignorable="d"
        Title="ThinCrab36 - Brutalist Card Gallery"
        Height="600" Width="900"
        Background="#F5F5F5"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
            <!-- Default Warning Card -->
            <controls:ThinCrab36 Margin="20" />

            <!-- Custom Card Example -->
            <controls:ThinCrab36 Margin="20"
                                 Title="Alert"
                                 Message="Your session will expire in 5 minutes. Please save your work to avoid losing any unsaved changes."
                                 SecondaryButtonText="Remind Later"
                                 PrimaryButtonText="Save Now"
                                 IconData="M12 2L1 21h22L12 2zm0 3.99L19.53 19H4.47L12 5.99zM11 10v4h2v-4h-2zm0 6v2h2v-2h-2z" />
        </StackPanel>
    </Grid>
</Window>
