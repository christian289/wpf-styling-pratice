    <!-- Main ThinCrab36 Card Control Style -->
    <Style TargetType="{x:Type controls:ThinCrab36}">
        <Setter Property="Width" Value="{StaticResource ThinCrab36.Card.Width}" />
        <Setter Property="Background" Value="{StaticResource ThinCrab36.Card.Background}" />
        <Setter Property="BorderBrush" Value="{StaticResource ThinCrab36.Card.BorderBrush}" />
        <Setter Property="BorderThickness" Value="{StaticResource ThinCrab36.Card.BorderThickness}" />
        <Setter Property="Padding" Value="{StaticResource ThinCrab36.Card.Padding}" />
        <Setter Property="FontFamily" Value="Arial, sans-serif" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:ThinCrab36}">
                    <Grid>
                        <!-- Card Shadow Layer -->
                        <!-- CSS: box-shadow: 10px 10px 0 #000 -->
                        <Border Background="{StaticResource ThinCrab36.Card.ShadowBrush}"
                                Margin="10,10,0,0" />

                        <!-- Main Card Layer -->
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                Margin="0,0,10,10">
                            <StackPanel>
                                <!-- Header Section -->
                                <!-- CSS: .brutalist-card__header -->
                                <Border BorderBrush="{StaticResource ThinCrab36.Card.BorderBrush}"
                                        BorderThickness="{StaticResource ThinCrab36.Header.BorderThickness}"
                                        Padding="{StaticResource ThinCrab36.Header.Padding}"
                                        Margin="{StaticResource ThinCrab36.Header.Margin}">
                                    <StackPanel Orientation="Horizontal">
                                        <!-- Icon Container -->
                                        <!-- CSS: .brutalist-card__icon -->
                                        <Border Background="{StaticResource ThinCrab36.Icon.Background}"
                                                Padding="{StaticResource ThinCrab36.Icon.Padding}"
                                                Margin="0,0,16,0">
                                            <Path Data="{TemplateBinding IconData}"
                                                  Fill="{StaticResource ThinCrab36.Icon.Foreground}"
                                                  Width="{StaticResource ThinCrab36.Icon.Size}"
                                                  Height="{StaticResource ThinCrab36.Icon.Size}"
                                                  Stretch="Uniform" />
                                        </Border>

                                        <!-- Title -->
                                        <!-- CSS: .brutalist-card__alert -->
                                        <TextBlock Text="{TemplateBinding Title}"
                                                   FontSize="{StaticResource ThinCrab36.Title.FontSize}"
                                                   FontWeight="Black"
                                                   Foreground="{StaticResource ThinCrab36.Title.Foreground}"
                                                   VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Typography.Capitals" Value="AllSmallCaps" />
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>

                                <!-- Message Section -->
                                <!-- CSS: .brutalist-card__message -->
                                <Border BorderBrush="{StaticResource ThinCrab36.Card.BorderBrush}"
                                        BorderThickness="{StaticResource ThinCrab36.Message.BorderThickness}"
                                        Margin="{StaticResource ThinCrab36.Message.Margin}"
                                        Padding="{StaticResource ThinCrab36.Message.Padding}">
                                    <TextBlock Text="{TemplateBinding Message}"
                                               FontSize="{StaticResource ThinCrab36.Message.FontSize}"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource ThinCrab36.Title.Foreground}"
                                               TextWrapping="Wrap"
                                               LineHeight="20" />
                                </Border>

                                <!-- Actions Section -->
                                <!-- CSS: .brutalist-card__actions -->
                                <StackPanel Margin="0,16,0,0">
                                    <!-- Secondary Button (Mark as Read) -->
                                    <Button x:Name="PART_SecondaryButton"
                                            Content="{TemplateBinding SecondaryButtonText}"
                                            Style="{StaticResource ThinCrab36.SecondaryButtonStyle}"
                                            Margin="{StaticResource ThinCrab36.Button.Margin}" />

                                    <!-- Primary Button (Okay) -->
                                    <Button x:Name="PART_PrimaryButton"
                                            Content="{TemplateBinding PrimaryButtonText}"
                                            Style="{StaticResource ThinCrab36.PrimaryButtonStyle}" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
