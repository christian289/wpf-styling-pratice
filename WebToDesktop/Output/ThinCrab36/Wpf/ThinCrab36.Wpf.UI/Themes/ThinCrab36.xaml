<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:ThinCrab36.Wpf.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/ThinCrab36.Wpf.UI;component/Themes/ThinCrab36Resources.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!-- Secondary Button Style (Mark as Read - White Background) -->
    <Style x:Key="ThinCrab36.SecondaryButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{StaticResource ThinCrab36.SecondaryButton.Background}" />
        <Setter Property="Foreground" Value="{StaticResource ThinCrab36.SecondaryButton.Foreground}" />
        <Setter Property="BorderBrush" Value="{StaticResource ThinCrab36.SecondaryButton.BorderBrush}" />
        <Setter Property="BorderThickness" Value="{StaticResource ThinCrab36.Button.BorderThickness}" />
        <Setter Property="Padding" Value="{StaticResource ThinCrab36.Button.Padding}" />
        <Setter Property="FontSize" Value="{StaticResource ThinCrab36.Button.FontSize}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>
                        <!-- Shadow Layer -->
                        <Border x:Name="ShadowBorder"
                                Background="{StaticResource ThinCrab36.Card.ShadowBrush}"
                                Margin="5,5,0,0" />

                        <!-- Main Button Layer -->
                        <Border x:Name="MainBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Margin="0,0,5,5">
                            <Grid>
                                <!-- Shine Effect Layer (::before pseudo-element) -->
                                <Border x:Name="ShineEffect"
                                        Background="{x:Null}"
                                        ClipToBounds="True">
                                    <Rectangle x:Name="ShineRectangle"
                                               HorizontalAlignment="Left"
                                               Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Border}}"
                                               RenderTransformOrigin="0.5,0.5">
                                        <Rectangle.Fill>
                                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                                <LinearGradientBrush.Transform>
                                                    <RotateTransform Angle="30" />
                                                </LinearGradientBrush.Transform>
                                                <GradientStop Color="Transparent" Offset="0" />
                                                <GradientStop Color="#4DFFFFFF" Offset="0.5" />
                                                <GradientStop Color="Transparent" Offset="1" />
                                            </LinearGradientBrush>
                                        </Rectangle.Fill>
                                        <Rectangle.RenderTransform>
                                            <TranslateTransform x:Name="ShineTransform" X="-200" />
                                        </Rectangle.RenderTransform>
                                    </Rectangle>
                                </Border>

                                <!-- Content -->
                                <ContentPresenter x:Name="ContentPresenter"
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalAlignment="Center"
                                                  Margin="{TemplateBinding Padding}"
                                                  TextBlock.FontWeight="{TemplateBinding FontWeight}"
                                                  TextBlock.FontSize="{TemplateBinding FontSize}" />
                            </Grid>
                        </Border>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- Hover State -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="MainBorder" Property="Background"
                                    Value="{StaticResource ThinCrab36.SecondaryButton.HoverBackground}" />
                            <Setter TargetName="MainBorder" Property="BorderBrush"
                                    Value="{StaticResource ThinCrab36.SecondaryButton.HoverBorderBrush}" />
                            <Setter Property="Foreground"
                                    Value="{StaticResource ThinCrab36.SecondaryButton.HoverForeground}" />
                            <Setter TargetName="ShadowBorder" Property="Background"
                                    Value="{StaticResource ThinCrab36.SecondaryButton.HoverShadowBrush}" />
                            <Setter TargetName="MainBorder" Property="Margin" Value="-2,-2,7,7" />
                            <Setter TargetName="ShadowBorder" Property="Margin" Value="7,7,0,0" />
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="ShineTransform"
                                                         Storyboard.TargetProperty="X"
                                                         From="-200" To="400"
                                                         Duration="0:0:0.6" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                        </Trigger>

                        <!-- Pressed State -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="MainBorder" Property="Margin" Value="5,5,0,0" />
                            <Setter TargetName="ShadowBorder" Property="Visibility" Value="Collapsed" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

