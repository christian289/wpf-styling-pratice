<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:BlackMouse53.Avalonia.Lib.Controls"
        x:Class="BlackMouse53.Avalonia.Gallery.MainWindow"
        Title="BlackMouse53 - Twitter Bird Gallery"
        Width="500" Height="500"
        Background="#1DA1F2">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
            <TextBlock Text="Twitter Bird CSS Art"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>

            <controls:TwitterBird/>

            <TextBlock Text="Original: uiverse.io by vladaxinte"
                       FontSize="12"
                       Foreground="White"
                       Opacity="0.7"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>

</Window>
