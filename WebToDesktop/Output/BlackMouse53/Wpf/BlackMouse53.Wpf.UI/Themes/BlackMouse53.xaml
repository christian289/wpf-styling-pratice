<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:BlackMouse53.Wpf.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/BlackMouse53.Wpf.UI;component/Themes/BlackMouse53Resources.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type controls:BlackMouse53}">
        <Setter Property="Width" Value="{StaticResource BlackMouse53.Container.Width}" />
        <Setter Property="Height" Value="{StaticResource BlackMouse53.Container.Height}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:BlackMouse53}">
                    <!-- Container -->
                    <Canvas Width="{StaticResource BlackMouse53.Container.Width}"
                            Height="{StaticResource BlackMouse53.Container.Height}"
                            ClipToBounds="False">

                        <!-- Twitter container with translate(-15%, 20%) offset -->
                        <Canvas Canvas.Left="{StaticResource BlackMouse53.Twitter.OffsetX}"
                                Canvas.Top="{StaticResource BlackMouse53.Twitter.OffsetY}">

                            <!-- Tummy (z-index: -1, rendered first/back) -->
                            <!-- CSS: radial-gradient(circle at 0% -38%, transparent 80%, #fff 30%) -->
                            <Ellipse Width="{StaticResource BlackMouse53.Tummy.Width}"
                                     Height="{StaticResource BlackMouse53.Tummy.Height}"
                                     Canvas.Left="{StaticResource BlackMouse53.Tummy.Left}"
                                     Canvas.Top="{StaticResource BlackMouse53.Tummy.Top}"
                                     Panel.ZIndex="-1">
                                <Ellipse.Fill>
                                    <RadialGradientBrush GradientOrigin="0,-0.38" Center="0,-0.38" RadiusX="0.8" RadiusY="0.8">
                                        <GradientStop Color="Transparent" Offset="0" />
                                        <GradientStop Color="Transparent" Offset="0.8" />
                                        <GradientStop Color="{StaticResource BlackMouse53.Bird.Color}" Offset="0.8" />
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>

                            <!-- Torso -->
                            <!-- CSS: radial-gradient(circle at 0% -40%, transparent 60%, #fff 30%) -->
                            <Ellipse Width="{StaticResource BlackMouse53.Torso.Width}"
                                     Height="{StaticResource BlackMouse53.Torso.Height}"
                                     Canvas.Left="{StaticResource BlackMouse53.Torso.Left}"
                                     Canvas.Top="{StaticResource BlackMouse53.Torso.Top}"
                                     RenderTransformOrigin="0.5,0.5">
                                <Ellipse.RenderTransform>
                                    <RotateTransform Angle="{StaticResource BlackMouse53.Torso.Angle}" />
                                </Ellipse.RenderTransform>
                                <Ellipse.Fill>
                                    <RadialGradientBrush GradientOrigin="0,-0.4" Center="0,-0.4" RadiusX="0.6" RadiusY="0.6">
                                        <GradientStop Color="Transparent" Offset="0" />
                                        <GradientStop Color="Transparent" Offset="0.6" />
                                        <GradientStop Color="{StaticResource BlackMouse53.Bird.Color}" Offset="0.6" />
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>

                            <!-- Tail -->
                            <!-- CSS: radial-gradient(circle at 10% -42%, transparent 66%, #fff 30%) -->
                            <Ellipse Width="{StaticResource BlackMouse53.Tail.Width}"
                                     Height="{StaticResource BlackMouse53.Tail.Height}"
                                     Canvas.Left="{StaticResource BlackMouse53.Tail.Left}"
                                     Canvas.Top="{StaticResource BlackMouse53.Tail.Top}"
                                     RenderTransformOrigin="0.5,0.5">
                                <Ellipse.RenderTransform>
                                    <RotateTransform Angle="{StaticResource BlackMouse53.Tail.Angle}" />
                                </Ellipse.RenderTransform>
                                <Ellipse.Fill>
                                    <RadialGradientBrush GradientOrigin="0.1,-0.42" Center="0.1,-0.42" RadiusX="0.66" RadiusY="0.66">
                                        <GradientStop Color="Transparent" Offset="0" />
                                        <GradientStop Color="Transparent" Offset="0.66" />
                                        <GradientStop Color="{StaticResource BlackMouse53.Bird.Color}" Offset="0.66" />
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>

                            <!-- Head (solid white circle) -->
                            <Ellipse Width="{StaticResource BlackMouse53.Head.Width}"
                                     Height="{StaticResource BlackMouse53.Head.Height}"
                                     Canvas.Left="{StaticResource BlackMouse53.Head.Left}"
                                     Canvas.Top="{StaticResource BlackMouse53.Head.Top}"
                                     Fill="{StaticResource BlackMouse53.Bird.Brush}" />

                            <!-- Wing Top (z-index: 20) -->
                            <!-- CSS: radial-gradient(circle at -100% 90%, transparent 70%, #fff 10%) -->
                            <Ellipse Width="{StaticResource BlackMouse53.WingTop.Width}"
                                     Height="{StaticResource BlackMouse53.WingTop.Height}"
                                     Canvas.Left="{StaticResource BlackMouse53.WingTop.Left}"
                                     Canvas.Top="{StaticResource BlackMouse53.WingTop.Top}"
                                     Panel.ZIndex="20"
                                     RenderTransformOrigin="0.5,0.5">
                                <Ellipse.RenderTransform>
                                    <RotateTransform Angle="{StaticResource BlackMouse53.WingTop.Angle}" />
                                </Ellipse.RenderTransform>
                                <Ellipse.Fill>
                                    <RadialGradientBrush GradientOrigin="-1,0.9" Center="-1,0.9" RadiusX="0.7" RadiusY="0.7">
                                        <GradientStop Color="Transparent" Offset="0" />
                                        <GradientStop Color="Transparent" Offset="0.7" />
                                        <GradientStop Color="{StaticResource BlackMouse53.Bird.Color}" Offset="0.7" />
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>

                            <!-- Wing Middle (z-index: 20) -->
                            <!-- CSS: radial-gradient(circle at 50% -80%, transparent 80%, #fff 10%) -->
                            <Ellipse Width="{StaticResource BlackMouse53.WingMiddle.Width}"
                                     Height="{StaticResource BlackMouse53.WingMiddle.Height}"
                                     Canvas.Left="{StaticResource BlackMouse53.WingMiddle.Left}"
                                     Canvas.Top="{StaticResource BlackMouse53.WingMiddle.Top}"
                                     Panel.ZIndex="20"
                                     RenderTransformOrigin="0.5,0.5">
                                <Ellipse.RenderTransform>
                                    <RotateTransform Angle="{StaticResource BlackMouse53.WingMiddle.Angle}" />
                                </Ellipse.RenderTransform>
                                <Ellipse.Fill>
                                    <RadialGradientBrush GradientOrigin="0.5,-0.8" Center="0.5,-0.8" RadiusX="0.8" RadiusY="0.8">
                                        <GradientStop Color="Transparent" Offset="0" />
                                        <GradientStop Color="Transparent" Offset="0.8" />
                                        <GradientStop Color="{StaticResource BlackMouse53.Bird.Color}" Offset="0.8" />
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>

                            <!-- Beak Top (z-index: 20) -->
                            <!-- CSS: radial-gradient(circle at 10% -30%, transparent 76%, #fff 30%) -->
                            <Ellipse Width="{StaticResource BlackMouse53.BeakTop.Width}"
                                     Height="{StaticResource BlackMouse53.BeakTop.Height}"
                                     Canvas.Left="{StaticResource BlackMouse53.BeakTop.Left}"
                                     Canvas.Top="{StaticResource BlackMouse53.BeakTop.Top}"
                                     Panel.ZIndex="20"
                                     RenderTransformOrigin="0.5,0.5">
                                <Ellipse.RenderTransform>
                                    <RotateTransform Angle="{StaticResource BlackMouse53.BeakTop.Angle}" />
                                </Ellipse.RenderTransform>
                                <Ellipse.Fill>
                                    <RadialGradientBrush GradientOrigin="0.1,-0.3" Center="0.1,-0.3" RadiusX="0.76" RadiusY="0.76">
                                        <GradientStop Color="Transparent" Offset="0" />
                                        <GradientStop Color="Transparent" Offset="0.76" />
                                        <GradientStop Color="{StaticResource BlackMouse53.Bird.Color}" Offset="0.76" />
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>

                            <!-- Beak Bottom (z-index: 20) -->
                            <!-- CSS: radial-gradient(circle at 10% -30%, transparent 76%, #fff 30%) -->
                            <Ellipse Width="{StaticResource BlackMouse53.BeakBottom.Width}"
                                     Height="{StaticResource BlackMouse53.BeakBottom.Height}"
                                     Canvas.Left="{StaticResource BlackMouse53.BeakBottom.Left}"
                                     Canvas.Top="{StaticResource BlackMouse53.BeakBottom.Top}"
                                     Panel.ZIndex="20"
                                     RenderTransformOrigin="0.5,0.5">
                                <Ellipse.RenderTransform>
                                    <RotateTransform Angle="{StaticResource BlackMouse53.BeakBottom.Angle}" />
                                </Ellipse.RenderTransform>
                                <Ellipse.Fill>
                                    <RadialGradientBrush GradientOrigin="0.1,-0.3" Center="0.1,-0.3" RadiusX="0.76" RadiusY="0.76">
                                        <GradientStop Color="Transparent" Offset="0" />
                                        <GradientStop Color="Transparent" Offset="0.76" />
                                        <GradientStop Color="{StaticResource BlackMouse53.Bird.Color}" Offset="0.76" />
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>

                            <!-- Wing Bottom (z-index: 90, highest) -->
                            <!-- CSS: radial-gradient(circle at -100% 90%, transparent 75%, #fff 10%) -->
                            <Ellipse Width="{StaticResource BlackMouse53.WingBottom.Width}"
                                     Height="{StaticResource BlackMouse53.WingBottom.Height}"
                                     Canvas.Left="{StaticResource BlackMouse53.WingBottom.Left}"
                                     Canvas.Top="{StaticResource BlackMouse53.WingBottom.Top}"
                                     Panel.ZIndex="90"
                                     RenderTransformOrigin="0.5,0.5">
                                <Ellipse.RenderTransform>
                                    <RotateTransform Angle="{StaticResource BlackMouse53.WingBottom.Angle}" />
                                </Ellipse.RenderTransform>
                                <Ellipse.Fill>
                                    <RadialGradientBrush GradientOrigin="-1,0.9" Center="-1,0.9" RadiusX="0.75" RadiusY="0.75">
                                        <GradientStop Color="Transparent" Offset="0" />
                                        <GradientStop Color="Transparent" Offset="0.75" />
                                        <GradientStop Color="{StaticResource BlackMouse53.Bird.Color}" Offset="0.75" />
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>

                        </Canvas>
                    </Canvas>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
