<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:FoolishBulldog87.Wpf.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/FoolishBulldog87.Wpf.UI;component/Themes/FoolishBulldog87Resources.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type controls:FoolishBulldog87}">
        <Setter Property="Width" Value="{StaticResource FoolishBulldog87.Size}"/>
        <Setter Property="Height" Value="{StaticResource FoolishBulldog87.Size}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Background" Value="{StaticResource FoolishBulldog87.Default.Background}"/>
        <Setter Property="BorderBrush" Value="{StaticResource FoolishBulldog87.Border.Brush}"/>
        <Setter Property="BorderThickness" Value="{StaticResource FoolishBulldog87.Border.Thickness}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:FoolishBulldog87}">
                    <Border x:Name="PART_Border"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource FoolishBulldog87.Border.Radius}">
                        <!-- 체크마크 Path (stroke-dashoffset 애니메이션) -->
                        <Path x:Name="PART_CheckMark"
                              Data="{StaticResource FoolishBulldog87.Check.Geometry}"
                              Stroke="{StaticResource FoolishBulldog87.Check.Stroke}"
                              StrokeThickness="{StaticResource FoolishBulldog87.StrokeThickness}"
                              StrokeStartLineCap="Round"
                              StrokeEndLineCap="Round"
                              StrokeLineJoin="Round"
                              StrokeDashArray="7.8125 7.8125"
                              StrokeDashOffset="7.8125"
                              Fill="{x:Null}"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Hover 상태: 배경색 변경 -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="PART_Border" Property="Background"
                                    Value="{StaticResource FoolishBulldog87.Hover.Background}"/>
                        </Trigger>

                        <!-- Checked 상태: 배경색 및 StrokeDashOffset 애니메이션 -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="PART_Border" Property="Background"
                                    Value="{StaticResource FoolishBulldog87.Checked.Background}"/>
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="PART_CheckMark"
                                                         Storyboard.TargetProperty="StrokeDashOffset"
                                                         To="0"
                                                         Duration="0:0:0.6"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="PART_CheckMark"
                                                         Storyboard.TargetProperty="StrokeDashOffset"
                                                         To="7.8125"
                                                         Duration="0:0:0.4"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
