<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Tailwind Gradient Colors: from-indigo-500 via-purple-500 to-pink-500 -->
    <Color x:Key="ChillyDonkey13.Gradient.Indigo500">#6366F1</Color>
    <Color x:Key="ChillyDonkey13.Gradient.Purple500">#A855F7</Color>
    <Color x:Key="ChillyDonkey13.Gradient.Pink500">#EC4899</Color>

    <!-- Text Color: text-white -->
    <SolidColorBrush x:Key="ChillyDonkey13.Foreground" Color="White" />

    <!-- Gradient Brush: bg-gradient-to-r -->
    <LinearGradientBrush x:Key="ChillyDonkey13.Background.Gradient" StartPoint="0,0.5" EndPoint="1,0.5">
        <GradientStop Color="{StaticResource ChillyDonkey13.Gradient.Indigo500}" Offset="0" />
        <GradientStop Color="{StaticResource ChillyDonkey13.Gradient.Purple500}" Offset="0.5" />
        <GradientStop Color="{StaticResource ChillyDonkey13.Gradient.Pink500}" Offset="1" />
    </LinearGradientBrush>

    <!-- Dimensions: w-28 (112px), h-12 (48px) -->
    <sys:Double x:Key="ChillyDonkey13.Width">112</sys:Double>
    <sys:Double x:Key="ChillyDonkey13.Height">48</sys:Double>

    <!-- Border Radius: rounded-lg (8px) -->
    <CornerRadius x:Key="ChillyDonkey13.CornerRadius">8</CornerRadius>

    <!-- Shadow: shadow-lg -->
    <Color x:Key="ChillyDonkey13.Shadow.Color">#40000000</Color>
    <sys:Double x:Key="ChillyDonkey13.Shadow.BlurRadius">15</sys:Double>
    <sys:Double x:Key="ChillyDonkey13.Shadow.Direction">270</sys:Double>
    <sys:Double x:Key="ChillyDonkey13.Shadow.Depth">4</sys:Double>
    <sys:Double x:Key="ChillyDonkey13.Shadow.Opacity">0.4</sys:Double>

    <!-- Hover Shadow: hover:shadow-[#7dd3fc] -->
    <Color x:Key="ChillyDonkey13.HoverShadow.Color">#7DD3FC</Color>
    <sys:Double x:Key="ChillyDonkey13.HoverShadow.BlurRadius">25</sys:Double>
    <sys:Double x:Key="ChillyDonkey13.HoverShadow.Opacity">0.8</sys:Double>

    <!-- Scale: hover:scale-105 (1.05) -->
    <sys:Double x:Key="ChillyDonkey13.HoverScale">1.05</sys:Double>
    <sys:Double x:Key="ChillyDonkey13.NormalScale">1.0</sys:Double>

    <!-- Font: font-semibold (FontWeight 600) -->
    <FontWeight x:Key="ChillyDonkey13.FontWeight">SemiBold</FontWeight>

</ResourceDictionary>
