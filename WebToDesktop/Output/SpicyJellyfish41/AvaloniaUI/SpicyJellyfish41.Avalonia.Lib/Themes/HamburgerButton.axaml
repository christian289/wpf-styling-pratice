<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:SpicyJellyfish41.Avalonia.Lib.Controls">

    <!-- From Uiverse.io by ahmedyasserdev - Tags: checkbox, hamburger, rotate, menu -->

    <!-- Color Resources -->
    <Color x:Key="HamburgerButton.LineColor">#333333</Color>
    <SolidColorBrush x:Key="HamburgerButton.LineBrush" Color="{StaticResource HamburgerButton.LineColor}" />

    <!-- Size Resources -->
    <x:Double x:Key="HamburgerButton.LineWidth">30</x:Double>
    <x:Double x:Key="HamburgerButton.LineHeight">3</x:Double>
    <x:Double x:Key="HamburgerButton.LineSpacing">6</x:Double>

    <!-- HamburgerButton Style -->
    <ControlTheme x:Key="{x:Type controls:HamburgerButton}" TargetType="controls:HamburgerButton">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Padding="{TemplateBinding Padding}">
                    <Panel Width="{StaticResource HamburgerButton.LineWidth}"
                           Height="21">
                        <!-- Line 1 (Top) -->
                        <Border x:Name="Line1"
                                Width="{StaticResource HamburgerButton.LineWidth}"
                                Height="{StaticResource HamburgerButton.LineHeight}"
                                Background="{StaticResource HamburgerButton.LineBrush}"
                                VerticalAlignment="Top"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <TransformGroup>
                                    <TranslateTransform Y="0" />
                                    <RotateTransform Angle="0" />
                                </TransformGroup>
                            </Border.RenderTransform>
                        </Border>

                        <!-- Line 2 (Middle) -->
                        <Border x:Name="Line2"
                                Width="{StaticResource HamburgerButton.LineWidth}"
                                Height="{StaticResource HamburgerButton.LineHeight}"
                                Background="{StaticResource HamburgerButton.LineBrush}"
                                VerticalAlignment="Center"
                                RenderTransformOrigin="0.5,0.5"
                                Opacity="1">
                            <Border.RenderTransform>
                                <TranslateTransform X="0" />
                            </Border.RenderTransform>
                        </Border>

                        <!-- Line 3 (Bottom) -->
                        <Border x:Name="Line3"
                                Width="{StaticResource HamburgerButton.LineWidth}"
                                Height="{StaticResource HamburgerButton.LineHeight}"
                                Background="{StaticResource HamburgerButton.LineBrush}"
                                VerticalAlignment="Bottom"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <TransformGroup>
                                    <TranslateTransform Y="0" />
                                    <RotateTransform Angle="0" />
                                </TransformGroup>
                            </Border.RenderTransform>
                        </Border>
                    </Panel>
                </Border>
            </ControlTemplate>
        </Setter>

        <!-- Checked State - Transform to X -->
        <Style Selector="^:checked /template/ Border#Line1">
            <Style.Animations>
                <Animation Duration="0:0:0.3" Easing="0.68,-0.55,0.265,1.55" FillMode="Forward">
                    <KeyFrame Cue="100%">
                        <Setter Property="RenderTransform">
                            <TransformGroup>
                                <TranslateTransform Y="9" />
                                <RotateTransform Angle="45" />
                            </TransformGroup>
                        </Setter>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <Style Selector="^:checked /template/ Border#Line2">
            <Style.Animations>
                <Animation Duration="0:0:0.3" Easing="CubicEaseOut" FillMode="Forward">
                    <KeyFrame Cue="100%">
                        <Setter Property="Opacity" Value="0" />
                        <Setter Property="RenderTransform">
                            <TranslateTransform X="-20" />
                        </Setter>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <Style Selector="^:checked /template/ Border#Line3">
            <Style.Animations>
                <Animation Duration="0:0:0.3" Easing="0.68,-0.55,0.265,1.55" FillMode="Forward">
                    <KeyFrame Cue="100%">
                        <Setter Property="RenderTransform">
                            <TransformGroup>
                                <TranslateTransform Y="-9" />
                                <RotateTransform Angle="-45" />
                            </TransformGroup>
                        </Setter>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <!-- Unchecked State - Return to Hamburger -->
        <Style Selector="^:unchecked /template/ Border#Line1">
            <Style.Animations>
                <Animation Duration="0:0:0.3" Easing="0.68,-0.55,0.265,1.55" FillMode="Forward">
                    <KeyFrame Cue="100%">
                        <Setter Property="RenderTransform">
                            <TransformGroup>
                                <TranslateTransform Y="0" />
                                <RotateTransform Angle="0" />
                            </TransformGroup>
                        </Setter>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <Style Selector="^:unchecked /template/ Border#Line2">
            <Style.Animations>
                <Animation Duration="0:0:0.3" Easing="CubicEaseOut" FillMode="Forward">
                    <KeyFrame Cue="100%">
                        <Setter Property="Opacity" Value="1" />
                        <Setter Property="RenderTransform">
                            <TranslateTransform X="0" />
                        </Setter>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <Style Selector="^:unchecked /template/ Border#Line3">
            <Style.Animations>
                <Animation Duration="0:0:0.3" Easing="0.68,-0.55,0.265,1.55" FillMode="Forward">
                    <KeyFrame Cue="100%">
                        <Setter Property="RenderTransform">
                            <TransformGroup>
                                <TranslateTransform Y="0" />
                                <RotateTransform Angle="0" />
                            </TransformGroup>
                        </Setter>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

    </ControlTheme>

</ResourceDictionary>
