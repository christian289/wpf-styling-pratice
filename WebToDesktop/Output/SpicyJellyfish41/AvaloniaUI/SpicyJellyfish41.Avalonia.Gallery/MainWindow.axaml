<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:SpicyJellyfish41.Avalonia.Lib.Controls"
        x:Class="SpicyJellyfish41.Avalonia.Gallery.MainWindow"
        Title="SpicyJellyfish41 - Hamburger Button Gallery"
        Width="400"
        Height="300"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#F5F5F5">
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="20">

            <TextBlock Text="Hamburger Button"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center" />

            <TextBlock Text="Click to toggle animation"
                       FontSize="14"
                       Foreground="#666666"
                       HorizontalAlignment="Center" />

            <!-- HamburgerButton Control -->
            <controls:HamburgerButton HorizontalAlignment="Center" />

            <TextBlock Text="From Uiverse.io by ahmedyasserdev"
                       FontSize="12"
                       Foreground="#999999"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0" />

        </StackPanel>
    </Grid>

</Window>
