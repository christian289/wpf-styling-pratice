<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:LovelyBulldog50.Wpf.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/LovelyBulldog50.Wpf.UI;component/Themes/LovelyBulldog50Resources.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type controls:LovelyBulldog50}">
        <Setter Property="Width" Value="{StaticResource LovelyBulldog50.Width}" />
        <Setter Property="Height" Value="{StaticResource LovelyBulldog50.Height}" />
        <Setter Property="Padding" Value="{StaticResource LovelyBulldog50.Padding}" />
        <Setter Property="Background" Value="{StaticResource LovelyBulldog50.Background.Brush}" />
        <Setter Property="Foreground" Value="{StaticResource LovelyBulldog50.Foreground.Brush}" />
        <Setter Property="BorderBrush" Value="{StaticResource LovelyBulldog50.Border.Invalid.Brush}" />
        <Setter Property="BorderThickness" Value="{StaticResource LovelyBulldog50.BorderThickness}" />
        <Setter Property="CaretBrush" Value="{StaticResource LovelyBulldog50.Foreground.Brush}" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
        <Setter Property="RenderTransform">
            <Setter.Value>
                <TranslateTransform X="0" />
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:LovelyBulldog50}">
                    <Border x:Name="PART_Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource LovelyBulldog50.CornerRadius}"
                            SnapsToDevicePixels="True">
                        <Grid>
                            <TextBlock x:Name="PART_Placeholder"
                                       Text="{TemplateBinding PlaceholderText}"
                                       Foreground="{TemplateBinding Foreground}"
                                       Opacity="0.5"
                                       Margin="{TemplateBinding Padding}"
                                       VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                       IsHitTestVisible="False"
                                       Visibility="Visible" />
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Focusable="False"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Hide placeholder when text is entered -->
                        <Trigger Property="IsValid" Value="True">
                            <Setter TargetName="PART_Placeholder" Property="Visibility" Value="Collapsed" />
                            <Setter Property="BorderBrush" Value="{StaticResource LovelyBulldog50.Border.Valid.Brush}" />
                        </Trigger>
                        <!-- Shake animation when invalid (on load) -->
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <!-- Repeat 3 times, 0.14s per cycle -->
                                    <DoubleAnimationUsingKeyFrames
                                        Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                        RepeatBehavior="3x"
                                        Duration="0:0:0.14">
                                        <LinearDoubleKeyFrame KeyTime="0%" Value="0" />
                                        <LinearDoubleKeyFrame KeyTime="25%" Value="8" />
                                        <LinearDoubleKeyFrame KeyTime="75%" Value="-8" />
                                        <LinearDoubleKeyFrame KeyTime="100%" Value="0" />
                                    </DoubleAnimationUsingKeyFrames>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
