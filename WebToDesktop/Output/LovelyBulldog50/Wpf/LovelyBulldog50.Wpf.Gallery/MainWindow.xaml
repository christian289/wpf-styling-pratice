<Window x:Class="LovelyBulldog50.Wpf.Gallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:LovelyBulldog50.Wpf.UI.Controls;assembly=LovelyBulldog50.Wpf.UI"
        mc:Ignorable="d"
        Title="LovelyBulldog50 Gallery" Height="450" Width="800"
        Background="#1a1a2e">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="LovelyBulldog50 Input Control"
                       Foreground="#F9F9F9"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20" />

            <controls:LovelyBulldog50 PlaceholderText="Your Name" Margin="0,0,0,20" />

            <controls:LovelyBulldog50 PlaceholderText="Email Address" Margin="0,0,0,20" />

            <controls:LovelyBulldog50 PlaceholderText="Password" />
        </StackPanel>
    </Grid>
</Window>
