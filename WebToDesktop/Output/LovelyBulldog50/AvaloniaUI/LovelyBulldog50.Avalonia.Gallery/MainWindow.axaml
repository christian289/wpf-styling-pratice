<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:LovelyBulldog50.Avalonia.Lib.Controls"
        x:Class="LovelyBulldog50.Avalonia.Gallery.MainWindow"
        Title="LovelyBulldog50 - Shake TextBox Gallery"
        Width="400"
        Height="300"
        Background="#1a1a2e">

    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="20">

        <TextBlock Text="Shake TextBox Demo"
                   FontSize="18"
                   Foreground="#f9f9f9"
                   HorizontalAlignment="Center" />

        <TextBlock Text="Type something to see the border turn green"
                   FontSize="12"
                   Foreground="#80f9f9f9"
                   HorizontalAlignment="Center" />

        <controls:ShakeTextBox x:Name="ShakeTextBox1"
                               Watermark="Your Name"
                               Classes.valid="{Binding IsValid, RelativeSource={RelativeSource Self}}" />

        <controls:ShakeTextBox x:Name="ShakeTextBox2"
                               Watermark="Your Email"
                               Classes.valid="{Binding IsValid, RelativeSource={RelativeSource Self}}" />

    </StackPanel>

</Window>
