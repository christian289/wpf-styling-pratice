<Window x:Class="OldHound37.Wpf.Gallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:OldHound37.Wpf.UI.Controls;assembly=OldHound37.Wpf.UI"
        mc:Ignorable="d"
        Title="OldHound37 Pattern Gallery" Height="600" Width="800">
    <Grid>
        <!-- 전체 화면을 채우는 패턴 배경 (Full-screen pattern background) -->
        <controls:OldHound37/>

        <!-- 중앙 텍스트 오버레이 (Center text overlay) -->
        <Border Background="#80000000"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                CornerRadius="10"
                Padding="30,20">
            <StackPanel>
                <TextBlock Text="OldHound37"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Geometric Pattern Control"
                           FontSize="16"
                           Foreground="#CCCCCC"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
                <TextBlock Text="by csemszepp (uiverse.io)"
                           FontSize="12"
                           Foreground="#999999"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
