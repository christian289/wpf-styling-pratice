<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:FatDodo89.Avalonia.Lib.Controls"
        x:Class="FatDodo89.Avalonia.Gallery.MainWindow"
        Title="FatDodo89 Loader Gallery"
        Width="400" Height="400"
        Background="#1a1a2e">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="20">

            <TextBlock Text="FatDodo89 Loader"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center" />

            <TextBlock Text="Emoticon-style loading spinner"
                       FontSize="14"
                       Foreground="#888"
                       HorizontalAlignment="Center" />

            <!-- 기본 로더 -->
            <controls:FatDodo89Loader HorizontalAlignment="Center" />

            <TextBlock Text="Source: uiverse.io by fanishah"
                       FontSize="12"
                       Foreground="#666"
                       HorizontalAlignment="Center" />

        </StackPanel>
    </Grid>

</Window>
