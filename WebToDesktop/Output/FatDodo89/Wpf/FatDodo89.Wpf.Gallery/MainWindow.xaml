<Window x:Class="FatDodo89.Wpf.Gallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:FatDodo89.Wpf.UI.Controls;assembly=FatDodo89.Wpf.UI"
        mc:Ignorable="d"
        Title="FatDodo89 Loader Gallery" Height="450" Width="800"
        Background="#1a1a2e">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="FatDodo89 Loader"
                       Foreground="White"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
            <controls:FatDodo89 HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <TextBlock Text="Smile Face Loading Animation"
                       Foreground="#888"
                       FontSize="14"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
