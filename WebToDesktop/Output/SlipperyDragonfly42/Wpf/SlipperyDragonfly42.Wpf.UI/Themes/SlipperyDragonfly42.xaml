<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:SlipperyDragonfly42.Wpf.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/SlipperyDragonfly42.Wpf.UI;component/Themes/SlipperyDragonfly42Resources.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- TextBox Style for Input Fields -->
    <Style x:Key="SlipperyDragonfly42.TextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource SlipperyDragonfly42.Background.Input}"/>
        <Setter Property="Foreground" Value="{StaticResource SlipperyDragonfly42.Foreground.Input}"/>
        <Setter Property="BorderBrush" Value="{StaticResource SlipperyDragonfly42.Border.Input}"/>
        <Setter Property="BorderThickness" Value="{StaticResource SlipperyDragonfly42.Border.InputThickness}"/>
        <Setter Property="Padding" Value="{StaticResource SlipperyDragonfly42.Padding.Input}"/>
        <Setter Property="FontSize" Value="{StaticResource SlipperyDragonfly42.FontSize.Input}"/>
        <Setter Property="CaretBrush" Value="{StaticResource SlipperyDragonfly42.Foreground.Input}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource SlipperyDragonfly42.CornerRadius.Input}">
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="Center"/>
                            <TextBlock x:Name="Placeholder"
                                       Text="{TemplateBinding Tag}"
                                       Margin="{TemplateBinding Padding}"
                                       Foreground="{StaticResource SlipperyDragonfly42.Foreground.Placeholder}"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False"
                                       Visibility="Collapsed"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Text" Value="">
                            <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                        </Trigger>
                        <Trigger Property="Text" Value="{x:Null}">
                            <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter Property="BorderBrush" Value="{StaticResource SlipperyDragonfly42.Border.InputFocus}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- PasswordBox Style -->
    <Style x:Key="SlipperyDragonfly42.PasswordBoxStyle" TargetType="PasswordBox">
        <Setter Property="Background" Value="{StaticResource SlipperyDragonfly42.Background.Input}"/>
        <Setter Property="Foreground" Value="{StaticResource SlipperyDragonfly42.Foreground.Input}"/>
        <Setter Property="BorderBrush" Value="{StaticResource SlipperyDragonfly42.Border.Input}"/>
        <Setter Property="BorderThickness" Value="{StaticResource SlipperyDragonfly42.Border.InputThickness}"/>
        <Setter Property="Padding" Value="{StaticResource SlipperyDragonfly42.Padding.Input}"/>
        <Setter Property="FontSize" Value="{StaticResource SlipperyDragonfly42.FontSize.Input}"/>
        <Setter Property="CaretBrush" Value="{StaticResource SlipperyDragonfly42.Foreground.Input}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="PasswordBox">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource SlipperyDragonfly42.CornerRadius.Input}">
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="Center"/>
                            <TextBlock x:Name="Placeholder"
                                       Text="{TemplateBinding Tag}"
                                       Margin="{TemplateBinding Padding}"
                                       Foreground="{StaticResource SlipperyDragonfly42.Foreground.Placeholder}"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter Property="BorderBrush" Value="{StaticResource SlipperyDragonfly42.Border.InputFocus}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- CheckBox Style -->
    <Style x:Key="SlipperyDragonfly42.CheckBoxStyle" TargetType="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource SlipperyDragonfly42.Foreground.Label}"/>
        <Setter Property="FontSize" Value="{StaticResource SlipperyDragonfly42.FontSize.Label}"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <StackPanel Orientation="Horizontal">
                        <Border x:Name="CheckBorder"
                                Width="16" Height="16"
                                Background="Transparent"
                                BorderBrush="{StaticResource SlipperyDragonfly42.Border.Checkbox}"
                                BorderThickness="1"
                                CornerRadius="{StaticResource SlipperyDragonfly42.CornerRadius.Checkbox}">
                            <Path x:Name="CheckMark"
                                  Data="M2,5 L5,8 L10,2"
                                  Stroke="{StaticResource SlipperyDragonfly42.Checkbox.Checkmark}"
                                  StrokeThickness="2"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Visibility="Collapsed"/>
                        </Border>
                        <ContentPresenter Margin="8,0,0,0"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="CheckBorder" Property="Background"
                                    Value="{StaticResource SlipperyDragonfly42.Checkbox.Background}"/>
                            <Setter TargetName="CheckBorder" Property="BorderBrush"
                                    Value="{StaticResource SlipperyDragonfly42.Checkbox.Background}"/>
                            <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Button Style (Link Style) -->
    <Style x:Key="SlipperyDragonfly42.LinkButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource SlipperyDragonfly42.Foreground.Link}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontSize" Value="{StaticResource SlipperyDragonfly42.FontSize.Link}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <TextBlock x:Name="LinkText"
                               Text="{TemplateBinding Content}"
                               Foreground="{TemplateBinding Foreground}"
                               FontSize="{TemplateBinding FontSize}"
                               FontWeight="{TemplateBinding FontWeight}"/>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="LinkText" Property="Foreground"
                                    Value="{StaticResource SlipperyDragonfly42.Foreground.LinkHover}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Primary Button Style -->
    <Style x:Key="SlipperyDragonfly42.PrimaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource SlipperyDragonfly42.Background.Button}"/>
        <Setter Property="Foreground" Value="{StaticResource SlipperyDragonfly42.Foreground.Button}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="{StaticResource SlipperyDragonfly42.Padding.Button}"/>
        <Setter Property="FontSize" Value="{StaticResource SlipperyDragonfly42.FontSize.Button}"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="ButtonBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource SlipperyDragonfly42.CornerRadius.Button}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Background"
                                    Value="{StaticResource SlipperyDragonfly42.Background.ButtonHover}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Background"
                                    Value="{StaticResource SlipperyDragonfly42.Background.ButtonHover}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Main Control Style -->
    <Style TargetType="{x:Type controls:SlipperyDragonfly42}">
        <Setter Property="MaxWidth" Value="{StaticResource SlipperyDragonfly42.Size.CardMaxWidth}"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:SlipperyDragonfly42}">
                    <Border Background="{StaticResource SlipperyDragonfly42.Background.Card}"
                            CornerRadius="{StaticResource SlipperyDragonfly42.CornerRadius.Card}"
                            Effect="{StaticResource SlipperyDragonfly42.Shadow.Card}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Main Content Area -->
                            <StackPanel Grid.Row="0" Margin="{StaticResource SlipperyDragonfly42.Padding.Card}">
                                <!-- Title -->
                                <TextBlock Text="{TemplateBinding Title}"
                                           Foreground="{StaticResource SlipperyDragonfly42.Foreground.Title}"
                                           FontSize="{StaticResource SlipperyDragonfly42.FontSize.Title}"
                                           FontWeight="ExtraBold"
                                           HorizontalAlignment="Center"/>

                                <!-- Subtitle -->
                                <TextBlock Text="{TemplateBinding Subtitle}"
                                           Foreground="{StaticResource SlipperyDragonfly42.Foreground.Subtitle}"
                                           FontSize="{StaticResource SlipperyDragonfly42.FontSize.Subtitle}"
                                           HorizontalAlignment="Center"
                                           Margin="0,16,0,0"/>

                                <!-- Form Fields -->
                                <StackPanel Margin="0,32,0,0">
                                    <!-- Email Input -->
                                    <TextBox Text="{Binding Email, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             Tag="{TemplateBinding EmailPlaceholder}"
                                             Style="{StaticResource SlipperyDragonfly42.TextBoxStyle}"/>

                                    <!-- Password Input -->
                                    <PasswordBox x:Name="PART_PasswordBox"
                                                 Tag="{TemplateBinding PasswordPlaceholder}"
                                                 Style="{StaticResource SlipperyDragonfly42.PasswordBoxStyle}"
                                                 Margin="0,16,0,0"/>

                                    <!-- Remember Me and Forgot Password Row -->
                                    <Grid Margin="0,16,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <CheckBox Grid.Column="0"
                                                  Content="Remember me"
                                                  IsChecked="{Binding RememberMe, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                                  Style="{StaticResource SlipperyDragonfly42.CheckBoxStyle}"
                                                  VerticalAlignment="Center"/>

                                        <Button Grid.Column="1"
                                                Content="Forgot your password?"
                                                Command="{TemplateBinding ForgotPasswordCommand}"
                                                Style="{StaticResource SlipperyDragonfly42.LinkButtonStyle}"
                                                FontWeight="Medium"/>
                                    </Grid>

                                    <!-- Sign In Button -->
                                    <Button Content="{TemplateBinding SignInButtonText}"
                                            Command="{TemplateBinding SignInCommand}"
                                            Style="{StaticResource SlipperyDragonfly42.PrimaryButtonStyle}"
                                            HorizontalAlignment="Stretch"
                                            Margin="0,24,0,0"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Footer -->
                            <Border Grid.Row="1"
                                    Background="{StaticResource SlipperyDragonfly42.Background.Footer}"
                                    CornerRadius="0,0,8,8"
                                    Padding="{StaticResource SlipperyDragonfly42.Padding.Footer}">
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center">
                                    <TextBlock Text="Don't have an account?"
                                               Foreground="{StaticResource SlipperyDragonfly42.Foreground.Label}"
                                               FontSize="{StaticResource SlipperyDragonfly42.FontSize.Label}"
                                               VerticalAlignment="Center"/>
                                    <Button Content="Sign up"
                                            Command="{TemplateBinding SignUpCommand}"
                                            Style="{StaticResource SlipperyDragonfly42.LinkButtonStyle}"
                                            FontWeight="Medium"
                                            Margin="4,0,0,0"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
