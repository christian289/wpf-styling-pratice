<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:MassiveInsect5.Avalonia.Lib.Controls"
        x:Class="MassiveInsect5.Avalonia.Gallery.MainWindow"
        Title="MassiveInsect5 Card Gallery"
        Width="600" Height="500"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#F0F0F0">
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="20">
            <TextBlock Text="MassiveInsect5 Card"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Hover over the card to see animation"
                       FontSize="14"
                       Foreground="Gray"
                       HorizontalAlignment="Center"/>
            <controls:MassiveInsect5Card/>
        </StackPanel>
    </Grid>

</Window>
