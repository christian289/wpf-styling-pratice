<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:OrangeFox41.Avalonia.Lib.Controls">

    <!-- Colors -->
    <Color x:Key="OrangeFox41.Container.Background">#E8DEF8</Color>
    <Color x:Key="OrangeFox41.Container.Foreground">#1D192B</Color>
    <Color x:Key="OrangeFox41.Tooltip.Background">#F3EDF7</Color>
    <Color x:Key="OrangeFox41.Tooltip.Foreground">#49454F</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="OrangeFox41.Container.Background.Brush" Color="{StaticResource OrangeFox41.Container.Background}" />
    <SolidColorBrush x:Key="OrangeFox41.Container.Foreground.Brush" Color="{StaticResource OrangeFox41.Container.Foreground}" />
    <SolidColorBrush x:Key="OrangeFox41.Tooltip.Background.Brush" Color="{StaticResource OrangeFox41.Tooltip.Background}" />
    <SolidColorBrush x:Key="OrangeFox41.Tooltip.Foreground.Brush" Color="{StaticResource OrangeFox41.Tooltip.Foreground}" />

    <!-- Control Template -->
    <ControlTheme x:Key="{x:Type controls:OrangeFox41}" TargetType="controls:OrangeFox41">
        <Setter Property="Background" Value="{StaticResource OrangeFox41.Container.Background.Brush}" />
        <Setter Property="Foreground" Value="{StaticResource OrangeFox41.Container.Foreground.Brush}" />
        <Setter Property="FontFamily" Value="Montserrat, Segoe UI, sans-serif" />
        <Setter Property="FontSize" Value="17" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <ControlTemplate>
                <Panel>
                    <!-- Main Container (Button-like) -->
                    <Border x:Name="PART_Container"
                            Background="{TemplateBinding Background}"
                            CornerRadius="50"
                            Padding="31,12">
                        <TextBlock x:Name="PART_ButtonText"
                                   Text="{TemplateBinding ButtonText}"
                                   FontWeight="Bold"
                                   Foreground="{TemplateBinding Foreground}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    </Border>

                    <!-- Tooltip Popup -->
                    <Border x:Name="PART_Tooltip"
                            Background="{StaticResource OrangeFox41.Tooltip.Background.Brush}"
                            CornerRadius="12"
                            Padding="17"
                            MinWidth="312"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Margin="0,60,0,0"
                            BoxShadow="0 1 2 0 #4D000000, 0 2 6 2 #26000000"
                            IsVisible="False"
                            RenderTransformOrigin="0.5,0"
                            Opacity="0">
                        <Border.RenderTransform>
                            <ScaleTransform ScaleX="0" ScaleY="0" />
                        </Border.RenderTransform>
                        <StackPanel Spacing="4">
                            <TextBlock x:Name="PART_Title"
                                       Text="{TemplateBinding Title}"
                                       FontWeight="Bold"
                                       FontSize="17"
                                       Foreground="{StaticResource OrangeFox41.Tooltip.Foreground.Brush}" />
                            <TextBlock x:Name="PART_Content"
                                       Text="{TemplateBinding ContentText}"
                                       FontSize="14.5"
                                       FontWeight="DemiBold"
                                       Foreground="{StaticResource OrangeFox41.Tooltip.Foreground.Brush}"
                                       TextWrapping="Wrap" />
                        </StackPanel>
                    </Border>
                </Panel>
            </ControlTemplate>
        </Setter>

        <!-- PointerOver (Hover) State -->
        <Style Selector="^:pointerover /template/ Border#PART_Tooltip">
            <Setter Property="IsVisible" Value="True" />
            <Style.Animations>
                <Animation Duration="0:0:0.25" FillMode="Forward">
                    <KeyFrame Cue="0%">
                        <Setter Property="Opacity" Value="0" />
                        <Setter Property="RenderTransform">
                            <ScaleTransform ScaleX="0" ScaleY="0" />
                        </Setter>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="Opacity" Value="1" />
                        <Setter Property="RenderTransform">
                            <ScaleTransform ScaleX="1" ScaleY="1" />
                        </Setter>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
    </ControlTheme>

</ResourceDictionary>
