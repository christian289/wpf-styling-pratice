<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:OrangeFox41.Wpf.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/OrangeFox41.Wpf.UI;component/Themes/OrangeFox41Resources.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type controls:OrangeFox41}">
        <Setter Property="FontFamily" Value="Montserrat, Segoe UI, sans-serif"/>
        <Setter Property="FontSize" Value="{StaticResource OrangeFox41.FontSize.Container}"/>
        <Setter Property="Foreground" Value="{StaticResource OrangeFox41.Container.Foreground}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:OrangeFox41}">
                    <Grid>
                        <!-- Main Container (tooltip-container) -->
                        <!-- 메인 컨테이너 -->
                        <Border x:Name="ContainerBorder"
                                Background="{StaticResource OrangeFox41.Container.Background}"
                                CornerRadius="{StaticResource OrangeFox41.Container.CornerRadius}"
                                Padding="{StaticResource OrangeFox41.Container.Padding}">
                            <TextBlock x:Name="ButtonText"
                                       Text="{TemplateBinding Text}"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>

                        <!-- Tooltip Popup -->
                        <!-- 툴팁 팝업 -->
                        <Popup x:Name="TooltipPopup"
                               Placement="Bottom"
                               PlacementTarget="{Binding ElementName=ContainerBorder}"
                               VerticalOffset="10"
                               HorizontalOffset="0"
                               AllowsTransparency="True"
                               PopupAnimation="Fade">
                            <Border x:Name="TooltipBorder"
                                    Background="{StaticResource OrangeFox41.Tooltip.Background}"
                                    CornerRadius="{StaticResource OrangeFox41.Tooltip.CornerRadius}"
                                    MinWidth="{StaticResource OrangeFox41.Tooltip.MinWidth}"
                                    Padding="{StaticResource OrangeFox41.Tooltip.Padding}"
                                    RenderTransformOrigin="0.5,0">
                                <Border.Effect>
                                    <!-- box-shadow: 0 1px 2px rgba(0,0,0,0.3), 0 2px 6px 2px rgba(0,0,0,0.15) -->
                                    <!-- 두 개의 그림자 중 더 강한 것을 사용 -->
                                    <DropShadowEffect ShadowDepth="2"
                                                      BlurRadius="6"
                                                      Color="{StaticResource OrangeFox41.Shadow.Color}"
                                                      Opacity="0.25"
                                                      Direction="270"/>
                                </Border.Effect>
                                <Border.RenderTransform>
                                    <ScaleTransform x:Name="TooltipScale" ScaleX="1" ScaleY="1"/>
                                </Border.RenderTransform>
                                <StackPanel>
                                    <!-- Tooltip Title -->
                                    <!-- 툴팁 제목 -->
                                    <TextBlock Text="{TemplateBinding TooltipTitle}"
                                               FontWeight="Bold"
                                               FontSize="{StaticResource OrangeFox41.FontSize.Title}"
                                               Foreground="{StaticResource OrangeFox41.Tooltip.Foreground}"
                                               Margin="0,0,0,8"/>
                                    <!-- Tooltip Content -->
                                    <!-- 툴팁 내용 -->
                                    <TextBlock Text="{TemplateBinding TooltipContent}"
                                               FontSize="{StaticResource OrangeFox41.FontSize.Content}"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource OrangeFox41.Tooltip.Foreground}"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </Popup>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- Hover Trigger: Show Tooltip with Scale Animation -->
                        <!-- 호버 트리거: 스케일 애니메이션과 함께 툴팁 표시 -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <BooleanAnimationUsingKeyFrames Storyboard.TargetName="TooltipPopup"
                                                                        Storyboard.TargetProperty="IsOpen">
                                            <DiscreteBooleanKeyFrame KeyTime="0:0:0" Value="True"/>
                                        </BooleanAnimationUsingKeyFrames>
                                        <DoubleAnimation Storyboard.TargetName="TooltipScale"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         From="0" To="1"
                                                         Duration="0:0:0.25">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="TooltipScale"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         From="0" To="1"
                                                         Duration="0:0:0.25">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="TooltipScale"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="0"
                                                         Duration="0:0:0.15">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseIn"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="TooltipScale"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="0"
                                                         Duration="0:0:0.15">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseIn"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <BooleanAnimationUsingKeyFrames Storyboard.TargetName="TooltipPopup"
                                                                        Storyboard.TargetProperty="IsOpen">
                                            <DiscreteBooleanKeyFrame KeyTime="0:0:0.15" Value="False"/>
                                        </BooleanAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
