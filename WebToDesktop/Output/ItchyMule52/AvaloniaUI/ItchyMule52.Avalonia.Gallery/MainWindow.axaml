<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:ItchyMule52.Avalonia.Lib.Controls"
        x:Class="ItchyMule52.Avalonia.Gallery.MainWindow"
        Title="ItchyMule52 - Neon Toggle Switch Gallery"
        Width="400"
        Height="300"
        Background="#1a1a1a">

    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="30">

        <TextBlock Text="Neon Toggle Switch"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"/>

        <StackPanel Orientation="Horizontal" Spacing="20" HorizontalAlignment="Center">
            <TextBlock Text="OFF"
                       Foreground="#888888"
                       VerticalAlignment="Center"/>
            <controls:NeonToggleSwitch x:Name="ToggleSwitch1"/>
            <TextBlock Text="ON"
                       Foreground="#A5FF69"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Spacing="20" HorizontalAlignment="Center">
            <TextBlock Text="Disabled OFF"
                       Foreground="#888888"
                       VerticalAlignment="Center"/>
            <controls:NeonToggleSwitch IsEnabled="False"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Spacing="20" HorizontalAlignment="Center">
            <TextBlock Text="Disabled ON"
                       Foreground="#888888"
                       VerticalAlignment="Center"/>
            <controls:NeonToggleSwitch IsEnabled="False" IsChecked="True"/>
        </StackPanel>

    </StackPanel>

</Window>
