<Window x:Class="ItchyMule52.Wpf.Gallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:ItchyMule52.Wpf.UI.Controls;assembly=ItchyMule52.Wpf.UI"
        mc:Ignorable="d"
        Title="ItchyMule52 - Neon Toggle Switch Gallery"
        Height="450" Width="800"
        Background="#1a1a1a">
    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <!-- 제목 -->
            <TextBlock Text="Neon Toggle Switch"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,40"/>

            <!-- 토글 스위치 데모 -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,30">
                <controls:ItchyMule52 Margin="0,0,20,0"/>
                <controls:ItchyMule52 IsChecked="True"/>
            </StackPanel>

            <!-- 상태 표시 데모 -->
            <StackPanel HorizontalAlignment="Center">
                <controls:ItchyMule52 x:Name="DemoSwitch"/>
                <TextBlock Text="Click to toggle"
                           Foreground="#888"
                           FontSize="12"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
