<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:ItchyMule52.Wpf.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/ItchyMule52.Wpf.UI;component/Themes/ItchyMule52Resources.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type controls:ItchyMule52}">
        <Setter Property="Width" Value="{StaticResource ItchyMule52.Track.Width}"/>
        <Setter Property="Height" Value="{StaticResource ItchyMule52.Thumb.Size}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Background" Value="{StaticResource ItchyMule52.Track.Background.Unchecked}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:ItchyMule52}">
                    <Grid>
                        <!-- Track (배경 트랙) -->
                        <Border x:Name="PART_Track"
                                Width="{StaticResource ItchyMule52.Track.Width}"
                                Height="{StaticResource ItchyMule52.Track.Height}"
                                Background="{TemplateBinding Background}"
                                CornerRadius="{StaticResource ItchyMule52.Track.CornerRadius}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"/>

                        <!-- Thumb Container (썸 컨테이너) -->
                        <Canvas Width="{StaticResource ItchyMule52.Track.Width}"
                                Height="{StaticResource ItchyMule52.Thumb.Size}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                            <!-- Thumb (::after pseudo-element) -->
                            <Ellipse x:Name="PART_Thumb"
                                     Width="{StaticResource ItchyMule52.Thumb.Size}"
                                     Height="{StaticResource ItchyMule52.Thumb.Size}"
                                     Fill="{StaticResource ItchyMule52.Thumb.Background}"
                                     Stroke="{StaticResource ItchyMule52.Thumb.Border.Unchecked}"
                                     StrokeThickness="2"
                                     Canvas.Left="0"
                                     Canvas.Top="0"/>
                        </Canvas>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- Checked 상태 트리거 -->
                        <Trigger Property="IsChecked" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Track 배경색 변경 -->
                                        <ColorAnimation Storyboard.TargetName="PART_Track"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#A5FF69"
                                                        Duration="0:0:0.2"/>
                                        <!-- Thumb 이동 (translateX(100%) = 22px) -->
                                        <DoubleAnimation Storyboard.TargetName="PART_Thumb"
                                                         Storyboard.TargetProperty="(Canvas.Left)"
                                                         To="28"
                                                         Duration="0:0:0.2"/>
                                        <!-- Thumb 테두리 색상 변경 -->
                                        <ColorAnimation Storyboard.TargetName="PART_Thumb"
                                                        Storyboard.TargetProperty="(Ellipse.Stroke).(SolidColorBrush.Color)"
                                                        To="#A5FF69"
                                                        Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Track 배경색 복원 -->
                                        <ColorAnimation Storyboard.TargetName="PART_Track"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#525252"
                                                        Duration="0:0:0.2"/>
                                        <!-- Thumb 원위치 -->
                                        <DoubleAnimation Storyboard.TargetName="PART_Thumb"
                                                         Storyboard.TargetProperty="(Canvas.Left)"
                                                         To="0"
                                                         Duration="0:0:0.2"/>
                                        <!-- Thumb 테두리 색상 복원 -->
                                        <ColorAnimation Storyboard.TargetName="PART_Thumb"
                                                        Storyboard.TargetProperty="(Ellipse.Stroke).(SolidColorBrush.Color)"
                                                        To="#525252"
                                                        Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
