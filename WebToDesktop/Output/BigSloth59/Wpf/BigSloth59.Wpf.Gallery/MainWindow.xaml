<Window x:Class="BigSloth59.Wpf.Gallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:BigSloth59.Wpf.UI.Controls;assembly=BigSloth59.Wpf.UI"
        mc:Ignorable="d"
        Title="BigSloth59 - Input Control Gallery"
        Height="450" Width="800"
        Background="#f5f5f5">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="BigSloth59 Input Control"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center" />

            <!-- Demo of BigSloth59 Input Control -->
            <controls:BigSloth59 Width="280" Margin="0,0,0,15" />
            <controls:BigSloth59 Width="280" Margin="0,0,0,15" />
            <controls:BigSloth59 Width="280" />

            <TextBlock Text="Click on the input and see the border color transition"
                       FontSize="12"
                       Foreground="#666666"
                       Margin="0,20,0,0"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       TextAlignment="Center" />
        </StackPanel>
    </Grid>
</Window>
