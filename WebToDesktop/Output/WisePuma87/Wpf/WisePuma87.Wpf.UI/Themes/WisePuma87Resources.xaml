<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Colors -->
    <Color x:Key="WisePuma87.Color.Border.Normal">#CCCCCC</Color>
    <Color x:Key="WisePuma87.Color.Primary">#6C5CE7</Color>
    <Color x:Key="WisePuma87.Color.Checkmark">#FFFFFF</Color>
    <Color x:Key="WisePuma87.Color.Text.Normal">#000000</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="WisePuma87.Brush.Border.Normal" Color="{StaticResource WisePuma87.Color.Border.Normal}" />
    <SolidColorBrush x:Key="WisePuma87.Brush.Primary" Color="{StaticResource WisePuma87.Color.Primary}" />
    <SolidColorBrush x:Key="WisePuma87.Brush.Checkmark" Color="{StaticResource WisePuma87.Color.Checkmark}" />
    <SolidColorBrush x:Key="WisePuma87.Brush.Text.Normal" Color="{StaticResource WisePuma87.Color.Text.Normal}" />
    <SolidColorBrush x:Key="WisePuma87.Brush.Background.Transparent" Color="Transparent" />

    <!-- Sizes (based on 2em = 32px at 16px base) -->
    <sys:Double x:Key="WisePuma87.Size.Icon">32</sys:Double>
    <sys:Double x:Key="WisePuma87.Size.Icon.Inner">25.6</sys:Double>
    <sys:Double x:Key="WisePuma87.Size.BorderThickness">2</sys:Double>
    <sys:Double x:Key="WisePuma87.Size.TextMargin">8</sys:Double>
    <sys:Double x:Key="WisePuma87.Size.StrokeThickness">2</sys:Double>

    <!-- Checkmark Path Data (M4.1,12.7 L9,17.6 L20.3,6.3) -->
    <StreamGeometry x:Key="WisePuma87.Geometry.Checkmark">M 4.1,12.7 L 9,17.6 L 20.3,6.3</StreamGeometry>

    <!-- Animation Duration -->
    <Duration x:Key="WisePuma87.Duration.Transition">0:0:0.3</Duration>
    <Duration x:Key="WisePuma87.Duration.Checkmark">0:0:0.5</Duration>

    <!-- Easing Functions -->
    <CubicEase x:Key="WisePuma87.Ease.Standard" EasingMode="EaseOut" />
    <!-- Note: KeySpline "0.45,0.05,0.55,0.95" is used inline in SplineDoubleKeyFrame -->

</ResourceDictionary>
