<Window x:Class="WisePuma87.Wpf.Gallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:WisePuma87.Wpf.UI.Controls;assembly=WisePuma87.Wpf.UI"
        mc:Ignorable="d"
        Title="WisePuma87 Checkbox Gallery" Height="450" Width="800"
        Background="#F5F5F5">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="WisePuma87 Checkbox Control"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30" />

            <!-- Default checkbox -->
            <controls:WisePuma87 Text="Check me!" Margin="0,0,0,20" />

            <!-- Custom text checkbox -->
            <controls:WisePuma87 Text="Accept terms and conditions" Margin="0,0,0,20" />

            <!-- Pre-checked checkbox -->
            <controls:WisePuma87 Text="Already checked" IsChecked="True" Margin="0,0,0,20" />

            <!-- Another example -->
            <controls:WisePuma87 Text="Enable notifications" />
        </StackPanel>
    </Grid>
</Window>
