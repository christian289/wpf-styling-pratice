<Window x:Class="CurlyBullfrog98.Wpf.Gallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:CurlyBullfrog98.Wpf.UI.Controls;assembly=CurlyBullfrog98.Wpf.UI"
        Title="CurlyBullfrog98 - 3D Cube Loader"
        Height="450" Width="800"
        Background="#1a1a2e">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="3D Cube Loader"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,10" />

        <!-- 3D Cube Loader Control -->
        <controls:CurlyBullfrog98 Grid.Row="1"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
    </Grid>
</Window>
