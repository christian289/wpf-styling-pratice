<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:MightyElephant52.Wpf.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/MightyElephant52.Wpf.UI;component/Themes/MightyElephant52Resources.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type controls:MightyElephant52}">
        <Setter Property="Background" Value="{StaticResource MightyElephant52.Background}"/>
        <Setter Property="BorderBrush" Value="{StaticResource MightyElephant52.Border}"/>
        <Setter Property="BorderThickness" Value="{StaticResource MightyElephant52.BorderThickness}"/>
        <Setter Property="Foreground" Value="{StaticResource MightyElephant52.Foreground}"/>
        <Setter Property="FontSize" Value="{StaticResource MightyElephant52.FontSize}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="{StaticResource MightyElephant52.Padding}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Content" Value="Follow"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:MightyElephant52}">
                    <Grid>
                        <!-- Tooltip (positioned above the button) -->
                        <Border x:Name="PART_Tooltip"
                                Background="{StaticResource MightyElephant52.Tooltip.Background}"
                                CornerRadius="{StaticResource MightyElephant52.CornerRadius}"
                                Padding="{StaticResource MightyElephant52.Tooltip.Padding}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Opacity="0"
                                RenderTransformOrigin="0.5,1">
                            <Border.RenderTransform>
                                <TranslateTransform Y="0"/>
                            </Border.RenderTransform>
                            <Grid>
                                <!-- Arrow pointing down (rotated square) -->
                                <Border x:Name="PART_Arrow"
                                        Width="{StaticResource MightyElephant52.Tooltip.Arrow.Size}"
                                        Height="{StaticResource MightyElephant52.Tooltip.Arrow.Size}"
                                        Background="{StaticResource MightyElephant52.Tooltip.Background}"
                                        VerticalAlignment="Bottom"
                                        HorizontalAlignment="Center"
                                        Margin="0,0,0,-4"
                                        RenderTransformOrigin="0.5,0.5">
                                    <Border.RenderTransform>
                                        <RotateTransform Angle="45"/>
                                    </Border.RenderTransform>
                                </Border>
                                <!-- Tooltip text -->
                                <TextBlock Text="{TemplateBinding TooltipText}"
                                           Foreground="{StaticResource MightyElephant52.Tooltip.Foreground}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Margin="0,0,0,2"/>
                            </Grid>
                        </Border>

                        <!-- Main button container -->
                        <Border x:Name="PART_Container"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{StaticResource MightyElephant52.CornerRadius}"
                                Padding="{TemplateBinding Padding}"
                                Margin="0,30,0,0">
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                <!-- Person icon (SVG converted) -->
                                <Viewbox Width="{StaticResource MightyElephant52.Icon.Width}"
                                         Height="{StaticResource MightyElephant52.Icon.Height}"
                                         Margin="0,0,10,0">
                                    <Canvas Width="95" Height="114">
                                        <!-- Head (rectangle with rounded corners = ellipse) -->
                                        <Ellipse Canvas.Left="19" Canvas.Top="0"
                                                 Width="57" Height="57"
                                                 Fill="{StaticResource MightyElephant52.Icon.Fill}"/>
                                        <!-- Body -->
                                        <Path Fill="{StaticResource MightyElephant52.Icon.Fill}"
                                              Data="{StaticResource MightyElephant52.Icon.BodyGeometry}"/>
                                    </Canvas>
                                </Viewbox>
                                <!-- Button text -->
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Tooltip fade in and slide up -->
                                        <DoubleAnimation Storyboard.TargetName="PART_Tooltip"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1"
                                                         Duration="0:0:0.3"/>
                                        <DoubleAnimation Storyboard.TargetName="PART_Tooltip"
                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                                         To="-5"
                                                         Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Tooltip fade out and slide down -->
                                        <DoubleAnimation Storyboard.TargetName="PART_Tooltip"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0"
                                                         Duration="0:0:0.3"/>
                                        <DoubleAnimation Storyboard.TargetName="PART_Tooltip"
                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                                         To="0"
                                                         Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
