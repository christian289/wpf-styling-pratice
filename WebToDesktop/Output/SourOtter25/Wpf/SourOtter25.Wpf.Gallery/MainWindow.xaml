<Window x:Class="SourOtter25.Wpf.Gallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:SourOtter25.Wpf.UI.Controls;assembly=SourOtter25.Wpf.UI"
        mc:Ignorable="d"
        Title="SourOtter25 - CSS Clip-Path Card Gallery"
        Height="500"
        Width="700"
        Background="#1a1a2e">
    <Grid>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <!-- 기본 카드 -->
            <controls:SourOtter25 Margin="20" />

            <!-- 커스텀 텍스트 카드 -->
            <controls:SourOtter25 Margin="20"
                                  Title="WPF Polygon"
                                  Author="CLAUDE"
                                  Description="Animated card" />

            <!-- 다른 커스텀 카드 -->
            <controls:SourOtter25 Margin="20"
                                  Title="Hover Effect"
                                  Author="CUSTOM"
                                  Description="Try hovering!" />
        </StackPanel>
    </Grid>
</Window>
