<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:SpottyShrimp35.Wpf.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/SpottyShrimp35.Wpf.UI;component/Themes/SpottyShrimp35Resources.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!--
    CSS Original:
    .container {
      width: 100%;
      height: 100%;
      background: repeating-linear-gradient(45deg, #0050fc, #0050fc 20px, #0684fade 20px, #0684fade 40px);
    }

    WPF Implementation:
    - repeating-linear-gradient → DrawingBrush with TileMode="Tile"
    - 45deg rotation → RotateTransform on the brush
    - Two color stops at 20px intervals → Two rectangles in DrawingGroup
    -->

    <Style TargetType="{x:Type controls:SpottyShrimp35}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:SpottyShrimp35}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <!-- Striped Pattern Background -->
                            <Rectangle>
                                <Rectangle.Fill>
                                    <DrawingBrush TileMode="Tile"
                                                  Viewport="0,0,40,40"
                                                  ViewportUnits="Absolute"
                                                  Viewbox="0,0,40,40"
                                                  ViewboxUnits="Absolute">
                                        <DrawingBrush.RelativeTransform>
                                            <RotateTransform Angle="45" CenterX="0.5" CenterY="0.5"/>
                                        </DrawingBrush.RelativeTransform>
                                        <DrawingBrush.Drawing>
                                            <DrawingGroup>
                                                <!-- First stripe: #0050fc (0-20px) -->
                                                <GeometryDrawing Brush="{StaticResource SpottyShrimp35.Stripe.Primary}">
                                                    <GeometryDrawing.Geometry>
                                                        <RectangleGeometry Rect="0,0,20,40"/>
                                                    </GeometryDrawing.Geometry>
                                                </GeometryDrawing>
                                                <!-- Second stripe: #0684fade (20-40px) -->
                                                <GeometryDrawing Brush="{StaticResource SpottyShrimp35.Stripe.Secondary}">
                                                    <GeometryDrawing.Geometry>
                                                        <RectangleGeometry Rect="20,0,20,40"/>
                                                    </GeometryDrawing.Geometry>
                                                </GeometryDrawing>
                                            </DrawingGroup>
                                        </DrawingBrush.Drawing>
                                    </DrawingBrush>
                                </Rectangle.Fill>
                            </Rectangle>

                            <!-- Content -->
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              Margin="{TemplateBinding Padding}"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
