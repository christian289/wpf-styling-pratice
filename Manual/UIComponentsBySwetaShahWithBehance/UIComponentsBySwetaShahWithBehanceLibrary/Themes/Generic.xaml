<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:UIComponentsBySwetaShahWithBehanceLibrary"
    xmlns:converters="clr-namespace:UIComponentsBySwetaShahWithBehanceLibrary.Converters">

    <!-- Converters -->
    <converters:NullToBoolConverter x:Key="NullToBoolConverter"/>
    <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>

    <!-- Modern Color Palette -->
    <Color x:Key="PrimaryColor">#6C5CE7</Color>
    <Color x:Key="PrimaryHoverColor">#5F4FD6</Color>
    <Color x:Key="PrimaryPressedColor">#5243C5</Color>
    <Color x:Key="AccentColor">#00CEC9</Color>
    <Color x:Key="SuccessColor">#00B894</Color>
    <Color x:Key="WarningColor">#FDCB6E</Color>
    <Color x:Key="DangerColor">#FF7675</Color>
    <Color x:Key="DarkColor">#2D3436</Color>
    <Color x:Key="LightColor">#DFE6E9</Color>
    <Color x:Key="BackgroundColor">#F8F9FA</Color>
    <Color x:Key="SurfaceColor">#FFFFFF</Color>
    <Color x:Key="TextPrimaryColor">#2D3436</Color>
    <Color x:Key="TextSecondaryColor">#636E72</Color>

    <!-- Solid Color Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="{StaticResource PrimaryHoverColor}"/>
    <SolidColorBrush x:Key="PrimaryPressedBrush" Color="{StaticResource PrimaryPressedColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}"/>
    <SolidColorBrush x:Key="DarkBrush" Color="{StaticResource DarkColor}"/>
    <SolidColorBrush x:Key="LightBrush" Color="{StaticResource LightColor}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>

    <!-- ModernButton Style -->
    <Style TargetType="{x:Type local:UIComponentsBySwetaShahWithBehanceButton}">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="20,12"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:UIComponentsBySwetaShahWithBehanceButton}">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.3" Color="#000000"/>
                        </Border.Effect>
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Margin="{TemplateBinding Padding}">
                            <TextBlock x:Name="iconText"
                                       Text="{TemplateBinding Icon}"
                                       FontSize="16"
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center"
                                       Visibility="{TemplateBinding Icon, Converter={StaticResource StringToVisibilityConverter}}"/>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect ShadowDepth="3" BlurRadius="12" Opacity="0.4" Color="#000000"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=ButtonStyle}" Value="Primary">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryBrush}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=ButtonStyle}" Value="Success">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource SuccessBrush}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=ButtonStyle}" Value="Warning">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource WarningBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource DarkBrush}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=ButtonStyle}" Value="Danger">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource DangerBrush}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=ButtonStyle}" Value="Outline">
                            <Setter TargetName="border" Property="Background" Value="Transparent"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="ButtonStyle" Value="Primary">
                <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ModernTextBox Style -->
    <Style TargetType="{x:Type local:UIComponentsBySwetaShahWithBehanceTextBox}">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource LightBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:UIComponentsBySwetaShahWithBehanceTextBox}">
                    <Grid>
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding CornerRadius}">
                            <Grid Margin="{TemplateBinding Padding}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock x:Name="iconText"
                                           Grid.Column="0"
                                           Text="{TemplateBinding Icon}"
                                           FontSize="16"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           Margin="0,0,8,0"
                                           VerticalAlignment="Center"
                                           Visibility="Collapsed"/>

                                <ScrollViewer x:Name="PART_ContentHost"
                                              Grid.Column="1"
                                              VerticalAlignment="Center"/>

                                <TextBlock x:Name="placeholder"
                                           Grid.Column="1"
                                           Text="{TemplateBinding Placeholder}"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           VerticalAlignment="Center"
                                           IsHitTestVisible="False"
                                           Visibility="Collapsed"/>
                            </Grid>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Text" Value="">
                            <Setter TargetName="placeholder" Property="Visibility" Value="Visible"/>
                        </Trigger>
                        <Trigger Property="Icon" Value="">
                            <Setter TargetName="iconText" Property="Visibility" Value="Collapsed"/>
                        </Trigger>
                        <Trigger Property="Icon" Value="{x:Null}">
                            <Setter TargetName="iconText" Property="Visibility" Value="Collapsed"/>
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="Icon" Value=""/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="iconText" Property="Visibility" Value="Collapsed"/>
                        </MultiTrigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryHoverBrush}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ModernToggleSwitch Style -->
    <Style TargetType="{x:Type local:UIComponentsBySwetaShahWithBehanceToggleSwitch}">
        <Setter Property="Width" Value="60"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:UIComponentsBySwetaShahWithBehanceToggleSwitch}">
                    <Grid>
                        <Border x:Name="track"
                                Width="60"
                                Height="30"
                                Background="{StaticResource LightBrush}"
                                CornerRadius="15">
                            <Canvas>
                                <Ellipse x:Name="thumb"
                                         Width="24"
                                         Height="24"
                                         Canvas.Left="3"
                                         Canvas.Top="3"
                                         Fill="White">
                                    <Ellipse.Effect>
                                        <DropShadowEffect ShadowDepth="1" BlurRadius="4" Opacity="0.3"/>
                                    </Ellipse.Effect>
                                </Ellipse>
                            </Canvas>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="track" Property="Background" Value="{StaticResource SuccessBrush}"/>
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="thumb"
                                                         Storyboard.TargetProperty="(Canvas.Left)"
                                                         To="33"
                                                         Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="thumb"
                                                         Storyboard.TargetProperty="(Canvas.Left)"
                                                         To="3"
                                                         Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="thumb" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect ShadowDepth="2" BlurRadius="6" Opacity="0.4"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ModernCard Style -->
    <Style TargetType="{x:Type local:UIComponentsBySwetaShahWithBehanceCard}">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:UIComponentsBySwetaShahWithBehanceCard}">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Padding="{TemplateBinding Padding}">
                        <Border.Effect>
                            <DropShadowEffect x:Name="shadow"
                                              ShadowDepth="2"
                                              BlurRadius="{TemplateBinding Elevation}"
                                              Opacity="0.15"
                                              Color="#000000"/>
                        </Border.Effect>
                        <StackPanel>
                            <ContentPresenter x:Name="headerPresenter"
                                              Content="{TemplateBinding Header}"
                                              Margin="0,0,0,12"
                                              Visibility="Collapsed"/>
                            <ContentPresenter/>
                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Header" Value="{x:Null}">
                            <Setter TargetName="headerPresenter" Property="Visibility" Value="Collapsed"/>
                        </Trigger>
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Header, Converter={StaticResource NullToBoolConverter}}" Value="False">
                            <Setter TargetName="headerPresenter" Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver" Value="True"/>
                                <Condition Property="IsHoverable" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="border" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect ShadowDepth="4" BlurRadius="16" Opacity="0.2" Color="#000000"/>
                                </Setter.Value>
                            </Setter>
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ModernProgressBar Style -->
    <Style TargetType="{x:Type local:UIComponentsBySwetaShahWithBehanceProgressBar}">
        <Setter Property="Height" Value="20"/>
        <Setter Property="Background" Value="{StaticResource LightBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:UIComponentsBySwetaShahWithBehanceProgressBar}">
                    <Grid>
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="{TemplateBinding CornerRadius}">
                            <Grid>
                                <Border x:Name="PART_Track" />
                                <Border x:Name="PART_Indicator"
                                        HorizontalAlignment="Left"
                                        CornerRadius="{TemplateBinding CornerRadius}">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=ProgressColor.Color, FallbackValue=#6C5CE7}" Offset="0"/>
                                            <GradientStop Color="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=ProgressColor.Color, FallbackValue=#00CEC9}" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                            </Grid>
                        </Border>
                        <TextBlock x:Name="percentageText"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="11"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Visibility="Collapsed"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="ShowPercentage" Value="True">
                            <Setter TargetName="percentageText" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="percentageText" Property="Text">
                                <Setter.Value>
                                    <MultiBinding StringFormat="{}{0:0}%">
                                        <Binding Path="Value" RelativeSource="{RelativeSource TemplatedParent}"/>
                                    </MultiBinding>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
